Процедура УстановитьСостояниеИнтеграцииЛКАУСН(Организация, СостояниеИнтеграции, КодЗаявки = Неопределено)
	
	Идентификатор = Строка(Новый УникальныйИдентификатор());
	ДатаИзменения = ТекущаяДатаСеанса();
	
	Набор = СоздатьНаборЗаписей();
	Набор.Отбор.Организация.Установить(Организация);
	Набор.Отбор.Банк.Установить(Справочники.КлассификаторБанков.ПустаяСсылка());
	Набор.Прочитать();
	Если ЗначениеЗаполнено(Набор) Тогда
		Запись = Набор[0];
		Если Запись.Состояние = СостояниеИнтеграции Тогда
			Возврат;
		КонецЕсли;
	Иначе
		Запись = Набор.Добавить();
		ДанныеЗаполнения = Новый Структура("Организация", Организация);
		Набор.Заполнить(ДанныеЗаполнения);
	КонецЕсли;
	Запись.Состояние = СостояниеИнтеграции;
	Если Не ЗначениеЗаполнено(Запись.ИдентификаторПриложения) Тогда
		Запись.ИдентификаторПриложения = Идентификатор;
	КонецЕсли;
	Если КодЗаявки <> Неопределено Тогда
		Запись.КодЗаявки = КодЗаявки;
	КонецЕсли;
	Если СостояниеИнтеграции <> Перечисления.СостоянияИнтеграцииАУСН.ПроверкаКлючаДоступа
		Или Не ЗначениеЗаполнено(Запись.ДатаИзменения) Тогда
		Запись.ДатаИзменения = ДатаИзменения;
	КонецЕсли;
	Набор.Записать();
	
