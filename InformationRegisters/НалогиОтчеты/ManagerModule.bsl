// * ПолученИзВнешнегоСервиса 
// * ОтключенПользователем 
// * Комментарий 
Функция НастройкаВключенияНалогаОтчетаВСпискеЗадач(Организация, НалогОтчет) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	НалогиОтчеты.ПолученИзВнешнегоСервиса,
	|	НалогиОтчеты.ОтключенПользователем,
	|	НалогиОтчеты.Комментарий
	|ИЗ
	|	РегистрСведений.НалогиОтчеты КАК НалогиОтчеты
	|ГДЕ
	|	НалогиОтчеты.Организация = &Организация
	|	И НалогиОтчеты.НалогОтчет = &НалогОтчет";
	
	Запрос.УстановитьПараметр("Организация", Организация);
	Запрос.УстановитьПараметр("НалогОтчет", НалогОтчет);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Если РезультатЗапроса.Пустой() Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Выборка = РезультатЗапроса.Выбрать();
	Выборка.Следующий();
	
	Настройка = Новый Структура("ПолученИзВнешнегоСервиса, ОтключенПользователем, Комментарий");
	ЗаполнитьЗначенияСвойств(Настройка, Выборка);
	Возврат Настройка;
	
