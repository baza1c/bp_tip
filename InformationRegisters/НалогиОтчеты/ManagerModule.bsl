Процедура ВключитьПравилоСтатистикаП2ГодоваяПоОрганизации(Организация, НастройкаНапоминания)
	
	ВключенныеПравила = Справочники.ПравилаПредставленияОтчетовУплатыНалогов.ДействующиеПравилаОрганизации(
		Организация, Дата(2022, 1, 1));
		
	ИдентификаторПравилаКвартал = "2013_П2";
	ИдентификаторПравилаГод = "2022_П2Год";
	
	ПравилоКварталСсылка = Справочники.ПравилаПредставленияОтчетовУплатыНалогов.НайтиПоИдентификатору(
		"СтатистическаяОтчетность", ИдентификаторПравилаКвартал);
	
	ПравилоГодСсылка = Справочники.ПравилаПредставленияОтчетовУплатыНалогов.НайтиПоИдентификатору(
		"СтатистическаяОтчетность", ИдентификаторПравилаГод);
		
	Если ПравилоКварталСсылка = Неопределено 
		Или ПравилоГодСсылка = Неопределено Тогда
		Возврат;
	КонецЕсли;
		
	ПравилоКварталВключено = (ВключенныеПравила.Найти(ПравилоКварталСсылка, "Правило") <> Неопределено);
	
	Если Не ПравилоКварталВключено Тогда
		Возврат;
	КонецЕсли;
	
	ПравилоГод = НастройкаНапоминания.Строки.Найти(ПравилоГодСсылка, "Ссылка");
	Если ПравилоГод = Неопределено Тогда
		Возврат;
	КонецЕсли;
		
	ПравилоГод.Включен = Истина;
	
	ПараметрыЗаписи = Новый Структура;
	ПараметрыЗаписи.Вставить("Организация", Организация);
	ПараметрыЗаписи.Вставить("Дерево", НастройкаНапоминания);
	ПараметрыЗаписи.Вставить("ЗначенияДетальнойНастройки", Неопределено);
	ПараметрыЗаписи.Вставить("ПараметрыДетальнойНастройки", Неопределено);
	ПараметрыЗаписи.Вставить("ПолноеДерево", Неопределено);
	
	РегистрыСведений.НалогиОтчеты.ЗаписатьДанныеВыборочно(ПараметрыЗаписи);
	
КонецПроцедуры

Функция НастройкаНапоминанийСтатистикаП2Годовая()
	
	ДеревоНастроек = Новый ДеревоЗначений;
	ДеревоНастроек.Колонки.Добавить("Ссылка");
	ДеревоНастроек.Колонки.Добавить("ВключаетсяПользователем");
	ДеревоНастроек.Колонки.Добавить("Включен");
	ДеревоНастроек.Колонки.Добавить("ЕстьДетальнаяНастройка");
	
	ИдентификаторПравила = "2022_П2Год";
	ПравилоСсылка = Справочники.ПравилаПредставленияОтчетовУплатыНалогов.НайтиПоИдентификатору(
		"СтатистическаяОтчетность", ИдентификаторПравила);
	
	Если ПравилоСсылка = Неопределено Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	НоваяСтрока = ДеревоНастроек.Строки.Добавить();
	
	НоваяСтрока.Ссылка = ПравилоСсылка;
	НоваяСтрока.ВключаетсяПользователем = Истина;
	НоваяСтрока.Включен = Ложь;
	НоваяСтрока.ЕстьДетальнаяНастройка = Ложь;
	
	Возврат ДеревоНастроек;
	
КонецФункции

