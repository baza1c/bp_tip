		Карточка = ФабрикаXDTO.ПрочитатьXML(ОбъектXML);
		ОбъектXML.Закрыть();
		УдалитьФайлы(ВремФайл);
	Исключение
		ШаблонСообщения = НСтр("ru = 'Возникла ошибка при чтении данных из файла %1: %2 (подробности см. в Журнале регистрации).'");
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ШаблонСообщения,
			ВремФайл, ОбработкаОшибок.КраткоеПредставлениеОшибки(ИнформацияОбОшибке()));
		ЭлектронноеВзаимодействиеБПВызовСервера.ОбработатьИсключениеПоЭДНаСервере(НСтр("ru = 'Чтение ЭД.'"),
			ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()),
			ТекстСообщения);
		Возврат Неопределено;
	КонецПопытки;
	
	ВерсияСхемыCML208 = ЭлектронноеВзаимодействиеБП.ПространствоИменCML208();
	Если Карточка.Тип() = ЭлектронноеВзаимодействиеБП.ТипЗначенияCML("Контрагент", ВерсияСхемыCML208) Тогда
		ЗаполнитьРеквизитыПоФорматуCML2(СтруктураРеквизитов, ДвоичныеДанные);
	ИначеЕсли Карточка.Тип() = ЭлектронноеВзаимодействиеБП.ТипЗначенияCML("Контрагент") Тогда
		ЗаполнитьРеквизитыПоФорматуCML4(СтруктураРеквизитов, Карточка);
	Иначе
		Возврат Неопределено;
	КонецЕсли;
	
	Возврат СтруктураРеквизитов;
	
