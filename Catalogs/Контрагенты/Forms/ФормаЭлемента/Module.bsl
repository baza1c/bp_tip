		ПараметрыОткрываемойФормы.Вставить("ПараметрыФормы", НастройкиОтчета);
		СписокПроверок = Новый Массив;
		СписокПроверок.Добавить("РазделРасчетыСКонтрагентами");
		СписокПроверок.Добавить("НаличиеЧековНПД");
		ПараметрыОткрываемойФормы.Вставить("СписокПроверок", СписокПроверок);
		ПараметрыОткрываемойФормы.Вставить("РежимРасшифровки", Истина);
		ПараметрыОткрываемойФормы.Вставить("СформироватьПриОткрытии", Истина);
		ОткрытьФорму("Отчет.ЭкспрессПроверкаВеденияУчета.Форма.ФормаОтчета",
