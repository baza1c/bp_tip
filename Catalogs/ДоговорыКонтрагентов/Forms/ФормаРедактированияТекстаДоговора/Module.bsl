&НаСервере
Функция ФорматированныйДокументБезСлужебныхМеток()
	
	ТекстHTML = "";
	Вложения = Новый Структура();
	
	ФорматированныйДокумент.ПолучитьHTML(ТекстHTML, Вложения);
	
	ФорматированныйДокументБезМеток = Новый ФорматированныйДокумент();
	ФорматированныйДокументБезМеток.УстановитьHTML(ТекстHTML, Вложения);
	
	ЗакладкаКонцаДокумента = ФорматированныйДокументБезМеток.ПолучитьЗакладкуКонца();
				
	МассивЭлементов = ФорматированныйДокументБезМеток.СформироватьЭлементы(, ЗакладкаКонцаДокумента);
					
	Сч = 0;

	Пока Сч < МассивЭлементов.Количество() Цикл
		
		ЭлементДокумента = МассивЭлементов[Сч];
	
		Если ТипЗнч(ЭлементДокумента) <> Тип("ТекстФорматированногоДокумента") Тогда
			Сч = Сч + 1;
			Продолжить;
		КонецЕсли;

		Если СтрНайти(ЭлементДокумента.Текст, "[#") > 0 Или СтрНайти(ЭлементДокумента.Текст, "#]") > 0 Тогда
			ФорматированныйДокументБезМеток.Удалить(ЭлементДокумента.ЗакладкаНачала, ЭлементДокумента.ЗакладкаКонца);
		КонецЕсли;
		
		Сч = Сч + 1; 
		
	КонецЦикла;
	
	Возврат ФорматированныйДокументБезМеток;
	
КонецФункции

