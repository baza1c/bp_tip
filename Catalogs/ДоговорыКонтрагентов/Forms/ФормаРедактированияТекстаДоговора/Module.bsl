&НаСервере
Процедура ПроверитьФайлАктуаленИУстановитьТолькоПросмотр(Отказ)
	
	ДанныеФайла = ПолучитьДанныеФайла(ФайлДоговора, ЭтотОбъект.УникальныйИдентификатор);
	
	УстановитьТолькоПросмотр = Ложь;
	ТекущийФайлАктуален = Истина;
	ПодписанЭП = ДанныеФайла.ПодписанЭП;
	ТекстСообщения = "";
	ХранитьВерсии = ДанныеФайла.ХранитьВерсии;
	ФайлРедактируетПользователь = ДанныеФайла.Редактирует;
	
	Если ДанныеФайла.Зашифрован Тогда
		Отказ = Истина;
		УстановитьТолькоПросмотр = Истина;
		Если ЭтоДополнительноеСоглашение Тогда
			ТекстСообщения = НСтр("ru = 'Файл дополнительного соглашения зашифрован. Просмотр текста невозможен.'");
		Иначе
			ТекстСообщения = НСтр("ru = 'Файл договора зашифрован. Просмотр текста договора невозможен.'");
		КонецЕсли;
	// Если договор подписан или нет прав на редактирование, то открываем только на просмотр
	ИначеЕсли ПодписанЭП Или ДоговорПодписан Или Не ЕстьПравоРедактирования() Тогда
		УстановитьТолькоПросмотр = Истина;
	// Если файл редактируется из другого места, то открываем только на просмотр
	ИначеЕсли ДанныеФайла.ФайлРедактируется И НЕ ДанныеФайла.ФайлРедактируетТекущийПользователь Тогда
		УстановитьТолькоПросмотр = Истина;
		Если ЭтоДополнительноеСоглашение Тогда
			ТекстСообщения = СтрШаблон(НСтр("ru = '%1 редактирует текст дополнительного соглашения. Редактирование текста запрещено.'"),
				Строка(ДанныеФайла.Редактирует));
		Иначе
			ТекстСообщения = СтрШаблон(НСтр("ru = '%1 редактирует текст договора. Редактирование текста запрещено.'"),
				Строка(ДанныеФайла.Редактирует));
		КонецЕсли;
	// Если файл редактирует текущий пользователь, то необходимо получить актуальную версию файла
	ИначеЕсли ДанныеФайла.ФайлРедактируетТекущийПользователь Тогда
		ТекущийФайлАктуален = Ложь;
	// Попытаемся заблокировать файл, если не удалось, то установим только просмотр
	Иначе
		Попытка
			ЗаблокироватьДанныеДляРедактирования(ФайлДоговора, , УникальныйИдентификатор);
		Исключение
			УстановитьТолькоПросмотр = Истина;
			Если ЭтоДополнительноеСоглашение Тогда
				ТекстСообщения = НСтр("ru = 'Нельзя отредактировать текст дополнительного соглашения! Файл редактируется другим пользователем!'");
			Иначе
				ТекстСообщения = НСтр("ru = 'Нельзя отредактировать текст договора! Файл договора редактируется другим пользователем!'");
			КонецЕсли;
		КонецПопытки;
	КонецЕсли;
	
	Если УстановитьТолькоПросмотр Тогда
		Если ЗначениеЗаполнено(ТекстСообщения) Тогда
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		КонецЕсли;
		ТолькоПросмотр = Истина;
		Элементы.ФорматированныйДокумент.ТолькоПросмотр = Истина;
		Элементы.ГруппаДобавитьПараметр.Видимость = Ложь;
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ЗагрузитьФайлДоговора()
	
	Попытка
	
		ДанныеФайла   = ПолучитьДанныеФайла(ФайлДоговора, УникальныйИдентификатор, Истина);
		ХранитьВерсии = ДанныеФайла.ХранитьВерсии;
		ФайлРедактируетПользователь = ДанныеФайла.Редактирует;
		
		ДвоичныеДанные = ПолучитьИзВременногоХранилища(ДанныеФайла.СсылкаНаДвоичныеДанныеФайла);
		
		ИмяВременногоФайла = ПолучитьИмяВременногоФайла();
		
		ДвоичныеДанные.Записать(ИмяВременногоФайла);
		
		ТекстовыйДокументHTML = Новый ТекстовыйДокумент;
		ТекстовыйДокументHTML.Прочитать(ИмяВременногоФайла, КодировкаТекста.UTF8);
		
		СтруктураHTML = СтруктураHTMLСКартинками(ТекстовыйДокументHTML.ПолучитьТекст());
		
		ФорматированныйДокумент.УстановитьHTML(СтруктураHTML.ТекстHTML, СтруктураHTML.Вложения);
	
	Исключение
		// Запомним сведения об ошибке для отображения сообщения пользователю при открытии
		СведенияОбОшибке = ИнформацияОбОшибке();
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Произошла ошибка при открытии сохраненного файла: 
					   |%1'"),
			СведенияОбОшибке.Описание);
		
		Если ЭтоДополнительноеСоглашение Тогда
			ТекстСообщения = НСтр("ru = 'Не удалось записать ссылку на файл с текстом дополнительного соглашения 
				|в строке дополнительного соглашения элемента справочника ""Договоры контрагентов"". 
				|Возможно, договор сейчас редактируется другим пользователем. 
				|Укажите этот файл в строке дополнительного соглашения самостоятельно.'");
		Иначе
			ТекстСообщения = НСтр("ru = 'Не удалось записать ссылку на файл с текстом договора 
				|в элементе справочника ""Договоры контрагентов"". 
				|Возможно, договор сейчас редактируется другим пользователем. 
				|Укажите этот файл в форме договора самостоятельно.'");
		КонецЕсли;
		
		ПодробныйТекстОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Произошла ошибка при открытии сохраненного файла:
					   |%1'"),
			ПодробноеПредставлениеОшибки(СведенияОбОшибке));
		
		ЗаписьЖурналаРегистрации(НСтр("ru = 'Шаблоны договоров. Загрузка текста договора.'", 
			ОбщегоНазначения.КодОсновногоЯзыка()), 
			УровеньЖурналаРегистрации.Ошибка, , , 
			ПодробныйТекстОшибки);
			
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		
		ФайлДоговора = Неопределено;
	
	КонецПопытки;
	
	// Удалим временный файл.
	УдалитьВременныйФайлНаСервер(ИмяВременногоФайла);

КонецПроцедуры

&НаКлиенте
Процедура ЗаписатьФайлДоговораНаКлиенте()
	
	ЗаписатьФайлыДоговоровНаСервере(ФорматыСохранения);
	
	// Оповестим основную форму договора о том, что записали новый файл,
	// чтобы установить ссылку на новый файл в договоре.
	Если ФайлДоговора <> ФайлДоговораНовый Тогда
		
		ФайлДоговора = ФайлДоговораНовый;
		
		// По умолчанию считаем, что основной формы договора 
		// в текущем сеансе нет. Если она есть и обработала наше оповещение, 
		// то в ОбработкаОповещения() переменная будет установлена в Истина.
		СозданиеФайлаОбработаноОсновнойФормойДоговора = Ложь;
	
		ПараметрыОповещения = Новый Структура();
		ПараметрыОповещения.Вставить("ФайлДоговора", ФайлДоговора);
		ПараметрыОповещения.Вставить("ДоговорКонтрагента", ДоговорКонтрагента);
		ПараметрыОповещения.Вставить("ЭлектронныйФормат", ЭлектронныйФормат);
		
		Если ЭтоДополнительноеСоглашение Тогда
			Оповестить("ДоговорыКонтрагентов_СозданиеФайлаДополнительногоСоглашения", ПараметрыОповещения, ЭтотОбъект);
		Иначе
			Оповестить("ДоговорыКонтрагентов_СозданиеФайлаДоговора", ПараметрыОповещения, ЭтотОбъект);
		КонецЕсли;
		
		Если Не СозданиеФайлаОбработаноОсновнойФормойДоговора
			И Не ЭтоДополнительноеСоглашение Тогда
			// Текущая форма редактирования текста договора либо открыта из документа,
			// либо основную форму договора уже закрыли, она не получила нашего оповещения
			// и не ответила нам. 
			// Поэтому необходимо самостоятельно записывать ссылку на созданный файл в договор.
			ЗаписатьСсылкаНаФайлВДоговорКонтрагента();
		КонецЕсли; 
		
	КонецЕсли;

КонецПроцедуры

&НаСервере
Процедура ЗаписатьФайлыДоговоровНаСервере(ФорматыСохранения)
	
	// подготовка временной папки
	ИмяВременнойПапки = ФайловаяСистема.СоздатьВременныйКаталог();
	
	Если ЭтоДополнительноеСоглашение Тогда
		РеквизитыСоглашенияСтрокой = ПечатьДоговоровКлиентСервер.РеквизитыДоговораСтрокой(НомерСоглашения, ДатаСоглашения);
		ИмяФайлаБезРасширения = СокрЛП(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = '%1 Дополнительное соглашение %2'"), Контрагент, РеквизитыСоглашенияСтрокой));
	Иначе
		ИмяФайлаБезРасширения = СокрЛП(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = '%1 %2'"), Контрагент, ДоговорКонтрагента));
	КонецЕсли;
	ИмяФайлаБезРасширения = ОбщегоНазначенияКлиентСервер.ЗаменитьНедопустимыеСимволыВИмениФайла(ИмяФайлаБезРасширения);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ДоговорыКонтрагентовПрисоединенныеФайлы.Ссылка КАК ФайлДоговора,
	|	ДоговорыКонтрагентовПрисоединенныеФайлы.Расширение КАК РасширениеФайла
	|ИЗ
	|	Справочник.ДоговорыКонтрагентовПрисоединенныеФайлы КАК ДоговорыКонтрагентовПрисоединенныеФайлы
	|ГДЕ
	|	ДоговорыКонтрагентовПрисоединенныеФайлы.ВладелецФайла = &ВладелецФайла
	|	И ДоговорыКонтрагентовПрисоединенныеФайлы.Наименование = &Наименование";
	
	Запрос.УстановитьПараметр("ВладелецФайла", ДоговорКонтрагента);
	Запрос.УстановитьПараметр("Наименование", ИмяФайлаБезРасширения);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Для Каждого ФорматФайла Из ФорматыСохранения Цикл
	
		Если ФорматФайла = "RTF" Тогда
			
			// Подготовим RTF документ на основе форматированного документа
			ПолноеИмяФайла = ПодготовитьRTFНаОсновеФорматированногоДокумента(ИмяВременнойПапки, ИмяФайлаБезРасширения);
			РасширениеФайла = "rtf";
			
		ИначеЕсли ФорматФайла = "PDF" Тогда
			// Подготовим PDF документ на основе форматированного документа
			ПолноеИмяФайла = ПодготовитьPDFНаОсновеФорматированногоДокумента(ИмяВременнойПапки, ИмяФайлаБезРасширения);
			РасширениеФайла = "pdf";
			
		Иначе
			
			// Подготовим HTML документ на основе форматированного документа.
			ПолноеИмяФайла = ПодготовитьHTMLНаОсновеФорматированногоДокумента(ИмяВременнойПапки, ИмяФайлаБезРасширения);
			РасширениеФайла = "htm";
			
		КонецЕсли;
		ДвоичныеДанные = Новый ДвоичныеДанные(ПолноеИмяФайла);
		АдресФайлаВоВременномХранилище = ПоместитьВоВременноеХранилище(ДвоичныеДанные, УникальныйИдентификатор);
		
		Выборка.Сбросить();
		Если Выборка.НайтиСледующий(РасширениеФайла, "РасширениеФайла") Тогда
			
			РазблокироватьДанныеДляРедактирования(Выборка.ФайлДоговора, УникальныйИдентификатор);
			
			ИнформацияОФайле = Новый Структура();
			ИнформацияОФайле.Вставить("АдресФайлаВоВременномХранилище", АдресФайлаВоВременномХранилище);
			ИнформацияОФайле.Вставить("АдресВременногоХранилищаТекста", "");
			
			РаботаСФайлами.ОбновитьФайл(Выборка.ФайлДоговора, ИнформацияОФайле);
			
			// Если была установлена пометка, то снимем  
			Если ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Выборка.ФайлДоговора, "ПометкаУдаления") Тогда
				СнятьПометкуУдаленияФайлаДоговора(Выборка.ФайлДоговора); 
			КонецЕсли;
			
			ПрисоединенныйФайл = Выборка.ФайлДоговора;
			
		Иначе
			ПараметрыФайла = Новый Структура();
			ПараметрыФайла.Вставить("Автор", Пользователи.ТекущийПользователь());
			ПараметрыФайла.Вставить("ВладелецФайлов", ДоговорКонтрагента);
			ПараметрыФайла.Вставить("ИмяБезРасширения", ИмяФайлаБезРасширения);
			ПараметрыФайла.Вставить("РасширениеБезТочки", РасширениеФайла);
			ПараметрыФайла.Вставить("ВремяИзмененияУниверсальное", Неопределено);
			
			ПрисоединенныйФайл = РаботаСФайлами.ДобавитьФайл(
				ПараметрыФайла, АдресФайлаВоВременномХранилище, "", "");
				
		КонецЕсли;
		
		Если РасширениеФайла = "htm" Или ЭтоДополнительноеСоглашение Тогда
			
			ФайлДоговораНовый = ПрисоединенныйФайл;
			Модифицированность = Ложь;
			
		Иначе
			
			ФайлДоговораНовый = ФайлДоговора;
			Модифицированность = Ложь;

		КонецЕсли;
		
	КонецЦикла;
	
	// Удалим временный файл.
	ФайловаяСистема.УдалитьВременныйКаталог(ИмяВременнойПапки);
	
КонецПроцедуры

