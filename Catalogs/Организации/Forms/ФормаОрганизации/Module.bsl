&НаСервере
Функция ТекстПредупрежденияВАрхиве()
	
	Подключена1СОтчетность = Ложь;
	Если РегламентированнаяОтчетностьБП.Подключена1СОтчетность(Объект.Ссылка) Тогда
		Подключена1СОтчетность = Истина;
	КонецЕсли;
	ПодключенаБизнесСеть = Ложь;
	Если БизнесСеть.ОрганизацияПодключена(Объект.Ссылка) Тогда
		ПодключенаБизнесСеть = Истина;
	КонецЕсли;
	ПодключенЭДО = Ложь;
	Если СинхронизацияЭДО.ЕстьУчетныеЗаписи(Объект.Ссылка) Тогда
		ПодключенЭДО = Истина;
	КонецЕсли;
	
	ЭлементыСообщения = Новый Массив;
	Если Подключена1СОтчетность Или ПодключенаБизнесСеть Тогда
		ЭлементыСообщения.Добавить(НСтр("ru = 'При скрытии организации из списков будут отключены:'"));
		Если Подключена1СОтчетность Тогда
			ЭлементыСообщения.Добавить(НСтр("ru = '      - Обмен с контролирующими органами (1С-Отчетность);'"));
		КонецЕсли;
		Если ПодключенаБизнесСеть Тогда
			ЭлементыСообщения.Добавить(НСтр("ru = '      - Обмен с сервисом 1С:Бизнес-сеть;'"));
		КонецЕсли;
		ЭлементыСообщения.Добавить(НСтр("ru = 'Если позже вернуть организацию в списки, эти обмены потребуется настроить заново.'"));
		Если ПодключенЭДО Тогда
			ЭлементыСообщения.Добавить("");
		КонецЕсли;
	КонецЕсли;
	Если ПодключенЭДО Тогда
		ЭлементыСообщения.Добавить(НСтр("ru = 'Обмен документов по ЭДО продолжит работать.
			|Отключить можно в ""ЭДО - Учетные записи"", в карточке учетной записи ""Еще - Удалить"".'"));
	КонецЕсли;
	
	Если ЭлементыСообщения.Количество() = 0 Тогда
		Возврат "";
	КонецЕсли;
		
	Возврат СтрСоединить(ЭлементыСообщения, Символы.ПС);
	
КонецФункции

