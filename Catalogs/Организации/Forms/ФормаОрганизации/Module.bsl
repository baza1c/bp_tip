	Если ДанныеИсточника.Количество() > 0 Тогда
		ЗначениеАдресаJSON = ДанныеИсточника[0].Значение;
		
		СведенияОНалоговомОргане = СведенияОНалоговомОрганеПоАдресу(ЗначениеАдресаJSON);
		Если СведенияОНалоговомОргане <> Неопределено Тогда
			ЭтотОбъект[ПрефиксИмени + "РегистрацияВНалоговомОргане"].КодПоОКАТО = СведенияОНалоговомОргане.КодПоОКАТО;
			ЭтотОбъект[ПрефиксИмени + "РегистрацияВНалоговомОргане"].КодПоОКТМО = СведенияОНалоговомОргане.КодПоОКТМО;
		КонецЕсли;
		
	КонецЕсли;
	
