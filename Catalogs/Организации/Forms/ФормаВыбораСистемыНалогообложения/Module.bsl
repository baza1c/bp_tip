	ЗаголовкиСНОЮЛ = Новый Массив;
	ЗаголовкиСНОЮЛ.Добавить(ИменаЭлементовУСНЮЛ().ЗаголовокНалога);
	ЗаголовкиСНОЮЛ.Добавить(ИменаЭлементовОСНОЮЛ().ЗаголовокНалога);
	
