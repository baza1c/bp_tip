//                 Значение - Структура - см. Справочники.БанковскиеСчета.ИнформацияОНастройкеПрямогоОбмена.
//
Функция БИКБанковСИнформациейОНастройкеПрямогоОбмена(Организация) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Организация", Организация);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Банки.Код КАК БИК,
	|	ВЫБОР
	|		КОГДА НастройкиОбменСБанками.Ссылка ЕСТЬ НЕ NULL
	|			ТОГДА НастройкиОбменСБанками.Ссылка
	|		КОГДА НастройкиОбменСБанкамиПоБИК.Ссылка ЕСТЬ НЕ NULL
	|			ТОГДА НастройкиОбменСБанкамиПоБИК.Ссылка
	|		ИНАЧЕ Значение(Справочник.НастройкиОбменСБанками.ПустаяСсылка)
	|	КОНЕЦ КАК НастройкаОбмена
	|ИЗ
	|	Справочник.БанковскиеСчета КАК БанковскиеСчета
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Банки КАК Банки
	|		ПО БанковскиеСчета.Банк = Банки.Ссылка
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.НастройкиОбменСБанками КАК НастройкиОбменСБанками
	|		ПО БанковскиеСчета.Банк = НастройкиОбменСБанками.Банк
	|			И (НастройкиОбменСБанками.Организация = &Организация)
	|			И (НЕ НастройкиОбменСБанками.ПометкаУдаления)
	|			И (НЕ НастройкиОбменСБанками.Недействительна)
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.НастройкиОбменСБанками КАК НастройкиОбменСБанкамиПоБИК
	|		ПО (Банки.Код = НастройкиОбменСБанкамиПоБИК.Банк.Код)
	|			И (НастройкиОбменСБанкамиПоБИК.Организация = &Организация)
	|			И (НЕ НастройкиОбменСБанкамиПоБИК.ПометкаУдаления)
	|			И (НЕ НастройкиОбменСБанкамиПоБИК.Недействительна)
	|ГДЕ
	|	НЕ БанковскиеСчета.ПометкаУдаления
	|	И БанковскиеСчета.ДатаЗакрытия = ДАТАВРЕМЯ(1, 1, 1)
	|	И БанковскиеСчета.Владелец = &Организация
	|
	|СГРУППИРОВАТЬ ПО
	|	Банки.Код,
	|	ВЫБОР
	|		КОГДА НастройкиОбменСБанками.Ссылка ЕСТЬ НЕ NULL
	|			ТОГДА НастройкиОбменСБанками.Ссылка
	|		КОГДА НастройкиОбменСБанкамиПоБИК.Ссылка ЕСТЬ НЕ NULL
	|			ТОГДА НастройкиОбменСБанкамиПоБИК.Ссылка
	|		ИНАЧЕ Значение(Справочник.НастройкиОбменСБанками.ПустаяСсылка)
	|	КОНЕЦ
	|
	|УПОРЯДОЧИТЬ ПО
	|	БИК";
	
	Результат = Новый Соответствие;
    БИКБанковДляПроверки = Новый Соответствие;

	УстановитьПривилегированныйРежим(Истина);	
			
	ВыборкаРезультат = Запрос.Выполнить().Выбрать();
	
	Пока ВыборкаРезультат.Следующий() Цикл
        БИКБанковДляПроверки.Вставить(ВыборкаРезультат.БИК, ВыборкаРезультат.НастройкаОбмена);
	КонецЦикла;
	
	// Не для всех БИК банков могли существовать настройки
	// проверяем по макетам возможность прямого обмена
	Для ИндексМакета = 0 По 1 Цикл
		
		Если БИКБанковДляПроверки.Количество() = 0 Тогда
			Прервать;
		КонецЕсли;
		Если ИндексМакета = 0 Тогда 
			ТекущийМакет = ОбменСБанкамиСлужебныйПовтИсп.СписокБанков();
		Иначе
			ТекущийМакет = УчетДенежныхСредствПовтИсп.СписокБанковСВалютнойВыпиской();	
		КонецЕсли;
		
		КоличествоЗаписей = ТекущийМакет.ВысотаТаблицы;
		
		// Первая строка в макете - заголовок	
		Для Индекс = 2 По КоличествоЗаписей Цикл
			
			БИКБанка = ТекущийМакет.Область(Индекс, 2).Текст;
			НастройкаОбмена = БИКБанковДляПроверки.Получить(БИКБанка);
			ПроектыВФайлеСтрокой = ТекущийМакет.Область(Индекс, 8).Текст;
			ВидПроектаРублевый = Ложь;
			ВидПроектаВалютный = Ложь;
			Если ЗначениеЗаполнено(ПроектыВФайлеСтрокой) Тогда 
				МассивПроектовВФайле = СтрРазделить(ПроектыВФайлеСтрокой, ",", Ложь);
				Для каждого ТекПроект из МассивПроектовВФайле Цикл
					Проект = СокрЛП(ТекПроект);
					Если Проект = "1" Тогда
						ВидПроектаРублевый = Истина;
					ИначеЕсли Проект = "3" Тогда
						ВидПроектаВалютный = Истина;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			Если ВидПроектаРублевый ИЛИ ВидПроектаВалютный Тогда
				ИнформацияОНастройкеПрямогоОбмена = СведенияОНастройкеПрямогоОбмена();
				
				ИнформацияОНастройкеПрямогоОбмена.БИК = БИКБанка;
				ИнформацияОНастройкеПрямогоОбмена.Настройка = ЗначениеЗаполнено(НастройкаОбмена);
				ИнформацияОНастройкеПрямогоОбмена.Рублевый = ВидПроектаРублевый;
				ИнформацияОНастройкеПрямогоОбмена.Валютный = ВидПроектаВалютный;	
				
				Результат.Вставить(БИКБанка, ИнформацияОНастройкеПрямогоОбмена);
				БИКБанковДляПроверки.Удалить(БИКБанка);
			КонецЕсли;
			
			Если БИКБанковДляПроверки.Количество() = 0 Тогда
				Прервать;	
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
	//Если БИК банка отсутствует в макетах, но по нему есть действующая настройка обмена,
	//определяем доступные виды обмена по настройке.
		
	Если БИКБанковДляПроверки.Количество() > 0 Тогда 
		
		БИКБанковСНастройкойОбмена = Новый Соответствие;
		НастройкиОбмена = Новый Массив;
		
		Для каждого КлючИЗначение из БИКБанковДляПроверки Цикл
			Если ЗначениеЗаполнено(КлючИЗначение.Значение) Тогда
				НастройкиОбмена.Добавить(КлючИЗначение.Значение);
				БИКБанковСНастройкойОбмена.Вставить(КлючИЗначение.Ключ, КлючИЗначение.Значение);
			КонецЕсли;
		КонецЦикла;
		
		НастройкиСВидамиВалюты = НастройкиСВидомВалютыПлатежныхДокументов(НастройкиОбмена);
		
		Если НастройкиСВидамиВалюты.Количество() > 0 Тогда
			
			Для каждого КлючИЗначение из БИКБанковСНастройкойОбмена Цикл
				ВидОбмена = НастройкиСВидамиВалюты.Получить(КлючИЗначение.Значение);
				
				Если ВидОбмена <> Неопределено Тогда
					ИнформацияОНастройкеПрямогоОбмена = СведенияОНастройкеПрямогоОбмена();
						
					ИнформацияОНастройкеПрямогоОбмена.БИК = КлючИЗначение.Ключ;
					ИнформацияОНастройкеПрямогоОбмена.Настройка = Истина;
					ИнформацияОНастройкеПрямогоОбмена.Рублевый = ВидОбмена.Рублевый;
					ИнформацияОНастройкеПрямогоОбмена.Валютный = ВидОбмена.Валютный;	
					
					Результат.Вставить(КлючИЗначение.Ключ, ИнформацияОНастройкеПрямогоОбмена);	
				КонецЕсли;
				
			КонецЦикла; 
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

// Возвращает структуру с информацией о настройке прямого обмена с банком
//
// Параметры:
//  Организация - СправочникСсылка.Орагнизации - ссылка на организацию
//  Банк - СправочникСсылка.Банки - ссылка на банк
//
// Возвращаемое значение:
//   Структура - см. Справочники.БанковскиеСчета.ПараметрыНастройкиПрямогоОбмена
//
Функция ИнформацияОНастройкеПрямогоОбменаСБанком(Организация, Банк) Экспорт
	
	УстановитьПривилегированныйРежим(Истина);
	
	НастройкаОбмена = ОбменСБанками.НастройкаОбмена(Организация, Банк);
	БИКБанка = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Банк, "Код");
	ИнформацияОНастройкеПрямогоОбмена = СведенияОНастройкеПрямогоОбмена();
	ИнформацияОНастройкеПрямогоОбмена.Настройка = ЗначениеЗаполнено(НастройкаОбмена);
	ИнформацияОНастройкеПрямогоОбмена.БИК = БИКБанка;
	
	Для ИндексМакета = 0 По 1 Цикл
		
		Если ИнформацияОНастройкеПрямогоОбмена.Рублевый ИЛИ ИнформацияОНастройкеПрямогоОбмена.Валютный Тогда
			Прервать;
		КонецЕсли;
		Если ИндексМакета = 0 Тогда 
			ТекущийМакет = ОбменСБанкамиСлужебныйПовтИсп.СписокБанков();
		Иначе
			ТекущийМакет = УчетДенежныхСредствПовтИсп.СписокБанковСВалютнойВыпиской();	
		КонецЕсли;
		
		КоличествоЗаписей = ТекущийМакет.ВысотаТаблицы;
		
		// Первая строка в макете - заголовок	
		Для Индекс = 2 По КоличествоЗаписей Цикл
			
			Если ИнформацияОНастройкеПрямогоОбмена.БИК = ТекущийМакет.Область(Индекс, 2).Текст Тогда
				
				ПроектыВФайлеСтрокой = ТекущийМакет.Область(Индекс, 8).Текст;
				Если ЗначениеЗаполнено(ПроектыВФайлеСтрокой) Тогда 
					МассивПроектовВФайле = СтрРазделить(ПроектыВФайлеСтрокой, ",", Ложь);
					Для каждого ТекПроект из МассивПроектовВФайле Цикл
						Проект = СокрЛП(ТекПроект);
						Если Проект = "1" Тогда
							ИнформацияОНастройкеПрямогоОбмена.Рублевый = Истина;
						ИначеЕсли Проект = "3" Тогда
							ИнформацияОНастройкеПрямогоОбмена.Валютный = Истина;
						КонецЕсли;
					КонецЦикла;		
				КонецЕсли;
				
				Если ИнформацияОНастройкеПрямогоОбмена.Рублевый ИЛИ ИнформацияОНастройкеПрямогоОбмена.Валютный Тогда
					Прервать;
				КонецЕсли;
												
			КонецЕсли;
			
		КонецЦикла;	
	КонецЦикла;
	
	//Если БИК банка отсутствует в макетах, но по нему есть действующая настройка обмена,
	//определяем доступные виды обмена по настройке.
	
	Если НЕ ИнформацияОНастройкеПрямогоОбмена.Рублевый И НЕ ИнформацияОНастройкеПрямогоОбмена.Валютный Тогда
		НастройкиОбмена = Новый Массив;
		НастройкиОбмена.Добавить(НастройкаОбмена);
		НастройкиОбменаСВидомВалюты = НастройкиСВидомВалютыПлатежныхДокументов(НастройкиОбмена);
		ВидОбмена = НастройкиОбменаСВидомВалюты.Получить(НастройкаОбмена);
		
		Если ВидОбмена <> Неопределено Тогда
			ЗаполнитьЗначенияСвойств(ИнформацияОНастройкеПрямогоОбмена, ВидОбмена);	
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат ИнформацияОНастройкеПрямогоОбмена; 
	
КонецФункции

//Возвращает соответвие настроек обмена с видом валюты платежных документов
//
// Параметры:                   
//  НастройкиОбмена - Массив из СправочникСсылка.НастройкиОбменСБанками - Настройки обмена
//
// Возвращаемое значение:
//  Соответствие - содержит элементы: 
//   * Ключ - СправочникСсылка.НастройкиОбменСБанками - настройка обмена
//   * Значение - Структура - параметры обмена:
//      ** Рублевый - Булево - если Истина, то возможен обмен рублевыми платежными документами.
//      ** Валютный - Булево - если Истина, то возможен обмен валютными платежными документами.
//
Функция НастройкиСВидомВалютыПлатежныхДокументов(НастройкиОбмена)
	
	Результат = Новый Соответствие;
	
	РублевыеДокументы = Новый Массив;
	РублевыеДокументы.Добавить(Перечисления.ВидыЭДОбменСБанками.ПлатежноеПоручение);
	РублевыеДокументы.Добавить(Перечисления.ВидыЭДОбменСБанками.ПлатежноеТребование);
	
	ВалютныеДокументы = Новый Массив;
	ВалютныеДокументы.Добавить(Перечисления.ВидыЭДОбменСБанками.ПоручениеНаПереводВалюты);
	ВалютныеДокументы.Добавить(Перечисления.ВидыЭДОбменСБанками.ПоручениеНаПокупкуВалюты);
	ВалютныеДокументы.Добавить(Перечисления.ВидыЭДОбменСБанками.ПоручениеНаПродажуВалюты);
