	Если ИнтеграцияСБанком Тогда
		БанкВРежимеИнтеграции = БанкВРежимеИнтеграции(Объект.Владелец, Объект.Банк);
	КонецЕсли;
	
	Если СвойстваБанковскогоСчета.НФО Тогда
		ПрочитатьРеквизитыОтчетностиНФО();
	КонецЕсли;
	
	УправлениеФормой(ЭтотОбъект);
	
