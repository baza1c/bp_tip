			ИмяПроцедуры);
		
		ДанныеЭлемента.Таргеты = ТаблицаТаргетыРекламы(ОписаниеТаргеты, ДанныеЭлемента.Код);
		
		// Версия рекламы
		Версия = СвойствоСтруктуры(ДанныеРекламы, "version", 0, Истина); // Число
		ДанныеЭлемента.Версия = Число(Версия);
		
