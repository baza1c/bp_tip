		ДанныеЭлемента.ДатаОкончания = Дата(ДатаОкончания);
		
		// id рекламы
		Код = СвойствоСтруктуры(ДанныеРекламы, "id", "", Истина); // Строка
		ДанныеЭлемента.Код = РекламныйСервисСлужебный.ПривестиТипКИдентификаторуРекламы(Код);
		
