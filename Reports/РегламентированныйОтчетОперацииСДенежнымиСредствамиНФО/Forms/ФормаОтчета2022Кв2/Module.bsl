&НаКлиенте
Процедура ОткрытьФормуВыбораВалютыЗавершение(Результат, ДополнительныеПараметры) Экспорт
	
	Область = ДополнительныеПараметры.Область;
	
	ПрежнийКодВалюты = "";
	
	Если ЗначениеЗаполнено(Область.Значение) Тогда
		Если Область.Имя = "Валюта" Тогда
			ДлинаСтроки = СтрДлина(Область.Значение);
			ПрежнийКодВалюты = Сред(Область.Значение, ДлинаСтроки - 3, 3);
		Иначе
			ПрежнийКодВалюты = Область.Значение;
		КонецЕсли;
	КонецЕсли;
	
	Если Результат <> Неопределено Тогда
		РеквизитыЭлемента = РеквизитыЭлементаСправочника(Результат);
		Если ПрежнийКодВалюты = РеквизитыЭлемента.Код Тогда
			Область.Очистить();
		Иначе
			Если Область.Имя = "Валюта" Тогда
				Область.Значение = СокрЛП(?(ЗначениеЗаполнено(РеквизитыЭлемента.НаимПолное),
				РеквизитыЭлемента.НаимПолное, РеквизитыЭлемента.Наименование)) + " (" + РеквизитыЭлемента.Код + ")";
				// Наименование валюты начинаем со строчной буквы (если оно не является аббревиатурой).
				Область.Значение = ?(Сред(Область.Значение, 2, 1) = НРег(Сред(Область.Значение, 2, 1)),
				НРег(Лев(Область.Значение, 1)) + Сред(Область.Значение, 2), Область.Значение);
			Иначе
				Область.Значение = РеквизитыЭлемента.Код;
			КонецЕсли;
		КонецЕсли;
		Модифицированность = Истина;
	КонецЕсли;
	
КонецПроцедуры

