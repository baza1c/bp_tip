			ВывестиПоказательВXML(Эл, СтрокаМнЧ.Данные[Эл.Ключ]);
		КонецЕсли;
		
		Эл = ПолучитьПодчиненныйЭлемент(ЭкзВидОпераций, "av:" + ИменаПодчУзлов.Операция);
