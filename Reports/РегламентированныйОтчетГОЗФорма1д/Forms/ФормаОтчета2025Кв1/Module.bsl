	СписокПоказателей.Добавить(ВыбТабПоле.Области["ОтраслевойОрган"].Значение,           "ОтраслевойОрган");
	СписокПоказателей.Добавить(ВыбТабПоле.Области["ГосЗаказчик2"].Значение,              "ГосЗаказчик2");
