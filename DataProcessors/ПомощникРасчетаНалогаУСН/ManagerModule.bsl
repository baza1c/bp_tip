Функция ПредставлениеНалоговойСтавки(РазмерСтавки, СтавкаЛьготная)
	
	ЧастиТекста = Новый Массив;
	
	ЧастиТекста.Добавить(СтрШаблон(НСтр("ru = '%1%%'"), Формат(РазмерСтавки, "ЧН=0; БЛ=")));
	
