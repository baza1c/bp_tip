Функция ДанныеОСтраховыхВзносовДляЗаполненияРасшифровки(РежимНалогообложения, ВидОрганизации, ПараметрыУСН = Неопределено)
	
	Если ПараметрыУСН = Неопределено Тогда
		ПараметрыУСН = Новый Структура;
		ПараметрыУСН.Вставить("ЕстьНДСПриУСН", Ложь);
		ПараметрыУСН.Вставить("УСНДоход", Ложь);
		ПараметрыУСН.Вставить("ПониженнаяСтавка", Ложь);
	КонецЕсли;
	
	Результат = Новый Структура;
	Суффикс = РежимНалогообложения + ВидОрганизации;
	ЭтоМинимальнаяЗарплатаРуководителя = ЭтоМинимальнаяЗарплатаРуководителя(ЭтотОбъект);
	
	Для Каждого КлючЗначение Из РезультатСравненияРежимов Цикл
		ИмяКлюча = КлючЗначение.Ключ;
		ДлинаКлюча = СтрДлина(ИмяКлюча);
		Если ВидОрганизации = "ООО" Тогда
			Постфикс = РежимНалогообложения + ВидОрганизации;
		Иначе
			Постфикс = РежимНалогообложения;
		КонецЕсли;
		
		Если СтрНайти(ИмяКлюча, "СтраховыеВзносы") > 0 Тогда
			Если ЭтоМинимальнаяЗарплатаРуководителя И СтрНайти(ИмяКлюча, Постфикс) > 0 Тогда
				Результат.Вставить(Лев(ИмяКлюча, ДлинаКлюча - СтрДлина(Постфикс)), КлючЗначение.Значение);
			ИначеЕсли СтрНайти(ИмяКлюча, РежимНалогообложения) > 0 Тогда
				Результат.Вставить(Лев(ИмяКлюча, ДлинаКлюча - СтрДлина(РежимНалогообложения)), КлючЗначение.Значение);
			КонецЕсли;
		ИначеЕсли СтрНайти(ИмяКлюча, "Тариф") > 0 И СтрНайти(ИмяКлюча, РежимНалогообложения) > 0 Тогда 
			Результат.Вставить(Лев(ИмяКлюча, ДлинаКлюча - СтрДлина(РежимНалогообложения)), КлючЗначение.Значение);
		КонецЕсли;
		
	КонецЦикла;
	
	Если ВидОрганизации = "ИП" Тогда
		
		Если ПараметрыУСН.УСНДоход Тогда
			
			Если ПараметрыУСН.ПониженнаяСтавка Тогда
				Результат.Вставить("СтраховыеВзносыКУплате",
					РезультатСравненияРежимов[СтрШаблон("СтраховыеВзносыКУплате%1%2", Суффикс, "УСНДоходыПониженнаяСтавка")]);
				
				Результат.Вставить("ВзносыСДоходовВПФРИП", РезультатСравненияРежимов[СтрШаблон("ВзносыСДоходовВПФР%1%2", Суффикс, "УСНДоходыПониженнаяСтавка")]);
