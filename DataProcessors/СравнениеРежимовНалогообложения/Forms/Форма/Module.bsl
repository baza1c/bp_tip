	Элементы = Форма.Элементы;

	РезультатСравненияРежимов = Форма.РезультатСравненияРежимов;
	ПорогиПрименимостиРежимов = Форма.ПорогиПрименимостиРежимов;
	
	ПараметрыСравнения = ПараметрыСравненияПоПроекту(Форма);
	
	Если ПараметрыСравнения.Год <= Год(ОбщегоНазначенияБПВызовСервера.ТекущаяДатаНаСервере())
		Или ПараметрыСравнения.Год <> Год(Форма.ТекущаяДатаПользователя) Тогда
		Возврат;
	КонецЕсли;

	Для Каждого Параметр Из ПараметрыСравнения Цикл
		Если РезультатСравненияРежимов.Свойство(Параметр.Ключ) Тогда
			Если РезультатСравненияРежимов[Параметр.Ключ] <> ПараметрыСравнения[Параметр.Ключ]
				И ЗначениеЗаполнено(РезультатСравненияРежимов[Параметр.Ключ]) Тогда
				РезультатСравненияРежимов[Параметр.Ключ] = Параметр.Значение;
				Если Параметр.Ключ <> "МРОТ" Тогда
					Элементы.ПодробнееОПроекте.Видимость = Истина;
					Элементы.ДекорацияЗаглушка.Видимость = Ложь;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		
		Если ПорогиПрименимостиРежимов.Свойство(Параметр.Ключ) Тогда
			Если ПорогиПрименимостиРежимов[Параметр.Ключ] <> ПараметрыСравнения[Параметр.Ключ]
				И ЗначениеЗаполнено(ПорогиПрименимостиРежимов[Параметр.Ключ]) Тогда
				ПорогиПрименимостиРежимов[Параметр.Ключ] = Параметр.Значение;
				Если Параметр.Ключ <> "МРОТ" Тогда
					Элементы.ПодробнееОПроекте.Видимость = Истина;
					Элементы.ДекорацияЗаглушка.Видимость = Ложь;
				КонецЕсли;
			КонецЕсли;
 		КонецЕсли;
	КонецЦикла;
	
