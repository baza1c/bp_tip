			ПараметрыМетода, "ПараметрыВыполнения", Новый Структура);
			
		Если ПодтвердитьЗаявку Тогда
			ВыполнитьМетодВФоне("ПодтвердитьЗаявку");
		КонецЕсли;
		
	Иначе
		
		КодЗаявкиПодсказка = ПодсказкаНекорректногоКодаЗаявки();
		
	КонецЕсли;
	
	УправлениеФормой(ЭтотОбъект);
	
