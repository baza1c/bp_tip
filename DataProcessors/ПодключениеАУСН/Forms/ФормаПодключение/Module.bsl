&НаКлиенте
Процедура ОбработатьРезультатПроверкиКлючаДоступа(Результат)
	
	Если Результат = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если Результат.Статус = "Выполнено" И ЭтоАдресВременногоХранилища(Результат.АдресРезультата) Тогда
		СостояниеКлючаДоступа = ПолучитьИзВременногоХранилища(Результат.АдресРезультата);
		Статус = НРег(СостояниеКлючаДоступа.Статус);
		
		Если Не ЗначениеЗаполнено(Статус) Тогда
			Возврат;
		КонецЕсли;
		
		СтатусыКлючаДоступа = ИнтеграцияАУСНКлиентСервер.СтатусыКлючейДоступа();
		
		СостояниеПодключения = СостоянияПодключения.НайтиСтроки(
			Новый Структура("Сервис", ПредопределенноеЗначение("Справочник.КлассификаторБанков.ПустаяСсылка")))[0];
		
		Если Статус = СтатусыКлючаДоступа.Активирован Тогда
			СостояниеПодключено = ПредопределенноеЗначение("Перечисление.СостоянияИнтеграцииАУСН.Подключено");
			УстановитьСостояниеИнтеграцииЛКАУСН(Объект.Организация, СостояниеПодключено);
			СостояниеПодключения.Состояние = СостояниеПодключено;
		ИначеЕсли Статус = СтатусыКлючаДоступа.Проверяется Тогда
			СостояниеПодключения.ДатаИзменения = СостояниеКлючаДоступа.ДатаИзменения;
			ИнтервалПроверки = Мин(ИнтервалВызоваПроверкиКлючаДоступа * 2, МаксимальныйИнтервалПроверкиКлючаДоступа());
			ИнтервалВызоваПроверкиКлючаДоступа = ИнтервалПроверки;
			ПодключитьОбработчикОжидания("Подключаемый_ПроверитьКлючДоступаЛК", ИнтервалВызоваПроверкиКлючаДоступа, Истина);
		Иначе
			СостояниеОшибка = ПредопределенноеЗначение("Перечисление.СостоянияИнтеграцииАУСН.Ошибка");
			УстановитьСостояниеИнтеграцииЛКАУСН(Объект.Организация, СостояниеОшибка);
			СостояниеПодключения.Состояние = СостояниеОшибка;
			ИнтеграцияАУСНВызовСервера.ЗаписатьПредупреждениеВЖурналРегистрации(
				ИнтеграцияАУСНКлиентСервер.ТекстПредупрежденияНевалидныйКлючДоступа(СостояниеКлючаДоступа.Описание));
		КонецЕсли;
		УправлениеФормой(ЭтотОбъект);
	КонецЕсли;
	
КонецПроцедуры

