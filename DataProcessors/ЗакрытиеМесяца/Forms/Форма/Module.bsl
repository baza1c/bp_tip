Процедура НастроитьФорму()
	
	МожноРедактироватьРегОперации = ПравоДоступа("Редактирование", Метаданные.Документы.РегламентнаяОперация);
	Элементы.РегламентныеОперации.Доступность = МожноЗакрыватьМесяц И МожноРедактироватьРегОперации;
	Элементы.КнопкаВыполнить.Доступность = НЕ Объект.ВключатьОбособленныеПодразделения И МожноРедактироватьРегОперации;
	Элементы.КнопкаОтменить.Доступность  = НЕ Объект.ВключатьОбособленныеПодразделения И МожноРедактироватьРегОперации;
	
	// Видимость баннера о снятии с учета обособленного подразделения.
	СнятоСУчета = ЗначениеЗаполнено(ДатаСнятияСУчета) И ДатаСнятияСУчета < Объект.ПериодРегистрации
		И БухгалтерскийУчетПереопределяемый.ОбособленноеПодразделение(Объект.Организация);
	Элементы.ГруппаСнятоСУчета.Видимость = СнятоСУчета;
	Если СнятоСУчета Тогда
		ТекстБаннера = НСтр("ru = 'Подразделение ""%1"" снято с учета %2.
			|Закрытие месяца по нему будет выполняться до конца года. Это позволит правильно рассчитать налоги по снятому с учета подразделению.'");
		Элементы.НадписьСнятоСУчета.Заголовок = СтрШаблон(ТекстБаннера,
			Строка(Объект.Организация), Формат(ДатаСнятияСУчета, "ДЛФ=D"));
	КонецЕсли;
	
	// При открытии формы из "Помощника по переходу на УСН" - организацию изменять нельзя
	Элементы.ПолеОрганизация.Доступность = НЕ ПодготовкаКВосстановлениюНДСПриПереходеНаУСН;
	
	ОбновитьСостояниеЗакрытияМесяцаНаФорме();
	
	// Настроим представления регламентных операций
	Для Каждого СтрокаТаблицы Из ТаблицаОпераций Цикл
		
		ТекущийЭлементНадписи = Элементы.Найти("РегламентнаяОперация" + СтрокаТаблицы.НомерЭлементаФормы);
		
		Если ТекущийЭлементНадписи = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		Если СтрокаТаблицы.ВидОперации = Перечисления.ВидыРегламентныхОпераций.НачислениеЗарплаты Тогда
			ТекущийЭлементНадписи.Заголовок = ЗакрытиеМесяца.ПредставлениеОперацииНачислениеЗарплаты(Объект.Организация);
		ИначеЕсли СтрокаТаблицы.ВидОперации = Перечисления.ВидыРегламентныхОпераций.РаспределениеРасходовПоВидамДеятельностиДляУСН Тогда
			ТекущийЭлементНадписи.Заголовок = ЗакрытиеМесяца.ПредставлениеОперацииРаспределениеРасходовУСН(
				Объект.Организация, Объект.ПериодРегистрации);
		ИначеЕсли СтрокаТаблицы.ВидОперации = Перечисления.ВидыРегламентныхОпераций.РасчетРасходовУменьшающихОтдельныеНалоги Тогда
			ТекущийЭлементНадписи.Заголовок = ЗакрытиеМесяца.ПредставлениеОперацииРасчетРасходовУменьшающихОтдельныеНалоги(
				Объект.Организация, Объект.ПериодРегистрации);
		ИначеЕсли СтрокаТаблицы.ВидОперации = Перечисления.ВидыРегламентныхОпераций.РасчетЕНВД Тогда
			ТекущийЭлементНадписи.Заголовок = ЗакрытиеМесяца.ПредставлениеОперацииРасчетЕНВД(
				Объект.Организация, Объект.ПериодРегистрации);
		Иначе
			ТекущийЭлементНадписи.Заголовок = СтрокаТаблицы.ВидОперации;
		КонецЕсли;
		
	КонецЦикла;
	
	// Установим заголовки групп
	ВыполняетсяПоОбособленномуПодразделению = ЕстьОбособленныеПодразделения И НЕ Объект.ВключатьОбособленныеПодразделения;
	
	Для НомерГруппы = 1 По КоличествоГрупп() Цикл 
		
		Элемент = Элементы["Панель" + НомерГруппы];
		
		Если ВыполняетсяПоОбособленномуПодразделению И ЗакрытиеМесяца.ГруппаВыполняетсяПоОрганизацииВЦелом(НомерГруппы) Тогда
			Элемент.Заголовок = "" + НомерГруппы + НСтр("ru = ' - выполняется в целом по организации'");
			Элемент.ЦветТекстаЗаголовка = ЦветаСтиля.ТекстЗапрещеннойЯчейкиЦвет;
		Иначе
			Элемент.Заголовок = "" + НомерГруппы;
			Элемент.ЦветТекстаЗаголовка = Новый Цвет;
		КонецЕсли;
		
	КонецЦикла;
	
	// Видимость группы 5
	
	ОтборПоОрганизации = Новый Структура("НомерГруппы, Видимость", 5, Истина);
	ОперацииПоОрганизации = ТаблицаОпераций.НайтиСтроки(ОтборПоОрганизации);
	ВидимостьГруппы5 = ЗначениеЗаполнено(ОперацииПоОрганизации);
	Если Не ВидимостьГруппы5 И Объект.ВключатьОбособленныеПодразделения Тогда
		ОтборПоПодразделениям = Новый Структура("ПоследняяГруппа", 5);
	    ОперацииПоПодразделениям = ОбособленныеПодразделения.НайтиСтроки(ОтборПоПодразделениям);
		ВидимостьГруппы5 = ЗначениеЗаполнено(ОперацииПоПодразделениям);
	КонецЕсли;
	Элементы.Панель5.Видимость = ВидимостьГруппы5;
	Элементы.ГруппаСтрелка45.Видимость = ВидимостьГруппы5;
	
	// Видимость группы 6
	
	ОтборПоОрганизации = Новый Структура("НомерГруппы, Видимость", 6, Истина);
	ОперацииПоОрганизации = ТаблицаОпераций.НайтиСтроки(ОтборПоОрганизации);
	ВидимостьГруппы6 = ЗначениеЗаполнено(ОперацииПоОрганизации);
	Элементы.Панель6.Видимость = ВидимостьГруппы6;
	Элементы.ГруппаСтрелка56.Видимость = ВидимостьГруппы6;
	
	ПоказыватьНовостьАктуализацииДанныхУчетаАвтоматически(Объект.Организация,
		АвтоматическаяАктуализацияДанныхПоказатьНовость);
	
	ПоказатьБаннерПроверкаНастроекПрограммы();
	
КонецПроцедуры

