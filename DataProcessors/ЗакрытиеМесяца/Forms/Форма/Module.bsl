	Элементы.ГруппаПоследовательностьТекст.ЦветФона = ЦветаСтиля.ЦветФонаПоля;

	Для НомерГруппы = 1 По КоличествоГрупп() Цикл 
		
		Элемент = Элементы["Панель" + НомерГруппы];
		
		Элемент.ЦветФона = ЦветаСтиля.ЦветФонаПоля;
			
	КонецЦикла;
	Элементы.Стрелка12Доступная.Картинка = Элементы.Стрелка01Доступная.Картинка;
	Элементы.Стрелка12НеДоступная.Картинка = Элементы.Стрелка01НеДоступная.Картинка;
	МобильныйКлиентБПФормаОбъекта.СкрытьЭлементФормы(Элементы, Элементы.ГруппаСтрелка01);
	МобильныйКлиентБПФормаОбъекта.СкрытьЭлементФормы(Элементы, Элементы.ДекорацияСтрелка12Пустая);
	МобильныйКлиентБПФормаОбъекта.СкрытьЭлементФормы(Элементы, Элементы.ГруппаПодсказки);
	
