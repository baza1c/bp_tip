&НаСервере
Процедура ДобавитьЭлементыФормыМК()
	
	НовыйЭлемент = Элементы.Добавить("СписокНастроекМК", Тип("ГруппаФормы"), Элементы.ГруппаНавигация);
	НовыйЭлемент.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	НовыйЭлемент.Отображение = ОтображениеОбычнойГруппы.СлабоеВыделение;
	НовыйЭлемент.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	НовыйЭлемент.Поведение = ПоведениеОбычнойГруппы.Свертываемая;
	НовыйЭлемент.Заголовок = НСтр("ru='Все настройки'");
	НовыйЭлемент.ЗаголовокСвернутогоОтображения = НСтр("ru='Показать все настройки'");
	НовыйЭлемент.РастягиватьПоГоризонтали = Истина;
	
	НедоступныеНастройки = Новый Массив;
	ДоступныеНастройки = Новый Массив;
	
	ДоступныеНастройки.Добавить(Элементы.ГруппаБанкКасса);
	ДоступныеНастройки.Добавить(Элементы.ГруппаЗапасы);
	ДоступныеНастройки.Добавить(Элементы.ГруппаРасчеты);
	ДоступныеНастройки.Добавить(Элементы.ГруппаУчетПоДоговорам);
	ДоступныеНастройки.Добавить(Элементы.ГруппаПланированиеПлатежей);
	ДоступныеНастройки.Добавить(Элементы.ГруппаТорговля);
	ДоступныеНастройки.Добавить(Элементы.ГруппаЛиды);
	
	Для каждого Раздел Из Элементы.ГруппаСтраницы.ПодчиненныеЭлементы Цикл
		Если ДоступныеНастройки.Найти(Раздел) <> Неопределено 
			ИЛИ Раздел = Элементы["ГруппаДополнительно"] Тогда
			Продолжить;
		КонецЕсли;
		
		НедоступныеНастройки.Добавить(Новый Структура("Элемент, Заголовок", Раздел, СокрЛП(Раздел.Заголовок)));
	КонецЦикла;
	
	СоздатьБаннерыНедоступныхНастроек(НедоступныеНастройки);
	СоздатьБаннерыДоступныхНастроек(ДоступныеНастройки);
	
	НовыйЭлемент = Элементы.Добавить("ГруппаДополнительноБаннерМК", Тип("ДекорацияФормы"), Элементы.ГруппаДополнительно);
	НовыйЭлемент.Вид = ВидДекорацииФормы.Надпись;
	НовыйЭлемент.Заголовок = НСтр("ru='Настройку этого раздела можно выполнить в версии для компьютера'");
	НовыйЭлемент.ГоризонтальноеПоложение = ГоризонтальноеПоложениеЭлемента.Центр;
	НовыйЭлемент.ВертикальноеПоложение = ВертикальноеПоложениеЭлемента.Центр;
	НовыйЭлемент.РастягиватьПоГоризонтали = Истина;
	НовыйЭлемент.Высота = 3;
	НовыйЭлемент.ЦветФона = ЦветаСтиля.ЦветБаннераБежевый;
	
КонецПроцедуры

