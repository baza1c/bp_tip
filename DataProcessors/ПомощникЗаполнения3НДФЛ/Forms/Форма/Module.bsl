			НСтр("ru = 'Можно вернуть %1 руб. излишне удержанного налога'"),
			Формат(Форма.НалогКВозврату, "ЧЦ=15; ЧДЦ="));
		
		Элементы.ПояснениеНалогКВозвратуРасширеннаяПодсказка.Заголовок = "";
		
