	Для Каждого ТекущаяСтрока Из РасшифровкаПоГруппе Цикл
		Если ТипЗнч(ТекущаяСтрока.Вид) <> ВидРасшифровки Тогда
			Продолжить;
		КонецЕсли;
		ЗаполнитьЗначенияСвойств(Результат.Добавить(), ТекущаяСтрока);
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

&НаСервере
Процедура УдалитьЭлементыРекурсивно(УдаляемыйЭлемент)
	
	Если УдаляемыйЭлемент = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если ТипЗнч(УдаляемыйЭлемент) = Тип("ГруппаФормы") И УдаляемыйЭлемент.ПодчиненныеЭлементы.Количество() > 0 Тогда
		Для Каждого ПодчиненныйЭлемент Из УдаляемыйЭлемент.ПодчиненныеЭлементы Цикл
			УдалитьЭлементыРекурсивно(ПодчиненныйЭлемент);
		КонецЦикла;
	КонецЕсли;
	
	Элементы.Удалить(УдаляемыйЭлемент);
	
КонецПроцедуры

&НаСервере
Функция НовыйЭлементФормы(ИмяЭлемента, Родитель, Эталон)
	
	Результат = Элементы.Найти(ИмяЭлемента);
	Если Результат <> Неопределено Тогда
		Возврат Результат;
	КонецЕсли;
	
	ТипЭлемента = ТипЗнч(Эталон);
	Результат = Элементы.Добавить(ИмяЭлемента, ТипЭлемента, Родитель);
	ЗаполнитьЗначенияСвойств(Результат, Эталон, , "Имя");
	
	Возврат Результат;
	
КонецФункции

&НаСервере
Функция НоваяГруппаФормы(ИмяГруппы, Родитель, Эталон, КопироватьСПодчиненными = Ложь)
	
	ГруппаФормы = Элементы.Найти(ИмяГруппы);
	Если ГруппаФормы <> Неопределено Тогда
		Возврат ГруппаФормы;
	КонецЕсли;
	
	ИменаИсключаемыхСвойствГруппы = "Имя, ПутьКДаннымЗаголовка, ПодчиненныеЭлементы";
	
	ГруппаФормы = Элементы.Добавить(ИмяГруппы, Тип("ГруппаФормы"), Родитель);
	ЗаполнитьЗначенияСвойств(ГруппаФормы, Эталон, , ИменаИсключаемыхСвойствГруппы);
	
	Если КопироватьСПодчиненными Тогда
		Для Каждого ПодчиненныйЭлемент Из Эталон.ПодчиненныеЭлементы Цикл
			ТипЭлемента = ТипЗнч(ПодчиненныйЭлемент);
			Если СтрЧислоВхождений(ПодчиненныйЭлемент.Имя, "_") > 1 И СтрЧислоВхождений(ИмяГруппы, "_") = 1 Тогда
				ИдГруппы = СтрШаблон("%1_1", Сред(ИмяГруппы, СтрНайти(ИмяГруппы, "_") + 1));
			Иначе
				ИдГруппы = Сред(ИмяГруппы, СтрНайти(ИмяГруппы, "_") + 1);
			КонецЕсли;
			ИмяЭлемента = СтрШаблон("%1_%2", Сред(ПодчиненныйЭлемент.Имя, 1, СтрНайти(ПодчиненныйЭлемент.Имя, "_") - 1), ИдГруппы);
			Если Элементы.Найти(ИмяЭлемента) <> Неопределено Тогда
				Продолжить;
			КонецЕсли;
			Если ТипЭлемента = Тип("ГруппаФормы") Тогда
				НоваяГруппаФормы(ИмяЭлемента, ГруппаФормы, ПодчиненныйЭлемент, Истина);
			Иначе
				НовыйЭлементФормы(ИмяЭлемента, ГруппаФормы, ПодчиненныйЭлемент);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	Возврат ГруппаФормы;
	
КонецФункции

