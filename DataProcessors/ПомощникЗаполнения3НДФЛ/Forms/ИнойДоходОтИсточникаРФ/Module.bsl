Процедура ЗаполнитьСписокВыбораВидаКонтрагента()
	
	СписокВыбора = Элементы.ВидКонтрагента.СписокВыбора;
	СписокВыбора.Очистить();
	
	Если ВидДохода = Перечисления.ИсточникиДоходовФизическихЛиц.ВознаграждениеНаследникуАвтора Тогда
		СписокВыбора.Добавить(
			Перечисления.ЮридическоеФизическоеЛицо.ФизическоеЛицо,
			НСтр("ru = 'Индивидуальный предприниматель'"));
	Иначе
		СписокВыбора.Добавить(Перечисления.ЮридическоеФизическоеЛицо.ФизическоеЛицо, НСтр("ru = 'Физическое лицо'"));
	КонецЕсли;
	
	СписокВыбора.Добавить(Перечисления.ЮридическоеФизическоеЛицо.ЮридическоеЛицо, НСтр("ru = 'Юридическое лицо'"));
	
	Если ПомощникЗаполнения3НДФЛ.МожноНеУказыватьНаименованиеИсточникаДохода(Декларация3НДФЛВыбраннаяФорма) Тогда
		СписокВыбора.Добавить(Перечисления.ЮридическоеФизическоеЛицо.ПустаяСсылка(), НСтр("ru = 'Неизвестен'"));
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьСписокСтавокНалога()
	
	НалоговыеСтавки = ПомощникЗаполнения3НДФЛ.НалоговыеСтавки(Декларация3НДФЛВыбраннаяФорма);
	
	Если ТипЗнч(НалоговыеСтавки) = Тип("Соответствие") Тогда
		Элементы.СтавкаНалога.СписокВыбора.Очистить();
		ДобавленныеЗначения = Новый Массив;
		Для Каждого ТекущаяСтавка Из НалоговыеСтавки Цикл
			
			Если ДобавленныеЗначения.Найти(ТекущаяСтавка.Значение) <> Неопределено
				Или Не ЗначениеЗаполнено(ТекущаяСтавка.Значение) Тогда
					
				Продолжить;
			КонецЕсли;
			
			Если ЭтоИдентификаторОсновнойНалоговойБазы(ТекущаяСтавка.Значение, Декларация3НДФЛВыбраннаяФорма) Тогда
				Элементы.СтавкаНалога.СписокВыбора.Добавить(
					СтавкаНалогаПрогрессивнаяШкала(),
					СтрШаблон("%1%%", ТекущаяСтавка.Значение));
			Иначе
				Элементы.СтавкаНалога.СписокВыбора.Добавить(
					Обработки.ПомощникЗаполнения3НДФЛ.ЗначениеСтавкиНалога(ТекущаяСтавка.Значение),
					СтрШаблон("%1%%", ТекущаяСтавка.Значение));
			КонецЕсли;
				
			ДобавленныеЗначения.Добавить(ТекущаяСтавка.Значение);
			
		КонецЦикла;
		
		Элементы.СтавкаНалога.СписокВыбора.СортироватьПоПредставлению();
	КонецЕсли;
	
КонецПроцедуры

