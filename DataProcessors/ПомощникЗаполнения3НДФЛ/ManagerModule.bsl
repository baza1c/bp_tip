	СтруктураЗаявления.Вставить("СуммаВозврат", СуммаКВозврату - СуммаКУплате);
	
	Если ДанныеБанковскогоСчета <> Неопределено Тогда
		СтруктураЗаявления.Вставить("БИКВозврат", ДанныеБанковскогоСчета.БИКБанка);
		СтруктураЗаявления.Вставить("НомерСчетаВозврат", ДанныеБанковскогоСчета.НомерСчета);
	КонецЕсли;
	
	ЗаявлениеНаВозврат.СтруктураДанных = СтруктураЗаявления;
	
КонецПроцедуры

Функция СуммироватьЧисловыеПоляСтруктуры(Источник, Приемник)
	
	Результат = ОбщегоНазначения.СкопироватьРекурсивно(Приемник);
	
	Для Каждого ТекущееПоле Из Источник Цикл
		
		Если ТекущееПоле.Ключ = "НалоговаяСтавка" Тогда
			Приемник.НалоговаяСтавка = ТекущееПоле.Значение;
			Продолжить;
		КонецЕсли;
		
		Если ТипЗнч(Источник[ТекущееПоле.Ключ]) <> Тип("Число") Тогда
			Продолжить;
		КонецЕсли;
		
		Если Приемник.Свойство(ТекущееПоле.Ключ) Тогда
			Результат[ТекущееПоле.Ключ] = Приемник[ТекущееПоле.Ключ] + Источник[ТекущееПоле.Ключ];
		Иначе
			Результат.Вставить(ТекущееПоле.Ключ, ТекущееПоле.Значение);
		КонецЕсли;
		
	КонецЦикла;
	
	КлючОКТМО = "РаспределениеПоОКТМО";
	Если Источник.Свойство(КлючОКТМО) Тогда
		
		Если Не Результат.Свойство(КлючОКТМО) Или ТипЗнч(Результат[КлючОКТМО]) <> Тип("Соответствие") Тогда
			РаспределениеОКТМО = Новый Соответствие;
		Иначе
			РаспределениеОКТМО = Результат[КлючОКТМО];
		КонецЕсли;
		
		Для Каждого ТекущееОКТМО Из Источник[КлючОКТМО] Цикл
			
			СуммаПоОКТМО = РаспределениеОКТМО.Получить(ТекущееОКТМО.Ключ);
			Если ЗначениеЗаполнено(СуммаПоОКТМО) Тогда
				РаспределениеОКТМО.Вставить(ТекущееОКТМО.Ключ, ТекущееОКТМО.Значение + СуммаПоОКТМО);
			Иначе
				РаспределениеОКТМО.Вставить(ТекущееОКТМО.Ключ, ТекущееОКТМО.Значение);
			КонецЕсли;
			
		КонецЦикла;
		
		Результат.Вставить(КлючОКТМО, РаспределениеОКТМО);
		
	КонецЕсли;
	
	Возврат Результат;
	
