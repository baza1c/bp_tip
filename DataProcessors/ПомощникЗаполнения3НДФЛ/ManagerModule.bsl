	СуммаКВозврату = 0;
	СуммаКУплате = 0;
	
	Для Каждого ТекущаяСтрока Из ТаблицаДанныхЗаполнения Цикл
		
		СуммаНалогаПодлежащаяУплате = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
			ТекущаяСтрока.СтруктураДанных,
			"СуммаНалогаИПКУплатеГод",
			0);
		
		СуммаНалогаПодлежащаяВозврату = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
			ТекущаяСтрока.СтруктураДанных,
			"СуммаНалогаИПКУменьшениюГод",
			0);
		
		Если Не ЗначениеЗаполнено(СуммаНалогаПодлежащаяВозврату) Тогда
			СуммаНалогаПодлежащаяУплате = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				ТекущаяСтрока.СтруктураДанных,
				"СуммаНалога",
				0);
			СуммаНалогаПодлежащаяВозврату = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				ТекущаяСтрока.СтруктураДанных,
				"СуммаВозвратаНалога",
				0);
		КонецЕсли;
		
		Если СуммаНалогаПодлежащаяУплате > 0 Тогда
			СуммаКУплате = СуммаКУплате + СуммаНалогаПодлежащаяУплате;
		КонецЕсли;
		
		Если СуммаНалогаПодлежащаяВозврату > 0 Тогда
			СуммаКВозврату = СуммаКВозврату + СуммаНалогаПодлежащаяВозврату;
		КонецЕсли;
		
	КонецЦикла;
	
	Если СуммаКВозврату - СуммаКУплате <= 0 Тогда
		Возврат;
	КонецЕсли;
	
	ДанныеБанковскогоСчета = Справочники.БанковскиеСчета.РеквизитыСчета(СчетОрганизации);
	ЗаявлениеНаВозврат = ТаблицаДанныхЗаполнения.Добавить();
	
