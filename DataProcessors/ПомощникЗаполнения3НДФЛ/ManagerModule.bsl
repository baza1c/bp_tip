	ТаблицаРасчетов.Колонки.Добавить("ДоходИП", Новый ОписаниеТипов("Булево"));
	
	// Распределим результаты расчета Раздела 2 по доходам и вычетам.
	// Важно распределить по доходам именно сумму вычетов и расходов, а не результат Раздела 2.
	// Это обусловлено появлением отдельного пункта в Разделе 1 для доходов ИП.
	// Таким образом корректно будет учтено уменьшение доходов ИП на вычеты и расходы, уменьшающие налог.
	КолонкиПоиска = "ВидДохода, НалоговаяСтавка";
	ТаблицаДанныхЗаполнения.Индексы.Добавить(КолонкиПоиска);
	
	ТаблицаСведенийОСуммахНалога = ТаблицаДанныхЗаполнения.СкопироватьКолонки();
	АвансыРаспределены = Ложь;
	
	Для Каждого СтрокаНалоговаяБаза Из ТаблицаНалоговойБазы Цикл
		
		Если ЭтоНалоговаяБазаИП(СтрокаНалоговаяБаза, ВыбраннаяФорма) Тогда
			
			Если Не АвансыРаспределены Тогда
				ДобавитьСведенияОСуммахУплатыИП(ТаблицаСведенийОСуммахНалога,
					СтрокаНалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленная,
					ПараметрыВыполнения);
				АвансыРаспределены = Истина;
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	ВидыПрибылиКИК = Новый Массив;
	ВидыПрибылиКИК.Добавить(Перечисления.ИсточникиДоходовФизическихЛиц.ПрибыльКИК);
	ВидыПрибылиКИК.Добавить(Перечисления.ИсточникиДоходовФизическихЛиц.ПрибыльКИК_ИСБОЮЛ);
	
	СуммаНалогаИсчислено = 0;
	ГруппыДоходов = ПомощникЗаполнения3НДФЛКлиентСервер.ГруппыДоходов();
	
	ОтборПоГруппе = Новый Структура("ГруппаДоходов");
	ОтборПоГруппе.ГруппаДоходов = ГруппыДоходов.Основная;
	НалоговаяБазаОсновнойГруппы = ТаблицаНалоговойБазы.Скопировать(ОтборПоГруппе);
	Для Каждого НалоговаяБаза Из НалоговаяБазаОсновнойГруппы Цикл
		Если ЭтоОплатаТруда(НалоговаяБаза.Вид, НалоговаяБаза.ГруппаДоходов, ГруппыДоходов)
			Или ПомощникЗаполнения3НДФЛ.ЭтоПрибыльКИК(НалоговаяБаза.Вид) Тогда
			Продолжить;
		КонецЕсли;
		СуммаНалогаИсчислено = СуммаНалогаИсчислено + НалоговаяБаза.СуммаНалогаИсчисленная;
	КонецЦикла;
	
	ДобавитьСуммыУплатыОтОплатыТруда(ТаблицаСведенийОСуммахНалога, ПараметрыВыполнения, СуммаНалогаИсчислено);
	
	ДобавитьСуммыУплатыОтПрибылиКИК(ТаблицаСведенийОСуммахНалога, 
		ВидыПрибылиКИК,
		СуммаНалогаИсчислено,
		ПараметрыВыполнения);
	
	ДобавитьСуммыУплатыОтПрибылиКИК(ТаблицаСведенийОСуммахНалога,
		Перечисления.ИсточникиДоходовФизическихЛиц.ФиксированнаяПрибыльКИК,
		СуммаНалогаИсчислено,
		ПараметрыВыполнения);
	
	ДействующиеКБК = ПомощникЗаполнения3НДФЛ.КБК(ВыбраннаяФорма);
	Для Каждого НалоговаяБаза Из ТаблицаНалоговойБазы Цикл
		
		Если ЭтоДоходОтПредпринимательскойДеятельности(НалоговаяБаза.Вид)
			Или ЭтоОплатаТруда(НалоговаяБаза.Вид, НалоговаяБаза.ГруппаДоходов, ГруппыДоходов)
			Или ПомощникЗаполнения3НДФЛ.ЭтоПрибыльКИК(НалоговаяБаза.Вид) Тогда
			// Суммы по предпринимательской деятельности, оплаты труда или прибыли КИК добавлены ранее
			Продолжить;
		КонецЕсли;
		
		Если НалоговаяБаза.Вид = Перечисления.ИсточникиДоходовФизическихЛиц.Дивиденды Тогда
			
			КБК = ДействующиеКБК.ДоходыСДивидендов;
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленная
				- НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленнаяСПревышения;
			Если СуммаНалога <> 0 Тогда
				ДобавитьСтрокуУплатыНалога(ТаблицаРасчетов, КБК, СуммаНалога, НалоговаяБаза, ОКТМОналогоплательщика);
			КонецЕсли;
			
			КБК = ДействующиеКБК.ДоходыСДивидендовПоПовышеннойСтавке;
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленнаяСПревышения;
			
		ИначеЕсли НалоговаяБаза.ГруппаДоходов = ГруппыДоходов.ОсобыеУсловия Тогда
			КБК = ДействующиеКБК.ДоходыВОсобыхУсловиях;
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленная
				- НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленнаяСПревышения;
			Если СуммаНалога <> 0 Тогда
				ДобавитьСтрокуУплатыНалога(ТаблицаРасчетов, КБК, СуммаНалога, НалоговаяБаза, ОКТМОналогоплательщика);
			КонецЕсли;
			
			КБК = ДействующиеКБК.ДоходыВОсобыхУсловияхПоПовышеннойСтавке;
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленнаяСПревышения;
		ИначеЕсли ЭтоДоходПоОперации(НалоговаяБаза.СтруктураДанных, ВыбраннаяФорма) Тогда
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленная;
			КБК = ДействующиеКБК.ДоходыВВидеБанковскихПроцентов;
		Иначе
			КБК = ДействующиеКБК.ДоходыПриПолученииКоторыхНеУдержанНалог;
			СуммаНалога = НалоговаяБаза.СтруктураДанных.СуммаНалогаИсчисленная
				- НалоговаяБаза.СтруктураДанных.СуммаНалогаУдержанная
				- НалоговаяБаза.СтруктураДанных.СуммаНалогаИностранногоГосударства
				- НалоговаяБаза.СтруктураДанных.СуммаТорговогоСбора;
		КонецЕсли;
		
		Если СуммаНалога <> 0 Тогда
			ДобавитьСтрокуУплатыНалога(ТаблицаРасчетов, КБК, СуммаНалога, НалоговаяБаза, ОКТМОналогоплательщика);
		КонецЕсли;
		
	КонецЦикла;
	
	// Если нет налога к уплате или возврату, то нужно выводить пустой раздел 1.
	Если ТаблицаСведенийОСуммахНалога.Количество() = 0 И ТаблицаРасчетов.Количество() = 0 Тогда
		СтрокаРасчета = ТаблицаРасчетов.Добавить();
		СтрокаРасчета.КБК = ПомощникЗаполнения3НДФЛ.КБКПоВидуДохода(Перечисления.ВидыНалогов.НДФЛ_ИП,
			ПараметрыВыполнения.Период,
			Справочники.ВидыНалоговИПлатежейВБюджет.КодВидаДоходаНДФЛПредпринимателя13());
		СтрокаРасчета.ОКТМО = ОКТМОналогоплательщика;
	Иначе
		ТаблицаРасчетов.Сортировать("КБК, ОКТМО");
	КонецЕсли;
	
	ПризнакиУплатыВозврата = ПомощникЗаполнения3НДФЛ.ПризнакиУплатыВозврата(ВыбраннаяФорма);
