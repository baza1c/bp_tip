	ПараметрыУведомления.Вставить("Организация",      Справочники.Организации.ПустаяСсылка());
	ПараметрыУведомления.Вставить("Срок",             '00010101');
	ПараметрыУведомления.Вставить("ТаблицаРасчеты",   Неопределено); // ТаблицаЗначений
	ПараметрыУведомления.Вставить("ДляОперацииПоЕНС", Ложь);
	ПараметрыУведомления.Вставить("ПростойУчетЕНС",   Ложь);
	
	Возврат ПараметрыУведомления;
	
