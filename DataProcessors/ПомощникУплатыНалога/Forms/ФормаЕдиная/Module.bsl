	ИмяЭлемента = Элемент.Имя;
	ИдентификаторЭлемента = ЗадачиБухгалтераКлиентСервер.Идентификатор(ИмяЭлемента);
	
	ИдентификаторРодителя = ИдентификаторРодителяЭлемента(Элемент, ИдентификаторЭлемента);
	
	ОписаниеДействия = ОписаниеДействияРасшифровкаСтандартнымОтчетом(ИдентификаторРодителя, ИдентификаторЭлемента);
	Если ОписаниеДействия <> Неопределено Тогда
		ОткрытьФорму(ОписаниеДействия.ИмяФормы, ОписаниеДействия.ПараметрыФормы, ЭтотОбъект, Новый УникальныйИдентификатор);
	КонецЕсли;
	
