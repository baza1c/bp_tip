Функция ПолучитьОстаткиПоТоварам(СтруктураПараметров)
	
	Результат = НовыйСтруктураОстатковТоваров();
	
	// Остатки неоплаченных товаров на складах
	Если ДоПереходаМПЗПоСредней(СтруктураПараметров.Организация, СтруктураПараметров.ДатаПерехода) Тогда
		
		МассивРезультатов = ОстаткиПоНоменклатуреИКредиторскойЗадолженностиПоСреднейТовары(СтруктураПараметров);
		
		НеоплаченныеТовары = МассивРезультатов[1].Выбрать();
		ТоварыНаСкладах = МассивРезультатов[2].Выгрузить();
		
		Если ТоварыНаСкладах.Количество() > 0 Тогда
			ТоварыНаСкладах.Индексы.Добавить("Номенклатура");
		КонецЕсли;
		
		Пока НеоплаченныеТовары.Следующий() Цикл
			НаСкладе = ТоварыНаСкладах.НайтиСтроки(Новый Структура("Номенклатура", НеоплаченныеТовары.Номенклатура));
			СуммаДляРаспределения = НеоплаченныеТовары.СуммаОстатокКт;
			Для Каждого ТоварНаСкладах Из НаСкладе Цикл
				Если СуммаДляРаспределения = 0 Тогда
					Прервать;
				КонецЕсли;
				Если ТоварНаСкладах.Сумма <> 0 Тогда
					Если СуммаДляРаспределения < ТоварНаСкладах.Сумма Тогда
						ДополнитьСуммуТоваров(Результат, СуммаДляРаспределения, ТоварНаСкладах.СтатусыПартийУСН);
						ТоварНаСкладах.Сумма = ТоварНаСкладах.Сумма - СуммаДляРаспределения;
						СуммаДляРаспределения = 0;
					ИначеЕсли СуммаДляРаспределения = ТоварНаСкладах.Сумма Тогда
						ДополнитьСуммуТоваров(Результат, ТоварНаСкладах.Сумма, ТоварНаСкладах.СтатусыПартийУСН);
						ТоварНаСкладах.Сумма = 0;
						СуммаДляРаспределения = 0;
					Иначе
						ДополнитьСуммуТоваров(Результат, ТоварНаСкладах.Сумма, ТоварНаСкладах.СтатусыПартийУСН);
						СуммаДляРаспределения = СуммаДляРаспределения - ТоварНаСкладах.Сумма;
						ТоварНаСкладах.Сумма = 0;
					КонецЕсли;
				КонецЕсли;
			КонецЦикла;
		КонецЦикла;
	Иначе
		Результат = ОстатокСуммойПоНоменклатуреИКредиторскойЗадолженностиТовары(СтруктураПараметров);
