Процедура ВыполнитьПодключениеМобильнойКассы(ИдентификаторМобильнойКассы)
	
	НаименованиеТипаЦен = НСтр("ru='Розничная цена'"); 
	ИмяСобытия = НСтр("ru = 'Данные.Добавление'", ОбщегоНазначения.КодОсновногоЯзыка());
	РозничныйТипЦенСсылка = Справочники.ТипыЦенНоменклатуры.НайтиПоНаименованию(НаименованиеТипаЦен);
	Если Не ЗначениеЗаполнено(РозничныйТипЦенСсылка) Тогда
		ДанныеЗаполненияТипЦен = Новый Структура;
		ДанныеЗаполненияТипЦен.Вставить("Наименование", НаименованиеТипаЦен);
		ДанныеЗаполненияТипЦен.Вставить("ВалютаЦены",
		ОбщегоНазначенияБПВызовСервераПовтИсп.ПолучитьВалютуРегламентированногоУчета());
		ДанныеЗаполненияТипЦен.Вставить("ЦенаВключаетНДС", Истина);
		ДанныеЗаполненияТипЦен.Вставить("ПорядокОкругления", Перечисления.ПорядкиОкругления.Окр0_01);
		
		РозничныйТипЦенСсылка = Справочники.ТипыЦенНоменклатуры.ПолучитьСсылку();
		РозничныйТипЦен = Справочники.ТипыЦенНоменклатуры.СоздатьЭлемент();
		РозничныйТипЦен.УстановитьСсылкуНового(РозничныйТипЦенСсылка);
		ЗаполнитьЗначенияСвойств(РозничныйТипЦен, ДанныеЗаполненияТипЦен);
		РозничныйТипЦен.Заполнить(ДанныеЗаполненияТипЦен);
		
		Попытка
			РозничныйТипЦен.Записать();
		Исключение
			ТекстОшибки = СтрШаблон(НСтр("ru = 'При записи типа цен произошла ошибка:
												|%1'"), КраткоеПредставлениеОшибки(ИнформацияОбОшибке()));
			
			ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
			РозничныйТипЦенСсылка = Неопределено;
		КонецПопытки;
	КонецЕсли;
	
	НаименованиеСклада =  НСтр("ru='Розничный склад'");
	РозничныйСкладСсылка = Справочники.Склады.НайтиПоНаименованию(НаименованиеСклада);
	Если Не ЗначениеЗаполнено(РозничныйСкладСсылка) 
			И ЗначениеЗаполнено(РозничныйТипЦенСсылка) Тогда
		
		ДанныеЗаполненияРозничныйСклад = Новый Структура;
		ДанныеЗаполненияРозничныйСклад.Вставить("Наименование", НаименованиеСклада);
		ДанныеЗаполненияРозничныйСклад.Вставить("ТипСклада", Перечисления.ТипыСкладов.РозничныйМагазин);
		ДанныеЗаполненияРозничныйСклад.Вставить("ТипЦенРозничнойТорговли", РозничныйТипЦен.Ссылка);
		
		РозничныйСкладСсылка = Справочники.Склады.ПолучитьСсылку();

		РозничныйСклад = Справочники.Склады.СоздатьЭлемент();
		РозничныйСклад.УстановитьСсылкуНового(РозничныйСкладСсылка);
		ЗаполнитьЗначенияСвойств(РозничныйСклад, ДанныеЗаполненияРозничныйСклад);
		РозничныйСклад.Заполнить(ДанныеЗаполненияРозничныйСклад);
		
		Попытка
			РозничныйСклад.Записать();
			РозничныйСкладСсылка = РозничныйСклад.Ссылка;
		Исключение
			ТекстОшибки = СтрШаблон(НСтр("ru = 'При записи склада произошла ошибка:
				|%1'"), КраткоеПредставлениеОшибки(ИнформацияОбОшибке()));
			
			ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
			РозничныйСкладСсылка = Неопределено;
		КонецПопытки;
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(РозничныйСкладСсылка) И ЗначениеЗаполнено(РозничныйТипЦенСсылка) Тогда
		
		Запись = РегистрыСведений.ОжиданиеПодключенияМК.СоздатьМенеджерЗаписи();
		Запись.ИдентификаторМК = ИдентификаторМобильнойКассы;
		Запись.Организация =  ОрганизацияПоУмолчанию();
		Запись.Склад = РозничныйСклад.Ссылка;
		
		Попытка
			Запись.Записать();
		Исключение
			ТекстОшибки = СтрШаблон(НСтр("ru = 'При записи настройки подключения к 1С:Мобильная касса произошла ошибка:
				|%1'"), КраткоеПредставлениеОшибки(ИнформацияОбОшибке()));
			
			ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
		КонецПопытки;
	КонецЕсли;

