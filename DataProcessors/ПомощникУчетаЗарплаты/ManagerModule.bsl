	ДатаДокумента          = Формат(РеквизитыДокумента.Дата,"ДЛФ=D");
	
	Если ТипЗнч(ДокументСсылка) = Тип("ДокументСсылка.ВедомостьНаВыплатуЗарплатыВКассу") Тогда
		ПредставлениеДокумента = НСтр("ru = 'Платежная ведомость'");
