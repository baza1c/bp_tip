	ПараметрыОбработки.Вставить("Правило_НДФЛ",        Правило_НДФЛ);
	ПараметрыОбработки.Вставить("Правило_Взносы",      Правило_Взносы);
	ПараметрыОбработки.Вставить("Правило_Уведомление", Правило_Уведомление);
	
