		|	""НДФЛ"",
		|	ЕСТЬNULL(НачисленияУдержанияПоСотрудникам.Сумма, 0) - ВЫБОР
		|		КОГДА КОЛИЧЕСТВО(ВТ_НачисленияУдержанияПоСотрудникамАвансом.Сумма) = 0
		|			ТОГДА 0
