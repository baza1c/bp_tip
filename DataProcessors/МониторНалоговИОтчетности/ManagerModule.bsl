	Результат = Новый ФорматированнаяСтрока("");
	
	ПараметрыСтроки = Новый Структура;
	ПараметрыСтроки.Вставить("СуммаКУплате", "");
	ПараметрыСтроки.Вставить("ПериодЕНП", "");
	
	Если ЭтоНалог И (ТипБлока = ЦветаИндикаторов().Желтый Или ТипБлока = ЦветаИндикаторов().Красный) Тогда
		Сумма = СтрокиИндикатора.Итог("КУплатеТекущий");
		Если УчитыватьДолгКУплате Тогда
			Сумма = Сумма + СтрокиИндикатора.Итог("КУплатеДолг");
		КонецЕсли;
		Если Сумма = Цел(Сумма) Тогда
			ФорматСуммы = "ЧДЦ=0; ЧН=0";
		Иначе
			ФорматСуммы = "ЧДЦ=2; ЧН=0";
		КонецЕсли;
		ПараметрыСтроки.СуммаКУплате = Формат(Сумма, ФорматСуммы);
	КонецЕсли;
	
	Если ТипБлока = ЦветаИндикаторов().Зеленый Тогда
		
		Если ЭтоНалог И ТребуетсяПоказатьРасчетНулевогоНалога(СтрокиИндикатора, КодЗадачи, ПараметрыМонитора)
