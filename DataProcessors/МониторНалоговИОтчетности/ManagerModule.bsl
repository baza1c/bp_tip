				И СтрНайти(ЗадачиНДФЛ[Индекс].КодПравила, "Уведомление") <> 0 Цикл
				ЗадачиПоПрошлымОтчетам.Удалить(ЗадачиНДФЛ[Индекс]);
				Индекс = Индекс + 1;
			КонецЦикла;
		КонецЕсли;
	КонецЦикла;
	
