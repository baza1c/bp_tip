			Строка0 = НСтр("ru = 'Оплата не требуется '");
		ИначеЕсли ЭтоНалог Тогда
			Строка0 = НСтр("ru = 'Налоги оплачены '");
		ИначеЕсли ЭтоЗадачаАУСН(КодЗадачи) Тогда
			Строка0 = НСтр("ru = 'Проверка банковских операций '");
		Иначе
			Строка0 = НСтр("ru = 'Отчетность сдана '");
		КонецЕсли;
		
		Строка0   = Новый ФорматированнаяСтрока(Строка0, ПараметрыМонитора.ШрифтЗаголовков);
		Смайлик   = Новый ФорматированнаяСтрока(ПараметрыМонитора.РадостныйСмайлик);
		Результат = Новый ФорматированнаяСтрока(Строка0, Смайлик);
		
	ИначеЕсли ТипБлока = ЦветаИндикаторов().Желтый Тогда
		Если ЭтоНалог Тогда
			Если ЭтоЗадачаАУСН(КодЗадачи) Тогда
				Строка0 = Нстр("ru = 'Рассчитан налог'");
			ИначеЕсли ЭтоЗадачаНалогНаПрофессиональныйДоход(КодЗадачи) 
				Или ЭтоЗадачаВзносыНаВНиМ(КодЗадачи)
				Или ЭтоЗадачаСтраховыхВзносовТравматизм(КодЗадачи)
				Или ЭтоЗадачаДопВзносов(КодЗадачи) Тогда
				Строка0 = Нстр("ru = 'Пора оплатить [СуммаКУплате] руб.'");
			ИначеЕсли ЭтоЗадачаВзносовИП(КодЗадачи) Тогда
				Строка0 = Нстр("ru = 'Рассчитана сумма взноса [СуммаКУплате] руб.'");
			ИначеЕсли СтрокиИндикатора.Количество() > 0 И ПравилоОплатыСЕНС(СтрокиИндикатора[0].КодПравила) Тогда
				Если ПараметрыМонитора.ПериодЕНП = "" Тогда
					ТекущиеЗадачи = СтрокиИндикатора.Скопировать(Новый Структура("ЭтоТекущаяЗадача", Истина));
					Если ТекущиеЗадачи.Количество() > 1 Тогда
						Периоды = ТекущиеЗадачи.ВыгрузитьКолонку("ПериодСобытия");
						ПериодСобытия = МаксимальнаяДатаВМассиве(Периоды);
					ИначеЕсли ТекущиеЗадачи.Количество() > 0 Тогда
						ПериодСобытия = ТекущиеЗадачи[0].ПериодСобытия;
					Иначе
						ПериодСобытия = СтрокиИндикатора[0].ПериодСобытия;
					КонецЕсли;
					ПараметрыСтроки.ПериодЕНП = Формат(ПериодСобытия, "ДФ='MMMM yyyy'");
				Иначе
					ПараметрыСтроки.ПериодЕНП = ПараметрыМонитора.ПериодЕНП;
				КонецЕсли;
				Строка0 = Нстр("ru = '[СуммаКУплате] руб. из ЕНП [ПериодЕНП]'");
			Иначе
				Строка0 = Нстр("ru = 'Рассчитана сумма [СуммаКУплате] руб.'");
			КонецЕсли;
		Иначе
			
			Если НуженПомощникОтчетовПрошлыхПериодовДляСтрокИндикатора(СтрокиИндикатора, ЭтоНалог) Тогда
				Строка0 = Нстр("ru = 'Проверьте, нужно ли сдать отчеты за прошлые периоды'");
			ИначеЕсли ОтчетностьПодготовлена(СтрокиИндикатора, ПараметрыМонитора) Тогда
				Строка0 = Нстр("ru = 'Отчетность подготовлена'");
			ИначеЕсли ЭтоЗадачаАУСН(КодЗадачи) Тогда
