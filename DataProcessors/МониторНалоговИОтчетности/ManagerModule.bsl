Функция МаксимальнаяДатаВМассиве(Периоды)
	ПериодСобытия = '00010101';
	КоличествоПериодов = Периоды.Количество();
	Если КоличествоПериодов > 1 Тогда
		Для Индекс = 0 По КоличествоПериодов - 1 Цикл
			ТекущийПериод = Периоды[Индекс];
			Если ПериодСобытия < ТекущийПериод Тогда
				ПериодСобытия = ТекущийПериод;
			КонецЕсли;
		КонецЦикла;
	ИначеЕсли КоличествоПериодов = 1 Тогда
		ПериодСобытия = Периоды[0];
	КонецЕсли; 
	
	Возврат ПериодСобытия;
