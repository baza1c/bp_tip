	Иначе
		// Расшифровываем сумму дохода через отдельную форму по ссылке
		Результат = СтроковыеФункции.ФорматированнаяСтрока(
			НСтр("ru = '(<a href=""РасшифроватьДоходИП"">%1</a> - %2) * 1%'"),
