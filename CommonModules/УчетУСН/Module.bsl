	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.ФОМС);                        // 69.03.1
	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.СтраховыеВзносыЕдиныйТариф);  // 69.09 
	
	// Страховые взносы по дополнительному тарифу
	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.ПФР_доп);                     // 69.02.3
	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.ПФР_доп_шахтеры);             // 69.02.4
	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.ПФР_доп_ВредныеУсловияТруда); // 69.02.5
	СчетаВзносов.Добавить(ПланыСчетов.Хозрасчетный.ПФР_доп_ТяжелыеУсловияТруда); // 69.02.6
	
	УсловияОтбора = БухгалтерскийУчет.НовыеУсловияОтбораСубсчетов();
