	Если Параметры.ТаблицаРасходов.Количество() > 0 Тогда
	
		ДокументОбъект.Движения.ПрочиеРасчеты.Записывать = Истина;
		
		СтруктураТаблицУСН = Новый Структура("ТаблицаРасходов", Параметры.ТаблицаРасходов);
		
