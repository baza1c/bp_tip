//
Функция НайтиСтрокуТаблицы(Знач Таблица, ПараметрыПоиска) Экспорт
	
	ИскомаяСтрока = Неопределено;
	
	Если ТипЗнч(Таблица) = Тип("ТаблицаЗначений") Тогда
		ИсходнаяТаблица = Таблица.Скопировать();
	Иначе
		ИсходнаяТаблица = Таблица.Выгрузить();
	КонецЕсли;
	
	Для Каждого КлючИЗначение Из ПараметрыПоиска Цикл
		Отбор = Новый Структура(КлючИЗначение.Ключ, КлючИЗначение.Значение);
		ИсходнаяТаблица = ИсходнаяТаблица.Скопировать(Отбор);
		Если ИсходнаяТаблица.Количество() = 0 Тогда
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
	Если ИсходнаяТаблица.Количество() > 0 Тогда
		ИскомаяСтрока = ИсходнаяТаблица[0];
	КонецЕсли;
	
	Возврат ИскомаяСтрока;
	
