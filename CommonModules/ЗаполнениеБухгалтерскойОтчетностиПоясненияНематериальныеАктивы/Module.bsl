	КонецЕсли;
	
	ШаблонОтбора = "";
	Если Выборка.Группа <> Null Тогда
		ШаблонОтбора = "Субконто%1.ВидНематериальногоАктива";
	КонецЕсли;
	
	ЗаполнениеБухгалтерскойОтчетностиРасшифровка.НастроитьОтборПоВидуСубконто(
		ЗначенияНастроекОтчета, 
