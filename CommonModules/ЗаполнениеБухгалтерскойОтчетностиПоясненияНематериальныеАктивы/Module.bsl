		НСтр("ru = '- по объектам с видом %1'"),
		НаименованиеГруппы);
		
	Если ПустаяСтрока(НаименованиеГруппы) Тогда
		НаименованиеГруппы = НСтр("ru = 'Нематериальные активы'");
		НаименованиеГруппыПорядокРасчета = НСтр("ru = '- по объектам'");
