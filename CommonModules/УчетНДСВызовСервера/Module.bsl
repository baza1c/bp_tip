	|			ТОГДА ЕСТЬNULL(КлассификаторТНВЭД.ЕдиницаИзмерения.Код,"""")
	|		ИНАЧЕ """"
	|	КОНЕЦ КАК КодЕдИзмеренияТНВЭДПрослеживаемогоТовара,
	|	ВЫБОР
	|		КОГДА Номенклатура.ПрослеживаемыйТовар
	|			ТОГДА ЕСТЬNULL(КлассификаторТНВЭД.ЕдиницаИзмерения.Наименование,"""")
	|		ИНАЧЕ """"
	|	КОНЕЦ КАК ЕдИзмеренияТНВЭДПрослеживаемогоТовара,
	|	Номенклатура.СтранаПроисхождения.Наименование КАК СтранаТовараНаименование,
	|	Номенклатура.СтранаПроисхождения.КодАльфа2 КАК СтранаТовараКод,
	|	ВЫБОР
	|		КОГДА НЕ Номенклатура.ПрослеживаемыйТовар
	|			ТОГДА Номенклатура.НомерГТД.Код
	|		ИНАЧЕ """"
	|	КОНЕЦ КАК НомерТаможеннойДекларации,
	|	Номенклатура.Производитель КАК Производитель,
	|	Номенклатура.Производитель.ИНН КАК ПроизводительИНН,
	|	Номенклатура.Производитель.КПП КАК ПроизводительКПП,
	|	Номенклатура.Производитель.РегистрационныйНомер КАК ПроизводительОГРН
	|ИЗ
	|	Справочник.Номенклатура КАК Номенклатура
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.КлассификаторТНВЭД КАК КлассификаторТНВЭД
	|		ПО Номенклатура.КодТНВЭД = КлассификаторТНВЭД.Ссылка
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлассификаторЕдиницИзмерения КАК КлассификаторЕдиницИзмерения
	|		ПО КлассификаторТНВЭД.ЕдиницаИзмерения = КлассификаторЕдиницИзмерения.Ссылка
	|ГДЕ
	|	Номенклатура.Ссылка = &Номенклатура
	|	И НЕ Номенклатура.ПометкаУдаления";
	
	Запрос.Параметры.Вставить("Номенклатура", Номенклатура);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Если Выборка.Следующий() Тогда
		
		ЗаполнитьЗначенияСвойств(ПередаваемыеПоказатели, Выборка);
		
		Если ЗначениеЗаполнено(Выборка.НомерТаможеннойДекларации) Тогда
			
			СтруктураНомераТаможеннойДекларации = Новый Структура;
			СтруктураНомераТаможеннойДекларации.Вставить("КодТО","");
			СтруктураНомераТаможеннойДекларации.Вставить("НомерДок","");
			СтруктураНомераТаможеннойДекларации.Вставить("ДекларацияНом","");
			СтруктураНомераТаможеннойДекларации.Вставить("ДатаРегистрацииСтр","");
			СтруктураНомераТаможеннойДекларации.Вставить("НомерДекларацииНаТовары","");
			
			УчетНДСФормированиеОтчетности.ЗаполнитьРеквизитыТаможеннойДекларации(
				Новый Структура("НомерТаможеннойДекларации", Выборка.НомерТаможеннойДекларации),
				СтруктураНомераТаможеннойДекларации);
			
			ПередаваемыеПоказатели.СписокНомеровТаможеннойДекларации.Добавить(СтруктураНомераТаможеннойДекларации);
			
		КонецЕсли;
		
		Если Выборка.ПрослеживаемыйТовар Тогда
			
			ДопСведенияПрослеживаемыеТовары = "";
			МакетПоказателей = Отчеты.РегламентированныйОтчетСтатистикаФормаУчетаПеремещенияТоваровТС.ПолучитьМакет("СпискиАналогЛК");
			СписокЗначенийГрафы19 = МакетПоказателей.ПолучитьОбласть("Гр19");
		
			Для Ном = 1 По СписокЗначенийГрафы19.ВысотаТаблицы Цикл
				
				Если СокрЛП(СписокЗначенийГрафы19.Область(Ном,1).Текст) = "08" Тогда
					ДопСведенияПрослеживаемыеТовары = СокрЛП(СписокЗначенийГрафы19.Область(Ном,2).Текст);
				КонецЕсли;
				
			КонецЦикла;
			
			ПередаваемыеПоказатели.Графа19Соответствие.Вставить("08", ДопСведенияПрослеживаемыеТовары);
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат ПередаваемыеПоказатели;
	
КонецФункции

