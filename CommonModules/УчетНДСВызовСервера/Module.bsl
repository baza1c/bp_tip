			Если НЕ ЕстьУПДСтатус1 Тогда
				СписокМакетов = СписокМакетов + ?(СписокМакетов = "", "УПДСтатус1", ",УПДСтатус1");
				ЕстьУПДСтатус1 = Истина;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
