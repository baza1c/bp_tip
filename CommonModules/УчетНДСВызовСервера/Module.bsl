		ПередаваемыеПоказатели.Вставить(Элемент, "");
	КонецЦикла;
	
	ПередаваемыеПоказатели.Вставить("Графа19Соответствие", Новый Соответствие);
	ПередаваемыеПоказатели.Вставить("СписокНомеровТаможеннойДекларации", Новый СписокЗначений);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
