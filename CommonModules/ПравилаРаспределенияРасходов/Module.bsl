	Правило.Наименование = НСтр("ru = 'Затраты стадии разработок НИОКР, включаются в стоимость капитальных вложений'");
	Правило.СодержаниеПроводки = НСтр("ru = 'Капитализация затрат на НИОКР'");

	// Поля приемника
	Правило.ПоляПриемника.Вставить("Подразделение", "Подразделение");
	Правило.ПоляПриемника.Вставить("НИОКР", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.РасходыНаНИОКР);
