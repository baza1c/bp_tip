	КонецЕсли;
	
	СписокКодовОКОПФНКО = Справочники.Организации.СписокКодовОКОПФНКО();
	КодОКОПФ = СокрЛП(ДанныеБаннера[0].КодОКОПФ);
	Если ЗначениеЗаполнено(КодОКОПФ) Тогда
		Возврат (СписокКодовОКОПФНКО.Найти(КодОКОПФ) <> Неопределено);
	КонецЕсли;
	
	// Если ОКОПФ не задан, то ищем по полному наименованию организации
	НаименованиеОрганизации = ДанныеБаннера[0].НаименованиеПолное;
	Если ПустаяСтрока(НаименованиеОрганизации) Тогда
		Возврат Ложь;
	КонецЕсли;
	
	СтрокаРегулярногоВыражения = СтрокаРегулярногоВыраженияДляПоискаНКО();
	Результат = СтрНайтиПоРегулярномуВыражению(НРег(НаименованиеОрганизации), СтрокаРегулярногоВыражения, , , , Истина);
	Если Результат.Длина > 0 Тогда
		Возврат Истина;
	КонецЕсли;
	
	Возврат Ложь;
	
