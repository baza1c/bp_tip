	КонецЦикла;
	
	ОчиститьРазделДекларации(РазделДекларации, ЗаполняемыеПоказатели);
	
	СуммыНалога.Сортировать("Период, КБК");
	ПредыдущийКБК = "";
	ПоказателиЛиста = Неопределено;
	Конец1Квартала = КонецКвартала(НачалоГода(ПараметрыОтчета.ДатаНачалаПериодаОтчета));
	ПоказательСтроки = "КБКИП";
	
	ОКТМОИП1Квартал = Справочники.Организации.КодПоОКТМОНаДату(ПараметрыОтчета.Организация, Конец1Квартала);
	ОКТМОИППолугодие = Справочники.Организации.КодПоОКТМОНаДату(ПараметрыОтчета.Организация, ДобавитьМесяц(Конец1Квартала, 3));
	ОКТМОИП9Месяцев = Справочники.Организации.КодПоОКТМОНаДату(ПараметрыОтчета.Организация, ДобавитьМесяц(Конец1Квартала, 6));
	ОКТМОИПГод = Справочники.Организации.КодПоОКТМОНаДату(ПараметрыОтчета.Организация, ПараметрыОтчета.ДатаКонцаПериодаОтчета);
	
	Если Не ЗначениеЗаполнено(СуммыНалога) Тогда
		
		// Если по предпринимательской деятельности нет сумм к уплате, то заполняем в Разделе 1 пункт 2 нулевыми суммами
		КлючПоказателя = КлючиПоказателей.Найти(ПоказательСтроки, "Ключ");
		Если КлючПоказателя = Неопределено Тогда
			Возврат;
		КонецЕсли;
		
		КБК = КБКПоВидуДохода(Перечисления.ВидыНалогов.НДФЛ_ИП,
			ПараметрыОтчета.ДатаНачалаПериодаОтчета,
			Справочники.ВидыНалоговИПлатежейВБюджет.КодВидаДоходаНДФЛПредпринимателя13());
		
		ПоказателиЛиста = РазделДекларации.Строки[0].ДанныеМногострочныхЧастей[КлючПоказателя.МногострочныйРаздел].Строки[0].Данные;
		
		ЗаполнитьПоказательЛистаДекларации(ПоказательСтроки, КБК, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИП1Квартал", ОКТМОИП1Квартал, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИППолугодие", ОКТМОИППолугодие, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИП9Месяцев", ОКТМОИП9Месяцев, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИПГод", ОКТМОИПГод, ПоказателиЛиста, КлючиПоказателей);
		Возврат;
		
	КонецЕсли;
	
	Для Каждого ТекущаяСтрока Из СуммыНалога Цикл
		
		Если ТекущаяСтрока.КБК <> ПредыдущийКБК Тогда
			
			КлючПоказателя = КлючиПоказателей.Найти(ПоказательСтроки, "Ключ");
			Если КлючПоказателя = Неопределено Тогда
				Продолжить;
			КонецЕсли;
			
			ПерваяСтрока = РазделДекларации.Строки[0].ДанныеМногострочныхЧастей[КлючПоказателя.МногострочныйРаздел].Строки[0];
			
			Если Не ЗначениеЗаполнено(ПерваяСтрока.Данные[КлючПоказателя.ИмяПоля]) Тогда
				ПоказателиЛиста = ПерваяСтрока.Данные;
			Иначе
				НоваяСтрока = РазделДекларации.Строки[0].ДанныеМногострочныхЧастей[КлючПоказателя.МногострочныйРаздел].Строки.Добавить();
				НоваяСтрока.Данные = ШаблонДанныхРаздела(ПерваяСтрока.Данные, ЗаполняемыеПоказатели);
				НоваяСтрока.ДанныеМногострочныхЧастей = ШаблонДанныхМногострочныхЧастей(ПерваяСтрока.ДанныеМногострочныхЧастей, ЗаполняемыеПоказатели);
				ПоказателиЛиста = НоваяСтрока.Данные;
			КонецЕсли;
			
			ЗаполнитьПоказательЛистаДекларации(ПоказательСтроки, ТекущаяСтрока.КБК, ПоказателиЛиста, КлючиПоказателей);
			ПредыдущийКБК = ТекущаяСтрока.КБК;
			
		КонецЕсли;
		
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИП1Квартал", ОКТМОИП1Квартал, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИППолугодие", ОКТМОИППолугодие, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИП9Месяцев", ОКТМОИП9Месяцев, ПоказателиЛиста, КлючиПоказателей);
		ЗаполнитьПоказательЛистаДекларации("ОКТМОИПГод", ОКТМОИПГод, ПоказателиЛиста, КлючиПоказателей);
		
		Если ПоказателиЛиста <> Неопределено Тогда
			
			Если ТекущаяСтрока.Сумма < 0 Тогда
				ЗаполнитьПоказательЛистаДекларации(СтрШаблон("СуммаНалогаИПКУменьшению%1", ТекущаяСтрока.ПредставлениеПериода),
					-ТекущаяСтрока.Сумма,
					ПоказателиЛиста,
					КлючиПоказателей);
			Иначе
				ЗаполнитьПоказательЛистаДекларации(СтрШаблон("СуммаНалогаИПКУплате%1", ТекущаяСтрока.ПредставлениеПериода),
					ТекущаяСтрока.Сумма,
					ПоказателиЛиста,
					КлючиПоказателей);
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

