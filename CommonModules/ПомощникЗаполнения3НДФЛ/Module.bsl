	ЗаполнитьПоказательЛистаДекларации("НомерСчетаВозврат", СведенияОбОрганизации.БанкСчетНомер, ПоказателиЛиста, КлючиПоказателей);
	
КонецПроцедуры

Функция ДекларацияЗаполненаПоДаннымПомощника(ПараметрыОтчета, КлючиПоказателей, Контейнер)
	
	НастройкиАвтозаполнения = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПараметрыОтчета, "НастройкиАвтозаполнения");
	Если Не ЗначениеЗаполнено(НастройкиАвтозаполнения) Тогда
		Возврат Ложь;
	КонецЕсли;
	
	ДанныеЗаполнения = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(НастройкиАвтозаполнения, "ДанныеЗаполнения");
	Если Не ЗначениеЗаполнено(ДанныеЗаполнения) Или ТипЗнч(ДанныеЗаполнения) <> Тип("ТаблицаЗначений") Тогда
		Возврат Ложь;
	КонецЕсли;
	
	СтрокиСтандратногоСоциальногоВычета = Новый Массив;
	
	Для Каждого ТекущаяСтрока Из ДанныеЗаполнения Цикл
		
		ТекущиеДанные = ОбщегоНазначения.СтрокаТаблицыЗначенийВСтруктуру(ТекущаяСтрока);
		СтруктураДанных = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ТекущиеДанные, "СтруктураДанных");
		
		Если Не ЗначениеЗаполнено(СтруктураДанных) Или ТипЗнч(СтруктураДанных) <> Тип("Структура") Тогда
			Продолжить;
		КонецЕсли;
		
		Если ЭтоСтандартныйСоциальныйВычет(ТекущаяСтрока.Вид) Тогда
			// Для социальных и стандартных вычетов данные указываются на одном листе
			НоваяСтрока = Не ЗначениеЗаполнено(СтрокиСтандратногоСоциальногоВычета);
			СтрокиСтандратногоСоциальногоВычета.Добавить(ТекущаяСтрока.Вид);
		Иначе
			НоваяСтрока = Истина;
		КонецЕсли;
		
		Для Каждого ТекущееПоле Из СтруктураДанных Цикл
			
			КлючПоказателя = КлючиПоказателей.Найти(ТекущееПоле.Ключ, "Ключ");
			Если Не ЗначениеЗаполнено(КлючПоказателя) Тогда
				Продолжить;
			КонецЕсли;
			
			РазделДекларации = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(Контейнер, КлючПоказателя.ИмяСтраницы);
			Если Не ЗначениеЗаполнено(РазделДекларации) Тогда
				Продолжить;
			КонецЕсли;
			
			Если ТипЗнч(ТекущееПоле.Значение) = Тип("СписокЗначений") Тогда
				
				Для Каждого ТекущееЗначениеСписка Из ТекущееПоле.Значение Цикл
					ПоказателиЛиста = НовыеПоказателиЛиста(РазделДекларации, КлючПоказателя, НоваяСтрока);
					ЗаполнитьПоказательЛистаДекларации(ТекущееПоле.Ключ,
						ТекущееЗначениеСписка.Значение,
						ПоказателиЛиста,
						КлючиПоказателей);
					НоваяСтрока = Истина;
				КонецЦикла;
				
			Иначе
				
				ПоказателиЛиста = НовыеПоказателиЛиста(РазделДекларации, КлючПоказателя, НоваяСтрока);
				ЗаполнитьПоказательЛистаДекларации(ТекущееПоле.Ключ, ТекущееПоле.Значение, ПоказателиЛиста, КлючиПоказателей);
			
			КонецЕсли;
			
			НоваяСтрока = Ложь;
			
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат Истина;
	
КонецФункции

Функция ЭтоСтандартныйСоциальныйВычет(Вычет)
	
	ВидыВычетов = Новый Массив;
	ВидыВычетов.Добавить(Перечисления.ВычетыФизическихЛиц.СтандартныйНаДетей);
	ВидыВычетов.Добавить(Перечисления.ВычетыФизическихЛиц.СтандартныйНаНалогоплательщика);
	ВидыВычетов.Добавить(Перечисления.ВычетыФизическихЛиц.Социальный);
	
	Возврат ВидыВычетов.Найти(Вычет) <> Неопределено;
	
КонецФункции

Функция НовыеПоказателиЛиста(РазделДекларации, КлючПоказателя, НоваяСтрока)
	
	Если ЭтоПолеМногострочногоРаздела(КлючПоказателя) Тогда
		ИсточникДанных = РазделДекларации.Строки[0].ДанныеМногострочныхЧастей[КлючПоказателя.МногострочныйРаздел].Строки;
	Иначе
		ИсточникДанных = РазделДекларации.Строки;
	КонецЕсли;
	
	КоличествоСтрок = ИсточникДанных.Количество();
	
