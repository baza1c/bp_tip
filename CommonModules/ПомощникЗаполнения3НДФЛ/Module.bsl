#Область ЗаполнениеДекларации

Процедура Заполнить3НДФЛДля2025(ВыбраннаяФорма, ПараметрыОтчета, Контейнер)
	
	КлючиПоказателей = КлючиПоказателейДекларации(ВыбраннаяФорма);
	Если КлючиПоказателей = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	КлючПоказателя = КлючиПоказателей.Найти("КодВидаДеятельностиИП", "Ключ");
	Если КлючПоказателя <> Неопределено Тогда
		ИмяРаздела = КлючПоказателя.ИмяСтраницы;
	Иначе
		ВызватьИсключение НСтр("ru = 'Не определен раздел для заполнения'");
	КонецЕсли;
	
	Если ДекларацияЗаполненаПоДаннымПомощника(ПараметрыОтчета, КлючиПоказателей, Контейнер) Тогда
		ПоместитьВоВременноеХранилище(Новый Структура("Контейнер", Контейнер), ПараметрыОтчета.АдресВоВременномХранилище);
		Возврат;
	КонецЕсли;
	
	// Заполняем декларацию данными учета по умолчанию доходом от предпринимательской деятельности
	
	ЗаполнитьТитульныйЛистДекларации(ПараметрыОтчета, Контейнер);
	
	ТаблицаСуммНалога = Новый ТаблицаЗначений;
	ТаблицаСуммНалога.Колонки.Добавить("Период", ОбщегоНазначения.ОписаниеТипаДата(ЧастиДаты.Дата));
	ТаблицаСуммНалога.Колонки.Добавить("КБК", ОбщегоНазначения.ОписаниеТипаСтрока(20));
	ТаблицаСуммНалога.Колонки.Добавить("Сумма", ОбщегоНазначения.ОписаниеТипаЧисло(15, 2));
	ТаблицаСуммНалога.Колонки.Добавить("ПредставлениеПериода", ОбщегоНазначения.ОписаниеТипаСтрока(10));
	
	ПравилоУплаты = РегистрыСведений.ЗадачиБухгалтера.ПорядокУплатыНалогаЗаПериод(
		ПараметрыОтчета.Организация,
		Перечисления.ВидыНалогов.НДФЛ_ИП,
		НачалоГода(ПараметрыОтчета.ДатаНачалаПериодаОтчета));
	
	ПараметрыНалоговойБазы = Новый Структура;
	ПараметрыНалоговойБазы.Вставить("ВыбраннаяФорма", ВыбраннаяФорма);
	ПараметрыНалоговойБазы.Вставить("ТаблицаСуммНалога", ТаблицаСуммНалога);
	ПараметрыНалоговойБазы.Вставить("ПравилоУплаты", ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПравилоУплаты, "Правило"));
	
	ЗаполняемыеПоказатели = Новый Структура;
	СведенияОПоказателяхОтчета3НДФЛ(ВыбраннаяФорма, ЗаполняемыеПоказатели);
	ЗаполнитьПоказателиАвансовыхПлатежей(ПараметрыОтчета, ПараметрыНалоговойБазы, Контейнер, КлючиПоказателей);
	
	// Код вида деятельности
	КодыВидовДеятельности = КодыВидовПредпринимательскойДеятельности(ВыбраннаяФорма);
	КодВидаДеятельности = КодыВидовДеятельности.ПредпринимательскаяДеятельность;
	ПараметрыКУДИР = Новый Структура;
	ПараметрыКУДИР.Вставить("Организация", ПараметрыОтчета.Организация);
	ПараметрыКУДИР.Вставить("мДатаНачалаПериодаОтчета", ПараметрыОтчета.ДатаНачалаПериодаОтчета);
	ПараметрыКУДИР.Вставить("мДатаКонцаПериодаОтчета", ПараметрыОтчета.ДатаКонцаПериодаОтчета);
	ПараметрыКУДИР.Вставить("УникальныйИдентификаторФормы");
	
	ДоходыРасходы = УчетДоходовИРасходовПредпринимателя.ДоходыРасходыПоВидамДеятельности(ПараметрыКУДИР);
	РазделДекларации = Контейнер[ИмяРаздела];
	ОчиститьРазделДекларации(РазделДекларации, ЗаполняемыеПоказатели, ДоходыРасходы.Количество());
	
	КлючиРаздела = КлючиПоказателей.Скопировать(Новый Структура("ИмяСтраницы, ОбщееПолеМногострочногоРаздела", ИмяРаздела, Ложь));
	ОбщиеИтоги = КлючиПоказателей.Скопировать(Новый Структура("ИмяСтраницы, ОбщееПолеМногострочногоРаздела", ИмяРаздела, Истина));
	
	СтраховыеВзносы = УчетДоходовИРасходовПредпринимателя.РасходыНаУплатуСтраховыхВзносовЗаТекущийПериод(
		ПараметрыОтчета.Организация,
		ПараметрыОтчета.ДатаКонцаПериодаОтчета);
	
	Для Индекс = 0 По ДоходыРасходы.Количество() - 1 Цикл
		
		Если Индекс = 0 Тогда
			// Первая строка всегда есть в контейнере - просто заполняем её данными
			НоваяСтрока = РазделДекларации.Строки[Индекс];
		Иначе
			// Остальные строки создаем по шаблону первой
			НоваяСтрока = РазделДекларации.Строки.Добавить();
			НоваяСтрока.Данные = ШаблонДанныхРаздела(РазделДекларации.Строки[0].Данные, ЗаполняемыеПоказатели);
			НоваяСтрока.ДанныеМногострочныхЧастей = ШаблонДанныхМногострочныхЧастей(
				РазделДекларации.Строки[0].ДанныеМногострочныхЧастей,
				ЗаполняемыеПоказатели);
		КонецЕсли;
		
		ПараметрыЗаполнения = ОбщегоНазначения.СтрокаТаблицыЗначенийВСтруктуру(ДоходыРасходы[Индекс]);
		ПараметрыЗаполнения.Вставить("КодВидаДеятельности", КодВидаДеятельности);
		// Страховые взносы ИП включаются в КУДИР в прочие расходы, в декларации же они выделены в отдельное поле
		ПараметрыЗаполнения.Вставить("СтраховыеВзносы", Мин(СтраховыеВзносы, ПараметрыЗаполнения.ПрочиеРасходы));
		ПараметрыЗаполнения.ПрочиеРасходы = ПараметрыЗаполнения.ПрочиеРасходы - СтраховыеВзносы;
		
		ЗаполнитьПредпринимательскуюДеятельностьДекларации(
			НоваяСтрока.ДанныеМногострочныхЧастей,
			КлючиРаздела,
			ПараметрыЗаполнения);
		
		ЗаполнитьОбщиеИтогиПредпринимательскойДеятельности(
			РазделДекларации.Строки[Индекс].Данные,
			ОбщиеИтоги,
			ДоходыРасходы[Индекс]);
		
		СтраховыеВзносы = Макс(0, СтраховыеВзносы - ПараметрыЗаполнения.СтраховыеВзносы);
		
	КонецЦикла;
	
	АвансовыеПлатежи = УчетНДФЛПредпринимателя.УплаченныйНалогЗаПериод(ПараметрыОтчета.Организация,
		ПараметрыОтчета.ДатаНачалаПериодаОтчета,
		ПараметрыОтчета.ДатаКонцаПериодаОтчета);
	
	ЗаполнитьПоказательЛистаДекларации("СуммаУплаченныхАвансовыхПлатежейИП",
		АвансовыеПлатежи,
		РазделДекларации.Строки[0].Данные,
		ОбщиеИтоги);
	
	ПараметрыНалоговойБазы.Вставить("КодГруппыДохода", КодГруппыДохода(КодыВидовДоходов2025().ПредпринимательскаяДеятельность, ВыбраннаяФорма));
	
	ЗаполнитьНалоговуюБазуПредпринимательскойДеятельности(
		ПараметрыОтчета,
		ПараметрыНалоговойБазы,
		Контейнер,
		КлючиПоказателей);
	
	ЗаполнитьСуммыКУплатеВозврату(ПараметрыОтчета, Контейнер, КлючиПоказателей, ПараметрыНалоговойБазы.ТаблицаСуммНалога);
	
	ПоместитьВоВременноеХранилище(Новый Структура("Контейнер", Контейнер), ПараметрыОтчета.АдресВоВременномХранилище);
	
КонецПроцедуры

Процедура ОчиститьРазделДекларации(РазделДекларации, ЗаполняемыеПоказатели, Знач КоличествоЛистов = 1)
	
	Если РазделДекларации.Строки.Количество() = 0 Тогда
		ВызватьИсключение НСтр("ru = 'Контейнер раздела не инициализирован'");
	КонецЕсли;
	
	ШаблонЛистаДанных = ШаблонДанныхРаздела(РазделДекларации.Строки[0].Данные, ЗаполняемыеПоказатели);
	ШаблонМногострочныхДанных = ШаблонДанныхМногострочныхЧастей(РазделДекларации.Строки[0].ДанныеМногострочныхЧастей, ЗаполняемыеПоказатели);
	
	РазделДекларации.Строки.Очистить();
	Для НомерЛиста = 1 По КоличествоЛистов Цикл
		НоваяСтрока = РазделДекларации.Строки.Добавить();
		НоваяСтрока.Данные = ОбщегоНазначения.СкопироватьРекурсивно(ШаблонЛистаДанных);
		НоваяСтрока.ДанныеМногострочныхЧастей = ОбщегоНазначения.СкопироватьРекурсивно(ШаблонМногострочныхДанных);
	КонецЦикла;
	
КонецПроцедуры

Функция ШаблонДанныхРаздела(ДанныеРаздела, ЗаполняемыеПоказатели = Неопределено)
	
	Результат = ОбщегоНазначения.СкопироватьРекурсивно(ДанныеРаздела);
	Для Каждого Показатель Из Результат Цикл
		Если ЗаполняемыеПоказатели = Неопределено Или ЗаполняемыеПоказатели.Свойство(Показатель.Ключ) Тогда
			ТипПоказателя = ТипЗнч(Показатель.Значение);
			Результат[Показатель.Ключ] = ОбщегоНазначенияБПКлиентСервер.ПустоеЗначениеТипа(ТипПоказателя);
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

Функция ШаблонДанныхМногострочныхЧастей(ДанныеМногострочныхЧастей, ЗаполняемыеПоказатели = Неопределено)
	
	Результат = Новый Структура;
	Для Каждого МногострочнаяЧасть Из ДанныеМногострочныхЧастей Цикл
		ТипПоказателя = ТипЗнч(МногострочнаяЧасть.Значение);
		Если ТипПоказателя = Тип("ДеревоЗначений") Тогда
			ШаблонДереваЗначений = ОбщегоНазначения.СкопироватьРекурсивно(МногострочнаяЧасть.Значение);
			ОчиститьРазделДекларации(ШаблонДереваЗначений, ЗаполняемыеПоказатели);
			Результат.Вставить(МногострочнаяЧасть.Ключ, ШаблонДереваЗначений);
		Иначе
			Результат.Вставить(МногострочнаяЧасть.Ключ, ШаблонДанныхРаздела(МногострочнаяЧасть.Значение, ЗаполняемыеПоказатели));
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

Процедура ДобавитьСведенияОПоказателеОтчета3НДФЛ(ИмяПоказателя, ПоказателиОтчета, КлючиПоказателей)
	
