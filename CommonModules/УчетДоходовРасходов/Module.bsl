	Счет = Проводка["Счет" + СторонаПроводки];

	СтрокаДляПереоценки = ТаблицаДляПереоценки.Добавить();
	СтрокаДляПереоценки.Счет          = Счет;
	СтрокаДляПереоценки.Подразделение = Проводка["Подразделение" + СторонаПроводки];
