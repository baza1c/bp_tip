					НомерБанковскогоСчета = СтрокаДляПереоценки["Субконто" + НомерСубконто].НомерСчета;
				ИначеЕсли ЭтоСчетРасчетов 
					И ТипЗнч(СтрокаДляПереоценки["Субконто" + НомерСубконто]) = Тип("СправочникСсылка.ДоговорыКонтрагентов") Тогда
					
