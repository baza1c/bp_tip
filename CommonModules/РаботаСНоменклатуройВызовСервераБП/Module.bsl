// Возвращает первую архивную найденную номенклатуру, по набору полей
//
// Параметры:
//  <Отбор> - <Структура> - список наименований и значений полей по которому будет поиск
//
// Возвращаемое значение:
//   <СправочникСсылка.Номенклатура>, Неопределено - найденная номенклатура
//
Функция НоменклатураВАрхиве(Отбор) Экспорт
	Запрос = Новый Запрос;
	
	Запрос.Текст = 
		"ВЫБРАТЬ ПЕРВЫЕ 1
		|	Номенклатура.Ссылка КАК Ссылка
		|ИЗ
		|	Справочник.Номенклатура КАК Номенклатура
		|ГДЕ
		|	&СтрокаУсловие";
	
	СписокУсловий = Новый Массив;
	СписокУсловий.Добавить("Номенклатура.ВАрхиве");
	
	МетаданныеСправочник = Метаданные.Справочники.Номенклатура.Реквизиты;
	Для каждого ЭлементОтбора Из Отбор Цикл
		Реквизит = МетаданныеСправочник.Найти(ЭлементОтбора.Ключ);
		Если ЭлементОтбора.Ключ = "Наименование" 
			ИЛИ Реквизит.Тип = Новый ОписаниеТипов("Строка") Тогда
			
			СписокУсловий.Добавить(СтрШаблон("СокрП(НРег(Номенклатура.%1)) = &%1", ЭлементОтбора.Ключ));
			Запрос.УстановитьПараметр(ЭлементОтбора.Ключ, СокрП(НРег(ЭлементОтбора.Значение)));
		ИначеЕсли Реквизит <> Неопределено Тогда
			
			СписокУсловий.Добавить(СтрШаблон("Номенклатура.%1 = &%1", ЭлементОтбора.Ключ));
			Запрос.УстановитьПараметр(ЭлементОтбора.Ключ, ЭлементОтбора.Значение);
		КонецЕсли;
	КонецЦикла;
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&СтрокаУсловие", СтрСоединить(СписокУсловий, " И "));
	
	Ссылка = Неопределено;
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Ссылка = Выборка.Ссылка;
	КонецЕсли;
	
	Возврат Ссылка;
КонецФункции

