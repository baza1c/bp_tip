Функция НовыйТаблицаАмортизационнойПремии()
	
	ТипХозрасчетный = Новый ОписаниеТипов("ПланСчетовСсылка.Хозрасчетный");
	
	Результат = Новый ТаблицаЗначений;
	Результат.Колонки.Добавить("ОсновноеСредство", Новый ОписаниеТипов("СправочникСсылка.ОсновныеСредства"));
	Результат.Колонки.Добавить("СуммаАмортизационнойПремии", ОбщегоНазначения.ОписаниеТипаЧисло(15, 2));
	Результат.Колонки.Добавить("СчетУчетаРасходов", ТипХозрасчетный);
	Результат.Колонки.Добавить("Субконто", Метаданные.ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.Тип);
	Результат.Колонки.Добавить("СчетВыбытия", ТипХозрасчетный);
	
	Возврат Результат;
	
КонецФункции

Функция ДатаПримененияНовогоПорядкаВосстановлениеАмортизационнойПремии()
	
	Возврат Дата('20130101');
	
КонецФункции

Функция ПодготовитьТаблицуВосстановлениеАмортизационнойПремии(ТаблицаОС, ТаблицаСтоимости, ТаблицаРеквизиты, СправкаРасчет) Экспорт

	АмортизационнаяПремия = НовыйТаблицаАмортизационнойПремии();
	
	Если Не ЗначениеЗаполнено(ТаблицаОС) Тогда
		Возврат АмортизационнаяПремия;
	КонецЕсли;
	
	Реквизиты = ТаблицаРеквизиты[0];
	
	Если Не Реквизиты.ВосстановитьАмортизационнуюПремию Тогда
		Возврат АмортизационнаяПремия;
	КонецЕсли;
	
	Если Не УчетнаяПолитика.ПлательщикНалогаНаПрибыль(Реквизиты.Организация, Реквизиты.Период) Тогда
		Возврат АмортизационнаяПремия;
	КонецЕсли;
	
	Параметры = ПодготовитьПараметрыВосстановлениеАмортизационнойПремии(ТаблицаОС, ТаблицаРеквизиты);
	Реквизиты = Параметры.Реквизиты[0];
	
	ВидИспользованияСумм = БухгалтерскийУчет.ИспользоватьСуммыНалогНаПрибыль(Реквизиты.Организация, Реквизиты.Период);
	ИспользоватьСуммыРазниц = БухгалтерскийУчетКлиентСервер.ИспользоватьСуммыРазниц(ВидИспользованияСумм);
	СписокОбъектов = Параметры.ТаблицаОС.ВыгрузитьКолонку("ОсновноеСредство");
	
	Запрос = Новый Запрос();
	Запрос.УстановитьПараметр("СписокОС", СписокОбъектов);
	Запрос.УстановитьПараметр("Организация", Реквизиты.Организация);
	Запрос.УстановитьПараметр("ТекущаяДата", Реквизиты.Период);
	Запрос.УстановитьПараметр("ГоловнаяОрганизация", ОбщегоНазначенияБПВызовСервераПовтИсп.ГоловнаяОрганизация(Реквизиты.Организация));

	Запрос.Текст =
	"ВЫБРАТЬ
	|	ЕСТЬNULL(МИНИМУМ(ПервоначальныеСведенияОСНалоговыйУчетСрезПоследних.Период), ДАТАВРЕМЯ(2006, 1, 1)) КАК Период
	|ИЗ
	|	РегистрСведений.ПервоначальныеСведенияОСНалоговыйУчет.СрезПоследних(
	|			&ТекущаяДата,
	|			(Организация = &Организация ИЛИ Организация.ГоловнаяОрганизация = &ГоловнаяОрганизация)
	|				И ОсновноеСредство В (&СписокОС)) КАК ПервоначальныеСведенияОСНалоговыйУчетСрезПоследних";
	РезультатЗапроса = Запрос.Выполнить();
	Если НЕ РезультатЗапроса.Пустой() Тогда
		ДатаНачала = РезультатЗапроса.Выгрузить()[0].Период;
	Иначе
		ДатаНачала = '20060101';
	КонецЕсли;

	Запрос = Новый Запрос();
	Запрос.УстановитьПараметр("СписокОС", СписокОбъектов);
	Запрос.УстановитьПараметр("Организация", Реквизиты.Организация);
	Запрос.УстановитьПараметр("ГоловнаяОрганизация", ОбщегоНазначенияБПВызовСервераПовтИсп.ГоловнаяОрганизация(Реквизиты.Организация));
	Запрос.УстановитьПараметр("ДатаНач", ДатаНачала);
	Запрос.УстановитьПараметр("ДатаКон", Новый Граница(Новый МоментВремени(Реквизиты.Период, Реквизиты.Регистратор), ВидГраницы.Исключая));
	
	Если Реквизиты.Период < ДатаПримененияНовогоПорядкаВосстановлениеАмортизационнойПремии() Тогда
		Запрос.Текст =
		"ВЫБРАТЬ
		|	ЕСТЬNULL(СУММА(ХозрасчетныйОбороты.СуммаНУОборотКт), 0) КАК СуммаОборотКт
		|ИЗ
		|	РегистрБухгалтерии.Хозрасчетный.Обороты(
		|			&ДатаНач,
		|			&ДатаКон,
		|			Период,
		|			Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасходыНаКапитальныеВложения),
		|			ЗНАЧЕНИЕ(ПланВидовХарактеристик.ВидыСубконтоХозрасчетные.ОсновныеСредства),
		|			(Организация.ГоловнаяОрганизация = &ГоловнаяОрганизация ИЛИ Организация = &Организация)
		|				И Субконто1 В (&СписокОС),
		|			,
		|			) КАК ХозрасчетныйОбороты";
		РезультатЗапроса = Запрос.Выполнить();
		
		СуммаАморПремии = 0;
		Если Не РезультатЗапроса.Пустой() Тогда
			СуммаАморПремии = РезультатЗапроса.Выгрузить()[0].СуммаОборотКт;
		КонецЕсли;
		
		СуммаАморПремии = СуммаАморПремии + Реквизиты.СуммаКапитальныхВложенийВключаемыхВРасходы;
		
		Если СуммаАморПремии = 0 Тогда
			ТекстСообщения = НСтр("ru = 'Амортизационная премия не применялась к указанным объектам. Восстановление амортизационной премии не сделано'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, Реквизиты.Регистратор, , "Объект", Ложь);
			Возврат АмортизационнаяПремия;
		КонецЕсли;

		НоваяСтрока = АмортизационнаяПремия.Добавить();
		НоваяСтрока.СуммаАмортизационнойПремии = СуммаАморПремии;
		
	Иначе
	
		Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
		Запрос.УстановитьПараметр("ТаблицаОС", ТаблицаСтоимости);
		
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ТаблицаОС.ОсновноеСредство КАК Объект,
		|	ТаблицаОС.СчетСписания КАК СчетУчетаРасходов,
		|	ТаблицаОС.СчетВыбытия КАК СчетВыбытия,
		|	ТаблицаОС.Субконто КАК Субконто
		|ПОМЕСТИТЬ ОсновныеСредства
		|ИЗ
		|	&ТаблицаОС КАК ТаблицаОС
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	ХозрасчетныйОбороты.Субконто1 КАК ОсновноеСредство,
		|	СУММА(ЕСТЬNULL(ХозрасчетныйОбороты.СуммаНУОборотКт, 0)) КАК СуммаАмортизационнойПремии,
		|	ОсновныеСредства.СчетУчетаРасходов КАК СчетУчетаРасходов,
		|	ОсновныеСредства.Субконто КАК Субконто,
		|	ОсновныеСредства.СчетВыбытия КАК СчетВыбытия
		|ИЗ
		|	РегистрБухгалтерии.Хозрасчетный.Обороты(
		|			&ДатаНач,
		|			&ДатаКон,
		|			Период,
		|			Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасходыНаКапитальныеВложения),
		|			ЗНАЧЕНИЕ(ПланВидовХарактеристик.ВидыСубконтоХозрасчетные.ОсновныеСредства),
		|			(Организация.ГоловнаяОрганизация = &ГоловнаяОрганизация
		|				ИЛИ Организация = &Организация)
		|				И Субконто1 В (&СписокОС),
		|			,
		|			) КАК ХозрасчетныйОбороты
		|		ЛЕВОЕ СОЕДИНЕНИЕ ОсновныеСредства КАК ОсновныеСредства
		|		ПО ХозрасчетныйОбороты.Субконто1 = ОсновныеСредства.Объект
		|
		|СГРУППИРОВАТЬ ПО
		|	ХозрасчетныйОбороты.Субконто1,
		|	ОсновныеСредства.СчетУчетаРасходов,
		|	ОсновныеСредства.Субконто,
		|	ОсновныеСредства.СчетВыбытия";
		
		ТаблицаАмортПремий = Запрос.Выполнить().Выгрузить();
		СуммаАморПремии = ТаблицаАмортПремий.Итог("СуммаАмортизационнойПремии") + Реквизиты.СуммаКапитальныхВложенийВключаемыхВРасходы;
		
		Если СуммаАморПремии = 0 Тогда
			ТекстСообщения = НСтр("ru = 'Амортизационная премия не применялась к указанным объектам. Восстановление амортизационной премии не сделано'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, Реквизиты.Регистратор, , "Объект", Ложь);
			Возврат АмортизационнаяПремия;
		КонецЕсли;
		
		Для Каждого Строка Из ТаблицаАмортПремий Цикл
			НоваяСтрока = АмортизационнаяПремия.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Строка);
			
			СтрокиСправкиРасчета = СправкаРасчет.НайтиСтроки(Новый Структура("Объект", Строка.ОсновноеСредство));
			Если СтрокиСправкиРасчета.Количество() Тогда
				СтрокаСправкиРасчета = СтрокиСправкиРасчета[0];
				СтрокаСправкиРасчета.СтоимостьНУ = СтрокаСправкиРасчета.СтоимостьНУ + Строка.СуммаАмортизационнойПремии;
				СтрокаСправкиРасчета.ОстаточнаяСтоимостьНУ = СтрокаСправкиРасчета.ОстаточнаяСтоимостьНУ + Строка.СуммаАмортизационнойПремии;
				
				Если ИспользоватьСуммыРазниц Тогда
					СтрокаСправкиРасчета.СтоимостьВР = СтрокаСправкиРасчета.СтоимостьВР - Строка.СуммаАмортизационнойПремии;
					СтрокаСправкиРасчета.ОстаточнаяСтоимостьВР = СтрокаСправкиРасчета.ОстаточнаяСтоимостьВР - Строка.СуммаАмортизационнойПремии;
				КонецЕсли;
			КонецЕсли;
			
		КонецЦикла;
		
		АмортизационнаяПремия.Индексы.Добавить("ОсновноеСредство");
	КонецЕсли;
	
	Возврат АмортизационнаяПремия;
КонецФункции

Процедура СформироватьДвиженияВосстановлениеАмортизационнойПремии(ТаблицаАмортизационнаяПремия, ТаблицаРеквизиты, Движения, Отказ) Экспорт
	
	Если Не ТаблицаАмортизационнаяПремия.Количество() Тогда
		Возврат
	КонецЕсли;
	
	Реквизиты = ТаблицаРеквизиты[0];
	ПоддержкаПБУ18 = УчетнаяПолитика.ПоддержкаПБУ18(Реквизиты.Организация, Реквизиты.Период);
	
	Если Реквизиты.Период < ДатаПримененияНовогоПорядкаВосстановлениеАмортизационнойПремии() Тогда
		
		СуммаАморПремии = ТаблицаАмортизационнаяПремия[0].СуммаАмортизационнойПремии;

		Проводка = Движения.Хозрасчетный.Добавить();

		Проводка.Период = Реквизиты.Период;
		Проводка.Организация = Реквизиты.Организация;
		Проводка.Содержание  = "Передача ОС";

		Проводка.СчетДт = Реквизиты.СчетУчетаРасчетовСКонтрагентом;
		БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт, Проводка.СубконтоДт, "Контрагенты", Реквизиты.Контрагент);
		БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт, Проводка.СубконтоДт, "Договоры", Реквизиты.ДоговорКонтрагента);

		СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);

		Если СвойстваСчетаДт.УчетПоПодразделениям Тогда
			Проводка.ПодразделениеДт = Реквизиты.Подразделение;
		КонецЕсли;

		Проводка.СчетКт = ПланыСчетов.Хозрасчетный.ПрочиеДоходы;
		БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетКт, Проводка.СубконтоКт, 1, Реквизиты.СтатьяДляВосстановленияАмортизационнойПремии);
		
		СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);

		Если СвойстваСчетаКт.УчетПоПодразделениям Тогда
			Проводка.ПодразделениеКт = Реквизиты.Подразделение;
		КонецЕсли;

		Если СвойстваСчетаКт.НалоговыйУчет Тогда
			Проводка.СуммаНУКт = СуммаАморПремии;
			Если ПоддержкаПБУ18 Тогда
				Проводка.СуммаПРКт = - СуммаАморПремии;
			КонецЕсли;
		КонецЕсли;

	Иначе
		
		Для Каждого Строка Из ТаблицаАмортизационнаяПремия Цикл
			
			// Сумма восстанавливаемой амортизационной премии является частью стоимость ОС в НУ, поэтому должна быть отражена на
			// счете выбытия точно так же, как это отражается проводками по реализации самого ОС (например, 01.01 -> 01.09 -> 91.02)
			Проводка = Движения.Хозрасчетный.Добавить();
			
			Проводка.Период = Реквизиты.Период;
			Проводка.Организация = Реквизиты.Организация;
			Проводка.Содержание  = "Передача ОС";
			
			Проводка.СчетДт = Строка.СчетВыбытия;
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт,Проводка.СубконтоДт,"ОсновныеСредства",Строка.ОсновноеСредство);
			
			СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);
			
			Если СвойстваСчетаДт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеДт = Реквизиты.Подразделение;
			КонецЕсли;
			
			Проводка.СчетКт = ПланыСчетов.Хозрасчетный.ПрочиеДоходы;
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетКт, Проводка.СубконтоКт, 1, Реквизиты.СтатьяДляВосстановленияАмортизационнойПремии);
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетКт,Проводка.СубконтоКт,"РеализуемыеАктивы",Строка.ОсновноеСредство);
			
			СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);
			
			Если СвойстваСчетаКт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеКт = Реквизиты.Подразделение;
			КонецЕсли;
			
			Если СвойстваСчетаКт.НалоговыйУчет Тогда
				Проводка.СуммаНУДт = Строка.СуммаАмортизационнойПремии;
				Проводка.СуммаНУКт = Строка.СуммаАмортизационнойПремии;
				Если ПоддержкаПБУ18 Тогда
					Проводка.СуммаПРДт = - Строка.СуммаАмортизационнойПремии;
					Проводка.СуммаПРКт = - Строка.СуммаАмортизационнойПремии;
				КонецЕсли;
			КонецЕсли;
			
			Проводка = Движения.Хозрасчетный.Добавить();
			
			Проводка.Период = Реквизиты.Период;
			Проводка.Организация = Реквизиты.Организация;
			Проводка.Содержание  = "Передача ОС";
			
			Проводка.СчетДт = Строка.СчетУчетаРасходов;
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт, Проводка.СубконтоДт, 1, Строка.Субконто);
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт, Проводка.СубконтоДт, "РеализуемыеАктивы", Строка.ОсновноеСредство);
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетДт, Проводка.СубконтоДт, "ОсновныеСредства", Строка.ОсновноеСредство);
			
			СвойстваСчетаДт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетДт);
			
			Если СвойстваСчетаДт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеДт = Реквизиты.Подразделение;
			КонецЕсли;
			
			Проводка.СчетКт = Строка.СчетВыбытия;
			БухгалтерскийУчет.УстановитьСубконто(Проводка.СчетКт, Проводка.СубконтоКт, "ОсновныеСредства", Строка.ОсновноеСредство);
			
			СвойстваСчетаКт = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(Проводка.СчетКт);
			
			Если СвойстваСчетаКт.УчетПоПодразделениям Тогда
				Проводка.ПодразделениеКт = Реквизиты.Подразделение;
			КонецЕсли;
			
			Если СвойстваСчетаКт.НалоговыйУчет Тогда
				Проводка.СуммаНУДт = Строка.СуммаАмортизационнойПремии;
				Проводка.СуммаНУКт = Строка.СуммаАмортизационнойПремии;
				Если ПоддержкаПБУ18 Тогда
					Проводка.СуммаПРДт = - Строка.СуммаАмортизационнойПремии;
					Проводка.СуммаПРКт = - Строка.СуммаАмортизационнойПремии;
				КонецЕсли;
			КонецЕсли;
			
		КонецЦикла;
	КонецЕсли;

	Движения.Хозрасчетный.Записывать = Истина;

КонецПроцедуры

