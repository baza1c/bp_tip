					НСтр("ru = 'Не определена дата начала использования'"), Реквизиты.Регистратор, Отказ);
				Продолжить;
			КонецЕсли;
				
			ФактическийСрокИспользованияБУ = УправлениеВнеоборотнымиАктивами.ОпределитьФактическийСрокИспользования(
				ВыборкаПоОС.ДатаВводаВЭксплуатацию, Реквизиты.ДатаРасчета) - 1;
			ФактическийСрокИспользованияНУ = УправлениеВнеоборотнымиАктивами.ОпределитьФактическийСрокИспользования(
				ВыборкаПоОС.ДатаВводаВЭксплуатацию, Реквизиты.ДатаРасчета) - 1;
				
			ОстатокСрокаПолезногоИспользованияБУ = Макс(ВыборкаПоОС.СрокПолезногоИспользования   - ФактическийСрокИспользованияБУ, 0);
			ОстатокСрокаПолезногоИспользованияНУ = Макс(ВыборкаПоОС.СрокПолезногоИспользованияНУ - ФактическийСрокИспользованияНУ, 0);
			
			Если ПоддержкаФСБУ6 Тогда
				СтоимостьДляВычисленияАмортизацииБУ = ОстаточнаяСтоимостьБУ  - ВыборкаПоОС.ЛиквидационнаяСтоимость - Суммы.ОстаточнаяСтоимостьКомпонентов;
			ИначеЕсли ВыборкаПоОС.СпособНачисленияАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.УменьшаемогоОстатка Тогда
				СтоимостьДляВычисленияАмортизацииБУ = СтоимостьИтоговая;
			Иначе
				СтоимостьДляВычисленияАмортизацииБУ = ВыборкаПоОС.СтоимостьДляВычисленияАмортизации;
			КонецЕсли;
			
			КоэффициентАмортизацииНУ = ?(ЗначениеЗаполнено(ВыборкаПоОС.СпециальныйКоэффициент), ВыборкаПоОС.СпециальныйКоэффициент, 1);
			
			СтрокаСправкаРасчет.ПериодРасчета                         = КонецМесяца(Реквизиты.ДатаРасчета);
			СтрокаСправкаРасчет.Объект                                = ВыборкаПоОС.ОсновноеСредство;
			СтрокаСправкаРасчет.СпособНачисленияАмортизацииБУ         = ВыборкаПоОС.СпособНачисленияАмортизации;
			СтрокаСправкаРасчет.СпособНачисленияАмортизацииНУ         = МетодНачисленияАмортизации;
			СтрокаСправкаРасчет.АмортизационнаяГруппа                 = ВыборкаПоОС.АмортизационнаяГруппа;
			СтрокаСправкаРасчет.ИнвентарныйНомер                      = ВыборкаПоОС.ИнвентарныйНомер;
			СтрокаСправкаРасчет.ДатаВводаВЭксплуатацию                = ВыборкаПоОС.ДатаВводаВЭксплуатацию;
			СтрокаСправкаРасчет.НачислятьАмортизациюБУ                = ВыборкаПоОС.НачислятьАмортизациюБУ;
			СтрокаСправкаРасчет.НачислятьАмортизациюНУ                = ВыборкаПоОС.НачислятьАмортизациюНУ;
			СтрокаСправкаРасчет.НормаАмортизации                      = НормаАмортизации;
			СтрокаСправкаРасчет.СтоимостьБУ                           = ВыборкаПоОС.СтоимостьНачальныйОстаток - Суммы.СтоимостьКомпонентов;
			СтрокаСправкаРасчет.СтоимостьНУ                           = ВыборкаПоОС.СтоимостьНУНачальныйОстаток;
			СтрокаСправкаРасчет.ОстаточнаяСтоимостьБУ                 = ОстаточнаяСтоимостьБУ - Суммы.ОстаточнаяСтоимостьКомпонентов;
			СтрокаСправкаРасчет.ОстаточнаяСтоимостьНУ                 = ОстаточнаяСтоимостьНУ;
			СтрокаСправкаРасчет.СтоимостьДляАмортизацииБУ             = СтоимостьДляВычисленияАмортизацииБУ;
			СтрокаСправкаРасчет.СтоимостьДляАмортизацииНУ             = СтоимостьДляВычисленияАмортизацииНУ;
			СтрокаСправкаРасчет.СуммаАмортизацииБУ                    = СуммаАмортизацииБУ;
			СтрокаСправкаРасчет.СуммаАмортизацииНУ                    = СуммаАмортизацииНУ;
			СтрокаСправкаРасчет.СрокПолезногоИспользованияБУ          = ВыборкаПоОС.СрокПолезногоИспользования;
			СтрокаСправкаРасчет.СрокПолезногоИспользованияНУ          = ВыборкаПоОС.СрокПолезногоИспользованияНУ;
			СтрокаСправкаРасчет.ОстатокСрокаПолезногоИспользованияБУ  = ОстатокСрокаПолезногоИспользованияБУ;
			СтрокаСправкаРасчет.ОстатокСрокаПолезногоИспользованияНУ  = ОстатокСрокаПолезногоИспользованияНУ;
			СтрокаСправкаРасчет.КоэффициентАмортизации                = ВыборкаПоОС.КоэффициентАмортизации;
			СтрокаСправкаРасчет.КоэффициентАмортизацииНУ              = КоэффициентАмортизацииНУ;
			СтрокаСправкаРасчет.СпособыОтраженияРасходовПоАмортизации = ВыборкаПоОС.СпособыОтраженияРасходовПоАмортизации;
			СтрокаСправкаРасчет.КоэффициентПериода                    = КоэффициентПериода;
			СтрокаСправкаРасчет.КоэффициентУскорения                  = ВыборкаПоОС.КоэффициентУскорения;
			СтрокаСправкаРасчет.ОбъемПродукцииРабот                   = ВыборкаПоОС.Количество;
			СтрокаСправкаРасчет.ОбъемПродукцииРаботДляАмортизации     = ВыборкаПоОС.ОбъемПродукцииРаботДляВычисленияАмортизации;
			СтрокаСправкаРасчет.ЧислоЛетОставшихсяДоКонцаСПИ          = ЧислоЛетОставшихся;
			СтрокаСправкаРасчет.СуммаЧиселЛетСПИ                      = СуммаЧиселЛет;
			СтрокаСправкаРасчет.ЛиквидационнаяСтоимость               = ЛиквидационнаяСтоимость;
			СтрокаСправкаРасчет.ОстатокОбъемаПродукции                = ОстатокОбъемаПродукции;
			
			Если ПоддержкаФСБУ6 Тогда
				ПараметрыОбесценения = Новый Структура("Обесценение, КорректировкаОбесценения", ВыборкаПоОС.ОбесценениеНачальныйОстаток, КорректировкаОбесценения);
				ЗаполнитьЗначенияСвойств(СтрокаСправкаРасчет, ПараметрыОбесценения); 
			КонецЕсли;
			
			Если ПоддержкаПБУ18 Тогда
				
				СтоимостьВРНачальныйОстаток = ВыборкаПоОС.СтоимостьНачальныйОстаток
					- ВыборкаПоОС.СтоимостьНУНачальныйОстаток
					- ВыборкаПоОС.СтоимостьПРНачальныйОстаток;
				
				ОстаточнаяСтоимостьПР = ВыборкаПоОС.СтоимостьПРНачальныйОстаток - ВыборкаПоОС.АмортизацияПРНачальныйОстаток;
				ОстаточнаяСтоимостьВР = ОстаточнаяСтоимостьБУ - ОстаточнаяСтоимостьНУ - ОстаточнаяСтоимостьПР;
				
				СтрокаСправкаРасчет.СтоимостьПР               = ВыборкаПоОС.СтоимостьПРНачальныйОстаток;
				СтрокаСправкаРасчет.СтоимостьВР               = СтоимостьВРНачальныйОстаток;
				СтрокаСправкаРасчет.ОстаточнаяСтоимостьПР     = ОстаточнаяСтоимостьПР;
				СтрокаСправкаРасчет.ОстаточнаяСтоимостьВР     = ОстаточнаяСтоимостьВР;
				СтрокаСправкаРасчет.СтоимостьДляАмортизацииПР = ВыборкаПоОС.ПРДляВычисленияАмортизации;
				СтрокаСправкаРасчет.СуммаАмортизацииПР        = СуммаАмортизацииПР;
				СтрокаСправкаРасчет.СуммаАмортизацииВР        = СуммаАмортизацииВР;
				
			КонецЕсли;
			
			Если ПоддержкаПБУ18 Тогда
				ДанныеПостоянныхРазниц = ВыборкаПоОС;
			Иначе
				ДанныеПостоянныхРазниц = Неопределено;
			КонецЕсли;
			
			УстановитьДанныеБухгалтерскогоУчета(
				СтрокаСправкаРасчет,
				СтрокаАмортизации,
				ЗаписьОценкаСтоимости,
				ДанныеПостоянныхРазниц);
			
		КонецЕсли;
	
	КонецЦикла;
	
	ЗаполнитьИтоги(Результат, РасчетАмортизацииБухгалтерскийУчет, КомпонентыАмортизации);
	
	Возврат Результат;

КонецФункции

Функция НовыйРасчетАмортизации()
	
	Результат = Новый Структура;
	Результат.Вставить("ТаблицаАмортизации",    ПолучитьПустуюТаблицуАмортизацииОС());
	Результат.Вставить("СправкаРасчет",         УправлениеВнеоборотнымиАктивами.ПустаяСправкаРасчет("РасчетАмортизации"));
	Результат.СправкаРасчет.Колонки.Удалить("Период");
	
	РегистрыСведений.РасчетРесурсаВнеоборотныхАктивов.ИнициализироватьКонтейнерИтогов(Результат);
	КомпонентыАмортизацииОС.ИнициализироватьКонтейнерИтогов(Результат);
	
	Возврат Результат;

КонецФункции

Процедура ЗаблокироватьДанныеБухгалтерскогоУчета(Период, Организация)
	
	Если Не ТранзакцияАктивна() Тогда
		Возврат;
	КонецЕсли;
		
	СчетаУчета = Новый ТаблицаЗначений;
	СчетаУчета.Колонки.Добавить("Счет", Новый ОписаниеТипов("ПланСчетовСсылка.Хозрасчетный"));
	ОбщегоНазначенияКлиентСервер.ДополнитьТаблицуИзМассива(СчетаУчета, СчетаУчетаРасчетаАмортизации(), "Счет");
	
	Блокировка = Новый БлокировкаДанных;
	
	ЭлементБлокировки = Блокировка.Добавить("РегистрБухгалтерии.Хозрасчетный");
	
	ЭлементБлокировки.ИсточникДанных = СчетаУчета;
	ЭлементБлокировки.ИспользоватьИзИсточникаДанных("Счет", "Счет");
	
	ЭлементБлокировки.УстановитьЗначение("Организация", Организация);
	ЭлементБлокировки.УстановитьЗначение("Период",      Новый Диапазон(, КонецМесяца(Период)));
	
	Блокировка.Заблокировать();
	
КонецПроцедуры

Функция СчетаУчетаРасчетаАмортизации()
	
	// Все счета, данные которых могут участвовать в расчете
	
	СчетаУчета = АмортизацияАктивов.СчетаБалансовойСтоимости(ТипОбъектов(), Истина);
	СчетаУчета.Добавить(ПланыСчетов.Хозрасчетный.РасходыНаКапитальныеВложения);
	Возврат СчетаУчета;
	
КонецФункции

Функция ЗаписьОценкаСтоимости(Расчет, ОсновноеСредство)
	
	Если Расчет = Неопределено Тогда
		Возврат Неопределено;
	ИначеЕсли Расчет = 0 Тогда
		Возврат 0;
	КонецЕсли;
	
	Запись = Расчет.ОценкаСтоимости.Найти(ОсновноеСредство, "Объект");
	
	Если Запись = Неопределено Тогда
		Возврат 0;
	КонецЕсли;
	
	Возврат Запись;
	
КонецФункции

Функция СохранятьЗаписьОценкаСтоимости(ЗаписьОценкаСтоимости)
	
	Если ЗаписьОценкаСтоимости = Неопределено
		Или ЗаписьОценкаСтоимости = 0 Тогда
		Возврат Ложь;
	КонецЕсли;
	
	Если ЗаписьОценкаСтоимости.СуммаПроводки <> 0 Тогда
		Возврат Истина;
	КонецЕсли;
	
	// Исключим ситуацию, когда амортизация начислена предварительно и создается дублирующая запись в регистр с результатом расчета
	// (например, при перемещении, когда используется алгоритм по данным прошлого месяца)
	Возврат ЗаписьОценкаСтоимости.АмортизацияПредварительная = 0
		Или ЗаписьОценкаСтоимости.Амортизация > ЗаписьОценкаСтоимости.АмортизацияПредварительная;
	
КонецФункции

Процедура УстановитьДанныеБухгалтерскогоУчета(СтрокаСправкаРасчет, СтрокаАмортизации, ЗаписьОценкаСтоимости, ДанныеПостоянныхРазниц)
	
	Если ЗаписьОценкаСтоимости = Неопределено Тогда
		Возврат;
	ИначеЕсли ЗаписьОценкаСтоимости = 0 Тогда
		
		СтрокаСправкаРасчет.СуммаАмортизацииБУ = 0;
		
		УстановитьСуммыПроводкиБУ(
			СтрокаСправкаРасчет,
			СтрокаАмортизации,
			0,
			ДанныеПостоянныхРазниц);
			
		// Отмечаем запись, чтобы исключить ее из справки расчета, когда за один период формируется несколько записей
		// (при перемещении - с данными налогового учета; в регламентной операции - с данными бухгалтерского).
		// Регистр РасчетАмортизации содержит как отдельные наборы полей для бухгалтерского и налогового учета,
		// так и общие поля для бухгалтерского и налогового учета.
		СтрокаСправкаРасчет.ОграничениеРаздела = Перечисления.РазделыРасчетаАмортизации.ТолькоНалоговыйУчет;
		
		Возврат;
	КонецЕсли;
		
	СправкаРасчет = СтрокаСправкаРасчет.Владелец();
	
	СтрокаСправкаРасчет.СпособНачисленияАмортизацииБУ = ЗаписьОценкаСтоимости.СпособАмортизации;
	СтрокаСправкаРасчет.НачислятьАмортизациюБУ        = ЗаписьОценкаСтоимости.ПодлежитАмортизации;
	// ниже будет добавлена стоимость для частей амортизации
	СтрокаСправкаРасчет.СтоимостьБУ                   = 0;
	СтрокаСправкаРасчет.ОстаточнаяСтоимостьБУ         = 0;
	СтрокаСправкаРасчет.СтоимостьДляАмортизацииБУ     = 0;
	СтрокаСправкаРасчет.СуммаАмортизацииБУ            = 0;
	
	КоличествоЗаписейРасчета = ЗаписьОценкаСтоимости.РасчетАмортизации.Количество();
	
	Если КоличествоЗаписейРасчета = 0 Тогда
		
		// Дополним данными о балансовой стоимости
		СтрокаСправкаРасчет.СтоимостьБУ             = ЗаписьОценкаСтоимости.ЗатратыВсего;
		СтрокаСправкаРасчет.ОстаточнаяСтоимостьБУ   = ЗаписьОценкаСтоимости.БалансоваяСтоимость;
		СтрокаСправкаРасчет.ЛиквидационнаяСтоимость = ЗаписьОценкаСтоимости.ЛиквидационнаяСтоимость;
		
	ИначеЕсли КоличествоЗаписейРасчета = 1 Тогда
		
		ЗаписьРасчетАмортизации = ЗаписьОценкаСтоимости.РасчетАмортизации[0];
		ЗаполнитьЗаписьСправкиРасчета(СтрокаСправкаРасчет, ЗаписьОценкаСтоимости, ЗаписьРасчетАмортизации);
		
	Иначе
		
		// Для сокращения количества записей выделяем одну из записей "основной"
		ОсновнаяЗаписьЗаполнена = Ложь;
		
		Для Каждого ЗаписьРасчетАмортизации Из ЗаписьОценкаСтоимости.РасчетАмортизации Цикл
			
			Если Не ОсновнаяЗаписьЗаполнена
				И ЗаписьРасчетАмортизации.Объект = СтрокаСправкаРасчет.Объект
				И РегистрыСведений.РасчетАмортизации.ТривиальныйПериод(ЗаписьРасчетАмортизации.Начало, ЗаписьРасчетАмортизации.Конец) Тогда
				ЗаполнитьЗаписьСправкиРасчета(СтрокаСправкаРасчет, ЗаписьОценкаСтоимости, ЗаписьРасчетАмортизации);
				ОсновнаяЗаписьЗаполнена = Истина;
				Продолжить;
			КонецЕсли;
			
			ДетальнаяСтрокаСправкаРасчет = СправкаРасчет.Добавить();
			
			ЗаполнитьЗначенияСвойств(
				ДетальнаяСтрокаСправкаРасчет,
				СтрокаСправкаРасчет,
				"ПериодРасчета, Объект, СпособНачисленияАмортизацииБУ, ИнвентарныйНомер, АмортизационнаяГруппа,
				|ДатаВводаВЭксплуатацию, НачислятьАмортизациюБУ, СпособыОтраженияРасходовПоАмортизации");
			
			// Обеспечиваем уникальность ключа записи, для этого детальные записи выделяем на отдельный ключ измерений.
			// Без этого могли бы быть совпадения в случае, когда затраты понесены в последний день месяца.
			ДетальнаяСтрокаСправкаРасчет.ОграничениеРаздела = Перечисления.РазделыРасчетаАмортизации.ТолькоБухгалтерскийУчет;
			
			Если ТипЗнч(ЗаписьРасчетАмортизации.Объект) = Тип("СправочникСсылка.КомпонентыАмортизацииОС") Тогда
				ДетальнаяСтрокаСправкаРасчет.КомпонентАмортизации = ЗаписьРасчетАмортизации.Объект;
			КонецЕсли;
			Если ЗаписьРасчетАмортизации.Объект = СтрокаСправкаРасчет.Объект Тогда
				ЗаполнитьЗначенияСвойств(ДетальнаяСтрокаСправкаРасчет, СтрокаСправкаРасчет, "ЛиквидационнаяСтоимость");
			КонецЕсли;
			
			ЗаполнитьЗаписьСправкиРасчета(ДетальнаяСтрокаСправкаРасчет, ЗаписьОценкаСтоимости, ЗаписьРасчетАмортизации);
			
		КонецЦикла;
		
		Если Не ОсновнаяЗаписьЗаполнена Тогда
			// Все данные бухгалтерского учета собраны в детальных записях,
			// основная содержит только данные налогового учета.
			// Отмечаем ее, чтобы она заведомо не влияла на справку-расчет бухгалтерского учета.
			// Регистр РасчетАмортизации содержит как отдельные наборы полей для бухгалтерского и налогового учета,
			// так и общие поля для бухгалтерского и налогового учета.
			СтрокаСправкаРасчет.ОграничениеРаздела = Перечисления.РазделыРасчетаАмортизации.ТолькоНалоговыйУчет;
		КонецЕсли;
		
	КонецЕсли;
	
	// Пояснения по проводкам корректировки обесценения см. в АмортизацияАктивов.СкорректироватьДоступноеОбесценение
	СтрокаАмортизации.КорректировкаОбесценения = ЗаписьОценкаСтоимости.КорректировкаОбесценения;
	СуммаПроводки = ЗаписьОценкаСтоимости.СуммаПроводки + ЗаписьОценкаСтоимости.КорректировкаОбесценения;
	
	УстановитьСуммыПроводкиБУ(
		СтрокаСправкаРасчет,
		СтрокаАмортизации,
		СуммаПроводки,
		ДанныеПостоянныхРазниц); // Разницы отражаем на сводной записи
	
КонецПроцедуры

Процедура ЗаполнитьЗаписьСправкиРасчета(СтрокаСправкаРасчет, ЗаписьОценкаСтоимости, ЗаписьРасчетАмортизации)
	
	Если ТипЗнч(ЗаписьРасчетАмортизации.Объект) <> Тип("СправочникСсылка.КомпонентыАмортизацииОС") Тогда
		СтрокаСправкаРасчет.ЛиквидационнаяСтоимость   = ЗаписьОценкаСтоимости.ЛиквидационнаяСтоимость;
	КонецЕсли;
	СтрокаСправкаРасчет.СуммаАмортизацииБУ        = ЗаписьРасчетАмортизации.Амортизация;
	СтрокаСправкаРасчет.ОстаточнаяСтоимостьБУ     = ЗаписьРасчетАмортизации.БалансоваяСтоимость;
	СтрокаСправкаРасчет.СтоимостьДляАмортизацииБУ = ЗаписьРасчетАмортизации.АмортизируемаяВеличина;
	СтрокаСправкаРасчет.СтоимостьБУ               = ЗаписьРасчетАмортизации.ЗатратыВсего;
	
	// Пояснения по проводкам корректировки обесценения см. в АмортизацияАктивов.СкорректироватьДоступноеОбесценение
	СтрокаСправкаРасчет.Обесценение = ЗаписьРасчетАмортизации.ДоступноеОбесценение;
	СтрокаСправкаРасчет.КорректировкаОбесценения = ЗаписьРасчетАмортизации.КорректировкаОбесценения;
	СтрокаСправкаРасчет.СуммаАмортизацииБУ = СтрокаСправкаРасчет.СуммаАмортизацииБУ + ЗаписьРасчетАмортизации.КорректировкаОбесценения;
	
	РегистрыСведений.РасчетАмортизации.УстановитьНеполныйПериодЗаписи(
		СтрокаСправкаРасчет,
		ЗаписьРасчетАмортизации.Начало,
		ЗаписьРасчетАмортизации.Конец);
	
	Если ЗаписьОценкаСтоимости.СпособАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.Линейный Тогда
		СтрокаСправкаРасчет.ОстатокСрокаПолезногоИспользованияБУ = ЗаписьРасчетАмортизации.СрокИспользованияОставшийся;
		СтрокаСправкаРасчет.СрокПолезногоИспользованияБУ         = ЗаписьРасчетАмортизации.ОбщийРесурсМесяцев;
	ИначеЕсли ЗаписьОценкаСтоимости.СпособАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.ПропорциональноОбъемуПродукции Тогда
		СтрокаСправкаРасчет.ОстатокОбъемаПродукции            = ЗаписьРасчетАмортизации.РесурсОставшийся;
		СтрокаСправкаРасчет.ОбъемПродукцииРаботДляАмортизации = ЗаписьРасчетАмортизации.РесурсОставшийся;
		СтрокаСправкаРасчет.ОбъемПродукцииРабот               = ЗаписьРасчетАмортизации.РесурсИспользованный;
	ИначеЕсли ЗаписьОценкаСтоимости.СпособАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.ПоСуммеЧиселЛетИспользования Тогда
		СтрокаСправкаРасчет.ЧислоЛетОставшихсяДоКонцаСПИ         = ЗаписьРасчетАмортизации.ОстатокЧислаЛетСрокаИспользования;
		СтрокаСправкаРасчет.СуммаЧиселЛетСПИ                     = ЗаписьРасчетАмортизации.СуммаЧиселЛетСрокаИспользования;
		СтрокаСправкаРасчет.ОстатокСрокаПолезногоИспользованияБУ = ЗаписьРасчетАмортизации.СрокИспользованияОставшийся;
		СтрокаСправкаРасчет.СрокПолезногоИспользованияБУ         = ЗаписьРасчетАмортизации.ОбщийРесурсМесяцев;
	ИначеЕсли ЗаписьОценкаСтоимости.СпособАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.УменьшаемогоОстатка Тогда
		СтрокаСправкаРасчет.ОстатокСрокаПолезногоИспользованияБУ = ЗаписьРасчетАмортизации.СрокИспользованияОставшийся;
		СтрокаСправкаРасчет.СрокПолезногоИспользованияБУ         = ЗаписьРасчетАмортизации.ОбщийРесурсМесяцев;
		СтрокаСправкаРасчет.КоэффициентУскорения                 = ЗаписьРасчетАмортизации.КоэффициентУскорения;
	КонецЕсли;

