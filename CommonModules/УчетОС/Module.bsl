	|	СписокОС.ОсновноеСредство КАК ОсновноеСредство,
	|	ПРЕДСТАВЛЕНИЕ(СписокОС.ОсновноеСредство) КАК ОсновноеСредствоПредставление,
	|	СписокОС.ОсновноеСредство.Код КАК Код,
	|	ВЫБОР
	|		КОГДА СписокОС.ИстекшийСрокПолезногоИспользования > СписокОС.СрокПолезногоИспользованияФСБУ6
	|			ТОГДА СписокОС.СрокПолезногоИспользованияФСБУ6
	|		ИНАЧЕ СписокОС.ИстекшийСрокПолезногоИспользования
	|	КОНЕЦ КАК ИстекшийСрокПолезногоИспользования,
	|	СписокОС.СрокПолезногоИспользования КАК СрокПолезногоИспользования,
	|	СписокОС.СрокПолезногоИспользованияФСБУ6 КАК СрокПолезногоИспользованияФСБУ6,
	|	СписокОС.ЛиквидационнаяСтоимость КАК ЛиквидационнаяСтоимость,
	|	СписокОС.СчетУчета КАК СчетУчета,
	|	СписокОС.СчетНачисленияАмортизации КАК СчетНачисленияАмортизации,
	|	СписокОС.ИнвентарныйНомер КАК ИнвентарныйНомер,
	|	СписокОС.СпособНачисленияАмортизации КАК СпособНачисленияАмортизации,
	|	СписокОС.Подразделение КАК Подразделение,
	|	СписокОС.ДатаПринятияКУчету КАК ДатаПринятияКУчету,
	|	ЕСТЬNULL(СтоимостьОС.СуммаОстатокДт, 0) КАК СтоимостьБУ,
	|	ЕСТЬNULL(АмортизацияОС.СуммаОстатокКт, 0) КАК АмортизацияБУ,
	|	ЕСТЬNULL(ОбесценениеОСМежотчетногоПериода.ВозмещаемаяСтоимость, 0) КАК ВозмещаемаяСтоимость,
	|	ЕСТЬNULL(ОбесценениеОСМежотчетногоПериода.ИзменениеОбесценения, 0) КАК ИзменениеОбесценения
	|ИЗ
	|	СписокОССПараметрами КАК СписокОС
	|		ЛЕВОЕ СОЕДИНЕНИЕ ОстаткиБУ КАК СтоимостьОС
	|		ПО СписокОС.ОсновноеСредство = СтоимостьОС.ОсновноеСредство
	|			И (СтоимостьОС.Счет = СписокОС.СчетУчета)
	|		ЛЕВОЕ СОЕДИНЕНИЕ ОстаткиБУ КАК АмортизацияОС
	|		ПО СписокОС.ОсновноеСредство = АмортизацияОС.ОсновноеСредство
	|			И (АмортизацияОС.Счет = СписокОС.СчетНачисленияАмортизации)
	|		ЛЕВОЕ СОЕДИНЕНИЕ ОбесценениеОСМежотчетногоПериода КАК ОбесценениеОСМежотчетногоПериода
	|		ПО СписокОС.ОсновноеСредство = ОбесценениеОСМежотчетногоПериода.ОсновноеСредство
	|
	|УПОРЯДОЧИТЬ ПО
	|	Код";
	
	ВыборкаПоОС = Запрос.Выполнить().Выбрать();

	Пока ВыборкаПоОС.Следующий() Цикл
		
		АмортизацияФСБУ6        = 0;
		УвеличениеАмортизацииБУ = 0;
		УменьшениеАмортизацииБУ = 0;
		
		Пропустить = Ложь;
		
		Если НЕ ЗначениеЗаполнено(ВыборкаПоОС.СчетНачисленияАмортизации) Тогда
			Если Реквизиты.ВыдаватьСообщения Тогда
				СообщитьОбОшибкеПриПереходеНаФСБУ6(ВыборкаПоОС, НСтр("ru = 'Не указан счет для начисления амортизации'"), 
					Реквизиты.Регистратор, Отказ);
			КонецЕсли;
			Пропустить = Истина;
		КонецЕсли;
		
		Если НЕ ЗначениеЗаполнено(ВыборкаПоОС.СпособНачисленияАмортизации) Тогда
			Если Реквизиты.ВыдаватьСообщения Тогда
				СообщитьОбОшибкеПриПереходеНаФСБУ6(ВыборкаПоОС, НСтр("ru = 'Не указан способ начисления амортизации'"),
					Реквизиты.Регистратор, Отказ);
			КонецЕсли;
			Пропустить = Истина;
		КонецЕсли;
		
		Если НЕ ЗначениеЗаполнено(ВыборкаПоОС.СрокПолезногоИспользованияФСБУ6) Тогда
			
			Если Реквизиты.ВыдаватьСообщения Тогда
				СообщитьОбОшибкеПриНачисленииАмортизации(ВыборкаПоОС, НСтр("ru = 'Срок использования равен нулю'"), Реквизиты.Регистратор, Отказ);
			КонецЕсли;
			Пропустить = Истина;
		КонецЕсли;
		
		Если Пропустить Тогда
			Продолжить;
		КонецЕсли;
		
		Если ВыборкаПоОС.СпособНачисленияАмортизации = Перечисления.СпособыНачисленияАмортизацииОС.Линейный Тогда
			
			АмортизируемаяВеличина = Макс(0, ВыборкаПоОС.СтоимостьБУ - ВыборкаПоОС.ЛиквидационнаяСтоимость);
			
			Если ВыборкаПоОС.СрокПолезногоИспользованияФСБУ6 <= ВыборкаПоОС.ИстекшийСрокПолезногоИспользования Тогда
				АмортизацияФСБУ6 = АмортизируемаяВеличина;
			Иначе
				АмортизацияФСБУ6 = Окр(АмортизируемаяВеличина / ВыборкаПоОС.СрокПолезногоИспользованияФСБУ6, 2) * ВыборкаПоОС.ИстекшийСрокПолезногоИспользования;
				АмортизацияФСБУ6 = Мин(АмортизируемаяВеличина, АмортизацияФСБУ6);
			КонецЕсли;
			
		КонецЕсли;
		
		Если ЭтоВерсияКорп Тогда
			
			УчетОбесцененияАктивов.УчестьРетроспективноеОбесценение(ВыборкаПоОС, АмортизацияФСБУ6, УвеличениеАмортизацииБУ, УменьшениеАмортизацииБУ);
			
		Иначе
			
			Если АмортизацияФСБУ6 > ВыборкаПоОС.АмортизацияБУ Тогда
				УвеличениеАмортизацииБУ = АмортизацияФСБУ6 - ВыборкаПоОС.АмортизацияБУ;
			Иначе
				УменьшениеАмортизацииБУ = ВыборкаПоОС.АмортизацияБУ - АмортизацияФСБУ6;
			КонецЕсли;
			
		КонецЕсли;
		
		// Результат расчета амортизации
		СтрокаАмортизации = ТаблицаАмортизации.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаАмортизации, ВыборкаПоОС);
		
		СтрокаАмортизации.АмортизацияФСБУ6        = АмортизацияФСБУ6;
		СтрокаАмортизации.УвеличениеАмортизацииБУ = УвеличениеАмортизацииБУ;
		СтрокаАмортизации.УменьшениеАмортизацииБУ = УменьшениеАмортизацииБУ;
		
	КонецЦикла;

КонецПроцедуры

