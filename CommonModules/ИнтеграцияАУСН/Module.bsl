// 
// Возвращаемое значение:
//	Структура - НовыйОтвет() 
//
Функция ОтправитьРасчетыНДФЛВФНС(Организация)

	ДокументКОтправке = РегистрыСведений.ДокументыАУСН.НайтиДокументы(
		Перечисления.СтатусыДокументовАУСН.ОжидаетОтправкиВБанк);
	
	ИмяМетода = ИнтеграцияАУСНКлиентСервер.ИменаМетодовВзаимодействияИнтеграцияСЛК().ОтправитьРасчетНДФЛ;

	ЕстьОшибки = Ложь;
	Пока ДокументКОтправке.Следующий() Цикл
		Если Организация <> ДокументКОтправке.Организация Тогда
			Продолжить;
		КонецЕсли;
		ПараметрыМетода = НовыеПараметры(ИмяМетода);
		ПараметрыМетода.Организация = ДокументКОтправке.Организация;
		КаталогРазбора = ПолучитьИмяВременногоФайла();
		ДанныеРасшифровки = РасшифроватьДанныеДокумента(ДокументКОтправке, КаталогРазбора);
		УдалитьФайлы(КаталогРазбора);

		ЗаписьXML = Новый ЗаписьXML;
		ЗаписьXML.УстановитьСтроку("UTF-8");
		ДанныеРасшифровки.Фабрика.ЗаписатьXML(ЗаписьXML, ДанныеРасшифровки.Запрос, "PostEmployeeInfoRequest");
		ПараметрыМетода.ТекстЗапроса = УпаковатьЗапросВКонтейнерSendMessageAsync(ЗаписьXML.Закрыть());

		ОтветСервиса = ОтветСервисаЛК(ПараметрыМетода);
		ДокументОтвет = ЗаписатьОтветВДокументыАУСН(ИмяМетода, ОтветСервиса.ТелоОтвета, Организация);
		Выполнено = (ОтветСервиса.Статус = ИнтеграцияАУСНКлиентСервер.СтатусыЗапросов().Выполнено);

		Если Выполнено Тогда

			МенеджерЗаписи = РегистрыСведений.ДокументыАУСН.СоздатьМенеджерЗаписи();
			ЗаполнитьЗначенияСвойств(МенеджерЗаписи, ДокументКОтправке);
			МенеджерЗаписи.Прочитать();
			Если МенеджерЗаписи.Выбран() Тогда
				МенеджерЗаписи.Статус = Перечисления.СтатусыДокументовАУСН.ОтправленоВФНС;
				МенеджерЗаписи.Идентификатор = Новый УникальныйИдентификатор;
				МенеджерЗаписи.Записать();
			КонецЕсли;
			ДокументОтвет.Статус = Перечисления.СтатусыДокументовАУСН.ОбработаноПользователем;
		Иначе
			// Что-то пошло не так. Не выполняем дальнейшие операции
			ЕстьОшибки = Истина;
			ДокументОтвет.Статус = Перечисления.СтатусыДокументовАУСН.ОшибкаОбработкиПользователем;
			Прервать;
		КонецЕсли;
		ДокументОтвет.Записать();
	КонецЦикла;
	Если ЕстьОшибки Тогда
		Ответ = ОтветСервиса;
	Иначе
		Ответ = НовыйОтвет();
		Ответ.Статус = ИнтеграцияАУСНКлиентСервер.СтатусыЗапросов().Выполнено;
	КонецЕсли;

