Функция ОтветСервисаЛК(ПараметрыМетода)
	
	// Получаем описание метода
	ОписаниеМетода = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
		МетодыВзаимодействия(), ПараметрыМетода.МетодВзаимодействия, Неопределено);
	Если ОписаниеМетода = Неопределено Тогда
		Ответ = ОтветОшибка(405, СтрШаблон(НСтр("ru = 'Неизвестный метод сервиса АУСН: %1'"),
			ПараметрыМетода.МетодВзаимодействия));
		Возврат Ответ;
	КонецЕсли;

	ИдентификаторПриложения = РегистрыСведений.СостоянияИнтеграцииАУСН.ИдентификаторПриложения(
		ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПараметрыМетода, "Организация"), Неопределено);

	Если ИдентификаторПриложения = Неопределено Тогда
		Ответ = ОтветОшибка(400, НСтр("ru = 'Не выполнено подключение к сервису АУСН'"));
		Возврат Ответ;
	КонецЕсли;

	СообщениеОбОшибке = "";
	ТокенАвторизации = ТокенАвторизацииАУСН(ИдентификаторПриложения, СообщениеОбОшибке);
	Если Не ЗначениеЗаполнено(ТокенАвторизации) Тогда
		Ответ = ОтветОшибка(401, СообщениеОбОшибке);
		Возврат Ответ;
	КонецЕсли;
	
	Организация = ПараметрыМетода.Организация;
	
	// Проверяем ключ доступа портала 1С
	ТокенПортала = ТокенПорталаАУСН(Организация);
	Если Не ЗначениеЗаполнено(ТокенПортала) Или Не КлючДоступаДействителен(Организация, ТокенПортала) Тогда
		Ответ = ОтветОшибка(403, НСтр("ru = 'Ключ доступа не действителен'"));
		РегистрыСведений.СостоянияИнтеграцииАУСН.ЗаписатьСостояниеИнтеграцииЛКАУСН(
			Организация, Перечисления.СостоянияИнтеграцииАУСН.Ошибка);
		КраткийТекстОшибки = НСтр("ru = 'Ключ доступа portal.1c.ru не действителен'", ОбщегоНазначения.КодОсновногоЯзыка());
		ПодробныйТекстОшибки = НСтр("ru = 'Ключ доступа portal.1c.ru не действителен. 
			|Возможно, он удален или перевыпущен. 
			|Попробуйте настроить обмен с ФНС заново.
			|При необходимости обратитесь к Администритору'", ОбщегоНазначения.КодОсновногоЯзыка());
		
		ЗаписатьОшибкуВЖурналРегистрации(КраткийТекстОшибки, ПодробныйТекстОшибки);
		Возврат Ответ;
	КонецЕсли;
	
	// Выполняем запрос
	ПараметрыМетода.Вставить("ИдентификаторПриложения", ИдентификаторПриложения);
	ПараметрыЗапроса = ПараметрыЗапросаКСервису(ПараметрыМетода, ОписаниеМетода, ТокенАвторизации, ТокенПортала);
	Ответ = ОтветСервиса(ПараметрыЗапроса);

	СтатусыЗапросов = ИнтеграцияАУСНКлиентСервер.СтатусыЗапросов();
	
	// Проверяем чем вызвана ошибка. Если устарел токен авторизации, обновляем его и повторяем запрос.
	Если Ответ.Статус = СтатусыЗапросов.Ошибка И Ответ.КодСостояния = 401 Тогда
		СообщениеОбОшибке = "";
		ТокенАвторизации = НовыйТокенАвторизацииИнтеграцииСЛКАУСН(ИдентификаторПриложения, СообщениеОбОшибке);
		Если ЗначениеЗаполнено(ТокенАвторизации) Тогда
			ПараметрыЗапроса = ПараметрыЗапросаКСервису(ПараметрыМетода, ОписаниеМетода, ТокенАвторизации, ТокенПортала);
			Ответ = ОтветСервиса(ПараметрыЗапроса);
		КонецЕсли;
	КонецЕсли;
	
	// Раскодируем ответ сервиса
	ДвоичныеДанныеСтроки = Base64Значение(ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
		Ответ.Результат, "payload", ""));
	Ответ.ТелоОтвета = ПолучитьСтрокуИзДвоичныхДанных(ДвоичныеДанныеСтроки);
	
	// Получаем номер сообщения сервиса
	Если Ответ.Статус = СтатусыЗапросов.Выполнено Тогда
		НомерСообщения = НомерСообщенияСервиса(Ответ);
	Иначе
		Возврат Ответ;
	КонецЕсли;
	
	// Получаем ответ по номеру сообщения
	Ответ = ОтветСервисаПоНомеруСообщения(НомерСообщения, ТокенАвторизации, ТокенПортала, ИдентификаторПриложения);
	ТелоОтвета = Ответ.ТелоОтвета;
	Если СтрНайти(ТелоОтвета, "PERMISSION_NOT_GRANTED") Тогда
		Ответ = ОтветОшибка(403, НСтр("ru = 'Нет прав для получения данных от ФНС'"));
		РегистрыСведений.СостоянияИнтеграцииАУСН.ЗаписатьСостояниеИнтеграцииЛКАУСН(
			Организация, Перечисления.СостоянияИнтеграцииАУСН.Ошибка);
		КраткийТекстОшибки = НСтр("ru = 'Нет прав для получения данных от ФНС'", ОбщегоНазначения.КодОсновногоЯзыка());
		ПодробныйТекстОшибки = НСтр("ru = 'Нет прав для получения данных от ФНС. 
			|Возможно, в личном кабинете юридического лица ФНС отключен обмен с 1С. 
			|Попробуйте настроить обмен с ФНС заново.
			|При необходимости обратитесь к Администритору'", ОбщегоНазначения.КодОсновногоЯзыка());
		
		ЗаписатьОшибкуВЖурналРегистрации(КраткийТекстОшибки, ПодробныйТекстОшибки);
	КонецЕсли;
	
	Возврат Ответ;
	
