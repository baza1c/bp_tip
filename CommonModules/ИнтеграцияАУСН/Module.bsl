Функция СостояниеИнтеграцииЛКАУСН(ТелоОтвета)
	
	ОбъектXDTO = РасшифроватьОтветСервисаПривязкаНП(
		ТелоОтвета, "GetAskBindPartnerWithInnStatusResponse");
	Если ОбъектXDTO = Неопределено Тогда
		ИмяСобытия = ИнтеграцияАУСНКлиентСервер.ИмяСобытияЖурналаРегистрации();
		ТекстОшибки = НСтр("ru = 'Не удалось расшифровать ответ сервиса ФНС по привязке НП.
						   |Ответ не содержит XDTO-объекта GetAskBindPartnerWithInnStatusResponse.'");
		ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
		Возврат Перечисления.СостоянияИнтеграцииАУСН.Отсутствует;
	КонецЕсли;
	СтатусыЗаявок = ОбъектXDTO.BindStatus;
	Если СтатусыЗаявок.Количество() <> 1 Тогда
		Возврат Перечисления.СостоянияИнтеграцииАУСН.Отсутствует;
	КонецЕсли;

	СтатусЗаявки = СтатусыЗаявок[0].Result;
	СтатусыОтветов = СтатусыОтветаФНС();
	Если СтатусЗаявки = СтатусыОтветов.ВПроцессе Тогда
		Состояние = Перечисления.СостоянияИнтеграцииАУСН.ТребуетПодтвержденияВЛичномКабинете;
	ИначеЕсли СтатусЗаявки = СтатусыОтветов.Выполнено Тогда
		Состояние = Перечисления.СостоянияИнтеграцииАУСН.Подключено;
	ИначеЕсли СтатусЗаявки = СтатусыОтветов.Ошибка Тогда
		Состояние = Перечисления.СостоянияИнтеграцииАУСН.Отключено;
	Иначе
		Состояние = Перечисления.СостоянияИнтеграцииАУСН.Отсутствует;
	КонецЕсли;

	Возврат Состояние;

КонецФункции

Процедура ЗаписатьСостояниеИнтеграцииЛКАУСН(ОтветСервиса, Организация)
	
	// В случае если партнер уже привязан к налогоплательщику, то запишем состояние подключения явно
	Если СтрНайти(ОтветСервиса.ТелоОтвета, "Партнер уже привязан к налогоплательщику") Тогда
		РегистрыСведений.СостоянияИнтеграцииАУСН.ЗаписатьСостояниеИнтеграцииЛКАУСН(
			Организация, Перечисления.СостоянияИнтеграцииАУСН.Подключено, "");
		Возврат;
	// В случае если налогоплательщик не найден, то запишем ошибку явно
	ИначеЕсли СтрНайти(ОтветСервиса.ТелоОтвета, "Налогоплательщик не найден") Тогда
		РегистрыСведений.СостоянияИнтеграцииАУСН.ЗаписатьСостояниеИнтеграцииЛКАУСН(
			Организация, Перечисления.СостоянияИнтеграцииАУСН.Ошибка, "");
		ОтветСервиса = ОтветОшибка(404);
		ТекстОшибки = НСтр("ru = 'Налогоплательщик не найден в системе ФНС'");
		ОтветСервиса.Сообщение = ТекстОшибки;
		ИмяСобытия = ИнтеграцияАУСНКлиентСервер.ИмяСобытияЖурналаРегистрации();
		ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
		Возврат;
	КонецЕсли;
	
	// Разберем ответ сервиса
	ОбъектXDTO = РасшифроватьОтветСервисаПривязкаНП(
		ОтветСервиса.ТелоОтвета, "PostAskBindPartnerWithInnResponse");
	Если ОбъектXDTO = Неопределено Тогда
		ИмяСобытия = ИнтеграцияАУСНКлиентСервер.ИмяСобытияЖурналаРегистрации(
			НСтр("ru = 'Ответ ФНС по привязке НП'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка()));
		ТекстОшибки = СтрШаблон(НСтр("ru = 'Не удалось расшифровать ответ сервиса ФНС по привязке НП.
						|%1'"), ОтветСервиса.ТелоОтвета);
		ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, , , ТекстОшибки);
		Возврат;
	КонецЕсли;
	КодЗаявки = ОбъектXDTO.RequestId;
	РегистрыСведений.СостоянияИнтеграцииАУСН.ЗаписатьСостояниеИнтеграцииЛКАУСН(
		Организация, Перечисления.СостоянияИнтеграцииАУСН.ТребуетПодтвержденияВЛичномКабинете, КодЗаявки);

