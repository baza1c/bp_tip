// Возвращает информацию по используемому в программе ключу доступа к личному кабинету ФНС АУСН
//
// Параметры:
//  Организация - СправочникСсылка.Организации
//
// Возвращаемое значение:
//  Структура - см. НовыйСостояниеКлючаДоступа
//
Функция СостояниеКлючаДоступа(Организация) Экспорт
	
	Результат = НовыйСостояниеКлючаДоступа();
	
	КлючДоступа = ТокенПорталаАУСН(Организация);
	
	Если Не ИнтеграцияАУСНКлиентСервер.КлючДоступаСоответствуетТребованиям(КлючДоступа) Тогда
		Возврат Результат;
	КонецЕсли;
	
	АдресСервиса = АдресСервисаИнтеграцииСЛКАУСН();
	СтруктураАдреса = ОбщегоНазначенияКлиентСервер.СтруктураURI(АдресСервиса);
	Запрос = Новый HTTPЗапрос;
	Запрос.Заголовки.Вставить("JsonWebToken", КлючДоступа);
	Запрос.Заголовки.Вставить("Accept", "application/json");
	АдресРесурса = "/operation/getJwtState/";
	Запрос.АдресРесурса = ?(ПустаяСтрока(СтруктураАдреса.ПутьНаСервере), "", "/" + СтруктураАдреса.ПутьНаСервере)
		+ АдресРесурса;
	
	Соединение = СоединениеССервисом(СтруктураАдреса, ТаймаутСоединения());
	Попытка
		ОтветHttp = Соединение.ВызватьHTTPМетод("GET", Запрос);
	Исключение
		ИнформацияОбОшибке = ИнформацияОбОшибке();
		ТекстОшибки = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке);
		ЗаписатьОшибкуВЖурналРегистрации(ТекстОшибки);
		Возврат Неопределено;
	КонецПопытки;
	
	КодСостояния = ОтветHttp.КодСостояния;
	ТелоОтвета   = ОтветHttp.ПолучитьТелоКакСтроку();
	
	Если Цел(КодСостояния / 100) = 2 Тогда
		ЧтениеОтвета = Новый ЧтениеJSON;
		ЧтениеОтвета.УстановитьСтроку(ТелоОтвета);
		ПолученныйОтвет = ПрочитатьJSON(ЧтениеОтвета);
		Если ТипЗнч(ПолученныйОтвет) = Тип("Структура") Тогда
			Результат.Статус = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПолученныйОтвет, "state", "");
			Результат.Описание = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПолученныйОтвет, "description", "");
			Результат.ДатаИзменения = РегистрыСведений.СостоянияИнтеграцииАУСН.ДатаИзменения(
				Организация, Справочники.КлассификаторБанков.ПустаяСсылка());
		Иначе
			ЗаписатьОшибкуВЖурналРегистрации(СтрШаблон(
				НСтр("ru = 'Во время выполнения метода ""Состояние ключа доступа"" возникла ошибка при расшифровке ответа сервиса.
					|%1'", ОбщегоНазначения.КодОсновногоЯзыка()), ТелоОтвета));
		КонецЕсли;
	Иначе
		ЗаписатьОшибкуВЖурналРегистрации(СтрШаблон(
			НСтр("ru = 'Метод: ""Состояние ключа доступа"". Код состояния: %1.
				 |%2'", ОбщегоНазначения.КодОсновногоЯзыка()), КодСостояния, ТелоОтвета));
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

