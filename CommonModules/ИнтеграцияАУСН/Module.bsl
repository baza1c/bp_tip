Процедура ЗаполнитьПараметрыЗапросаКСервисуЛКАУСН(ПараметрыЗапроса, ПараметрыМетода, ОписаниеМетода, ТокенАвторизации, ТокенПортала)
	
	ВсеМетоды = ИнтеграцияАУСНКлиентСервер.ИменаМетодовВзаимодействияИнтеграцияСЛК();
	Если ОписаниеМетода.Метод = ВсеМетоды.СоздатьТокенАвторизацииЛКАУСН Тогда
		// Параметры не требуются
		Возврат;
	КонецЕсли;
	
	Если ТокенАвторизации = Неопределено Тогда
		ПараметрыЗапроса.Вставить("ТекстЗапроса", ПараметрыМетода.ТекстЗапроса);
	Иначе
		ПараметрыЗапроса.Заголовки.Вставить("Authorization", СтрШаблон("Bearer %1", ТокенАвторизации));
		ПараметрыЗапроса.Заголовки.Вставить("JsonWebToken", ТокенПортала);
		
		Данные = ПараметрыЗапроса.Данные;
		Заголовки = Новый Структура;
		Если ПараметрыМетода.Свойство("ИдентификаторПриложения") Тогда
			Заголовки.Вставить("UserToken", ПараметрыМетода.ИдентификаторПриложения);
		Иначе
			Заголовки.Вставить("UserToken", ТокенАвторизации);
		КонецЕсли;
		Если ЭтоМетодПолученияДанных(ОписаниеМетода.Метод) Тогда
			Заголовки.Вставить("SOAPAction", "urn:GetMessageRequest");
		Иначе
			Заголовки.Вставить("SOAPAction", "urn:SendMessageRequest");
		КонецЕсли;
		Данные.Вставить("headers", Заголовки);
		СтрокаДанных = ОбщегоНазначенияБПКлиентСервер.СтрокаBase64(
			ПолучитьДвоичныеДанныеИзСтроки(ПараметрыМетода.ТекстЗапроса));
		Данные.Вставить("payload", СтрокаДанных);
	КонецЕсли;
	
КонецПроцедуры

Функция ПараметрыЗапросаКСервису(ПараметрыМетода, ОписаниеМетода, ТокенАвторизации = Неопределено,
	ТокенПортала = Неопределено)

	ПараметрыЗапроса = НовыйПараметрыЗапросаКСервису();
