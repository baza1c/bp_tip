	ПоляКонтрагента.Вставить("НаименованиеПолное",        Наименование);
	ПоляКонтрагента.Вставить("ЮридическоеФизическоеЛицо", ЮридическоеЛицоED(КомпонентыОбмена));
	
	Если ЗначениеЗаполнено(ИНН) Тогда
		ПоляКонтрагента.Вставить("ИНН", ИНН);
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Ссылка) Тогда
	
		ПоляКонтрагента.Вставить("Ссылка", НовыйСсылкаED());
		ПоляКонтрагента.Ссылка.Значение        = Ссылка;
		ПоляКонтрагента.Ссылка.ТипЗначенияXDTO = Правило.ТипXDTO;
		ПоляКонтрагента.Ссылка.ЭтоСсылка       = Истина;
		
	КонецЕсли;
	
	КонтрагентED = ПоляОбъектаED(ПоляКонтрагента, "Контрагент");
	
	Возврат СсылкаED(КонтрагентED, Правило, КомпонентыОбмена);
	
