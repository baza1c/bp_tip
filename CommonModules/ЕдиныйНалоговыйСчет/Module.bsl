	СчетаУплаты.Добавить(ПланыСчетов.Хозрасчетный.КассаОрганизации);    // 50.01
	Запрос.УстановитьПараметр("СчетаУплаты", СчетаУплаты);
	// Авансовые платежи по налогу на прибыль определяются без учета уменьшения налога на суммы торгового сбора 
	// и федерального инвестиционного налогового вычета.
	СчетаУменьшенияНалогаНаПрибыль = Новый Массив;
	СчетаУменьшенияНалогаНаПрибыль.Добавить(ПланыСчетов.Хозрасчетный.ТорговыйСбор); // 68.13
	СчетаУменьшенияНалогаНаПрибыль.Добавить(ПланыСчетов.Хозрасчетный.ИнвестиционныйВычетПоНалогуНаПрибыль); // 99.02.И
	Запрос.УстановитьПараметр("СчетаУменьшенияНалогаНаПрибыль", СчетаУменьшенияНалогаНаПрибыль);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ХозрасчетныйОбороты.Счет КАК СчетУчета,
	|	ХозрасчетныйОбороты.Счет.Порядок КАК СчетПорядок,
