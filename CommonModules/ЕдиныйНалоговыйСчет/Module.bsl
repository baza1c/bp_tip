			КолонкиСумм.Добавить("Сумма");
			КолонкиСумм.Добавить("СуммаНалога");
			КолонкиСумм.Добавить("СуммаУменьшенияНалога");
			КолонкиСумм.Добавить("Начислено");
			
			КолонкиПоказателей = Новый Массив;
			Для каждого Колонка Из ТаблицаНачисленияНалоговНаЕНС.Колонки Цикл
				Если КолонкиСумм.Найти(Колонка.Имя) = Неопределено Тогда
					КолонкиПоказателей.Добавить(Колонка.Имя);
				КонецЕсли;
			КонецЦикла;
			
			КолонкиСуммСтрокой = СтрСоединить(КолонкиСумм, ",");
			КолонкиПоказателейСтрокой = СтрСоединить(КолонкиПоказателей, ",");
			ТаблицаНачисленияНалоговНаЕНС.Свернуть(КолонкиПоказателейСтрокой, КолонкиСуммСтрокой);
			
			Для каждого НоваяСтрока Из ТаблицаНачисленияНалоговНаЕНС Цикл
				Если День(НоваяСтрока.СрокУплаты) <= 2 Тогда
					// Ситуация с переносом срока с 28 апреля на 2 мая.
					СрокУплаты = НачалоМесяца(НоваяСтрока.СрокУплаты) - 1;
					СрокУплаты = Дата(Год(СрокУплаты), Месяц(СрокУплаты), 28);
				Иначе
					СрокУплаты = НоваяСтрока.СрокУплаты;
				КонецЕсли;
				Если ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.СписаниеСРасчетногоСчета")
					Или ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.РасходныйКассовыйОрдер")
					Или ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.СведенияОбУдержанномНДФЛ") Тогда
					НоваяСтрока.НачалоПериода = Выборка.Дата;
					НоваяСтрока.КонецПериода = Выборка.Дата;
				ИначеЕсли ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.НачислениеЗарплаты")
					Или ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.ОтражениеЗарплатыВБухучете")
					Или ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.ОтражениеЗарплатыВУчете") Тогда
					НоваяСтрока.НачалоПериода = НачалоМесяца(Выборка.Дата);
					НоваяСтрока.КонецПериода = КонецМесяца(Выборка.Дата);
				ИначеЕсли ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.ЗаявлениеОВвозеТоваров") Тогда
					НоваяСтрока.НачалоПериода = НачалоМесяца(НачалоМесяца(СрокУплаты) - 1);
					НоваяСтрока.КонецПериода = КонецМесяца(НоваяСтрока.НачалоПериода);
				ИначеЕсли ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.ОперацияСПатентом") Тогда
					ДанныеПатента = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Выборка.Регистратор, "ДатаНачала,ДатаОкончания");
					НоваяСтрока.НачалоПериода = ДанныеПатента.ДатаНачала;
					НоваяСтрока.КонецПериода = ДанныеПатента.ДатаОкончания;
				ИначеЕсли ТипЗнч(Выборка.Регистратор) = Тип("ДокументСсылка.РегламентнаяОперация") Тогда
					Если НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.НДС
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.ЗемельныйНалог
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.ТранспортныйНалог
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.НалогНаИмущество 
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.ЕНприУСН
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.ТорговыйСбор
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.НДФЛ_ИП
						Или НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.НДСНалоговогоАгента Тогда
						НоваяСтрока.НачалоПериода = НачалоКвартала(Выборка.Дата);
						НоваяСтрока.КонецПериода = КонецКвартала(Выборка.Дата);
					ИначеЕсли НоваяСтрока.СчетУчета = ПланыСчетов.Хозрасчетный.РасчетыСБюджетом Тогда // 68.04.1
						Если ЭтоАвансовыйПлатеж Тогда
							НоваяСтрока.НачалоПериода = НачалоМесяца(СрокУплаты);
							НоваяСтрока.КонецПериода = КонецМесяца(НоваяСтрока.НачалоПериода);
						Иначе
							УплатаАвансовПоНалогуНаПрибыль = УчетнаяПолитика.ПорядокУплатыАвансов(
								НоваяСтрока.Организация, НачалоМесяца(СрокУплаты));
							Если УплатаАвансовПоНалогуНаПрибыль = Перечисления.ПорядокУплатыАвансовПоНалогуНаПрибыль.ПоФактическойПрибыли Тогда
								НоваяСтрока.НачалоПериода = НачалоМесяца(Выборка.Дата);
								НоваяСтрока.КонецПериода = КонецМесяца(НоваяСтрока.НачалоПериода);
							Иначе
								НоваяСтрока.НачалоПериода = НачалоКвартала(Выборка.Дата);
								НоваяСтрока.КонецПериода = КонецКвартала(НоваяСтрока.НачалоПериода);
							КонецЕсли;
						КонецЕсли;
					Иначе
						НоваяСтрока.НачалоПериода = НачалоМесяца(Выборка.Дата);
						НоваяСтрока.КонецПериода = КонецМесяца(Выборка.Дата);
					КонецЕсли;
				КонецЕсли;
				
			КонецЦикла;
			
			СводнаяТаблица = ТаблицаНачисленияНалоговНаЕНС.Скопировать(, 
				"СчетУчета,Субконто1,Субконто2,Субконто3,ВидАгентскогоДоговора,АвансовыйПлатеж,СуммаНалога");
			СводнаяТаблица.Свернуть(
				"СчетУчета,Субконто1,Субконто2,Субконто3,ВидАгентскогоДоговора,АвансовыйПлатеж", "СуммаНалога");
			СводнаяТаблица.Индексы.Добавить(
				"СчетУчета,Субконто1,Субконто2,Субконто3,ВидАгентскогоДоговора,АвансовыйПлатеж");
			Отбор = Новый Структура("СчетУчета,Субконто1,Субконто2,Субконто3,ВидАгентскогоДоговора,АвансовыйПлатеж");
			Для каждого СтрокаТаблицы Из ТаблицаНачисленияНалоговНаЕНС Цикл
				ЗаполнитьЗначенияСвойств(Отбор, СтрокаТаблицы);
				СтрокиСводнойТаблицы = СводнаяТаблица.НайтиСтроки(Отбор);
				Если ЗначениеЗаполнено(СтрокиСводнойТаблицы) Тогда
					СтрокаТаблицы.СуммаНалога = СтрокиСводнойТаблицы[0].СуммаНалога;
				КонецЕсли;
				Запись = НаборРасчетНачисленияНалоговНаЕНС.Добавить();
				ЗаполнитьЗначенияСвойств(Запись, СтрокаТаблицы);
			КонецЦикла;
			
			ОбновлениеИнформационнойБазы.ЗаписатьНаборЗаписей(НаборРасчетНачисленияНалоговНаЕНС);
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			// Если не удалось обработать какой-либо документ, повторяем попытку снова.
			ОтменитьТранзакцию();
			
			ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'В процедуре %1 не удалось обработать документ ""%2"" по причине:
					|%3'"),
				"ЕдиныйНалоговыйСчет.ДобавитьДвиженияРасчетНачисленияНалоговНаЕНС()",
				ПредставлениеДокумента,
				ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
				УровеньЖурналаРегистрации.Предупреждение,
				Выборка.Регистратор.Метаданные(), 
				Выборка.Регистратор, 
				ТекстСообщения);
			
		КонецПопытки;
		
	КонецЦикла;
	
