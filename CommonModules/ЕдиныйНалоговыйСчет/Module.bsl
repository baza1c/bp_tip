#Область УчетПоДаннымФНС

// Устанавливаем для всех подключенных к сервису ЕНС организаций учет ЕНС по данным ФНС с начала текущего месяца
// и удаляем с этой даты сформированные проводки по кредиту счета 68.90 и записи регистра РасчетНачисленияНалоговНаЕНС.
//
Процедура УстановитьУчетПоДаннымФНСДляПодключенныхКСервису(ПараметрыОбработчика) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	СостоянияПодключенияЕНС.Организация КАК Организация
	|ИЗ
	|	РегистрСведений.СостоянияПодключенияЕНС КАК СостоянияПодключенияЕНС
	|ГДЕ
	|	СостоянияПодключенияЕНС.ИнтеграцияПодключена";
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		ПараметрыОбработчика.ОбработкаЗавершена = Истина;
		Возврат;
	КонецЕсли;
	
	ОбработкаЗавершена = Истина;
	Выборка = Результат.Выбрать();
	Пока Выборка.Следующий() Цикл
		Если Не УстановитьУчетПоДаннымФНСПослеРегистрацииВСервисе(Выборка.Организация) Тогда
			ОбработкаЗавершена = Ложь;
		КонецЕсли;
	КонецЦикла;
	ПараметрыОбработчика.ОбработкаЗавершена = ОбработкаЗавершена;
	
КонецПроцедуры

Функция УстановитьУчетПоДаннымФНСПослеРегистрацииВСервисе(Организация) Экспорт
	
	НачалоЭтогоМесяца = НачалоМесяца(ОбщегоНазначенияБП.ТекущаяДатаНаСервере());
	НачалоУчетаПоДаннымФНС = НачалоЭтогоМесяца;
	
	УстановитьПривилегированныйРежим(Истина);
	
	// Выбираем эту организацию и все, для которых эта является головной
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	СостоянияПодключенияЕНС.Организация КАК Организация
	|ПОМЕСТИТЬ ПодключенныеОрганизации
	|ИЗ
	|	РегистрСведений.СостоянияПодключенияЕНС КАК СостоянияПодключенияЕНС
	|ГДЕ
	|	СостоянияПодключенияЕНС.ИнтеграцияПодключена
	|	И СостоянияПодключенияЕНС.Организация = &Организация
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	Организации.Ссылка КАК Организация,
	|	НастройкиУчетаЕНС.Организация ЕСТЬ НЕ NULL  КАК ЕстьНастройка
	|ИЗ
	|	Справочник.Организации КАК Организации
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ПодключенныеОрганизации КАК ПодключенныеОрганизации
	|		ПО Организации.ГоловнаяОрганизация = ПодключенныеОрганизации.Организация
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.НастройкиУчетаЕНС КАК НастройкиУчетаЕНС
	|		ПО Организации.Ссылка = НастройкиУчетаЕНС.Организация";
	
	Запрос.УстановитьПараметр("Организация", Организация);
	
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		Возврат Истина;
	КонецЕсли;
	ВыбранныеОрганизации = Результат.Выгрузить();
	
	// Устанавливаем для выбранных организаций учет по данным ФНС с начала текущего месяца
	Для каждого СтрокаТаблицы Из ВыбранныеОрганизации Цикл
		Если СтрокаТаблицы.ЕстьНастройка Тогда
			Продолжить;
		КонецЕсли;
		Запись = РегистрыСведений.НастройкиУчетаЕНС.СоздатьМенеджерЗаписи();
		Запись.Организация = СтрокаТаблицы.Организация;
		Запись.НачалоУчетаПоДаннымФНС = НачалоУчетаПоДаннымФНС;
		Запись.Записать();
	КонецЦикла;
	
	// Удаляем, начиная с текущего месяца, для выбранных организаций проводки Кт 68.90 
	// и движения регистра сведений РасчетНачисленияНалоговНаЕНС
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Регистраторы.Ссылка КАК Регистратор,
	|	МАКСИМУМ(Регистраторы.Хозрасчетный) КАК Хозрасчетный,
	|	МАКСИМУМ(Регистраторы.РасчетНачисленияНалоговНаЕНС) КАК РасчетНачисленияНалоговНаЕНС
	|ИЗ
	|	(ВЫБРАТЬ РАЗЛИЧНЫЕ
	|		Хозрасчетный.Регистратор КАК Ссылка,
	|		ИСТИНА КАК Хозрасчетный,
	|		ЛОЖЬ КАК РасчетНачисленияНалоговНаЕНС
	|	ИЗ
	|		РегистрБухгалтерии.Хозрасчетный КАК Хозрасчетный
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ ЖурналДокументов.ЖурналОпераций КАК ЖурналОпераций
	|			ПО Хозрасчетный.Регистратор = ЖурналОпераций.Ссылка
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Организации КАК Организации
	|			ПО Хозрасчетный.Организация = Организации.Ссылка
	|	ГДЕ
	|		Хозрасчетный.СчетКт = &Счет6890
	|		И Хозрасчетный.Период >= &НачалоУчетаПоДаннымФНС
	|		И Хозрасчетный.Организация В(&ВыбранныеОрганизации)
	|		И НЕ ТИПЗНАЧЕНИЯ(Хозрасчетный.Регистратор) В (&ТипыИсключений)
	|	
	|	ОБЪЕДИНИТЬ ВСЕ
	|	
	|	ВЫБРАТЬ РАЗЛИЧНЫЕ
	|		РасчетНачисленияНалоговНаЕНС.Регистратор,
	|		ЛОЖЬ,
	|		ИСТИНА
	|	ИЗ
	|		РегистрСведений.РасчетНачисленияНалоговНаЕНС КАК РасчетНачисленияНалоговНаЕНС
	|	ГДЕ
	|		РасчетНачисленияНалоговНаЕНС.СрокУплаты >= &НачалоУчетаПоДаннымФНС
	|		И РасчетНачисленияНалоговНаЕНС.Организация В(&ВыбранныеОрганизации)) КАК Регистраторы
	|
	|СГРУППИРОВАТЬ ПО
	|	Регистраторы.Ссылка";
	
	ТипыИсключений = Новый Массив;
	ТипыИсключений.Добавить(Тип("ДокументСсылка.КорректировкаЕНС"));
	ТипыИсключений.Добавить(Тип("ДокументСсылка.ОперацияБух"));
	Запрос.УстановитьПараметр("ТипыИсключений", ТипыИсключений);
	Запрос.УстановитьПараметр("Счет6890", ПланыСчетов.Хозрасчетный.ЕдиныйНалоговыйСчет);
	Запрос.УстановитьПараметр("НачалоУчетаПоДаннымФНС", НачалоУчетаПоДаннымФНС);
	Запрос.УстановитьПараметр("ВыбранныеОрганизации", ВыбранныеОрганизации.ВыгрузитьКолонку("Организация"));
	
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		Возврат Истина;
	КонецЕсли;
	
	ОбработкаЗавершена = Истина;
	Выборка = Результат.Выбрать();
	Пока Выборка.Следующий() Цикл
		
		ПредставлениеДокумента = Строка(Выборка.Регистратор);
		НачатьТранзакцию();
		
		Попытка
			
			// Блокируем записи от изменения другими сеансами.
			Блокировка = Новый БлокировкаДанных;
			Если Выборка.Хозрасчетный Тогда
				ЭлементБлокировки = Блокировка.Добавить("РегистрБухгалтерии.Хозрасчетный.НаборЗаписей");
				ЭлементБлокировки.УстановитьЗначение("Регистратор", Выборка.Регистратор);
			КонецЕсли;
			Если Выборка.РасчетНачисленияНалоговНаЕНС Тогда
				ЭлементБлокировки = Блокировка.Добавить("РегистрСведений.РасчетНачисленияНалоговНаЕНС.НаборЗаписей");
				ЭлементБлокировки.УстановитьЗначение("Регистратор", Выборка.Регистратор);
			КонецЕсли;
			Блокировка.Заблокировать();
			
			Если Выборка.Хозрасчетный Тогда
				Проводки = РегистрыБухгалтерии.Хозрасчетный.СоздатьНаборЗаписей();
				Проводки.Отбор.Регистратор.Установить(Выборка.Регистратор);
				Проводки.Прочитать();
				КоличествоПроводок = Проводки.Количество();
				Для Индекс = 1 По КоличествоПроводок Цикл
					ОбратныйИндекс = КоличествоПроводок - Индекс;
					Если Проводки[ОбратныйИндекс].Период < НачалоУчетаПоДаннымФНС
						Или Проводки[ОбратныйИндекс].СчетКт <> ПланыСчетов.Хозрасчетный.ЕдиныйНалоговыйСчет Тогда
						Продолжить;
					КонецЕсли;
					Проводки.Удалить(ОбратныйИндекс);
				КонецЦикла;
				ОбновлениеИнформационнойБазы.ЗаписатьНаборЗаписей(Проводки);
			КонецЕсли;
			
			Если Выборка.РасчетНачисленияНалоговНаЕНС Тогда
				Набор = РегистрыСведений.РасчетНачисленияНалоговНаЕНС.СоздатьНаборЗаписей();
				Набор.Отбор.Регистратор.Установить(Выборка.Регистратор);
				Набор.Прочитать();
				КоличествоЗаписей = Набор.Количество();
				Для Индекс = 1 По КоличествоЗаписей Цикл
					ОбратныйИндекс = КоличествоЗаписей - Индекс;
					Если Набор[ОбратныйИндекс].СрокУплаты < НачалоУчетаПоДаннымФНС Тогда
						Продолжить;
					КонецЕсли;
					Набор.Удалить(ОбратныйИндекс);
				КонецЦикла;
				ОбновлениеИнформационнойБазы.ЗаписатьНаборЗаписей(Набор);
			КонецЕсли;
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'В процедуре %1 не удалось обработать документ ""%2"" по причине:
					|%3'"),
				"ЕдиныйНалоговыйСчет.УстановитьУчетПоДаннымФНСПослеРегистрацииВСервисе()",
				ПредставлениеДокумента,
				ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(),
				УровеньЖурналаРегистрации.Предупреждение,
				Выборка.Регистратор.Метаданные(),
				Выборка.Регистратор,
				ТекстСообщения);
				ОбработкаЗавершена = Ложь;
			
		КонецПопытки;
		
	КонецЦикла;
	
	УстановитьПривилегированныйРежим(Ложь);
	
	Возврат ОбработкаЗавершена;
	
КонецФункции

#КонецОбласти
