	ЦветОбычногоСобытия  = ЦветаСтиля.ЦветТекстаИнформационнойПанели;
	
	СписокЭлектронныхПисем = РезультатЗапроса.Выгрузить();
	
	КоличествоСтрокВиджета = БлокиИнформационнойПанелиКлиентСервер.КоличествоЭлектроннаяПочта();
	// Если помещаются все письма - выводим все, что есть.
	// Если не помещаются - выводим все, что можем, а в гиперссылке для перехода в почту указываем сколько есть еще непрочитанных писем.
	МожноВывестиВсеПисьма = СписокЭлектронныхПисем.Количество() <= КоличествоСтрокВиджета;
	МожноВывестиПисем = ?(МожноВывестиВсеПисьма, СписокЭлектронныхПисем.Количество(), КоличествоСтрокВиджета - 1);
	
	ИндексТекущейСтрокиВиджета = -1;
	НовыхПисемНет =  СписокЭлектронныхПисем.Количество() = 0;
	
	Результат.Вставить("НовыхПисемНет", НовыхПисемНет);
	
	Для Каждого Данные Из СписокЭлектронныхПисем Цикл
		
		Если Год(Данные.Дата) = Год(ОбщегоНазначения.ТекущаяДатаПользователя()) Тогда
			ПредставлениеДаты = Формат(Данные.Дата, "Л=ru_RU; ДФ=dd.MM;");
		Иначе
			ПредставлениеДаты = Формат(Данные.Дата, "Л=ru_RU; ДФ=dd.MM.yy;");
		КонецЕсли;
		
		ПредставлениеПисьма = СтрШаблон(НСтр("ru='%1 %2'"), ПредставлениеДаты, Данные.Тема);
		ИндексТекущейСтрокиВиджета = ИндексТекущейСтрокиВиджета + 1;

		Результат.Вставить(
			БлокиИнформационнойПанелиКлиентСервер.СвойствоНаименованияЭлектроннаяПочта(ИндексТекущейСтрокиВиджета),
				Новый ФорматированнаяСтрока(ПредставлениеПисьма, ШрифтыСтиля.ШрифтТекстаИнформационнойПанели));
		
		Если ИндексТекущейСтрокиВиджета >= МожноВывестиПисем Тогда
			Прервать;
		КонецЕсли;
		
	КонецЦикла;
	
	Если Не МожноВывестиВсеПисьма Тогда
		
		ИндексТекущейСтрокиВиджета = ИндексТекущейСтрокиВиджета + 1;
		
		// Это последняя свободная строка, при этом сообщений нужно вывести больше, чем одно
		ЕщеПисем = СтроковыеФункцииКлиентСервер.ЧислоЦифрамиПредметИсчисленияПрописью(
			СписокЭлектронныхПисем.Количество() - МожноВывестиПисем - 1, НСтр("ru = 'письмо, письма, писем'"));
		ТекстКоманды = СтрШаблон(НСтр("ru = 'и еще %1'"), ЕщеПисем);
		
		Результат.Вставить("ТекстКоманды", ТекстКоманды);
	Иначе
		Результат.Вставить("ТекстКоманды", НСтр("ru = 'Все письма'"));
	КонецЕсли;
	
	Если НовыхПисемНет Тогда
		
		ТемаПисьма = Новый ФорматированнаяСтрока(
			НСтр("ru = 'Новых писем нет'"),
			ШрифтОбычногоСобытия, ЦветОбычногоСобытия);
		
		ИндексТекущейСтрокиВиджета = ИндексТекущейСтрокиВиджета + 1;
		
		Результат.Вставить(БлокиИнформационнойПанелиКлиентСервер.СвойствоНаименованияЭлектроннаяПочта(ИндексТекущейСтрокиВиджета), ТемаПисьма);
		
	КонецЕсли;
	
	ПоместитьВоВременноеХранилище(Результат, Параметры.АдресХранилища);
	
КонецПроцедуры

