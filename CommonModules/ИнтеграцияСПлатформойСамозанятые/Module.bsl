Процедура СоздатьСлужебногоПользователяИнтеграции(ПользователиАбонента)
	
	// Ищем первый свободный Логин
	Индекс = 0;
	Логин = НовыйЛогинСлужебногоПользователя(Индекс);
	Пока ПользователиАбонента.Найти(Логин, "Логин") <> Неопределено Цикл
		Индекс = Индекс + 1;
		Логин = НовыйЛогинСлужебногоПользователя(Индекс);
	КонецЦикла;
	
	СлужебныйПользователь = НовыйОписаниеСлужебногоПользователя(Логин);
	
	// Пытаемся создать без вызова исключения
	СвойстваОтвета = ПрограммныйИнтерфейсСервиса.НовыйОсновныеСвойстваОтвета();
	Если Не ПрограммныйИнтерфейсСервиса.СоздатьПользователяАбонента(СлужебныйПользователь, Ложь, СвойстваОтвета) Тогда
		Если СвойстваОтвета.КодОтвета = 10409 Тогда
			// Если пользователь найден, он отвязан от абонента.
			// Делаем вторую попытку с исключением.
			Индекс = Индекс + 1;
			Логин = НовыйЛогинСлужебногоПользователя(Индекс);
			СлужебныйПользователь = НовыйОписаниеСлужебногоПользователя(Логин);
			ПрограммныйИнтерфейсСервиса.СоздатьПользователяАбонента(СлужебныйПользователь);
		Иначе
			Если СвойстваОтвета.КодОтвета <> 10404 Тогда
				Сообщение = СтрШаблон("%1 %2", СвойстваОтвета.КодОтвета, СвойстваОтвета.Сообщение);
			КонецЕсли; 
			ВызватьИсключение Сообщение;
		КонецЕсли;
	КонецЕсли;
	
	УстановитьПривилегированныйРежим(Истина);
	Владелец = ВладелецДанныхСлужебногоПользователя();
	ОбщегоНазначения.ЗаписатьДанныеВБезопасноеХранилище(Владелец, СлужебныйПользователь.Логин, КлючДанныхИмяСлужебногоПользователя());
	ОбщегоНазначения.ЗаписатьДанныеВБезопасноеХранилище(Владелец, СлужебныйПользователь.Пароль, КлючДанныхПарольСлужебногоПользователя());
	УстановитьПривилегированныйРежим(Ложь);
	
КонецПроцедуры

