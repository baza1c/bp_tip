	ИначеЕсли Ключ = "Оповещения" Тогда
		Возврат ОбработатьВходящиеДанные_СписокОповещений(Значение);
	ИначеЕсли Ключ = "СписокАннулированныхЧеков" Тогда
		Возврат ОбработатьВходящиеДанные_СписокАннулированныхЧеков(Значение);
	ИначеЕсли Ключ = "Статус" Тогда
		СтатусОповещения = Перечисления.СтатусыОповещенийПлатформыСамозанятые.ЗначениеПоИдентификатору(Значение);
		Если СтатусОповещения <> Неопределено Тогда
			Возврат СтатусОповещения;
		Иначе
			Возврат Значение; // Статус чека
		КонецЕсли;
	ИначеЕсли Ключ = "ТипОповещения" Тогда
		Возврат Перечисления.ТипыОповещенийПлатформыСамозанятые.ЗначениеПоИдентификатору(Значение);
	ИначеЕсли Ключ = "Код" Тогда
		Возврат ОбработатьВходящиеДанные_Код(Значение);
	ИначеЕсли ИспользоватьЧасовойПоясСеанса
		И СтрНачинаетсяС(НРег(Ключ), ПрефиксДатНРег()) И ТипЗнч(Значение) = Тип("Дата") Тогда
		// Сервис возвращает время без учета часового пояса. Преобразуем к часовому поясу сеанса.
		Если ЗначениеЗаполнено(Значение) Тогда
			Возврат МестноеВремя(Значение, ЧасовойПоясСеанса());
		Иначе
			Возврат Значение;
		КонецЕсли;
	Иначе
		Возврат Значение;
	КонецЕсли;
	
