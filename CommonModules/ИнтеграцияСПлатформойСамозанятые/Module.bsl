// Отправляет запрос на выполнение метода взаимодействия.
//
// Параметры:
//  МетодВзаимодействия - Строка - имя метода из списка методов МетодыВзаимодействия()
//  ПараметрыЗапроса - Структура - параметры выполнения запроса, подготовленные функцией ВыполнитьМетод_ХХ(),
//                                 соответствующей выбранному методу взаимодействия.
//
// Возвращаемое значение:
//  Структура - описание см. в функции НовыйЗапрос()
//
Функция СформироватьЗапрос(МетодВзаимодействия, ПараметрыЗапроса)
	Перем Ошибка, СообщениеОбОшибке;
	
	ИдентификаторМетода = ИдентификаторМетода(МетодВзаимодействия);
	
	ПараметрыЗапросаJSON = ЗначениеВJSON(ПараметрыЗапроса);
	ДвоичныеДанныеЗапроса = ПолучитьДвоичныеДанныеИзСтроки(ПараметрыЗапросаJSON);
	
	ПараметрыДоступаКХранилищу = ПараметрыДоступаКХранилищу();
	ИдентификаторХранилища = ИдентификаторХранилища();
	
	Если ПодключенСервисИнтеграции(ПараметрыДоступаКХранилищу) Тогда
		Ответ = ПередачаДанныхСервер.ОтправитьВЛогическоеХранилище(
			ПараметрыДоступаКХранилищу,
			ИдентификаторХранилища,
			ДвоичныеДанныеЗапроса,
			ИдентификаторМетода);
		
		Если Ответ = Неопределено Тогда
			Ошибка = Истина;
			СообщениеОбОшибке = НСтр("ru = 'Ошибка при отправке данных.
				|Подробности см. в журнале регистрации.'");
		Иначе
			Ошибка = Ложь;
		КонецЕсли;
	Иначе
		Ошибка = Истина;
		СообщениеОбОшибке = НСтр("ru = 'Приложение не подключено к сервису Мой налог. Обратитесь к администратору.'");
	КонецЕсли;
	
	Если Не Ошибка Тогда
		
		ОсновнойРаздел = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
			Ответ, ИнтеграцияОбъектовВСервисеБП.ПолеОсновнойРаздел());
		Если ОсновнойРаздел <> Неопределено И ТипЗнч(ОсновнойРаздел) = Тип("Структура") Тогда
			Запрос = НовыйЗапрос(МетодВзаимодействия);
			Запрос.Ошибка = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				ОсновнойРаздел, ИнтеграцияОбъектовВСервисеБП.ПолеОшибка(), Истина);
			Запрос.Сообщение = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				ОсновнойРаздел, ИнтеграцияОбъектовВСервисеБП.ПолеСообщениеОбОшибке(), "");
			Запрос.КодВозврата = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				ОсновнойРаздел, ИнтеграцияОбъектовВСервисеБП.ПолеКодВозврата());
		Иначе
			Запрос = НовыйЗапрос(МетодВзаимодействия, Истина);
		КонецЕсли;
		
		Если Запрос.КодВозврата = АсинхронноеПолучениеДанныхСловарь.КодВозвратаВыполнено() Тогда
			Результат = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
				Ответ, ИнтеграцияОбъектовВСервисеБП.ПолеРезультат());
			Если Результат <> Неопределено И ТипЗнч(Результат) = Тип("Структура") Тогда
				Запрос.Идентификатор = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
					Результат, ИнтеграцияОбъектовВСервисеБП.ПолеИдентификатор(), "");
				Запрос.Хранилище = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
					Результат, ИнтеграцияОбъектовВСервисеБП.ПолеХранилище(), "");
			КонецЕсли;
		КонецЕсли;
		
	Иначе
		Запрос = НовыйЗапрос(МетодВзаимодействия, Ошибка, СообщениеОбОшибке);
	КонецЕсли;
	
	Возврат Запрос;
	
