// Добавляет на форму реквизиты, необходимые для сбора статистики и при необходимости устанавливает
// признак сбора статистики.
//
// Параметры:
//  Форма - ФормаКлиентскогоПриложения - Форма.
//
Процедура ДобавитьСборСтатистики(Форма) Экспорт
	
	Если Не ОбщегоНазначения.РазделениеВключено() Тогда
		Возврат;
	КонецЕсли;
	
	Объект = Форма.Объект;
	
	МассивРеквизитов = Новый Массив;
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ВыбраноПерепроведениеДокументов", Новый ОписаниеТипов("Булево")));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ВыбраноЗакрытиеМесяца", Новый ОписаниеТипов("Булево")));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ВыбраноЗакрытиеТолькоТекущегоМесяца", Новый ОписаниеТипов("Булево")));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ПоследовательныйПереходВСледующийПериод", Новый ОписаниеТипов("Булево")));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ПоследовательныйПереходВПредыдущийПериод", Новый ОписаниеТипов("Булево")));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ЗаписанныеСобытия", Новый ОписаниеТипов()));
	МассивРеквизитов.Добавить(Новый РеквизитФормы("ФормаОткрытаДляАктивныхИзменений", Новый ОписаниеТипов("Булево")));
	Форма.ИзменитьРеквизиты(МассивРеквизитов);
	
	Если Не ЗначениеЗаполнено(Форма.ДатаНарушенияПоследовательности)
		Или ДобавитьМесяц(НачалоМесяца(Форма.ДатаНарушенияПоследовательности), 1) >= Объект.ПериодРегистрации Тогда
		Возврат;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(Форма.КлючНазначенияИспользования) И Не ЗначениеЗаполнено(Форма.Параметры.ДатаАктуальности)
		И Не ЗначениеЗаполнено(Форма.Параметры.ПериодРегистрации)
		И Не ПолучитьФункциональнуюОпцию("ИспользоватьНесколькоОрганизаций")
		И Не ЗначениеЗаполнено(ОбщегоНазначения.РабочаяДатаПользователя())
		И Объект.ПериодРегистрации = ПериодПоУмолчанию()
		И Форма.ТаблицаОпераций[0].Устарела
		И Форма.МожноЗакрыватьМесяц
		И ПравоДоступа("Редактирование", Метаданные.Документы.РегламентнаяОперация) Тогда
		
		ЗаписатьСтатистику("ОткрытаФормаЗакрытияМесяца");

		Форма.СобиратьСтатистику = Истина;
		
		ЗаписанныеСобытия = Новый Структура;
		ЗаписанныеСобытия.Вставить("ИзмененПериодВыбраноЗакрытиеМесяца", Ложь);
		ЗаписанныеСобытия.Вставить("ФормаОткрытаДляАктивныхИзменений", Ложь);
		Форма.ЗаписанныеСобытия = ЗаписанныеСобытия;
	КонецЕсли;
	
	ЗаписатьСтатистику("ОткрытаФормаЗакрытияМесяца_ОбщееКоличество");

КонецПроцедуры

