Функция ЕдинственнаяСумма(ИсточникСумм, ИмяРазрешенногоПоля, ОписаниеСумм)
	
	Суммы = КоллекцииСумм.НовыйКоллекцияСумм(ОписаниеСумм, Истина);
	КоллекцииСумм.Заполнить(Суммы, ИсточникСумм, ОписаниеСумм);
	Суммы[ИмяРазрешенногоПоля] = 0;
	Возврат КоллекцииСумм.Пустая(Суммы, ОписаниеСумм);
	
