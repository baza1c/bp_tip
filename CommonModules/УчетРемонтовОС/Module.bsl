		Запрос.УстановитьПараметр("ВидРемонта", Неопределено);
	КонецЕсли;
	Запрос.УстановитьПараметр("ОтборВидРемонта", Истина);
	
	Данные = Запрос.Выполнить().Выгрузить();
	Возврат Данные;
	
