		КонецЕсли;

		Если ВзносыПодлежащиеУплате.СДоходаПрошлыйГод > 0 Тогда
			СтрокаВзноса = ТаблицаРасходов.Добавить();
			СтрокаВзноса.СтраховойПериод = НачалоГода(ДобавитьМесяц(НачалоПериода, -12));
			СтрокаВзноса.СчетУчета = СчетаУчетаСтраховыхВзносов().ПФР;
			СтрокаВзноса.ВидПлатежаВГосБюджет = Перечисления.ВидыПлатежейВГосБюджет.ВзносыСвышеПредела;
			СтрокаВзноса.ДатаВходящегоДокумента = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаДокументаОплаты = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаПринятияЕНП = КонецДня(КонецПериода);
			СтрокаВзноса.Сумма = ВзносыПодлежащиеУплате.СДоходаПрошлыйГод;
			СтрокаВзноса.ВзносыПодлежащиеУплате = Истина;
			СтрокаВзноса.ВидВзносаПодлежащегоУплате =
				Перечисления.ВидыФиксированныхВзносовПодлежащихУплате.СДоходаЗаПредыдущийГод;
			СтрокаВзноса.ПринятиеКНалоговомуУчету = Истина;
			СтрокаВзноса.СтатьяЗатрат =
				Справочники.ПрочиеДоходыИРасходы.ПредопределенныйЭлемент("РасходыПоУплатеСтраховыхВзносовИП");
		КонецЕсли;

		Если ВзносыПодлежащиеУплате.СДоходаТекущийГод > 0 Тогда
			СтрокаВзноса = ТаблицаРасходов.Добавить();
			СтрокаВзноса.СтраховойПериод = НачалоГода(НачалоПериода);
			СтрокаВзноса.СчетУчета = СчетаУчетаСтраховыхВзносов().ПФР;
			СтрокаВзноса.ВидПлатежаВГосБюджет = Перечисления.ВидыПлатежейВГосБюджет.ВзносыСвышеПредела;
			СтрокаВзноса.ДатаВходящегоДокумента = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаДокументаОплаты = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаПринятияЕНП = КонецДня(КонецПериода);
			СтрокаВзноса.Сумма = ВзносыПодлежащиеУплате.СДоходаТекущийГод;
			СтрокаВзноса.ВзносыПодлежащиеУплате = Истина;
			СтрокаВзноса.ВидВзносаПодлежащегоУплате =
				Перечисления.ВидыФиксированныхВзносовПодлежащихУплате.СДоходаЗаТекущийГод;
			СтрокаВзноса.ПринятиеКНалоговомуУчету = Истина;
			СтрокаВзноса.СтатьяЗатрат =
				Справочники.ПрочиеДоходыИРасходы.ПредопределенныйЭлемент("РасходыПоУплатеСтраховыхВзносовИП");
		КонецЕсли;

		Если ВзносыПодлежащиеУплате.СторноСДохода < 0 Тогда
			СтрокаВзноса = ТаблицаРасходов.Добавить();
			СтрокаВзноса.СчетУчета = СчетаУчетаСтраховыхВзносов().ПФР;
			СтрокаВзноса.ВидПлатежаВГосБюджет = Перечисления.ВидыПлатежейВГосБюджет.ВзносыСвышеПредела;
			СтрокаВзноса.ДатаВходящегоДокумента = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаДокументаОплаты = КонецДня(КонецПериода);
			СтрокаВзноса.ДатаПринятияЕНП = КонецДня(КонецПериода);
			СтрокаВзноса.СтраховойПериод = НачалоГода(НачалоПериода);
			СтрокаВзноса.Сумма = ВзносыПодлежащиеУплате.СторноСДохода;
			СтрокаВзноса.ВзносыПодлежащиеУплате = Истина;
			СтрокаВзноса.ВидВзносаПодлежащегоУплате =
				Перечисления.ВидыФиксированныхВзносовПодлежащихУплате.СДоходаЗаТекущийГод;
			СтрокаВзноса.ПринятиеКНалоговомуУчету = Истина;
			СтрокаВзноса.СтатьяЗатрат =
				Справочники.ПрочиеДоходыИРасходы.ПредопределенныйЭлемент("РасходыПоУплатеСтраховыхВзносовИП");
		КонецЕсли;
		
		// Если взнос с дохода за текущий год сторнируется полностью, то его нет в ТаблицаСтраховыхВзносов,
		// его необходимо добавить, для формирования записи в КУДиР
		ПараметрыОтбора.ВидПлатежаВГосБюджет = Перечисления.ВидыПлатежейВГосБюджет.ВзносыСвышеПредела;
		ПараметрыОтбора.СтраховойПериод = НачалоГода(НачалоПериода);
		ПараметрыОтбора.СчетУчета = СчетаУчетаСтраховыхВзносов().ПФР;
		НетЗаписиСторноВТаблице = ТаблицаРасходов.НайтиСтроки(ПараметрыОтбора).Количество() = 0;
		Если ВзносыПодлежащиеУплате.СторноСДохода < 0 И НетЗаписиСторноВТаблице Тогда
			НайденныеПлатежи = СтраховыеВзносыУплаченные.НайтиСтроки(ПараметрыОтбора);
			Если НайденныеПлатежи.Количество() <> 0 Тогда
