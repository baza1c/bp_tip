				Оборот.СуммаСНДСОборот = Оборот.СуммаОборот + Оборот.НДСОборот;
				ЗаполнитьЗначенияСвойств(ТаблицаОборотов.Найти(Оборот.НомерСтроки, "НомерСтроки"), Оборот);
				
			КонецЦикла;
			
