	// Подготовка таблицы Параметры.СписокОплат
	
	СписокОбязательныхКолонок = ""
		+ "СчетДт,"			// <ПланСчетовСсылка.Хозрасчетный> - счет взаиморасчетов
		+ "СубконтоДт1,"	// <Характеристика.ВидыСубконтоХозрасчетные>
