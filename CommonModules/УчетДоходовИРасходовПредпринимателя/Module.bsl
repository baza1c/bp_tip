	Результат.Колонки.Добавить("Контрагент", Новый ОписаниеТипов("СправочникСсылка.Контрагенты"));
	Результат.Колонки.Добавить("Сумма", ОбщегоНазначения.ОписаниеТипаЧисло(15, 2));
	
	ВидыСубконтоНДСпоАвансам = Новый Массив;
	ВидыСубконтоНДСпоАвансам.Добавить(ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.Контрагенты);
	ВидыСубконтоНДСпоАвансам.Добавить(ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.СФВыданные);
	
	ОстаткиПоПлатежнымКартам = ОстаткиПоПлатежнымКартам(Организация, НачалоПериода, КонецПериода, АвансыНаличнымиВРознице);
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("НачалоПериода", НачалоПериода);
	Запрос.УстановитьПараметр("КонецПериода", Новый Граница(КонецПериода, ВидГраницы.Включая));
	Запрос.УстановитьПараметр("КонецКвартала", КонецПериода);
	Запрос.УстановитьПараметр("Организация", Организация);
	Запрос.УстановитьПараметр("ВидыСубконтоНДСпоАвансам", ВидыСубконтоНДСпоАвансам);
	Запрос.УстановитьПараметр("СчетНДСпоАвансам", ПланыСчетов.Хозрасчетный.НДСпоАвансамИПредоплатам);
	Запрос.УстановитьПараметр("ОплатыПоПлатежнымКартам", ОстаткиПоПлатежнымКартам);
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ОплатыПоПлатежнымКартам.ОплатаПлатежнойКартой КАК ОплатаПлатежнойКартой,
	|	ОплатыПоПлатежнымКартам.ДокументОплаты КАК ДокументОплаты,
	|	ОплатыПоПлатежнымКартам.Контрагент КАК Контрагент,
	|	ОплатыПоПлатежнымКартам.СуммаПоступления КАК СуммаПоступления,
	|	ОплатыПоПлатежнымКартам.ДатаПоступления КАК ДатаПоступления,
	|	ОплатыПоПлатежнымКартам.Сумма КАК СуммаОстаток
	|ПОМЕСТИТЬ ВТ_ПоступленияНаРасчетныйСчет
	|ИЗ
	|	&ОплатыПоПлатежнымКартам КАК ОплатыПоПлатежнымКартам
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ДокументОплаты
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ_ПоступленияНаРасчетныйСчет.ДокументОплаты КАК ДокументОплаты,
	|	-СУММА(ИППрочиеДоходы.Сумма) КАК СуммаЗачета
	|ПОМЕСТИТЬ ВТ_ЗачетАвансов
	|ИЗ
	|	ВТ_ПоступленияНаРасчетныйСчет КАК ВТ_ПоступленияНаРасчетныйСчет
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрНакопления.ИППрочиеДоходы КАК ИППрочиеДоходы
	|		ПО (ИППрочиеДоходы.Организация = &Организация)
	|			И ВТ_ПоступленияНаРасчетныйСчет.ДокументОплаты = ИППрочиеДоходы.ДокументОплаты
	|			И (НЕ ИППрочиеДоходы.Регистратор ССЫЛКА Документ.РегламентнаяОперация)
	|			И (ИППрочиеДоходы.Период МЕЖДУ &НачалоПериода И &КонецКвартала)
	|			И (ИППрочиеДоходы.Сумма < 0)
	|
	|СГРУППИРОВАТЬ ПО
	|	ВТ_ПоступленияНаРасчетныйСчет.ДокументОплаты
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ_ПоступленияНаРасчетныйСчет.ОплатаПлатежнойКартой КАК ОплатаПлатежнойКартой,
	|	ВТ_ПоступленияНаРасчетныйСчет.ДокументОплаты КАК ДокументОплаты,
	|	ВТ_ПоступленияНаРасчетныйСчет.Контрагент КАК Контрагент,
	|	ВТ_ПоступленияНаРасчетныйСчет.СуммаПоступления - ЕСТЬNULL(ВТ_ЗачетАвансов.СуммаЗачета, 0) КАК СуммаПоступления,
	|	ВТ_ПоступленияНаРасчетныйСчет.ДатаПоступления КАК ДатаПоступления,
	|	ВТ_ПоступленияНаРасчетныйСчет.СуммаОстаток КАК СуммаОстаток
	|ПОМЕСТИТЬ ВТ_Поступления
	|ИЗ
	|	ВТ_ПоступленияНаРасчетныйСчет КАК ВТ_ПоступленияНаРасчетныйСчет
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_ЗачетАвансов КАК ВТ_ЗачетАвансов
	|		ПО ВТ_ПоступленияНаРасчетныйСчет.ДокументОплаты = ВТ_ЗачетАвансов.ДокументОплаты
	|ГДЕ
	|	ВТ_ПоступленияНаРасчетныйСчет.СуммаПоступления - ЕСТЬNULL(ВТ_ЗачетАвансов.СуммаЗачета, 0) > 0
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ОплатаПлатежнойКартой,
	|	Контрагент
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|УНИЧТОЖИТЬ ВТ_ПоступленияНаРасчетныйСчет
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|УНИЧТОЖИТЬ ВТ_ЗачетАвансов
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ХозрасчетныйОстатки.Субконто1 КАК Контрагент,
	|	ХозрасчетныйОстатки.Субконто2 КАК ДокументОплаты,
	|	ВЫРАЗИТЬ(ХозрасчетныйОстатки.Субконто2 КАК Документ.ОплатаПлатежнойКартой).СуммаДокумента КАК СуммаДокумента,
	|	ХозрасчетныйОстатки.СуммаОстатокДт КАК НДС
	|ПОМЕСТИТЬ ВТ_НДС
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.Остатки(
	|			&КонецПериода,
	|			Счет = &СчетНДСпоАвансам,
	|			&ВидыСубконтоНДСпоАвансам,
	|			Организация = &Организация
	|				И Субконто2 В
	|					(ВЫБРАТЬ РАЗЛИЧНЫЕ
	|						ВТ.ОплатаПлатежнойКартой
	|					ИЗ
	|						ВТ_Поступления КАК ВТ
	|					ГДЕ
	|						ВТ.ОплатаПлатежнойКартой ССЫЛКА Документ.ОплатаПлатежнойКартой
	|						И НЕ ВЫРАЗИТЬ(ВТ.ОплатаПлатежнойКартой КАК Документ.ОплатаПлатежнойКартой).ДеятельностьНаПатенте)) КАК ХозрасчетныйОстатки
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	ХозрасчетныйОстаткиИОбороты.Субконто1,
	|	ХозрасчетныйОстаткиИОбороты.Субконто2,
	|	ВЫРАЗИТЬ(ХозрасчетныйОстаткиИОбороты.Регистратор КАК Документ.СчетФактураВыданный).СуммаДокумента,
	|	ХозрасчетныйОстаткиИОбороты.СуммаКонечныйОстаток
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.ОстаткиИОбороты(
	|			&НачалоПериода,
	|			&КонецПериода,
	|			Регистратор,
	|			Движения,
	|			Счет = &СчетНДСпоАвансам,
	|			&ВидыСубконтоНДСпоАвансам,
	|			Организация = &Организация
	|				И Субконто2 В
	|					(ВЫБРАТЬ РАЗЛИЧНЫЕ
	|						ВТ.ОплатаПлатежнойКартой
	|					ИЗ
	|						ВТ_Поступления КАК ВТ
	|					ГДЕ
	|						ВТ.ОплатаПлатежнойКартой ССЫЛКА Документ.ОтчетОРозничныхПродажах
	|						И НЕ ВЫРАЗИТЬ(ВТ.ОплатаПлатежнойКартой КАК Документ.ОтчетОРозничныхПродажах).ДеятельностьНаПатенте)) КАК ХозрасчетныйОстаткиИОбороты
	|ГДЕ
	|	ХозрасчетныйОстаткиИОбороты.Регистратор ССЫЛКА Документ.СчетФактураВыданный
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ_Поступления.ОплатаПлатежнойКартой КАК ОплатаПлатежнойКартой,
	|	ВТ_Поступления.ДокументОплаты КАК ДокументОплаты,
	|	ВТ_Поступления.Контрагент КАК Контрагент,
	|	ВТ_Поступления.СуммаПоступления КАК СуммаПоступления,
	|	ВТ_Поступления.ДатаПоступления КАК ДатаПоступления,
	|	ВТ_Поступления.СуммаОстаток КАК СуммаОстатокСНДС,
	|	ВЫБОР
	|		КОГДА ЕСТЬNULL(ВТ_НДС.СуммаДокумента, 0) = 0
	|			ТОГДА 0
	|		ИНАЧЕ ВТ_Поступления.СуммаОстаток / ВТ_НДС.СуммаДокумента * ЕСТЬNULL(ВТ_НДС.НДС, 0)
	|	КОНЕЦ КАК НДС
	|ИЗ
	|	ВТ_Поступления КАК ВТ_Поступления
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_НДС КАК ВТ_НДС
	|		ПО ВТ_Поступления.ОплатаПлатежнойКартой = ВТ_НДС.ДокументОплаты
	|			И ВТ_Поступления.Контрагент = ВТ_НДС.Контрагент
	|ИТОГИ
	|	СУММА(СуммаОстатокСНДС),
	|	СУММА(НДС)
	|ПО
	|	ОплатаПлатежнойКартой";
	
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Возврат Результат;
	КонецЕсли;
	
	ВыборкаДокумент = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	Пока ВыборкаДокумент.Следующий() Цикл
		
		Выборка = ВыборкаДокумент.Выбрать();
		МассивКоэффициентов = Новый Массив;
		НДС = Неопределено;
		
		Если ВыборкаДокумент.НДС <> 0 Тогда
			
			Пока Выборка.Следующий() Цикл
				МассивКоэффициентов.Добавить(Выборка.НДС);
			КонецЦикла;
			
			НДС = ОбщегоНазначенияБПКлиентСервер.РаспределитьПропорционально(Окр(ВыборкаДокумент.НДС, 2), МассивКоэффициентов, 2);
			Выборка.Сбросить();
			
		КонецЕсли;
		
		Индекс = 0;
		Пока Выборка.Следующий() Цикл
			
			НоваяСтрока = Результат.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Выборка);
			НоваяСтрока.Сумма = Мин(Выборка.СуммаОстатокСНДС, Выборка.СуммаПоступления);
			
			Если ЗначениеЗаполнено(НДС) Тогда
				НоваяСтрока.Сумма = НоваяСтрока.Сумма - НДС[Индекс];
			КонецЕсли;
			
			Индекс = Индекс + 1;
			
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат Результат;
	
