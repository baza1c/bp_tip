		+ "ФизЛицо,"           // <СправочникСсылка.ФизическиеЛица> - физ.лицо 
		+ "РасчетныйДокумент," // <ДокументСсылка.*> - расчетный документ
		+ "Сумма";             // <Число,15,2> - сумма удержанного при выплате НДФЛ
		
	Параметры.Вставить("УдержанныйНДФЛ", ОбщегоНазначенияБПВызовСервера.ПолучитьТаблицуПараметровПроведения(
		ТаблицаУдержанныйНДФЛ, СписокОбязательныхКолонок));
	
	// Подготовка таблицы Параметры.Реквизиты
	
	СписокОбязательныхКолонок = ""
		+ "Период,"      // <Дата> - период движений - дата документа
		+ "Регистратор," // <ДокументСсылка.*> - документ-регистратор движений
		+ "Организация"; // <СправочникСсылка.Организации> - организация
		
	Параметры.Вставить("Реквизиты", ОбщегоНазначенияБПВызовСервера.ПолучитьТаблицуПараметровПроведения(
		ТаблицаРеквизитов, СписокОбязательныхКолонок));
		
	Возврат Параметры;
	
