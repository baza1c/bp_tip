		Запрос.УстановитьПараметр("ДатаНач",                        ТаблицаОстатковРасчетов[0].ДатаРасчетногоДокумента);
		Запрос.УстановитьПараметр("СписокРасчетныхДокументов",      СписокРасчетныхДокументов);
