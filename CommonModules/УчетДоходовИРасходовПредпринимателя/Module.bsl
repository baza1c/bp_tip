// Если материал списывается на себестоимость продукции, а в регистре "ИП Иные материальные расходы" отражены затраты,
// связанные с приобретением этого материала (ссылка на материал в измерении МПЗ), тогда процедура "перекидывает"
// затраты с партии материала на партию продукции.
// 
// Параметры:
//  ТаблицаМатериалов - ТаблицаЗначений:
//    * НоменклатураПоступившая - СправочникСсылка - продукция
//    * НоменклатураСписанная - СправочникСсылка - материал
//    * ПартияСписаннойНоменклатуры - ДокументСсылка - партия материала
//    * Сумма - Число - сумма списанная
//  ТаблицаОстатков - ТаблицаЗначений:
//    * Номенклатура - СправочникСсылка - материал
//    * Партия - ДокументСсылка - партия материала
//    * Сумма - Число - сумма остатка
//  ТаблицаРеквизитов - ТаблицаЗначений:
//    * Период - Дата
//    * Регистратор - ДокументСсылка
//    * Организация - СправочникСсылка.Организации
//  Отказ - Булево
//
//@skip-check module-structure-method-in-regions
Функция ПодготовитьТаблицуИзмененияПартииМПЗИМР(ТаблицаМатериалов, ТаблицаОстатков, ТаблицаРеквизитов, Отказ)
	
	Если Не ЗначениеЗаполнено(ТаблицаМатериалов) Или Не ЗначениеЗаполнено(ТаблицаРеквизитов) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Реквизиты = ТаблицаРеквизитов[0];
	Если Не УчетнаяПолитика.ПлательщикНДФЛ(Реквизиты.Организация, Реквизиты.Период) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Параметры = ПодготовитьПараметрыТаблицыИзмененияПартииМПЗИМР(
		ТаблицаМатериалов, ТаблицаОстатков, ТаблицаРеквизитов);
	
	Параметры.Материалы.Колонки.НоменклатураСписанная.Имя = "МПЗ";
	Параметры.Материалы.Колонки.ПартияСписаннойНоменклатуры.Имя = "ПартияМПЗ";
	
	КлючиОтбораОстатков = "Номенклатура, Партия";
	Параметры.Остатки.Свернуть(КлючиОтбораОстатков, "Сумма");
	Параметры.Остатки.Индексы.Добавить(КлючиОтбораОстатков);
	Параметры.Остатки.Сортировать("Номенклатура, Партия", Новый СравнениеЗначений);
	
	ТаблицаОстатковИМР = РегистрыНакопления.ИПИныеМатериальныеРасходы.
		НайтиЗаблокироватьОстаткиПартийМПЗ(Параметры.Реквизиты, Параметры.Материалы, Отказ);
	Если Не ЗначениеЗаполнено(ТаблицаОстатковИМР) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	КлючиОтбораОстатковИМР = "МПЗ, ПартияМПЗ";
	ТаблицаОстатковИМР.Индексы.Добавить(КлючиОтбораОстатковИМР);
	
	ТаблицаИзмененияПартииМПЗ = РегистрыНакопления.ИПИныеМатериальныеРасходы.НоваяТаблицаИзмененияПартииМПЗ();
	
	Для Каждого СписаниеМатериала Из Параметры.Материалы Цикл
		
		Если СписаниеМатериала.Сумма <= 0 Или Не ЗначениеЗаполнено(СписаниеМатериала.ПартияМПЗ) Тогда
			Продолжить;
		КонецЕсли;
		
		ОтборОстатков = Новый Структура(КлючиОтбораОстатков);
		ОтборОстатков.Номенклатура = СписаниеМатериала.МПЗ;
		ОтборОстатков.Партия = СписаниеМатериала.ПартияМПЗ;
		НайденныеОстатки = Параметры.Остатки.НайтиСтроки(ОтборОстатков);
		Если Не ЗначениеЗаполнено(НайденныеОстатки) Тогда
			Продолжить;
		КонецЕсли;
		ОстатокМатериала = НайденныеОстатки[0];
		Если ОстатокМатериала.Сумма <= 0 Тогда
			Продолжить;
		КонецЕсли;
		Если СписаниеМатериала.Сумма < ОстатокМатериала.Сумма Тогда
			Коэффициент = СписаниеМатериала.Сумма / ОстатокМатериала.Сумма;
			ОстатокМатериала.Сумма = ОстатокМатериала.Сумма - СписаниеМатериала.Сумма;
		Иначе
			Коэффициент = 1;
			ОстатокМатериала.Сумма = 0;
		КонецЕсли;
		
		ОтборОстатковИМР = Новый Структура(КлючиОтбораОстатковИМР);
		ОтборОстатковИМР.МПЗ = СписаниеМатериала.МПЗ;
		ОтборОстатковИМР.ПартияМПЗ = СписаниеМатериала.ПартияМПЗ;
		НайденныеОстаткиИМР = ТаблицаОстатковИМР.Скопировать(ОтборОстатковИМР);
		НайденныеОстаткиИМР.Сортировать(
			"ДатаПартии, Партия, ДатаДокументаОплаты, ДокументОплаты, СтатьяЗатрат, НоменклатурнаяГруппа, ХарактерДеятельности",
			Новый СравнениеЗначений);
		
		Для Каждого ИМР Из НайденныеОстаткиИМР Цикл
			
			Если ИМР.Сумма <= 0 Тогда
				Продолжить;
			КонецЕсли;
			
			Если Коэффициент = 1 Тогда
				Количество = ИМР.Количество;
				Сумма = ИМР.Сумма;
				НДС = ИМР.НДС;
			Иначе
				Количество = Окр(ИМР.Количество * Коэффициент, 3, 1);
				СуммаСНДС = Окр((ИМР.Сумма + ИМР.НДС) * Коэффициент, 2, 1);
				Сумма = Окр(ИМР.Сумма * Коэффициент, 2, 1);
				НДС = СуммаСНДС - Сумма;
			КонецЕсли;
			
			НовоеДвижение = ТаблицаИзмененияПартииМПЗ.Добавить();
			ЗаполнитьЗначенияСвойств(НовоеДвижение, ИМР, , "Количество, Сумма, НДС");
			НовоеДвижение.МПЗПолучателя = СписаниеМатериала.МПЗ;
			НовоеДвижение.ПартияМПЗПолучателя = Реквизиты.Регистратор;
			НовоеДвижение.Количество = Количество;
			НовоеДвижение.Сумма = Сумма;
			НовоеДвижение.НДС = НДС;
			
			ИМР.Количество = ИМР.Количество - Количество;
			ИМР.Сумма = ИМР.Сумма - Сумма;
			ИМР.НДС = ИМР.НДС - НДС;
			
			Если ИМР.НомерСтроки > 0 Тогда
				ЗаполнитьЗначенияСвойств(
					ТаблицаОстатковИМР[ИМР.НомерСтроки - 1],
					ИМР,
					"Количество, Сумма, НДС");
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат ТаблицаИзмененияПартииМПЗ;
	
КонецФункции

