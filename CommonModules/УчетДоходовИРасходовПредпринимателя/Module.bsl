		Если НайденныеОбороты.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		Оборот = НайденныеОбороты[0];
		
		СуммаОплаты = Мин(Оплата.Сумма + Оплата.НДС, Оборот.Сумма + Оборот.НДС);
		
		Если СуммаОплаты = Оборот.Сумма + Оборот.НДС Тогда
