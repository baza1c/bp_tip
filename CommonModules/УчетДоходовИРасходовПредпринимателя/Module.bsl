		//@skip-check lock-out-of-try
		Блокировка.Заблокировать();
		
		НалоговыйПериод = НалоговыйПериод(Реквизиты.Организация, Реквизиты.Период);
		
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("Организация", Реквизиты.Организация);
