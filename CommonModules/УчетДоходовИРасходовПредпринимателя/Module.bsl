	ЭлементБлокировки.УстановитьЗначение("Период", Новый Диапазон(, Реквизиты.Период));
	ЭлементБлокировки.ИсточникДанных =
		ПодготовитьИсточникДанныхБлокировки(СтруктураПараметров, ТаблицаНачисленийУдержаний, ОписаниеИсточника);
	Для Каждого КолонкаИсточника Из ОписаниеИсточника Цикл
		ЭлементБлокировки.ИспользоватьИзИсточникаДанных(КолонкаИсточника.Ключ, КолонкаИсточника.Значение);
	КонецЦикла;
	Блокировка.Заблокировать();
	
	МассивКонтрагентов = ОбщегоНазначения.ВыгрузитьКолонку(ТаблицаНачисленийУдержаний, "Контрагент", Истина);
	МассивКонтрагентов.Добавить(Неопределено);
	
	МассивСчетовУчета = ОбщегоНазначения.ВыгрузитьКолонку(ТаблицаНачисленийУдержаний, "СчетУчета", Истина);
	МассивСчетовУчета.Добавить(ПланыСчетов.Хозрасчетный.ПустаяСсылка());   
	
	ОписаниеТипаРасчетныйДокумент = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Колонки.РасчетныйДокумент.ТипЗначения;
	ОписаниеТипаДокументОплаты = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Колонки.ДокументОплаты.ТипЗначения;
	
	// Аванс может быть только у Начисления зарплаты, для остальных документов отсекаем оплаты,
	// проведенные ранее дня начисления
	Если ТипыДокументовНачисленияЗарплаты().Найти(ТипЗнч(Реквизиты.Регистратор)) <> Неопределено Тогда
		МинДатаДокументаОплаты = Дата(1, 1, 1);
	Иначе
		МинДатаДокументаОплаты = НачалоДня(Реквизиты.Период);
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ДатаОстатков",
		Новый Граница(Новый МоментВремени(Реквизиты.Период, Реквизиты.Регистратор), ВидГраницы.Исключая));
	Запрос.УстановитьПараметр("Организация", Реквизиты.Организация);
	Запрос.УстановитьПараметр("Контрагенты", МассивКонтрагентов);
	Запрос.УстановитьПараметр("СчетаУчета", МассивСчетовУчета);
	Запрос.УстановитьПараметр("ТипыДокументовОплаты", ОписаниеТипаДокументОплаты.Типы());
	Запрос.УстановитьПараметр("МинДатаДокументаОплаты", МинДатаДокументаОплаты);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ПрочиеРасчетыОстатки.СчетУчета КАК СчетУчета,
	|	ПрочиеРасчетыОстатки.Контрагент КАК Контрагент,
	|	ПрочиеРасчетыОстатки.РасчетныйДокумент КАК РасчетныйДокумент,
	|	ПрочиеРасчетыОстатки.СуммаОстаток КАК СуммаОстаток
	|ПОМЕСТИТЬ ВТ_ПрочиеРасчетыОстатки
	|ИЗ
	|	РегистрНакопления.ПрочиеРасчеты.Остатки(
	|			&ДатаОстатков,
	|			Контрагент В (&Контрагенты)
	|				И СчетУчета В (&СчетаУчета)
	|				И Организация = &Организация
	|				И ТИПЗНАЧЕНИЯ(РасчетныйДокумент) В (&ТипыДокументовОплаты)) КАК ПрочиеРасчетыОстатки
	|ГДЕ
	|	ПрочиеРасчетыОстатки.СуммаОстаток < 0
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	РасчетныйДокумент
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ПрочиеРасчетыОстатки.СчетУчета КАК СчетУчета,
	|	ПрочиеРасчетыОстатки.Контрагент КАК Контрагент,
	|	ПрочиеРасчетыОстатки.РасчетныйДокумент КАК РасчетныйДокумент,
	|	ЕСТЬNULL(РеквизитыРасчетныхДокументов.ДатаРегистратора, ДАТАВРЕМЯ(1, 1, 1)) КАК ДатаРасчетногоДокумента,
	|	-ПрочиеРасчетыОстатки.СуммаОстаток КАК Сумма
	|ИЗ
	|	ВТ_ПрочиеРасчетыОстатки КАК ПрочиеРасчетыОстатки
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ДанныеПервичныхДокументов КАК РеквизитыРасчетныхДокументов
	|		ПО (РеквизитыРасчетныхДокументов.Организация = &Организация)
	|			И ПрочиеРасчетыОстатки.РасчетныйДокумент = РеквизитыРасчетныхДокументов.Документ
	|ГДЕ
	|	ЕСТЬNULL(РеквизитыРасчетныхДокументов.ДатаРегистратора, ДАТАВРЕМЯ(1, 1, 1)) >= &МинДатаДокументаОплаты";
	
	ВремТаблицаАвансов = Запрос.Выполнить().Выгрузить();
	
	// Авансы необходимо разделить по видам деятельности, иначе при совмещении ОСН и ПСН некорректно признаются расходы.
	// Для этого дополняем таблицу авансов видами деятельности и статьями затрат из таблицы начислений.
	ТаблицаАвансов = ВремТаблицаАвансов.СкопироватьКолонки();
	ТаблицаАвансов.Колонки.Добавить("НоменклатурнаяГруппа", Новый ОписаниеТипов("СправочникСсылка.НоменклатурныеГруппы"));
	ТаблицаАвансов.Колонки.Добавить("ХарактерДеятельности", Новый ОписаниеТипов("ПеречислениеСсылка.ХарактерДеятельности"));
	ТаблицаАвансов.Колонки.Добавить("СтатьяЗатрат",         Новый ОписаниеТипов(МассивТиповЗатрат));
	
	ТаблицаОплатыТруда.Сортировать("НомерСтроки");
	ПараметрыОтбораНачислений = Новый Структура("ФизЛицо");
	
	Для Каждого СтрокаАванса Из ВремТаблицаАвансов Цикл
		
		ПараметрыОтбораНачислений.ФизЛицо = СтрокаАванса.Контрагент;
		
		НайденныеСтроки = ТаблицаОплатыТруда.Скопировать(ПараметрыОтбораНачислений);
		МассивКоэффициентов = НайденныеСтроки.ВыгрузитьКолонку("Сумма");
		
		РаспределеннаяСумма = ОбщегоНазначенияБПКлиентСервер.РаспределитьПропорционально(
			СтрокаАванса.Сумма, МассивКоэффициентов, 2);
		
		Если РаспределеннаяСумма = Неопределено Тогда
			НоваяСтрока = ТаблицаАвансов.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАванса);
			Продолжить;
		КонецЕсли;
			
		Для Индекс = 0 По РаспределеннаяСумма.ВГраница() Цикл
			НоваяСтрока = ТаблицаАвансов.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАванса);
			НоваяСтрока.НоменклатурнаяГруппа = НайденныеСтроки[Индекс].НоменклатурнаяГруппа;
			НоваяСтрока.ХарактерДеятельности = НайденныеСтроки[Индекс].ХарактерДеятельности;
			НоваяСтрока.СтатьяЗатрат         = НайденныеСтроки[Индекс].СтатьяЗатрат;
			НоваяСтрока.Сумма                = РаспределеннаяСумма[Индекс];
		КонецЦикла;
		
	КонецЦикла;
	
	ВремТаблицаАвансов = Неопределено;
	
	ОбщегоНазначенияБПВызовСервера.ПронумероватьТаблицу(ТаблицаАвансов);
	ТаблицаАвансов.Индексы.Добавить("НомерСтроки");
	ТаблицаАвансов.Индексы.Добавить("СчетУчета, Контрагент");
	
	ПараметрыОтбораАвансов = Новый Структура("СчетУчета, Контрагент, НоменклатурнаяГруппа, ХарактерДеятельности, СтатьяЗатрат");
	
	ТаблицаУдержанийСУчетомОплат = ТаблицаУдержаний.СкопироватьКолонки();
	ТаблицаУдержанийСУчетомОплат.Колонки.Добавить("РасчетныйДокумент", ОписаниеТипаРасчетныйДокумент);
	ТаблицаУдержанийСУчетомОплат.Колонки.Добавить("ДатаРасчетногоДокумента", ОбщегоНазначения.ОписаниеТипаДата(ЧастиДаты.ДатаВремя));
	ТаблицаУдержанийСУчетомОплат.Колонки.Добавить("ДокументОплаты", ОписаниеТипаДокументОплаты);  
	ТаблицаУдержанийСУчетомОплат.Колонки.Добавить("ДатаДокументаОплаты", ОбщегоНазначения.ОписаниеТипаДата(ЧастиДаты.ДатаВремя));
	
	ПриниматьУдержаниеНДФЛкРасходам = ПриниматьУдержаниеНДФЛкРасходам(Реквизиты.Период);
	
	// Дополняем удержания сведениями об оплатах
	Для Каждого СтрокаУдержаний Из ТаблицаУдержаний Цикл
		
		// Зачет аванса
		ПараметрыОтбораАвансов.СчетУчета  = СтрокаУдержаний.СчетУчета;
		Если СтрокаУдержаний.СчетУчета = ПланыСчетов.Хозрасчетный.НДФЛ
			И ПриниматьУдержаниеНДФЛкРасходам Тогда
			ПараметрыОтбораАвансов.Контрагент = СтрокаУдержаний.ФизЛицо;
		Иначе
			ПараметрыОтбораАвансов.Контрагент = ?(ЗначениеЗаполнено(СтрокаУдержаний.Контрагент), СтрокаУдержаний.Контрагент, Неопределено);
		КонецЕсли; 
		ЗаполнитьЗначенияСвойств(ПараметрыОтбораАвансов, СтрокаУдержаний, "НоменклатурнаяГруппа, ХарактерДеятельности, СтатьяЗатрат");
		
		НайденныеСтроки = ТаблицаАвансов.Скопировать(ПараметрыОтбораАвансов);
		НайденныеСтроки.Сортировать("ДатаРасчетногоДокумента, РасчетныйДокумент", Новый СравнениеЗначений);
		
		Для Каждого СтрокаОплаты Из НайденныеСтроки Цикл
			
			ОплаченнаяЧасть = Мин(СтрокаОплаты.Сумма, СтрокаУдержаний.Сумма);
			
			Если ОплаченнаяЧасть > 0 Тогда
				
				НоваяСтрока = ТаблицаУдержанийСУчетомОплат.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаУдержаний); 
				НоваяСтрока.РасчетныйДокумент = СтрокаОплаты.РасчетныйДокумент; 
				НоваяСтрока.ДатаРасчетногоДокумента = СтрокаОплаты.ДатаРасчетногоДокумента;
				НоваяСтрока.ДокументОплаты = СтрокаОплаты.РасчетныйДокумент;
				НоваяСтрока.ДатаДокументаОплаты = СтрокаОплаты.ДатаРасчетногоДокумента;
				НоваяСтрока.Сумма = ОплаченнаяЧасть;
				
				СтрокаУдержаний.Сумма = СтрокаУдержаний.Сумма - ОплаченнаяЧасть;
				СтрокаОплаты.Сумма = СтрокаОплаты.Сумма - ОплаченнаяЧасть;
				ЗаполнитьЗначенияСвойств(ТаблицаАвансов.Найти(СтрокаОплаты.НомерСтроки, "НомерСтроки"), СтрокаОплаты);
				
			КонецЕсли;
			
		КонецЦикла;
		
		// Неоплаченная часть
		Если СтрокаУдержаний.Сумма > 0 Тогда
			НоваяСтрока = ТаблицаУдержанийСУчетомОплат.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаУдержаний);
			НоваяСтрока.РасчетныйДокумент = Реквизиты.Регистратор;
			НоваяСтрока.ДатаРасчетногоДокумента = Реквизиты.Период;
			НоваяСтрока.ДокументОплаты = Неопределено;
			НоваяСтрока.ДатаДокументаОплаты = Дата(1, 1, 1);
		КонецЕсли;
		
	КонецЦикла;
	
	ТаблицаУдержаний = Неопределено;
	
	ОбщегоНазначенияБПВызовСервера.ПронумероватьТаблицу(ТаблицаУдержанийСУчетомОплат);
	ТаблицаУдержанийСУчетомОплат.Индексы.Добавить("НомерСтроки");
	ТаблицаУдержанийСУчетомОплат.Индексы.Добавить("ФизЛицо, РасчетныйДокумент");
	
	ПараметрыОтбораУдержаний = Новый Структура("ФизЛицо, РасчетныйДокумент");
	
	// Оплата труда
	Если Не Реквизиты.Удержания Тогда
		
		Для каждого СтрокаОплатыТруда Из ТаблицаОплатыТруда Цикл
			
			ФизЛицо = СтрокаОплатыТруда.ФизЛицо;
			
			// Зачет аванса
			ПараметрыОтбораАвансов.СчетУчета  = ПланыСчетов.Хозрасчетный.ПустаяСсылка();
			ПараметрыОтбораАвансов.Контрагент = ФизЛицо;
			ЗаполнитьЗначенияСвойств(ПараметрыОтбораАвансов, СтрокаОплатыТруда, "НоменклатурнаяГруппа, ХарактерДеятельности, СтатьяЗатрат");
			НайденныеСтрокиАвансов = ТаблицаАвансов.Скопировать(ПараметрыОтбораАвансов);
			НайденныеСтрокиАвансов.Сортировать("ДатаРасчетногоДокумента, РасчетныйДокумент", Новый СравнениеЗначений);
			
			Для Каждого СтрокаАванса Из НайденныеСтрокиАвансов Цикл
				
				РасчетныйДокумент = СтрокаАванса.РасчетныйДокумент;
				СуммаАванса = Мин(СтрокаАванса.Сумма, СтрокаОплатыТруда.Сумма);
				
				Если СуммаАванса > 0 Тогда
					
					НоваяСтрока = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаОплатыТруда);
					НоваяСтрока.РасчетныйДокумент = РасчетныйДокумент;
					НоваяСтрока.ДокументОплаты    = РасчетныйДокумент;
					НоваяСтрока.Сумма             = СуммаАванса;
					
					СтрокаОплатыТруда.Сумма = СтрокаОплатыТруда.Сумма - СуммаАванса;
					СтрокаАванса.Сумма      = СтрокаАванса.Сумма - СуммаАванса;
					ЗаполнитьЗначенияСвойств(ТаблицаАвансов.Найти(СтрокаАванса.НомерСтроки, "НомерСтроки"), СтрокаАванса);
					
					// Зачет оплаченного НДФЛ
					
					ПараметрыОтбораУдержаний.ФизЛицо = ФизЛицо;
					ПараметрыОтбораУдержаний.РасчетныйДокумент = РасчетныйДокумент;
					
					НайденныеСтрокиУдержаний = ТаблицаУдержанийСУчетомОплат.Скопировать(ПараметрыОтбораУдержаний);
					НайденныеСтрокиУдержаний.Сортировать("ДатаДокументаОплаты, ДокументОплаты", Новый СравнениеЗначений);
					
					Для Каждого СтрокаУдержания Из НайденныеСтрокиУдержаний Цикл
						
						СуммаОплатыУдержания = Мин(СтрокаУдержания.Сумма, СуммаАванса);
						
						Если СуммаОплатыУдержания > 0 Тогда 
							
							НоваяСтрока = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Добавить();
							ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаУдержания);
							НоваяСтрока.РасчетныйДокумент = РасчетныйДокумент;
							НоваяСтрока.Сумма = СуммаОплатыУдержания;
							
							СтрокаУдержания.Сумма = СтрокаУдержания.Сумма - СуммаОплатыУдержания;
							ЗаполнитьЗначенияСвойств(ТаблицаУдержанийСУчетомОплат.Найти(СтрокаУдержания.НомерСтроки, "НомерСтроки"), СтрокаУдержания);
							
						КонецЕсли;
						
					КонецЦикла;
					
				КонецЕсли;
				
			КонецЦикла;
			
			// Неоплаченная часть
			Если СтрокаОплатыТруда.Сумма > 0 Тогда
				
				РасчетныйДокумент = Реквизиты.Регистратор;
				
				НоваяСтрока = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаОплатыТруда);
				НоваяСтрока.РасчетныйДокумент = РасчетныйДокумент;
				
				ПараметрыОтбораУдержаний.ФизЛицо = ФизЛицо;
				ПараметрыОтбораУдержаний.РасчетныйДокумент = РасчетныйДокумент;
				
				НайденныеСтрокиУдержаний = ТаблицаУдержанийСУчетомОплат.Скопировать(ПараметрыОтбораУдержаний);
				НайденныеСтрокиУдержаний.Сортировать("ДатаДокументаОплаты, ДокументОплаты", Новый СравнениеЗначений);
				
				Для Каждого СтрокаУдержания Из НайденныеСтрокиУдержаний Цикл 
					
					СуммаОплатыУдержания = Мин(СтрокаУдержания.Сумма, СтрокаОплатыТруда.Сумма);
					
					Если СуммаОплатыУдержания > 0 Тогда
						
						НоваяСтрока = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Добавить();
						ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаУдержания);
						НоваяСтрока.РасчетныйДокумент = РасчетныйДокумент;
						НоваяСтрока.Сумма = СуммаОплатыУдержания;
						
						СтрокаУдержания.Сумма = СтрокаУдержания.Сумма - СуммаОплатыУдержания;
						ЗаполнитьЗначенияСвойств(ТаблицаУдержанийСУчетомОплат.Найти(СтрокаУдержания.НомерСтроки, "НомерСтроки"), СтрокаУдержания);
						
					КонецЕсли;
					
				КонецЦикла;
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	// Удержания без начисления
	Для Каждого СтрокаУдержаний Из ТаблицаУдержанийСУчетомОплат Цикл
		
		Если СтрокаУдержаний.Сумма > 0 Тогда
			НоваяСтрока = СтруктураРасходовНаОплатуТруда.РасходыНаОплатуТруда.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаУдержаний);
			НоваяСтрока.РасчетныйДокумент = Реквизиты.Регистратор;
		КонецЕсли;
		
	КонецЦикла;
	
	// Страховые взносы
	ПараметрыОтбораАвансовПоВзносам = Новый Структура("СчетУчета, Контрагент");
	Для Каждого СтрокаВзносов Из ТаблицаВзносов Цикл
		
		ПараметрыОтбораАвансовПоВзносам.СчетУчета  = СтрокаВзносов.СчетУчета;
		ПараметрыОтбораАвансовПоВзносам.Контрагент = Неопределено;
		
		НайденныеСтроки = ТаблицаАвансов.Скопировать(ПараметрыОтбораАвансовПоВзносам);
		НайденныеСтроки.Сортировать("ДатаРасчетногоДокумента, РасчетныйДокумент", Новый СравнениеЗначений);
		
		// Зачет аванса
		Для Каждого СтрокаАванса Из НайденныеСтроки Цикл
			
			СуммаАванса = Мин(СтрокаАванса.Сумма, СтрокаВзносов.Сумма);
			
			Если СуммаАванса > 0 Тогда
				
				НоваяСтрока = СтруктураРасходовНаОплатуТруда.ПрочиеРасходы.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаВзносов);
				НоваяСтрока.РасчетныйДокумент = СтрокаАванса.РасчетныйДокумент;
				НоваяСтрока.ДокументОплаты    = СтрокаАванса.РасчетныйДокумент;
				НоваяСтрока.Сумма             = СуммаАванса;
				
				СтрокаВзносов.Сумма = СтрокаВзносов.Сумма - СуммаАванса;
				СтрокаАванса.Сумма  = СтрокаАванса.Сумма - СуммаАванса;
				ЗаполнитьЗначенияСвойств(ТаблицаАвансов.Найти(СтрокаАванса.НомерСтроки, "НомерСтроки"), СтрокаАванса);
				
			КонецЕсли;
			
		КонецЦикла;
		
		// Неоплаченная часть взноса
		Если СтрокаВзносов.Сумма > 0 Тогда
			НоваяСтрока = СтруктураРасходовНаОплатуТруда.ПрочиеРасходы.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаВзносов);
			НоваяСтрока.РасчетныйДокумент = Реквизиты.Регистратор;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат СтруктураРасходовНаОплатуТруда;
	
