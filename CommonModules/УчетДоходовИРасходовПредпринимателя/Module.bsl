	Запрос.УстановитьПараметр("ХарактерыДеятельности", ХарактерыДеятельности);
	Запрос.УстановитьПараметр("СтатьиЗатрат",          СтатьиЗатрат);
	Запрос.УстановитьПараметр("РасчетныеДокументы",    РасчетныеДокументы);
	
	Запрос.Текст =
	"ВЫБРАТЬ
