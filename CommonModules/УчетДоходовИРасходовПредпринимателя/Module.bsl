	// Установка управляемой блокировки
	СтруктураПараметров = Новый Структура("ТипТаблицы, ИмяТаблицы", "РегистрНакопления", "ИПМПЗОтгруженные");
	ОписаниеИсточника = Новый Структура;
	ОписаниеИсточника.Вставить("ВидМПЗ",       "ВидМПЗ");
