	|		ПО ИПМПЗОстаткиКон.Номенклатура = НачислениеАмортизацииОССпециальныйКоэффициент.ОсновноеСредство
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТИПМПЗОстаткиНач КАК ИПМПЗОстаткиНач
	|			ЛЕВОЕ СОЕДИНЕНИЕ ВТИПНДСМПЗОстаткиНач КАК ИПНДСМПЗОстаткиНач
	|			ПО ИПМПЗОстаткиНач.Номенклатура = ИПНДСМПЗОстаткиНач.Номенклатура
	|				И ИПМПЗОстаткиНач.Партия = ИПНДСМПЗОстаткиНач.Партия
	|				И ИПМПЗОстаткиНач.ДокументОплаты = ИПНДСМПЗОстаткиНач.ДокументОплаты
	|		ПО ИПМПЗОстаткиКон.Номенклатура = ИПМПЗОстаткиНач.Номенклатура
	|			И ИПМПЗОстаткиКон.Партия = ИПМПЗОстаткиНач.Партия
	|			И ИПМПЗОстаткиКон.ДокументОплаты = ИПМПЗОстаткиНач.ДокументОплаты
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТИППрочиеРасходыОборотыМесяц КАК ИППрочиеРасходыОборотыМесяц
	|		ПО ИПМПЗОстаткиКон.Номенклатура = ИППрочиеРасходыОборотыМесяц.СтатьяЗатрат
	|			И ИПМПЗОстаткиКон.Партия = ИППрочиеРасходыОборотыМесяц.РасчетныйДокумент
	|			И ИПМПЗОстаткиКон.ДокументОплаты = ИППрочиеРасходыОборотыМесяц.ДокументОплаты
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТИППрочиеРасходыОборотыНачалоМесяца КАК ИППрочиеРасходыОборотыНачалоМесяца
	|		ПО ИПМПЗОстаткиКон.Номенклатура = ИППрочиеРасходыОборотыНачалоМесяца.СтатьяЗатрат
	|			И ИПМПЗОстаткиКон.Партия = ИППрочиеРасходыОборотыНачалоМесяца.РасчетныйДокумент
	|			И ИПМПЗОстаткиКон.ДокументОплаты = ИППрочиеРасходыОборотыНачалоМесяца.ДокументОплаты
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТИППрочиеРасходыОборотыКонецМесяца КАК ИППрочиеРасходыОборотыКонецМесяца
	|		ПО ИПМПЗОстаткиКон.Номенклатура = ИППрочиеРасходыОборотыКонецМесяца.СтатьяЗатрат
	|			И ИПМПЗОстаткиКон.Партия = ИППрочиеРасходыОборотыКонецМесяца.РасчетныйДокумент
	|			И ИПМПЗОстаткиКон.ДокументОплаты = ИППрочиеРасходыОборотыКонецМесяца.ДокументОплаты
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.ОсновныеСредства КАК СправочникОсновныеСредства
	|		ПО ИПМПЗОстаткиКон.Номенклатура = СправочникОсновныеСредства.Ссылка
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТСписаныеОС КАК СписаныеОС
	|		ПО ИПМПЗОстаткиКон.Номенклатура = СписаныеОС.ОсновноеСредство
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ДанныеПервичныхДокументов КАК РеквизитыДокументовОплаты
	|		ПО (РеквизитыДокументовОплаты.Организация = &Организация)
	|			И ИПМПЗОстаткиКон.ДокументОплаты = РеквизитыДокументовОплаты.Документ
	|ГДЕ
	|	ПервоначальныеСведенияОС.ПорядокВключенияСтоимостиВСоставРасходов = ЗНАЧЕНИЕ(Перечисление.ПорядокВключенияСтоимостиОСВСоставРасходовНУ.НачислениеАмортизации)
	|	И НачислениеАмортизацииОС.НачислятьАмортизацию
	|	И СписаныеОС.ОсновноеСредство ЕСТЬ NULL
	|ИТОГИ ПО
	|	ОсновноеСредство";
	
	ВыборкаПоОС = Запрос.Выполнить().Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам, "ОсновноеСредство");
	
	ПроверенныеОС = Новый Массив;
	
	Пока ВыборкаПоОС.Следующий() Цикл
		
		СтрокиДляРаспределенияАмортизации = Новый Массив;
		
		МетодНачисленияАмортизации = Неопределено;
		СрокПолезногоИспользования = 0;
		КоэффициентАмортизации = 1;
		СпециальныйКоэффициент = 1;
		
		СтоимостьНачальныйОстаток = 0;
		СтоимостьКонечныйОстаток = 0;
		АмортизацияОборот = 0;
		АмортизацияКонечныйОстаток = 0;
		
		Выборка = ВыборкаПоОС.Выбрать();
		Пока Выборка.Следующий() Цикл
			
			Если ЗначениеЗаполнено(Выборка.СтоимостьНачальныйОстаток) И ПроверенныеОС.Найти(Выборка.ОсновноеСредство) = Неопределено Тогда
				ПроверенныеОС.Добавить(Выборка.ОсновноеСредство);
				Если Не ПроверитьПараметрыАмортизации(
					Выборка.МетодНачисленияАмортизации,
					Выборка.СрокПолезногоИспользования,
					СтрШаблон("%1 (%2)", Выборка.ОсновноеСредствоПредставление, СокрЛП(Выборка.ОсновноеСредствоКод)),
					Реквизиты.ВыдаватьСообщения) Тогда
					Продолжить;
				КонецЕсли;
			КонецЕсли;
			
			Если ТипЗнч(Выборка.ДокументОплаты) = Тип("ДокументСсылка.МодернизацияОС") Тогда
				
				СтоимостьМодернизацииНаКонецМесяца = Макс(Выборка.СтоимостьКонечныйОстаток - Выборка.АмортизацияКонечныйОстаток, 0);
				
				ДатаМодернизации = Выборка.ДатаДокументаОплаты;
				СрокИспользованияДоМодернизации = УправлениеВнеоборотнымиАктивами.ОпределитьФактическийСрокИспользования(
					Выборка.ДатаПринятияКУчету, ДатаМодернизации);
				
				РасчетнаяСуммаАмортизации = СуммаАмортизации(
					Выборка.СтоимостьНачальныйОстаток,
					Выборка.МетодНачисленияАмортизации,
					Выборка.СрокПолезногоИспользования - СрокИспользованияДоМодернизации,
					Выборка.КоэффициентАмортизации,
					Выборка.СпециальныйКоэффициент);
				
				СуммаАмортизации = Мин(Макс(РасчетнаяСуммаАмортизации -  Выборка.АмортизацияОборот, 0), СтоимостьМодернизацииНаКонецМесяца);
				
				СтрокаАмортизации = ТаблицаАмортизации.Добавить();
				СтрокаАмортизации.ОбъектУчета = Выборка.ОсновноеСредство;
				СтрокаАмортизации.НаправлениеАмортизации = Выборка.НаправлениеАмортизации;
				СтрокаАмортизации.РасчетныйДокумент = Выборка.РасчетныйДокумент;
				СтрокаАмортизации.ДокументОплаты = Выборка.ДокументОплаты;
				СтрокаАмортизации.НоменклатурнаяГруппа = Выборка.НоменклатурнаяГруппа;
				СтрокаАмортизации.ХарактерДеятельности = Выборка.ХарактерДеятельности;
				СтрокаАмортизации.ВидМПЗ = Выборка.ВидМПЗ;
				СтрокаАмортизации.АмортизацияКонечныйОстаток = Выборка.АмортизацияКонечныйОстаток;
				СтрокаАмортизации.НачальнаяСтоимость = Выборка.СтоимостьНачальныйОстаток;
				СтрокаАмортизации.СуммаАмортизацииБУ = СуммаАмортизации;
				СтрокаАмортизации.СуммаАмортизацииНУ = СуммаАмортизации;
				
			Иначе
				МетодНачисленияАмортизации = Выборка.МетодНачисленияАмортизации;
				СрокПолезногоИспользования = Выборка.СрокПолезногоИспользования;
				КоэффициентАмортизации = Выборка.КоэффициентАмортизации;
				СпециальныйКоэффициент = Выборка.СпециальныйКоэффициент;
				
				СтоимостьНачальныйОстаток = СтоимостьНачальныйОстаток + Выборка.СтоимостьНачальныйОстаток;
				СтоимостьКонечныйОстаток = СтоимостьКонечныйОстаток + Выборка.СтоимостьКонечныйОстаток;
				АмортизацияОборот = АмортизацияОборот + Выборка.АмортизацияОборот;
				АмортизацияКонечныйОстаток = АмортизацияКонечныйОстаток + Выборка.АмортизацияКонечныйОстаток;
				
				СтрокаАмортизации = ТаблицаАмортизации.Добавить();
				СтрокаАмортизации.ОбъектУчета = Выборка.ОсновноеСредство;
				СтрокаАмортизации.НаправлениеАмортизации = Выборка.НаправлениеАмортизации;
				СтрокаАмортизации.РасчетныйДокумент = Выборка.РасчетныйДокумент;
				СтрокаАмортизации.ДокументОплаты = Выборка.ДокументОплаты;
				СтрокаАмортизации.НоменклатурнаяГруппа = Выборка.НоменклатурнаяГруппа;
				СтрокаАмортизации.ХарактерДеятельности = Выборка.ХарактерДеятельности;
				СтрокаАмортизации.ВидМПЗ = Выборка.ВидМПЗ;
				СтрокаАмортизации.АмортизацияКонечныйОстаток = Выборка.АмортизацияКонечныйОстаток;
				СтрокаАмортизации.НачальнаяСтоимость = Выборка.СтоимостьНачальныйОстаток;
				
				СтрокиДляРаспределенияАмортизации.Добавить(СтрокаАмортизации);
			КонецЕсли;
			
		КонецЦикла;
		
		СтоимостьНаКонецМесяца = Макс(СтоимостьКонечныйОстаток - АмортизацияКонечныйОстаток, 0);
		
		РасчетнаяСуммаАмортизации = СуммаАмортизации(
			СтоимостьНачальныйОстаток,
			МетодНачисленияАмортизации,
			СрокПолезногоИспользования,
			КоэффициентАмортизации,
			СпециальныйКоэффициент);
		СуммаАмортизации = Мин(Макс(РасчетнаяСуммаАмортизации - АмортизацияОборот, 0), СтоимостьНаКонецМесяца);
		
		Если СуммаАмортизации > 0 И СтрокиДляРаспределенияАмортизации.Количество() > 0 Тогда
			
			МассивКоэфф = Новый Массив;
			Для Индекс = 0 По СтрокиДляРаспределенияАмортизации.ВГраница() Цикл
				МассивКоэфф.Добавить(СтрокиДляРаспределенияАмортизации[Индекс].НачальнаяСтоимость);
			КонецЦикла;
			
			МассивСуммАмортизации = ОбщегоНазначенияБПКлиентСервер.РаспределитьПропорционально(СуммаАмортизации, МассивКоэфф, 2);
			Если МассивСуммАмортизации <> Неопределено Тогда
				Для Индекс = 0 По СтрокиДляРаспределенияАмортизации.ВГраница() Цикл
					СтрокиДляРаспределенияАмортизации[Индекс].СуммаАмортизацииБУ = МассивСуммАмортизации[Индекс];
					СтрокиДляРаспределенияАмортизации[Индекс].СуммаАмортизацииНУ = МассивСуммАмортизации[Индекс];
				КонецЦикла;
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ТаблицаАмортизации;
	
КонецФункции

Функция ПроверитьПараметрыАмортизации(МетодНачисленияАмортизации, СрокПолезногоИспользования, ОсновноеСредствоПредставление, ВыдаватьСообщения)
	
	Результат = Истина;
	
	Если Не ЗначениеЗаполнено(МетодНачисленияАмортизации) Тогда
		Если ВыдаватьСообщения Тогда
			ШаблонСообщения = НСтр("ru = 'Учет индивидуального предпринимателя: для основного средства %1 не указан метод начисления амортизации'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(СтрШаблон(ШаблонСообщения, ОсновноеСредствоПредставление));
		КонецЕсли;
		Результат = Ложь;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(СрокПолезногоИспользования) Тогда
		Если ВыдаватьСообщения Тогда
			ШаблонСообщения = НСтр("ru = 'Учет индивидуального предпринимателя: для основного средства %1 срок использования равен 0'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(СтрШаблон(ШаблонСообщения, ОсновноеСредствоПредставление));
		КонецЕсли;
		Результат = Ложь;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

Функция СуммаАмортизации(НачальнаяСтоимость, МетодНачисленияАмортизации, Знач СрокПолезногоИспользования, Знач КоэффициентАмортизации, Знач СпециальныйКоэффициент)
	
	Если Не ЗначениеЗаполнено(НачальнаяСтоимость) Тогда
		Возврат 0;
	КонецЕсли;
	
	СрокПолезногоИспользования = Макс(1, СрокПолезногоИспользования);
	КоэффициентАмортизации = ?(КоэффициентАмортизации = 0 , 1, КоэффициентАмортизации);
	СпециальныйКоэффициент = ?(СпециальныйКоэффициент = 0 , 1, СпециальныйКоэффициент);
	
	Если МетодНачисленияАмортизации = Перечисления.МетодыНачисленияАмортизации.Линейный Тогда
		Возврат Окр(НачальнаяСтоимость / СрокПолезногоИспользования, 2, 1);
	ИначеЕсли МетодНачисленияАмортизации = Перечисления.МетодыНачисленияАмортизации.ПоЕНАОФ Тогда
		Возврат Окр(НачальнаяСтоимость * КоэффициентАмортизации / 1200 * СпециальныйКоэффициент, 2, 1);
	Иначе
		Возврат 0;
	КонецЕсли;
	
КонецФункции

Функция ПодготовитьПараметрыТаблицыНачисленияАмортизацииОС(ТаблицаЗатрат, ТаблицаРеквизитов)

	Параметры = Новый Структура;
	
	// Подготовка таблицы Параметры.СписокЗатрат
	
	СписокОбязательныхКолонок = ""
		+ "ОбъектУчета";			// <СправочникСсылка.*> - объект учета
		
	Параметры.Вставить("СписокЗатрат", ОбщегоНазначенияБПВызовСервера.ПолучитьТаблицуПараметровПроведения(
		ТаблицаЗатрат, СписокОбязательныхКолонок));
		
	// Подготовка таблицы Параметры.Реквизиты
	
	СписокОбязательныхКолонок = ""
		+ "Период,"					// <Дата> - период движений - дата документа
		+ "Регистратор,"			// <ДокументСсылка.*> - документ-регистратор движений
		+ "Организация,"			// <СправочникСсылка.Организации> - организация
		+ "ВыдаватьСообщения";		// <Булево>
		
	Параметры.Вставить("Реквизиты", ОбщегоНазначенияБПВызовСервера.ПолучитьТаблицуПараметровПроведения(
		ТаблицаРеквизитов, СписокОбязательныхКолонок));
		
	Возврат Параметры;
		
КонецФункции

Функция ПодготовитьТаблицуНачисленияАмортизацииНМА(ТаблицаЗатрат, ТаблицаРеквизитов, Отказ) Экспорт

	ТаблицаАмортизации	= ПолучитьПустуютаблицуАмортизации();
	
	Если Не ЗначениеЗаполнено(ТаблицаЗатрат)
	 Или Не ЗначениеЗаполнено(ТаблицаРеквизитов) Тогда
		Возврат ТаблицаАмортизации;
	КонецЕсли;
	
	Реквизиты = ТаблицаРеквизитов[0];
	Если НЕ УчетнаяПолитика.ПлательщикНДФЛ(Реквизиты.Организация, Реквизиты.Период) Тогда
		Возврат ТаблицаАмортизации;
	КонецЕсли;
	
	Если ТаблицаРеквизитов.Колонки.Найти("ВыдаватьСообщения") = Неопределено Тогда
		ТаблицаРеквизитов.Колонки.Добавить("ВыдаватьСообщения",	Новый ОписаниеТипов("Булево"));
	КонецЕсли;
	
	Параметры = ПодготовитьПараметрыТаблицыНачисленияАмортизацииНМА(ТаблицаЗатрат, ТаблицаРеквизитов);
	Реквизиты = Параметры.Реквизиты[0];
	
	СписокЗатрат = Параметры.СписокЗатрат;
	СписокНМА    = СписокЗатрат.ВыгрузитьКолонку("ОбъектУчета");
	ОбщегоНазначенияБПВызовСервера.УдалитьПовторяющиесяЭлементыМассива(СписокНМА);
	
	Запрос = Новый Запрос();
	Запрос.УстановитьПараметр("Организация",	Реквизиты.Организация);
	Запрос.УстановитьПараметр("Период",			Новый Граница(Новый МоментВремени(Реквизиты.Период, Реквизиты.Регистратор), ВидГраницы.Исключая));
	Запрос.УстановитьПараметр("СписокНМА",		СписокНМА);
	
	Запрос.УстановитьПараметр("НачалоМесяца",	НачалоМесяца(Реквизиты.Период));
	Если БухгалтерскийУчетКлиентСерверПереопределяемый.ЭтоРегламентнаяОперация(Реквизиты.Регистратор) Тогда
		Запрос.УстановитьПараметр("КонецМесяца",	КонецМесяца(Реквизиты.Период));
	Иначе
		Запрос.УстановитьПараметр("КонецМесяца",	Новый Граница(Новый МоментВремени(Реквизиты.Период, Реквизиты.Регистратор), ВидГраницы.Исключая));
	КонецЕсли;
	
