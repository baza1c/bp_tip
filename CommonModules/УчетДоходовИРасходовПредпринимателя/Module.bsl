	Запрос.УстановитьПараметр("Партия",             Реквизиты.Партия);
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ИПРБПОбороты.НоменклатурнаяГруппа,
	|	ИПРБПОбороты.ХарактерДеятельности,
