Функция ПодготовитьТаблицуПоступленияВнеоборотныхАктивов(ТаблицаВнеоборотныхАктивов, ТаблицаВзаиморасчетов, ТаблицаРеквизитов) Экспорт
	
	Если Не ЗначениеЗаполнено(ТаблицаРеквизитов) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Реквизиты = ТаблицаРеквизитов[0];
	
	Если Не ЭтоПриобретениеВнеоборотныхАктивов(Реквизиты.ВидОперации) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Если Не УчетнаяПолитика.ПлательщикНДФЛ(Реквизиты.Организация, Реквизиты.Период) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Параметры = ПодготовитьПараметрыТаблицыПоступленияВнеоборотныхАктивов(ТаблицаВнеоборотныхАктивов, ТаблицаВзаиморасчетов, ТаблицаРеквизитов);
	Реквизиты = Параметры.Реквизиты[0];
	
	ТаблицаВнеоборотныхАктивов = Параметры.ТаблицаВнеоборотныхАктивов.СкопироватьКолонки();
	ТаблицаВнеоборотныхАктивов.Колонки.Добавить("ДокументОплаты", Документы.ТипВсеСсылки());
	
	Для Каждого ВнеоборотныйАктив Из Параметры.ТаблицаВнеоборотныхАктивов Цикл
		
		Если Не ЗначениеЗаполнено(ВнеоборотныйАктив.ВидМПЗ) Тогда
			Продолжить;
		КонецЕсли;
		
		Если ВнеоборотныйАктив.Сумма = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		ВнеоборотныйАктив.Партия = Реквизиты.Регистратор;
		
		// Зачет авансов поставщику
		Для Каждого ДокументОплаты Из Параметры.Взаиморасчеты Цикл
			
			Если ДокументОплаты.СуммаРуб = 0 Тогда
				Продолжить;
			КонецЕсли;
			
			Если ДокументОплаты.ДокументРасчетов = Реквизиты.Регистратор Тогда
				Продолжить;
			КонецЕсли;
			
			ОплаченнаяСумма = Мин(ВнеоборотныйАктив.Сумма, ДокументОплаты.СуммаРуб);
			
			Если ВнеоборотныйАктив.Сумма = ОплаченнаяСумма Тогда
				ОплаченноеКоличество = ВнеоборотныйАктив.Количество;
				ОплаченныйНДС        = ВнеоборотныйАктив.НДС;
			Иначе
				КоэффициентОплаты = ОплаченнаяСумма / ВнеоборотныйАктив.Сумма;
				ОплаченноеКоличество = ВнеоборотныйАктив.Количество * КоэффициентОплаты;
				ОплаченныйНДС        = ОплаченнаяСумма - Окр((ВнеоборотныйАктив.Сумма - ВнеоборотныйАктив.НДС) * КоэффициентОплаты, 2, 1);
			КонецЕсли;
			
			СтрокаВнеоборотныйАктив = ТаблицаВнеоборотныхАктивов.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаВнеоборотныйАктив, ВнеоборотныйАктив);
			СтрокаВнеоборотныйАктив.ДокументОплаты = ДокументОплаты.ДокументРасчетов;
			
			СтрокаВнеоборотныйАктив.Количество = ОплаченноеКоличество;
			Если Реквизиты.НДСВключенВСтоимость Тогда
				СтрокаВнеоборотныйАктив.Сумма = ОплаченнаяСумма;
				СтрокаВнеоборотныйАктив.НДС   = 0;
			Иначе
				СтрокаВнеоборотныйАктив.Сумма = ОплаченнаяСумма - ОплаченныйНДС;
				СтрокаВнеоборотныйАктив.НДС   = ОплаченныйНДС;
			КонецЕсли;
			
			ВнеоборотныйАктив.Количество = ВнеоборотныйАктив.Количество - ОплаченноеКоличество;
			ВнеоборотныйАктив.Сумма      = ВнеоборотныйАктив.Сумма - ОплаченнаяСумма;
			ВнеоборотныйАктив.НДС        = ВнеоборотныйАктив.НДС - ОплаченныйНДС;
			
			ДокументОплаты.СуммаРуб = ДокументОплаты.СуммаРуб - ОплаченнаяСумма;
			
			Если ВнеоборотныйАктив.Сумма = 0 Тогда
				Прервать;
			КонецЕсли;
			
		КонецЦикла;
		
		// Поступление неоплаченных внеоборотных активов
		Если ВнеоборотныйАктив.Сумма = 0 И ВнеоборотныйАктив.Количество = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		СтрокаВнеоборотныйАктив = ТаблицаВнеоборотныхАктивов.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаВнеоборотныйАктив, ВнеоборотныйАктив);
		
		СтрокаВнеоборотныйАктив.Количество = ВнеоборотныйАктив.Количество;
		Если Реквизиты.НДСВключенВСтоимость Тогда
			СтрокаВнеоборотныйАктив.Сумма = ВнеоборотныйАктив.Сумма;
			СтрокаВнеоборотныйАктив.НДС   = 0;
		Иначе
			СтрокаВнеоборотныйАктив.Сумма = ВнеоборотныйАктив.Сумма - ВнеоборотныйАктив.НДС;
			СтрокаВнеоборотныйАктив.НДС   = ВнеоборотныйАктив.НДС;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ТаблицаВнеоборотныхАктивов;
	
