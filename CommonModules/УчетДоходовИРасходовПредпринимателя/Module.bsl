	Движение = Движения.ПрочиеРасчеты.ДобавитьПриход();
	ЗаполнитьЗначенияСвойств(Движение, Реквизиты);
	
	Движение.РасчетныйДокумент = Реквизиты.Регистратор;
	Движение.Сумма             = СуммаВыручки;

