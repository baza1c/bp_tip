				НДС = Отгрузка.НДС;
				КоличествоОплаченоПоставщику = Отгрузка.Количество;
			КонецЕсли;
			
		Иначе
			Сумма = Отгрузка.Сумма;
			НДС = Отгрузка.НДС;
			КоличествоОплаченоПоставщику = Отгрузка.Количество;
		КонецЕсли;
		
		Если Сумма <> 0 Или НДС <> 0 Или КоличествоОплаченоПоставщику <> 0 Тогда
			НоваяСтрока = ТаблицаИПДоходы.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Отгрузка);
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Реквизиты);
			НоваяСтрока.Сумма = Сумма;
			НоваяСтрока.НДС = НДС;
			НоваяСтрока.КоличествоОплаченоПоставщику = КоличествоОплаченоПоставщику;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат ТаблицаИПДоходы;
	
КонецФункции

