	ОказанныеУслуги.Колонки.Удалить("ЭтоУслуга");
	
	СтруктураТаблиц = Новый Структура;
	СтруктураТаблиц.Вставить("ТаблицаМПЗОтгруженные", ТаблицаМПЗОтгруженные);
	СтруктураТаблиц.Вставить("ТаблицаМПЗ", ТаблицаМПЗ);
