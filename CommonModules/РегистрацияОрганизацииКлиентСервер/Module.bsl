				НомерОшибки = НомерОшибки + 1;
			КонецЕсли;
		КонецЦикла;
		
		Результат = СтрСоединить(СообщенияОбОшибке, Символы.ПС);
		
	КонецЕсли;
	
	Возврат Результат;
	
