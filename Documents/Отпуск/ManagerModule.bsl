		МодульРасчетЗарплатыДляНебольшихОрганизаций = ОбщегоНазначения.ОбщийМодуль("РасчетЗарплатыДляНебольшихОрганизаций");
		
		НачислениеОтпуск   = ДополнительныеПараметры.НачислениеОтпуск;
		НачислениеОтпускРК = ДополнительныеПараметры.НачислениеОтпускРК;
		НачислениеОтпускСН = ДополнительныеПараметры.НачислениеОтпускСН;
		Подразделение      = ДополнительныеПараметры.Подразделение;
		
		Объект.Начисления.Очистить();
		
		ДатаНачала = Объект.ДатаНачалаОсновногоОтпуска;
		ДатаОкончания = Объект.ДатаОкончанияОсновногоОтпуска;
		
		Пока ЗначениеЗаполнено(ДатаНачала) И ДатаНачала <= ДатаОкончания Цикл
			
			СтрокаНачислений = Объект.Начисления.Добавить();
			
			СтрокаНачислений.Начисление = НачислениеОтпуск;
			СтрокаНачислений.Сотрудник = Объект.Сотрудник;
			СтрокаНачислений.Подразделение = Подразделение;
			
			СтрокаНачислений.ДатаНачала = ДатаНачала;
			
			Если КонецМесяца(ДатаНачала) >= ДатаОкончания Тогда
				СтрокаНачислений.ДатаОкончания = ДатаОкончания;
			Иначе
				СтрокаНачислений.ДатаОкончания = КонецМесяца(ДатаНачала);
			КонецЕсли;
			
			СтрокаНачислений.ОплаченоДней = МодульРасчетЗарплатыДляНебольшихОрганизаций.КоличествоДнейОтпуска(
				СтрокаНачислений.ДатаНачала, СтрокаНачислений.ДатаОкончания, Объект.Организация);
				
			ДатаЗаконаПроРКиЕАЭС = УчетНДФЛ.ДатаЗаконаПроРКиЕАЭС();
			
			СреднийЗаработокСН = 0;
			СреднийЗаработокРК = 0;
			Если Объект.ПланируемаяДатаВыплаты >= ДатаЗаконаПроРКиЕАЭС Тогда
				Если ЗначениеЗаполнено(НачислениеОтпускСН) Тогда
					СреднийЗаработокСН = Объект.СреднийЗаработокСН;
				КонецЕсли;
				Если ЗначениеЗаполнено(НачислениеОтпускРК) Тогда
					СреднийЗаработокРК = Объект.СреднийЗаработокРК;
				КонецЕсли;
			КонецЕсли;
			
			СтрокаНачислений.Результат = (Объект.СреднийЗаработок - СреднийЗаработокРК - СреднийЗаработокСН) * СтрокаНачислений.ОплаченоДней;
			
			РабочихДнейЧасов = МодульРасчетЗарплатыДляНебольшихОрганизаций.РабочихДнейЧасовВПериодеОрганизации(СтрокаНачислений.ДатаНачала, СтрокаНачислений.ДатаОкончания, Объект.Организация);
			
			Если РабочихДнейЧасов = Неопределено Тогда
				
				СтрокаНачислений.ОтработаноДней = 0;
				СтрокаНачислений.ОтработаноЧасов = 0;
				
			Иначе
				
				СтрокаНачислений.ОтработаноДней = РабочихДнейЧасов.Дней;
				СтрокаНачислений.ОтработаноЧасов = РабочихДнейЧасов.Часов;
				
			КонецЕсли;
			
			Если Объект.ПланируемаяДатаВыплаты >= ДатаЗаконаПроРКиЕАЭС Тогда
				
				Если ЗначениеЗаполнено(НачислениеОтпускРК) И Объект.СреднийЗаработокРК > 0 Тогда
					
					СтрокаНачисленийРК					= Объект.Начисления.Добавить();
					СтрокаНачисленийРК.Начисление		= НачислениеОтпускРК;
					СтрокаНачисленийРК.Сотрудник 		= СтрокаНачислений.Сотрудник;
					СтрокаНачисленийРК.Подразделение 	= СтрокаНачислений.Подразделение;
					СтрокаНачисленийРК.ДатаНачала 		= СтрокаНачислений.ДатаНачала;
					СтрокаНачисленийРК.ДатаОкончания 	= СтрокаНачислений.ДатаОкончания;
					СтрокаНачисленийРК.Результат 		= Объект.СреднийЗаработокРК * СтрокаНачислений.ОплаченоДней;
					
				КонецЕсли;
				
				Если ЗначениеЗаполнено(НачислениеОтпускСН) И Объект.СреднийЗаработокСН > 0 Тогда
					
					СтрокаНачисленийСН					= Объект.Начисления.Добавить();
					СтрокаНачисленийСН.Начисление		= НачислениеОтпускСН;
					СтрокаНачисленийСН.Сотрудник 		= СтрокаНачислений.Сотрудник;
					СтрокаНачисленийСН.Подразделение 	= СтрокаНачислений.Подразделение;
					СтрокаНачисленийСН.ДатаНачала 		= СтрокаНачислений.ДатаНачала;
					СтрокаНачисленийСН.ДатаОкончания 	= СтрокаНачислений.ДатаОкончания;
					СтрокаНачисленийСН.Результат 		= Объект.СреднийЗаработокСН * СтрокаНачислений.ОплаченоДней;
					
				КонецЕсли;
				
			КонецЕсли;
			
			ДатаНачала = КонецМесяца(ДатаНачала) + 1;
			
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

