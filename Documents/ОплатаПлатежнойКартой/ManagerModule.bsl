Функция РеквизитыПоБанковскомуСчету(БанковскийСчет)

	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("БанковскийСчет", БанковскийСчет);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
