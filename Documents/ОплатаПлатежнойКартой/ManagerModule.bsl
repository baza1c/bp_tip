// Процедура возвращает записи реестра по параметрам
// Параметры:
// Отбор - структура 
//      - Ключ - имя реквизита, Значение - значение
// в отборе может быть вложенная структура со значениями допреквизитов
// - ключ - Строка - имя опреквизита
// - значение - Строка - значение
// Возвращаемое значение:
//    Массив - ДокументСсылка.ОплатаПлатежнойКартой
//
Функция ЗаписиРеестраПоРеквизитам(СтруктураОтбора) Экспорт
	ТаблицаРеквизитов = Новый ТаблицаЗначений;
	
	Для каждого КлючИЗначение Из СтруктураОтбора Цикл
		ТаблицаРеквизитов.Колонки.Добавить(
			КлючИЗначение.Ключ, 
			Новый ОписаниеТипов(ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ТипЗнч(КлючИЗначение.Значение))));
	КонецЦикла; 
	
	ЗаполнитьЗначенияСвойств(ТаблицаРеквизитов.Добавить(), СтруктураОтбора);

	ЗаписиРеестраПоТаблицеРеквизитов = ЗаписиРеестрПоТаблицеРеквизитов(ТаблицаРеквизитов, 0);
	Если ЗаписиРеестраПоТаблицеРеквизитов.Количество() = 0 Тогда
		Возврат Новый Массив;
	Иначе
		Возврат ЗаписиРеестраПоТаблицеРеквизитов.Получить(ТаблицаРеквизитов[0]);
	КонецЕсли; 
КонецФункции

Функция ЗаписиРеестрПоТаблицеРеквизитов(ТаблицаРеквизитов, КоличествоДополнительныхРеквизитов)
	
	ТаблицаРеквизитовВЗапрос = Новый ТаблицаЗначений;
	
	ТаблицаРеквизитовВЗапрос.Колонки.Добавить("ИдентификаторСтроки", ОбщегоНазначения.ОписаниеТипаСтрока(40));
	ТаблицаРеквизитовВЗапрос.Колонки.Добавить("ИмяРеквизита",        ОбщегоНазначения.ОписаниеТипаСтрока(Метаданные.Справочники.РеквизитыКодаДляОплаты.ДлинаКода));
	ТаблицаРеквизитовВЗапрос.Колонки.Добавить("ЗначениеРеквизита",   Метаданные.Документы.ОплатаПлатежнойКартой.ТабличныеЧасти.РеквизитыРеестра.Реквизиты.Значение.Тип);
	
	МетаданныеДокумента = Метаданные.Документы.ОплатаПлатежнойКартой.Реквизиты;
	
	Для каждого Колонка Из ТаблицаРеквизитов.Колонки Цикл
		МетаданныеРеквмзита = МетаданныеДокумента.Найти(Колонка.Имя);
		Если МетаданныеРеквмзита = Неопределено Тогда
			Продолжить;
		КонецЕсли; 
	
		ТаблицаРеквизитовВЗапрос.Колонки.Добавить(Колонка.Имя, МетаданныеРеквмзита.Тип);
	КонецЦикла; 
	
	ИдентификаторыИсходныхСтрок = Новый Соответствие;
	Для каждого СтрокаТаблицыРеквизитов Из ТаблицаРеквизитов Цикл
		ИдентификаторСтроки = Строка(Новый УникальныйИдентификатор);
		ИдентификаторыИсходныхСтрок.Вставить(ИдентификаторСтроки, СтрокаТаблицыРеквизитов);
		
		Если КоличествоДополнительныхРеквизитов > 0 Тогда
			Для каждого Реквизит Из СтрокаТаблицыРеквизитов.ДополнительныеРеквизиты Цикл
				НоваяСтрока  = ТаблицаРеквизитовВЗапрос.Добавить();
				НоваяСтрока.ИдентификаторСтроки = ИдентификаторСтроки;
				
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаТаблицыРеквизитов);
				
				НоваяСтрока.ИмяРеквизита = Реквизит.Ключ;
				НоваяСтрока.ЗначениеРеквизита = Реквизит.Значение;
			КонецЦикла;
		Иначе
			НоваяСтрока  = ТаблицаРеквизитовВЗапрос.Добавить();
			НоваяСтрока.ИдентификаторСтроки = ИдентификаторСтроки;
			
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаТаблицыРеквизитов);
		КонецЕсли; 
	КонецЦикла; 
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("УсловиеКоличествоРеквизитов", Истина);
	Запрос.УстановитьПараметр("ТаблицаРеквизиты",            ТаблицаРеквизитовВЗапрос);
	
	ТекстЗапроса = 
	"ВЫБРАТЬ
	|	ТаблицаРеквизиты.ИдентификаторСтроки КАК ИдентификаторСтроки,
	|	&СписокРеквизитов,
	|	ТаблицаРеквизиты.ИмяРеквизита КАК ИмяРеквизита,
	|	ТаблицаРеквизиты.ЗначениеРеквизита КАК ЗначениеРеквизита
	|ПОМЕСТИТЬ ВТ_ТаблицаРеквизитов
	|ИЗ
	|	&ТаблицаРеквизиты КАК ТаблицаРеквизиты
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ_ТаблицаРеквизитов.ИдентификаторСтроки КАК ИдентификаторСтроки,
	|	ЗаписьРеестра.Ссылка КАК Ссылка,
	|	КОЛИЧЕСТВО(РАЗЛИЧНЫЕ ЗаписьРеестраДополнительныеРеквизиты.НомерСтроки) КАК КоличествоРеквизитов
	|ПОМЕСТИТЬ ВТ_ЗаписиРеестра
	|ИЗ
	|	ВТ_ТаблицаРеквизитов КАК ВТ_ТаблицаРеквизитов
	|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ОплатаПлатежнойКартой КАК ЗаписьРеестра
	|		ПО (&УсловиеСоединения)
	|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ОплатаПлатежнойКартой.РеквизитыРеестра КАК ЗаписьРеестраДополнительныеРеквизиты
	|		ПО (ЗаписьРеестра.Ссылка = ЗаписьРеестраДополнительныеРеквизиты.Ссылка)
	|			И ВТ_ТаблицаРеквизитов.ЗначениеРеквизита = ЗаписьРеестраДополнительныеРеквизиты.Значение
	|			И ВТ_ТаблицаРеквизитов.ИмяРеквизита = ЗаписьРеестраДополнительныеРеквизиты.РеквизитРеестра.Код
	|ГДЕ
	|	ЗаписьРеестра.ПометкаУдаления = ЛОЖЬ
	|
	|СГРУППИРОВАТЬ ПО
	|	ЗаписьРеестра.Ссылка,
	|	ВТ_ТаблицаРеквизитов.ИдентификаторСтроки
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ_ЗаписиРеестра.Ссылка КАК Ссылка,
	|	ВТ_ЗаписиРеестра.ИдентификаторСтроки КАК ИдентификаторСтроки
	|ИЗ
	|	ВТ_ЗаписиРеестра КАК ВТ_ЗаписиРеестра
	|ГДЕ
	|	&УсловиеКоличествоРеквизитов
	|ИТОГИ ПО
	|	ИдентификаторСтроки";
	
	СтрокиУсловий = Новый Массив;
	СписокПолей = Новый Массив;
	
	ШаблонУсловия = "ЗаписьРеестра.%1 = ВТ_ТаблицаРеквизитов.%1";
	
	// Условия по реквизитам шапки
	Для каждого Колонка  Из ТаблицаРеквизитов.Колонки Цикл
		Если ТаблицаРеквизитовВЗапрос.Колонки.Найти(Колонка.Имя) = Неопределено Тогда
			Продолжить;
		КонецЕсли; 
		
		СтрокиУсловий.Добавить(СтрШаблон(ШаблонУсловия, Колонка.Имя));
		СписокПолей.Добавить(СтрШаблон("ТаблицаРеквизиты.%1 КАК %1", Колонка.Имя));
	КонецЦикла;
	
	Если КоличествоДополнительныхРеквизитов > 0 Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&УсловиеКоличествоРеквизитов", "ВТ_ЗаписиРеестра.КоличествоРеквизитов = "+КоличествоДополнительныхРеквизитов);
	КонецЕсли; 
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&СписокРеквизитов", СтрСоединить(СписокПолей, ","+Символы.ПС)); 
	Запрос.Текст = СтрЗаменить(ТекстЗапроса, "&УсловиеСоединения", СтрСоединить(СтрокиУсловий, " И "));
	
	Результат = Новый Соответствие;
	
	ВыборкаИдентификаторы = Запрос.Выполнить().Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам, "ИдентификаторСтроки");
	Пока ВыборкаИдентификаторы.Следующий() Цикл
		МассивСсылок = Новый Массив;
		
		ВыборкаСсылки = ВыборкаИдентификаторы.Выбрать();
		Пока ВыборкаСсылки.Следующий() Цикл
			МассивСсылок.Добавить(ВыборкаСсылки.Ссылка);
		КонецЦикла; 
		
		Результат.Вставить(ИдентификаторыИсходныхСтрок[ВыборкаИдентификаторы.ИдентификаторСтроки], МассивСсылок);
	КонецЦикла; 
	
	Возврат Результат;
КонецФункции

Процедура СоздатьЗаписиРеестра(Параметры, АдресРезультата) Экспорт
	Перем СписокОшибок;
	
	ЗаписиРеестра = Новый Массив;

	ЗначенияЗаполнения = Параметры.ДанныеРеестра.ЗначенияЗаполнения;
	
	ВидОплаты = Неопределено;
	Если ЗначениеЗаполнено(ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ЗначенияЗаполнения,"Контрагент")) Тогда
		ВидОплаты = НайтиСоздатьВидОплатыПоКонтрагенту(
			ЗначенияЗаполнения.Организация, 
			ЗначенияЗаполнения.Контрагент, // контрагент из выписки
			ЗначенияЗаполнения.ДоговорКонтрагента);
	ИначеЕсли ЗначениеЗаполнено(ЗначенияЗаполнения.БанковскийСчет) Тогда
		ВидОплаты  = НайтиСоздатьВидОплатыПоБанку(
			ЗначенияЗаполнения.Организация,
			ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ЗначенияЗаполнения.БанковскийСчет, "Банк"));
	КонецЕсли; 
	
	ВидОплатыРеквизиты = Неопределено;
	Если ЗначениеЗаполнено(ВидОплаты) Тогда
		ВидОплатыРеквизиты = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ВидОплаты, "Контрагент, ДоговорКонтрагента, СчетУчетаРасчетов");
	КонецЕсли;

	ПараметрыКурсаВзаиморасчетов = Новый Структура("Курс, Кратность", 1, 1);
	Если ЗначениеЗаполнено(ЗначенияЗаполнения.БанковскийСчет) Тогда
		ПараметрыСчета = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ЗначенияЗаполнения.БанковскийСчет, "Валютный, ВалютаДенежныхСредств");
	КонецЕсли;
	
	КурсВалютыНаДату = Новый Соответствие;
	
	РеквизитыПоБанковскомуСчету = РеквизитыПоБанковскомуСчету(ЗначенияЗаполнения.БанковскийСчет);
	
	МетаданныеДокумента = Метаданные.Документы.ОплатаПлатежнойКартой.Реквизиты;
	
	ТаблицаРеквизиты = Новый ТаблицаЗначений;
	
	ТаблицаРеквизиты.Колонки.Добавить("Организация",             МетаданныеДокумента.Организация.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("ВидОперации",             МетаданныеДокумента.ВидОперации.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("НомерВходящегоДокумента", МетаданныеДокумента.НомерВходящегоДокумента.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("ДатаВходящегоДокумента",  МетаданныеДокумента.ДатаВходящегоДокумента.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("БанковскийСчет",          МетаданныеДокумента.БанковскийСчет.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("СуммаДокумента",          МетаданныеДокумента.СуммаДокумента.Тип);
	ТаблицаРеквизиты.Колонки.Добавить("ДополнительныеРеквизиты", Новый ОписаниеТипов("Структура"));
	
	СоотвествииеСтрок = Новый Соответствие;
	
	Для каждого СтрокаОплаты Из ЗначенияЗаполнения.Оплаты Цикл
		
		НоваяСтрока = ТаблицаРеквизиты.Добавить();
		НоваяСтрока.ВидОперации = Перечисления.ВидыОперацийОплатаПлатежнойКартой.ПлатежПоРеестру;
		
		ЗаполнитьЗначенияСвойств(НоваяСтрока, ЗначенияЗаполнения);
		
		НоваяСтрока.СуммаДокумента          = СтрокаОплаты.Сумма;
		НоваяСтрока.ДополнительныеРеквизиты = СтрокаОплаты.ДополнительныеРеквизиты;
		
		СоотвествииеСтрок.Вставить(СтрокаОплаты, НоваяСтрока);
	КонецЦикла; 
	
	ЗаписиРеестраПоРеквизитам = ЗаписиРеестрПоТаблицеРеквизитов(ТаблицаРеквизиты, РеквизитыПоБанковскомуСчету.Количество());
	
	Для каждого СтрокаОплаты Из ЗначенияЗаполнения.Оплаты Цикл
		
		ДанныеЗаполнения = Новый Структура;
		ДанныеЗаполнения.Вставить("Дата",                      СтрокаОплаты.ДатаОплаты);
		ДанныеЗаполнения.Вставить("Организация",               ЗначенияЗаполнения.Организация);
		ДанныеЗаполнения.Вставить("ВалютаДокумента",           Константы.ВалютаРегламентированногоУчета.Получить());
		
		ДанныеЗаполнения.Вставить("БанковскийСчет",            ЗначенияЗаполнения.БанковскийСчет);
		
		ДанныеЗаполнения.Вставить("НомерВходящегоДокумента", ЗначенияЗаполнения.НомерВходящегоДокумента);
		ДанныеЗаполнения.Вставить("ДатаВходящегоДокумента",  ЗначенияЗаполнения.ДатаВходящегоДокумента);
		
		Если ПараметрыСчета.Валютный Тогда
			ДанныеЗаполнения.Вставить("ВалютаДокумента", ПараметрыСчета.ВалютаДенежныхСредств);
			Если КурсВалютыНаДату[СтрокаОплаты.ДатаОплаты] = Неопределено Тогда
				КурсВалютыНаДату.Вставить(СтрокаОплаты.ДатаОплаты,
					РаботаСКурсамиВалют.ПолучитьКурсВалюты(ПараметрыСчета.ВалютаДенежныхСредств, СтрокаОплаты.ДатаОплаты));
			КонецЕсли; 
			ПараметрыКурсаВзаиморасчетов = КурсВалютыНаДату[СтрокаОплаты.ДатаОплаты];
		КонецЕсли; 
		
		ДанныеЗаполнения.Вставить("ВидОперации",               Перечисления.ВидыОперацийОплатаПлатежнойКартой.ПлатежПоРеестру);
		ДанныеЗаполнения.Вставить("ВидОплаты",                 ВидОплаты);
		
		ДанныеЗаполнения.Вставить("Контрагент",                СтрокаОплаты.Контрагент);
		ДанныеЗаполнения.Вставить("ДоговорКонтрагента",        СтрокаОплаты.ДоговорКонтрагента);
		
		ДанныеЗаполнения.Вставить("СуммаДокумента",            СтрокаОплаты.Сумма);
		ДанныеЗаполнения.Вставить("СуммаКомиссии",             СтрокаОплаты.КомиссияБанка);
		
		ЗаписиРеестраПоСтрокеОплаты = ЗаписиРеестраПоРеквизитам[СоотвествииеСтрок[СтрокаОплаты]];
		
		Если ЗаписиРеестраПоСтрокеОплаты <> Неопределено 
			И ЗаписиРеестраПоСтрокеОплаты.Количество() > 0 Тогда
			
			// Документ реестра с такими ключевыми реквизитами, был создан ранее
			ОбщегоНазначенияКлиентСервер.ДополнитьМассив(ЗаписиРеестра, ЗаписиРеестраПоСтрокеОплаты, Истина);
			Продолжить;
		КонецЕсли; 
		
		ДокументОплаты = Документы.ОплатаПлатежнойКартой.СоздатьДокумент();
		
		ОснованиеПлатежа = СтрокаОплаты.Основание;
		
		// Если задано основание платежа, то подтянем данные по суммам и ставкам из счета
		Если ЗначениеЗаполнено(ОснованиеПлатежа) Тогда
			
			ДокументОплаты.Заполнить(ОснованиеПлатежа);
			
		Иначе
			ПлательщикНДС = УчетнаяПолитика.ПлательщикНДС(ЗначенияЗаполнения.Организация, СтрокаОплаты.ДатаОплаты)
				Или УчетнаяПолитика.ПлательщикНДСПрименяющийУСН(ЗначенияЗаполнения.Организация, СтрокаОплаты.ДатаОплаты);
			
			СтрокаРасшифровки = ДокументОплаты.РасшифровкаПлатежа.Добавить();
			
			СтрокаРасшифровки.ДоговорКонтрагента           = СтрокаОплаты.ДоговорКонтрагента;
			СтрокаРасшифровки.СпособПогашенияЗадолженности = Перечисления.СпособыПогашенияЗадолженности.Автоматически;
			СтрокаРасшифровки.СуммаПлатежа                 = СтрокаОплаты.Сумма;
			
			СтрокаРасшифровки.КурсВзаиморасчетов           = ПараметрыКурсаВзаиморасчетов.Курс;
			СтрокаРасшифровки.КратностьВзаиморасчетов      = ПараметрыКурсаВзаиморасчетов.Кратность;
			
			СтрокаРасшифровки.СуммаВзаиморасчетов          = СтрокаОплаты.Сумма * ПараметрыКурсаВзаиморасчетов.Кратность / ПараметрыКурсаВзаиморасчетов.Курс;
			
			СтрокаРасшифровки.СтавкаНДС                    = УчетНДСКлиентСервер.СтавкаНДСПользователя(СтрокаОплаты.ДатаОплаты, ПлательщикНДС);
			СтрокаРасшифровки.СуммаНДС                     = УчетНДСКлиентСервер.РассчитатьСуммуНДС(СтрокаОплаты.Сумма, Истина, 
				УчетНДСВызовСервераПовтИсп.ПолучитьСтавкуНДС(СтрокаРасшифровки.СтавкаНДС));
		КонецЕсли;
			
		ЗаполнитьЗначенияСвойств(ДокументОплаты, ДанныеЗаполнения);
		
		Если ВидОплатыРеквизиты <> Неопределено Тогда
			ДокументОплаты.СчетКасса         = ВидОплатыРеквизиты.СчетУчетаРасчетов;
			ДокументОплаты.Эквайер           = ВидОплатыРеквизиты.Контрагент;
			ДокументОплаты.ДоговорЭквайринга = ВидОплатыРеквизиты.ДоговорКонтрагента;
		КонецЕсли; 
		
		Для каждого ДополнительныйРеквизит Из СтрокаОплаты.ДополнительныеРеквизиты Цикл
			СтрокаДополнительныйРеквизит = ДокументОплаты.РеквизитыРеестра.Добавить();
			
			СтрокаДополнительныйРеквизит.РеквизитРеестра = РеквизитыПоБанковскомуСчету[ДополнительныйРеквизит.Ключ];
			СтрокаДополнительныйРеквизит.Значение = ДополнительныйРеквизит.Значение;
		КонецЦикла; 
		
		СчетаУчетаВДокументах.Заполнить(
			ДокументОплаты, 
			Новый Структура("НеЗаполненныеРеквизиты", Истина));
			
		РежимЗаписи = РежимЗаписиДокумента.Запись;
		Если ЗначениеЗаполнено(СтрокаОплаты.Контрагент) 
			И ЗначениеЗаполнено(СтрокаОплаты.ДоговорКонтрагента) 
			И СтрокаОплаты.Сумма > 0 Тогда 
			
			РежимЗаписи = РежимЗаписиДокумента.Проведение;
		КонецЕсли; 
		
		Попытка
			ДокументОплаты.Записать(РежимЗаписи);
		Исключение
			
			ОписаниеОшибки = "";
			Если ДатыЗапретаИзменения.ИзменениеЗапрещено(ДокументОплаты,, ОписаниеОшибки) Тогда
				ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(СписокОшибок, "", ОписаниеОшибки, "");
			ИначеЕсли РежимЗаписи = РежимЗаписиДокумента.Проведение Тогда
				ЗаписьЖурналаРегистрации(НСтр("ru='ОплатаПлатежнойКартой.СоздатьЗаписиРеестраНаСервере'",
					ОбщегоНазначения.КодОсновногоЯзыка()),
				УровеньЖурналаРегистрации.Ошибка,
				Метаданные.Обработки.ЗагрузкаРеестраПлатежей,
				,
				НСтр("ru='Ошибка проведения документа ""Оплата платежной картой"" при загрузке реестра платежей'",
					ОбщегоНазначения.КодОсновногоЯзыка()));
					
				ДокументОплаты.Записать();
			КонецЕсли;
		КонецПопытки;
		
		ЗаписиРеестра.Добавить(ДокументОплаты.Ссылка);
	КонецЦикла;
	
	// Отберем все документы под номер, дату и банковский счет загружаемого реестра
	Отбор = Новый Структура;
	
	Отбор.Вставить("Организация",               ЗначенияЗаполнения.Организация);
	
	Отбор.Вставить("БанковскийСчет",            ЗначенияЗаполнения.БанковскийСчет);
	
	Отбор.Вставить("НомерВходящегоДокумента", ЗначенияЗаполнения.НомерВходящегоДокумента);
	Отбор.Вставить("ДатаВходящегоДокумента", ЗначенияЗаполнения.ДатаВходящегоДокумента);
	
	// И проверим, не обработали ли мы его в текущем цикле загрузки
	Для каждого ЗаписьРеестра Из ЗаписиРеестраПоРеквизитам(Отбор) Цикл
		// Если существует документ в ИБ, которого нет в загружаемом реестре - удалим его
		Если ЗаписиРеестра.Найти(ЗаписьРеестра) = Неопределено Тогда
			Попытка
				ЗаписьРеестра.ПолучитьОбъект().УстановитьПометкуУдаления(Истина);
			Исключение
				ЗаписьЖурналаРегистрации(НСтр("ru='ОплатаПлатежнойКартой.СоздатьЗаписиРеестра'",
						ОбщегоНазначения.КодОсновногоЯзыка()),
					УровеньЖурналаРегистрации.Ошибка,
					Метаданные.Обработки.ЗагрузкаРеестраПлатежей,
					ЗаписьРеестра,
					НСтр("ru='Ошибка пометки на удаления документа ""Оплата платежной картой"" при загрузке реестра платежей'",
						ОбщегоНазначения.КодОсновногоЯзыка()));
			КонецПопытки;
		КонецЕсли; 
	КонецЦикла; 
	
	СтруктураРезультата = Новый Структура;
	СтруктураРезультата.Вставить("СписокОшибок",  СписокОшибок);
	СтруктураРезультата.Вставить("ЗаписиРеестра", ЗаписиРеестра);
	
	ПоместитьВоВременноеХранилище(СтруктураРезультата, АдресРезультата);
КонецПроцедуры

#КонецОбласти 

