&НаСервере
Процедура АдаптироватьМКСписокФормы()
	
	КомандыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКомандТабличноеПолеФормы();
	КомандыПоля.КомандыТаблицыПрочие.Добавить("СверкаСверить");
	
	ОписаниеГруппыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеГруппыТабличноеПолеФормы();
	ОписаниеГруппыПоля.ЭлементГруппаПоля = Элементы.ГруппаСверка;
	
	ОписаниеКолонокПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКолонокПоляТабличноеПолеФормы();
	ОписаниеКолонокПоля.ВажныеКолонки = "СверкаСверяемыйДокумент";
	ОписаниеКолонокПоля.УстановитьВерхниеЗаголовки = 
		"СверкаСверяемыйДокумент,СверкаНаименованиеОперацииПоДаннымОрганизации,СверкаНаименованиеОперацииПоДаннымКонтрагента,СверкаДоговор"
		+ "СверкаДебетПоДаннымОрганизации,СверкаДебетПоДаннымКонтрагента"
		+ "СверкаКредитПоДаннымОрганизации,СверкаКредитПоДаннымКонтрагента"
		+ "СверкаНомерДокументаПоДаннымОрганизации,СверкаНомерДокументаПоДаннымКонтрагента"
		+ "СверкаДатаДокументаПоДаннымОрганизации,СверкаДатаДокументаПоДаннымКонтрагента"
		+ "СверкаНаименованиеОперацииПоДаннымОрганизации,СверкаНаименованиеОперацииПоДаннымКонтрагента"
		+ "СверкаНомерСтрокиПоДаннымОрганизации,СверкаНомерСтрокиПоДаннымКонтрагента";
	ОписаниеКолонокПоля.СкрытьКолонки = "СверкаОтступ,СверкаНадписьПоДаннымОрганизации,СверкаНадписьПоДаннымКонтрагента";
	
	ГруппаТабличногоПоля = МобильныйКлиентБПФормаОбъекта.ПодготовитьТабличноеПолеФормыДокумента(ЭтотОбъект,
		Элементы.Сверка, ОписаниеГруппыПоля, КомандыПоля, ОписаниеКолонокПоля);
		
	Элементы.Переместить(Элементы.БаннерыСверка, ГруппаТабличногоПоля, Элементы.Сверка);
	
	Элементы.СверкаЕстьРасхождения.Вид = ВидПоляФормы.ПолеНадписи;
	Элементы.СверкаЕстьРасхождения.Формат = "БЛ='Нет расхождений'; БИ='Есть расхождение'";
	Элементы.СверкаДебетПоДаннымОрганизации.Формат = "ЧФ='Дебет (органзации): Ч'";
	Элементы.СверкаДебетПоДаннымКонтрагента.Формат = "ЧФ='Дебет (контрагента): Ч'";
	Элементы.СверкаКредитПоДаннымОрганизации.Формат = "ЧФ='Кредит (органзации): Ч'";
	Элементы.СверкаКредитПоДаннымКонтрагента.Формат = "ЧФ='Кредит (контрагента): Ч'";
	
	//По организации
	КомандыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКомандТабличноеПолеФормы();
	КомандыПоля.ИмяКомандыДобавитьСтроку = "ПоДаннымОрганизацииДобавить";
	КомандыПоля.КомандыТаблицыПрочие.Добавить("ГруппаПоДаннымОрганизацииЗаполнить");
	
	ОписаниеГруппыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеГруппыТабличноеПолеФормы();
	ОписаниеГруппыПоля.ЭлементГруппаПоля = Элементы.ГруппаПоДаннымОрганизации;
	
	ОписаниеКолонокПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКолонокПоляТабличноеПолеФормы();
	ОписаниеКолонокПоля.КолонкаНомерСтроки = "ПоДаннымОрганизацииНомерСтроки";
	ОписаниеКолонокПоля.ВажныеКолонки = "ПоДаннымОрганизацииПредставление";
	ОписаниеКолонокПоля.УстановитьВерхниеЗаголовки =
		"ПоДаннымОрганизацииДоговор,ПоДаннымОрганизацииДокумент,ПоДаннымОрганизацииНаименованиеОперации,ПоДаннымОрганизацииПредставление";
	ОписаниеКолонокПоля.СкрытьКолонки = "ПоДаннымОрганизацииОтступ,ОстатокНаНачалоПояснение,ОстатокНаКонецПояснение";
	
	ГруппаТабличногоПоля = МобильныйКлиентБПФормаОбъекта.ПодготовитьТабличноеПолеФормыДокумента(ЭтотОбъект,
		Элементы.ПоДаннымОрганизации, ОписаниеГруппыПоля, КомандыПоля, ОписаниеКолонокПоля);
		
	Элементы.ГруппаПодвалПоДаннымОрганизации.ЦветФона = ЦветаСтиля.ЦветФонаФормы;
	Элементы.ГруппаПодвалПоДаннымОрганизации.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	Элементы.ГруппаОстаткиПоДаннымОрганизации.ГоризонтальноеПоложениеПодчиненных = ГоризонтальноеПоложениеЭлемента.Авто;
	Элементы.ОстатокНаНачало.Ширина = 0;
	Элементы.ОстатокНаКонец.Ширина = 0;
	Элементы.Расхождение.Ширина = 0;
	Элементы.Переместить(Элементы.ГруппаПодвалПоДаннымОрганизации, ГруппаТабличногоПоля);
	
	Элементы.ПоДаннымОрганизацииДебет.Формат = "ЧФ='Дебет: Ч'";
	Элементы.ПоДаннымОрганизацииКредит.Формат = "ЧФ='Кредит: Ч'";
	
	//По контрагенту
	КомандыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКомандТабличноеПолеФормы();
	КомандыПоля.ИмяКомандыДобавитьСтроку = "ПоДаннымКонтрагентаДобавить";
	КомандыПоля.КомандыТаблицыПрочие.Добавить("ПоДаннымКонтрагентаЗаполнитьПоДаннымОрганизации");
	
	ОписаниеГруппыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеГруппыТабличноеПолеФормы();
	ОписаниеГруппыПоля.ЭлементГруппаПоля = Элементы.ГруппаПоДаннымКонтрагента;
	
	ОписаниеКолонокПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКолонокПоляТабличноеПолеФормы();
	ОписаниеКолонокПоля.КолонкаНомерСтроки = "ПоДаннымКонтрагентаНомерСтроки";
	ОписаниеКолонокПоля.ВажныеКолонки = "ПоДаннымКонтрагентаПредставление";
	ОписаниеКолонокПоля.УстановитьВерхниеЗаголовки =
		"ПоДаннымКонтрагентаДоговор,ПоДаннымКонтрагентаДокумент,ПоДаннымКонтрагентаНаименованиеОперации,ПоДаннымКонтрагентаПредставление";
	ОписаниеКолонокПоля.СкрытьКолонки = "ПоДаннымКонтрагентаОтступ,ОстатокНаНачалоКонтрагентПояснение,ОстатокНаКонецКонтрагентПояснение";
	
	ГруппаТабличногоПоля = МобильныйКлиентБПФормаОбъекта.ПодготовитьТабличноеПолеФормыДокумента(ЭтотОбъект,
		Элементы.ПоДаннымКонтрагента, ОписаниеГруппыПоля, КомандыПоля, ОписаниеКолонокПоля);
		
	МобильныйКлиентБПФормаОбъекта.ПереместитьЭлементФормы(Элементы,
		Элементы.БаннерТабличнаяЧастьНеПодлежитЗаполению,
		ГруппаТабличногоПоля,
		Элементы.ПоДаннымКонтрагента);
		
	Элементы.ГруппаПодвалПоДаннымКонтрагента.ЦветФона = ЦветаСтиля.ЦветФонаФормы;
	Элементы.ГруппаПодвалПоДаннымКонтрагента.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	Элементы.ГруппаОстаткиНаКонецКонтрагент.ГоризонтальноеПоложениеПодчиненных = ГоризонтальноеПоложениеЭлемента.Авто;
	Элементы.ОстатокНаНачалоКонтрагент.Ширина = 0;
	Элементы.ОстатокНаКонецКонтрагент.Ширина = 0;
	Элементы.РасхождениеКонтрагент.Ширина = 0;
	Элементы.Переместить(Элементы.ГруппаПодвалПоДаннымКонтрагента, ГруппаТабличногоПоля);
	
	Элементы.ПоДаннымКонтрагентаДебет.Формат = "ЧФ='Дебет: Ч'";
	Элементы.ПоДаннымКонтрагентаКредит.Формат = "ЧФ='Кредит: Ч'";
	
	Если Элементы.ГруппаСписокСчетов.Видимость Тогда
		//Список счетов
		КомандыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКомандТабличноеПолеФормы();
		КомандыПоля.ИмяКомандыДобавитьСтроку = "СписокСчетовДобавить";
		КомандыПоля.КомандыТаблицыПрочие.Добавить("ГруппаСписокСчетовЗаполнить");
		
		ОписаниеГруппыПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеГруппыТабличноеПолеФормы();
		ОписаниеГруппыПоля.ЭлементГруппаПоля = Элементы.ГруппаСписокСчетов;
		
		ОписаниеКолонокПоля = МобильныйКлиентБПФормаОбъекта.НовыйОписаниеКолонокПоляТабличноеПолеФормы();
		ОписаниеКолонокПоля.ВажныеКолонки = "СписокСчетовСчетНаименование";
		ОписаниеКолонокПоля.УстановитьВерхниеЗаголовки = "СписокСчетовСчетНаименование";
		
		МобильныйКлиентБПФормаОбъекта.ПодготовитьТабличноеПолеФормыДокумента(ЭтотОбъект,
			Элементы.СписокСчетов, ОписаниеГруппыПоля, КомандыПоля, ОписаниеКолонокПоля);
	КонецЕсли;
КонецПроцедуры

