//
// Параметры:
//  Параметры - Структура - см. документацию к БСП
// 
// Возвращаемое значение:
//   - Булево - если Истина, то можно редактировать и записывать данные, Ложь - данные недоступны, пока не будут обработаны процедурой обновления.
//
Функция ОтражениеВУСНЗаполнено(Параметры) Экспорт
	
	Перем Документ;
	
	Если Параметры.ЭтоНовый Тогда
		Возврат Истина;
	КонецЕсли;
	
	ОсновныеДанные = Новый Структура("Организация, Дата");
	
	Если ТипЗнч(Параметры.Данные) = Тип("ДокументСсылка.СписаниеСРасчетногоСчета") Тогда
		
		Документ = Параметры.Данные;
		ОсновныеДанные = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Документ, "Организация, Дата");
		
	ИначеЕсли ТипЗнч(Параметры.Данные) = Тип("ДокументОбъект.СписаниеСРасчетногоСчета")
		Или ТипЗнч(Параметры.Данные) = Тип("ДанныеФормыСтруктура") Тогда
		
		Документ = Параметры.Данные.Ссылка;
		ЗаполнитьЗначенияСвойств(ОсновныеДанные, Параметры.Данные);
		
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(Документ) Тогда
		Возврат Истина;
	КонецЕсли;
	
	Если Не УчетнаяПолитика.ПрименяетсяУСНДоходыМинусРасходы(ОсновныеДанные.Организация, ОсновныеДанные.Дата) Тогда
		Возврат Истина;
	КонецЕсли;
	
	ВидыОперацийПрочиеРасчеты = Новый Массив;
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.ПрочиеРасчетыСКонтрагентами);
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.РасчетыПоКредитамИЗаймам);
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.ВозвратЗайма);
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.ВозвратКредита);
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.ВыдачаЗаймаКонтрагенту);
	ВидыОперацийПрочиеРасчеты.Добавить(Перечисления.ВидыОперацийСписаниеДенежныхСредств.ПеречислениеНалогаЗаТретьихЛиц);
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Ссылка", Документ);
	Запрос.УстановитьПараметр("ВидыОперацийПрочиеРасчеты", ВидыОперацийПрочиеРасчеты);
	Запрос.УстановитьПараметр("ВалютаРегламентированногоУчета", Константы.ВалютаРегламентированногоУчета.Получить());
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	СписаниеСРасчетногоСчета.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета КАК СписаниеСРасчетногоСчета
	|ГДЕ
	|	СписаниеСРасчетногоСчета.Ссылка = &Ссылка
	|	И СписаниеСРасчетногоСчета.ВидОперации = ЗНАЧЕНИЕ(Перечисление.ВидыОперацийСписаниеДенежныхСредств.ПрочееСписание)
	|	И СписаниеСРасчетногоСчета.ОтражениеВУСН = ЗНАЧЕНИЕ(Перечисление.ОтражениеВУСН.ПустаяСсылка)
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	СписаниеСРасчетногоСчета.Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета КАК СписаниеСРасчетногоСчета
	|ГДЕ
	|	СписаниеСРасчетногоСчета.Ссылка = &Ссылка
	|	И СписаниеСРасчетногоСчета.ВидОперации = ЗНАЧЕНИЕ(Перечисление.ВидыОперацийСписаниеДенежныхСредств.ПеречислениеНалога)
	|	И СписаниеСРасчетногоСчета.ОтражениеВУСН = ЗНАЧЕНИЕ(Перечисление.ОтражениеВУСН.ПустаяСсылка)
	|	И СписаниеСРасчетногоСчета.Налог.ВидНалога = ЗНАЧЕНИЕ(Перечисление.ВидыНалогов.ПрочиеНалогиИСборы)
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	СписаниеСРасчетногоСчета.Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета КАК СписаниеСРасчетногоСчета
	|ГДЕ
	|	СписаниеСРасчетногоСчета.Ссылка = &Ссылка
	|	И СписаниеСРасчетногоСчета.ВидОперации = ЗНАЧЕНИЕ(Перечисление.ВидыОперацийСписаниеДенежныхСредств.ПеречислениеСотрудникуПоДоговоруПодряда)
	|	И СписаниеСРасчетногоСчета.ОтражениеВУСН = ЗНАЧЕНИЕ(Перечисление.ОтражениеВУСН.ПустаяСсылка)
	|	И СписаниеСРасчетногоСчета.ПлатежнаяВедомость = НЕОПРЕДЕЛЕНО
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	СписаниеСРасчетногоСчета.Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета КАК СписаниеСРасчетногоСчета
	|ГДЕ
	|	СписаниеСРасчетногоСчета.Ссылка = &Ссылка
	|	И СписаниеСРасчетногоСчета.ВидОперации = ЗНАЧЕНИЕ(Перечисление.ВидыОперацийСписаниеДенежныхСредств.КомиссияБанка)
	|	И СписаниеСРасчетногоСчета.ВалютаДокумента = &ВалютаРегламентированногоУчета
	|	И СписаниеСРасчетногоСчета.ОтражениеВУСН = ЗНАЧЕНИЕ(Перечисление.ОтражениеВУСН.ПустаяСсылка)
	|	И (СписаниеСРасчетногоСчета.УдалитьРасходыЕНВД_УСН
	|			ИЛИ СписаниеСРасчетногоСчета.Графа7_УСН = СписаниеСРасчетногоСчета.СуммаДокумента
	|			ИЛИ СписаниеСРасчетногоСчета.Графа7_УСН = 0)
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета.РасшифровкаПлатежа КАК СписаниеСРасчетногоСчетаРасшифровкаПлатежа
	|ГДЕ
	|	СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка = &Ссылка
	|	И СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка.ВидОперации В(&ВидыОперацийПрочиеРасчеты)
	|	И СписаниеСРасчетногоСчетаРасшифровкаПлатежа.ОтражениеВУСН = ЗНАЧЕНИЕ(Перечисление.ОтражениеВУСН.ПустаяСсылка)";
	
	УстановитьПривилегированныйРежим(Истина);
	
	Возврат Запрос.Выполнить().Пустой();
	
КонецФункции

Функция СоздатьПериодыПримененияУСНДоходыМинусРасходы(МенеджерВременныхТаблиц)
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	Запрос.УстановитьПараметр("КонецПериода", ДобавитьМесяц(КонецГода(ТекущаяДатаСеанса()), 12));
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	НастройкиСистемыНалогообложения.Период КАК Период,
	|	НастройкиСистемыНалогообложения.Организация КАК Организация,
	|	НастройкиСистемыНалогообложения.ПрименяетсяУСНДоходыМинусРасходы КАК ПрименяетсяУСНДоходыМинусРасходы
	|ПОМЕСТИТЬ ВТ_НастройкиСистемыНалогообложения
	|ИЗ
	|	РегистрСведений.НастройкиСистемыНалогообложения КАК НастройкиСистемыНалогообложения
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	НастройкиТекущие.Организация КАК Организация,
	|	НастройкиТекущие.Период КАК ПериодТекущий,
	|	МИНИМУМ(НастройкиСледующие.Период) КАК ПериодСледующий
	|ПОМЕСТИТЬ ВТ_ПериодыНастроекПрименяетсяУСН15
	|ИЗ
	|	ВТ_НастройкиСистемыНалогообложения КАК НастройкиТекущие
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_НастройкиСистемыНалогообложения КАК НастройкиСледующие
	|		ПО НастройкиТекущие.Организация = НастройкиСледующие.Организация
	|			И НастройкиТекущие.Период < НастройкиСледующие.Период
	|ГДЕ
	|	НастройкиТекущие.ПрименяетсяУСНДоходыМинусРасходы
	|
	|СГРУППИРОВАТЬ ПО
	|	НастройкиТекущие.Период,
	|	НастройкиТекущие.Организация
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	НастройкиСистемыНалогообложения.Организация КАК Организация,
	|	НастройкиСистемыНалогообложения.Период КАК НачалоПериода,
	|	ВЫБОР
	|		КОГДА ПериодыНастроекПрименяетсяУСН15.ПериодСледующий ЕСТЬ NULL
	|			ТОГДА &КонецПериода
	|		ИНАЧЕ ДОБАВИТЬКДАТЕ(НАЧАЛОПЕРИОДА(ПериодыНастроекПрименяетсяУСН15.ПериодСледующий, ДЕНЬ), СЕКУНДА, -1)
	|	КОНЕЦ КАК КонецПериода
	|ПОМЕСТИТЬ ПериодыПримененияУСНДоходыМинусРасходы
	|ИЗ
	|	ВТ_НастройкиСистемыНалогообложения КАК НастройкиСистемыНалогообложения
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_ПериодыНастроекПрименяетсяУСН15 КАК ПериодыНастроекПрименяетсяУСН15
	|		ПО НастройкиСистемыНалогообложения.Организация = ПериодыНастроекПрименяетсяУСН15.Организация
	|			И НастройкиСистемыНалогообложения.Период = ПериодыНастроекПрименяетсяУСН15.ПериодТекущий
	|ГДЕ
	|	НастройкиСистемыНалогообложения.ПрименяетсяУСНДоходыМинусРасходы
	|	И НастройкиСистемыНалогообложения.Период <= &КонецПериода";
	
	Запрос.Выполнить();
	
КонецФункции

