		НоваяСтрока = ТаблицаУдаленныхСтрок.Добавить();
		НоваяСтрока.ИдентификаторСтроки = ТекущиеДанные.ИдентификаторСтроки;
		НоваяСтрока.ЭтоСтрокаСИсходнымиРНПТ = Ложь;
		
		СтрокиМаркировка = Объект.ШтрихкодыУпаковок.НайтиСтроки(Новый Структура("Номенклатура, ОбъемноСортовойУчет", ТекущиеДанные.Номенклатура, Истина));
		Для каждого СтрокаМаркировка Из СтрокиМаркировка Цикл
			Объект.ШтрихкодыУпаковок.Удалить(СтрокаМаркировка);
		КонецЦикла; 
	КонецЕсли;
	
	ПодключитьОбработчикОжидания("Подключаемый_УдалитьСвязанныеЗаписи", 0.1, Истина);
	
