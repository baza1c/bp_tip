					Проводка["Подразделение" + ДтКтУСН] = Реквизиты.Подразделение;
				КонецЕсли;

				Проводка.Сумма = СтрокаВзаиморасчетов.СуммаРуб_ТорговыйСбор * ЗнакСуммУСН;

			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;

