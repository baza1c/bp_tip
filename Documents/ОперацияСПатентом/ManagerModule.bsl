	|	ЗНАЧЕНИЕ(Справочник.РегистрацииВНалоговомОргане.ПустаяСсылка),
	|	ИСТИНА
	|ИЗ
	|	Патенты КАК Патенты
	|ГДЕ
	|	Патенты.СуммаПервогоПлатежа > 0
	|	И Патенты.ДатаПервогоПлатежа > Патенты.ДатаНачала
	|	И Патенты.ДатаВторогоПлатежа <> ДАТАВРЕМЯ(1, 1, 1)
	|	И Патенты.ДатаВторогоПлатежа >= &ДатаЗакрытия
	|	И &ДатаЗакрытия <> ДАТАВРЕМЯ(1, 1, 1)
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	Патенты.Патент,
	|	Патенты.ДатаОкончания,
	|	Патенты.ДатаНачала,
	|	Патенты.ДатаОкончания,
	|	0,
	|	Патенты.ДействиеОтчет,
	|	Патенты.ДатаНачала,
	|	Патенты.ДатаОкончания,
	|	Патенты.НомерПатента,
	|	Патенты.РегистрацияВНалоговомОргане,
	|	ЛОЖЬ
	|ИЗ
	|	Патенты КАК Патенты
	|ГДЕ
	|	&ДатаЗакрытия = ДАТАВРЕМЯ(1, 1, 1)
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ЗадачиБухгалтераПродлениеПатента.Правило КАК Правило,
	|	УведомлениеОСпецрежимахНалогообложения.Ссылка КАК Уведомление,
	|	УведомлениеОСпецрежимахНалогообложения.ДанныеУведомления КАК ДанныеУведомления,
	|	УведомлениеОСпецрежимахНалогообложения.РегистрацияВИФНС КАК РегистрацияВИФНС,
	|	УведомлениеОСпецрежимахНалогообложения.ИмяФормы КАК ИмяФормы
	|ИЗ
	|	РегистрСведений.ЗадачиБухгалтераПродлениеПатента КАК ЗадачиБухгалтераПродлениеПатента
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.УведомлениеОСпецрежимахНалогообложения КАК УведомлениеОСпецрежимахНалогообложения
	|		ПО ЗадачиБухгалтераПродлениеПатента.Заявление = УведомлениеОСпецрежимахНалогообложения.Ссылка
	|		И НЕ УведомлениеОСпецрежимахНалогообложения.ПометкаУдаления
	|ГДЕ
	|	ЗадачиБухгалтераПродлениеПатента.Организация = &Организация
	|	И ЗадачиБухгалтераПродлениеПатента.ПериодСобытия >= ДОБАВИТЬКДАТЕ(&Период, ДЕНЬ, -1)";
	
	РезультатЗапроса = Запрос.ВыполнитьПакет();
	
	ВыборкаПравилаУплатыИПродления = РезультатЗапроса[1].Выбрать();
	
	Пока ВыборкаПравилаУплатыИПродления.Следующий() Цикл
		
		НоваяЗапись = ТаблицаПравил.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяЗапись, ВыборкаПравилаУплатыИПродления);
		
		Если ВыборкаПравилаУплатыИПродления.ПравилоУплаты Тогда
			
			НоваяЗапись.Наименование = СтрШаблон(
				НСтр("ru = 'Патент %1 на %2, уплата %3 стоимости'"),
					ВыборкаПравилаУплатыИПродления.Правило,
					ПредставлениеПериода(
						НачалоДня(ВыборкаПравилаУплатыИПродления.ДатаНачала),
						КонецДня(ВыборкаПравилаУплатыИПродления.ДатаОкончания),
						"Л=ru_RU;ФП=Истина"),
					ПорядокПлатежей[ВыборкаПравилаУплатыИПродления.ПорядокПлатежа]);
			
		Иначе
			
			ДатаНачалаДействияНовогоПатента = КонецДня(ВыборкаПравилаУплатыИПродления.ДатаОкончания) + 1;
			// Количество дней, за которое необходимо подать заявление, увеличиваем на один день,
			// т.к. подать заявление ровно за 10 дней до начала действия патента не получится.
			КоличествоДней = УчетПСН.СрокПодачиЗаявленияНаПолучениеПатента() + 1;
			Сутки = 24 * 60 * 60;
			
			НоваяЗапись.Срок = ДатаНачалаДействияНовогоПатента - КоличествоДней * Сутки;
			Если ЗначениеЗаполнено(ПроизводственныйКалендарь) Тогда
				Срок = КалендарьБухгалтера.РабочаяДатаПоКалендарю(
					ПроизводственныйКалендарь, ДатаНачалаДействияНовогоПатента, -КоличествоДней);
				Если ЗначениеЗаполнено(Срок) Тогда
					НоваяЗапись.Срок = Срок;
				КонецЕсли;
			КонецЕсли;
			
			НоваяЗапись.Наименование = СтрШаблон(
				НСтр("ru = 'Продление патента %1'"), ВыборкаПравилаУплатыИПродления.Правило);
			
		КонецЕсли;
		
	КонецЦикла;
	
	ВыборкаПравилаСозданияПатента = РезультатЗапроса[2].Выбрать();
	
	Пока ВыборкаПравилаСозданияПатента.Следующий() Цикл
		
		СостояниеУведомления = ИнтерфейсыВзаимодействияБРО.СостояниеДокумента(ВыборкаПравилаСозданияПатента.Уведомление);
		
		// Если заявление на получение патента отправлено в электронном виде, то задачу на создание патента не формируем
		Если ЭлектронныйДокументооборотДоступен Или СостояниеУведомления.Отправлено Тогда
			Продолжить;
		КонецЕсли;
		
		ДанныеУведомления = ВыборкаПравилаСозданияПатента.ДанныеУведомления.Получить();
		Если ДанныеУведомления = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		ИмяТитульногоЛиста = СтрШаблон("%1_Титульная", ВыборкаПравилаСозданияПатента.ИмяФормы);
		
		ДанныеТитульногоЛиста = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
			ДанныеУведомления.ДанныеУведомления, ИмяТитульногоЛиста);
		
		ДатаНачалаНовогоПатента = ДанныеТитульногоЛиста.ДатаНачПат;
		ДатаОкончанияНовогоПатента = ДанныеТитульногоЛиста.ДатаКонПат;
		
		НоваяЗапись = ТаблицаПравил.Добавить();
		НоваяЗапись.Правило = ВыборкаПравилаСозданияПатента.Правило;
		НоваяЗапись.Срок = ДатаНачалаНовогоПатента;
		НоваяЗапись.Наименование = СтрШаблон(НСтр("ru = 'Добавление патента %1 на %2'"),
			ВыборкаПравилаСозданияПатента.Правило,
			ПредставлениеПериода(
				НачалоДня(ДатаНачалаНовогоПатента),
				КонецДня(ДатаОкончанияНовогоПатента),
				"Л=ru_RU;ФП=Истина"));
		НоваяЗапись.НачалоВыполнения = ДатаНачалаНовогоПатента;
		НоваяЗапись.ПериодСобытия = ДатаНачалаНовогоПатента;
		НоваяЗапись.РегистрацияВНалоговомОргане = ВыборкаПравилаСозданияПатента.РегистрацияВИФНС;
		
	КонецЦикла;
	
	Возврат ТаблицаПравил;
	
КонецФункции

