&НаКлиенте
Процедура ТоварыКоличествоПриИзменении(Элемент)
	
	ПриИзмененииЕдиницыИзмеренияНаКлиенте();
	Если ЕстьУчетПодакцизныхТоваров Тогда
		ТекДанные = Элементы.Товары.ТекущиеДанные;
		ТекДанные.НалоговаяБазаНДС = ТекДанные.НалоговаяБазаНДС - ТекДанные.СуммаАкциза;
		УчетАкцизовКлиентСервер.РассчитатьСуммуАкцизаВТабЧастиПоЗаявлениюОВвозе(ТекДанные);
		ДанныеСтрокиТаблицы = Новый Структура(
		"НалоговаяБазаНДС,ДатаПринятияНаУчет,СтатСтоимостьДолларыСША");
		
		ЗаполнитьЗначенияСвойств(ДанныеСтрокиТаблицы, ТекДанные);
		ДанныеСтрокиТаблицы.Вставить("ВалютаДолларыСША", ВалютаДолларыСША);
		
		НалоговаяБазаПриИзмененииНаСервере(ДанныеСтрокиТаблицы);
		ТекДанные.НалоговаяБазаНДС = ТекДанные.НалоговаяБазаНДС +ТекДанные.СуммаАкциза;
		ДанныеСтрокиТаблицы = Новый Структура(
		"НалоговаяБазаАкцизы,ЕдиницаИзмеренияАкциза,ТвердаяСтавкаАкциза,АдвалорнаяСтавкаАкциза,СуммаАкциза, АналитикаАкциза");
		ЗаполнитьЗначенияСвойств(ДанныеСтрокиТаблицы, ТекДанные);
		ЗаполнитьАналитикуАкцизов(ДанныеСтрокиТаблицы);
		ТекДанные.АналитикаАкциза = ДанныеСтрокиТаблицы.АналитикаАкциза;
		Если ТекДанные.НалоговаяБазаНДС <> 0 Тогда
			ТекДанные.СуммаНДС = УчетНДСКлиентСервер.РассчитатьСуммуНДС(
