	Если ИнформацияОДопФайле.НомерВГруппе = 0 Тогда
		НужныйЭлемент.Гиперссылка = Истина;
		НужныйЭлемент.Картинка    = БиблиотекаКартинок.ПолеВводаОчистить;
	Иначе
		НужныйЭлемент.Видимость   = Истина;
	КонецЕсли;
	
