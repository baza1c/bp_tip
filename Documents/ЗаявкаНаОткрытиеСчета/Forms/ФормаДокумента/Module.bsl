	Если СписокВыбора.Количество() > 0 Тогда
		// Список уже заполнен.
		Возврат;
	КонецЕсли;
	
	ВидСчетаСписокВыбора = ЗаявкиНаОткрытиеСчета.ВидыСчетов(ТолькоПросмотр);
