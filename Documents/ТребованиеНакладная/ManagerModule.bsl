			НСтр("ru = 'В процедуре Документы.ТребованиеНакладная.ЗаполнитьВидОперацииПоУмолчанию() не удалось обработать документ ""Расход материалов (требование-накладная)"": в %1 из %2 возникли ошибки'"),
				ПроблемныхОбъектов,
				ОбъектовОбработано);
		ВызватьИсключение ТекстСообщения;
	Иначе
		ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), УровеньЖурналаРегистрации.Информация,
			Метаданные.Документы.ТребованиеНакладная,,
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Процедура Документы.ТребованиеНакладная.ЗаполнитьВидОперацииПоУмолчанию() обработала очередную порцию документов ""Расход материалов (требование-накладная)"": %1 документов'"), ОбъектовОбработано));
	КонецЕсли;
	
КонецПроцедуры

// Отложенный обработчик обновления: заполняет в табличной части Материалы реквизиты Субконто1, Субконто2, Субконто3 по данным
// реквизитов  УдалитьНоменклатурнаяГруппа и УдалитьСтатьяЗатрат, неиспользуемых в новых версиях программы.
//
// Параметры:
//  ПараметрыОбработчика - Структура - управляющая коллекция, см. документацию к подсистеме ОбновлениеИнформационнойБазы БСП:
//         * ОбработкаЗавершена - Булево - для того чтобы обработчик был вызван повторно для обработки следующей порции данных,
//                                         следует записать в него значение Ложь;
//         В структуру можно добавить произвольное количество свойств произвольных типов,
//         значения которых будут автоматически запоминаться между вызовами процедуры - обработчика отложенного обновления.
//
Процедура ЗаполнитьСубконтоТабличнойЧасти(ПараметрыОбработчика) Экспорт
	
	Курсор = Неопределено;
	ПараметрыОбработчика.Свойство("Курсор", Курсор);
	
	ТекстЗапроса = ТекстЗапросаНезаполненныеСубконто();
	ТекстЗапроса = ТекстЗапроса +
	"
	|УПОРЯДОЧИТЬ ПО
	|	Курсор УБЫВ,
	|	НомерСтрокиДокумента
	|ИТОГИ
	|	МИНИМУМ(Ссылка) КАК Ссылка
	|ПО
	|	Курсор";
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ВидСубконтоНоменклатурныеГруппы", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.НоменклатурныеГруппы);
	Запрос.УстановитьПараметр("ВидСубконтоСтатьиЗатрат", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.СтатьиЗатрат);
	
	Если ЗначениеЗаполнено(Курсор) Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&Условие", "ТребованиеНакладная.МоментВремени < &Курсор");
		Запрос.УстановитьПараметр("Курсор", Курсор);
	Иначе
		Запрос.УстановитьПараметр("Условие", Истина);
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;
	РезультатЗапроса = Запрос.Выполнить();
	
	Если РезультатЗапроса.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыОбработчика.ОбработкаЗавершена = Ложь;
	
	ВыборкаПоДокументу = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
	Пока ВыборкаПоДокументу.Следующий() Цикл
		
		Курсор   = ВыборкаПоДокументу.Курсор;
		Документ = ВыборкаПоДокументу.Ссылка; // ДокументСсылка.ТребованиеНакладная
		
		ПараметрыОбработчика.Вставить("Курсор", Курсор);
		
		БлокировкаДанных = Новый БлокировкаДанных;
		ЭлементБлокировкиДанных = БлокировкаДанных.Добавить("Документ.ТребованиеНакладная");
		ЭлементБлокировкиДанных.УстановитьЗначение("Ссылка", ВыборкаПоДокументу.Ссылка);
		
		НачатьТранзакцию();
		
		Попытка
			
			БлокировкаДанных.Заблокировать();
			ЗаблокироватьДанныеДляРедактирования(ВыборкаПоДокументу.Ссылка);
			
			ТребованиеНакладнаяОбъект = ВыборкаПоДокументу.Ссылка.ПолучитьОбъект();
			ВыборкаСтрок = ВыборкаПоДокументу.Выбрать();
			
			ПеренестиЗначенияРеквизитов(ТребованиеНакладнаяОбъект, ВыборкаСтрок);
			
			ОбновлениеИнформационнойБазы.ЗаписатьДанные(ТребованиеНакладнаяОбъект);
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			// Обработку проблемных данных пропускаем, так как приоритет имеют беспроблемные данные
			
			ЗаписьЖурналаРегистрации(
				ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(),
				УровеньЖурналаРегистрации.Ошибка,
				Метаданные.Документы.ТребованиеНакладная,
				Документ,
				ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
						
		КонецПопытки;
		
	КонецЦикла;
	
КонецПроцедуры

// Проверяет, все ли документы были обработаны процедурой ЗаполнитьРеквизитыНДСПоУмолчанию()
//
// Параметры:
//   Параметры - Структура - см. документацию к БСП.
//
// Возвращаемое значение:
//   Булево - если Ложь, то можно редактировать и записывать данные,
//                 Истина - данные недоступны, пока не будут обработаны процедурой обновления.
//
Функция ЗаполненоСубконтоТабличнойЧасти(Параметры) Экспорт

	Если ТипЗнч(Параметры.Данные) = Тип("ДокументСсылка.ТребованиеНакладная") Тогда
		Ссылка = Параметры.Данные;
	ИначеЕсли ТипЗнч(Параметры.Данные) = Тип("Строка") Тогда
		Ссылка = Неопределено;
	Иначе
		Ссылка = Параметры.Данные.Ссылка;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	ТекстЗапроса = ТекстЗапросаНезаполненныеСубконто();
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ПЕРВЫЕ 1000", "ПЕРВЫЕ 1");
	Запрос.УстановитьПараметр("ВидСубконтоНоменклатурныеГруппы", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.НоменклатурныеГруппы);
	Запрос.УстановитьПараметр("ВидСубконтоСтатьиЗатрат", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.СтатьиЗатрат);
	
	Если ЗначениеЗаполнено(Ссылка) Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&Условие", "ТребованиеНакладная.Ссылка = &Ссылка");
		Запрос.УстановитьПараметр("Ссылка", Ссылка);
	Иначе
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&Условие", "ИСТИНА");
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;
	
	Возврат Запрос.Выполнить().Пустой();
	
КонецФункции

// В табличной части "Материалы" переносит значения из неиспользуемых реквизитов УдалитьНоменклатурнаяГруппа и УдалитьСтатьяЗатрат
// в новые реквизиты Субконто1, Субконто2, Субконто3, если объект пока не был перезаполнен обработчиком обновления.
//
// Параметры:
//  Объект - ДанныеФормыСтруктура
//         - ДокументОбъект.ТребованиеНакладная.
//
Процедура ЗаполнитьСубконтоЕслиОбъектНеОбработан(Объект) Экспорт
	
	ИнформацияОбОбновлении = ОбновлениеИнформационнойБазы.ОбъектОбработан(Объект);
	Если Не ИнформацияОбОбновлении.Обработан
		И СтрНайти(ВРег(ИнформацияОбОбновлении.НевыполненныеОбработчикиСтрокой), ВРег("Документы.ТребованиеНакладная.ЗаполнитьСубконтоТабличнойЧасти")) <> 0 Тогда
		
		Запрос = Новый Запрос;
		ТекстЗапроса = ТекстЗапросаНезаполненныеСубконто();
		Запрос.УстановитьПараметр("ВидСубконтоНоменклатурныеГруппы", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.НоменклатурныеГруппы);
		Запрос.УстановитьПараметр("ВидСубконтоСтатьиЗатрат", ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.СтатьиЗатрат);
		
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ПЕРВЫЕ 1000", "ПЕРВЫЕ 1");
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&Условие", "ТребованиеНакладная.Ссылка = &Ссылка");
		Запрос.УстановитьПараметр("Ссылка", Объект.Ссылка);
		Запрос.Текст = ТекстЗапроса;
		ВыборкаСтрок = Запрос.Выполнить().Выбрать();
		ПеренестиЗначенияРеквизитов(Объект, ВыборкаСтрок);
		
	КонецЕсли;
	
КонецПроцедуры

