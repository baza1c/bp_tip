Процедура ЗаполнитьНомераКорректируемыхСтрок()
	
	ТаблицаКорректируемыхСчетовФактур = НовыйТаблицаКорректируемыхСчетовФактур();
	ТаблицаКорректировочногоСчетаФактуры = Неопределено;
	
	СчетаФактурыДокументыОтгрузки = Новый Массив;
	ОбработанныеДокументы         = Новый Массив;
	Для Каждого СтрокаСОснованием Из ДокументыОснования Цикл
		
		Если ОбработанныеДокументы.Найти(СтрокаСОснованием.ДокументОснование) <> Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		// Промежуточная таблица для связи с исходными счетами-фактурами
		СтрокаТаблицыКорректируемыхСчетовФактур = ТаблицаКорректируемыхСчетовФактур.Добавить();
		СтрокаТаблицыКорректируемыхСчетовФактур.Основание = СтрокаСОснованием.ДокументОснование;
		СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки = 
			УчетНДСПереопределяемый.ПолучитьОснованиеКорректируемогоСчетаФактурыВыданного(СтрокаСОснованием.ДокументОснование);
			
		Если ТипЗнч(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки) = Тип("ДокументСсылка.СчетФактураВыданный") Тогда
			СтрокаТаблицыКорректируемыхСчетовФактур.КорректируемыйСчетФактура = СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки;
			СчетаФактурыДокументыОтгрузки.Добавить(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки);
		ИначеЕсли ТипЗнч(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки) = Тип("ДокументСсылка.ОтчетКомиссионераОПродажах") Тогда 
			Если ЗначениеЗаполнено(СтрокаСОснованием.ИсходныйДокумент) Тогда // для КСФ на закладке "Возврат" документа ОтчетКомиссионераОПродажах
				СтрокаТаблицыКорректируемыхСчетовФактур.КорректируемыйСчетФактура = СтрокаСОснованием.ИсходныйДокумент;
				// Переопределим документ отгрузки.
				СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки = 
					ОбщегоНазначения.ЗначениеРеквизитаОбъекта(СтрокаСОснованием.ИсходныйДокумент, "ДокументОснование");
			Иначе
				СтрокаТаблицыКорректируемыхСчетовФактур.КорректируемыйСчетФактура =
					УчетНДСПереопределяемый.НайтиПодчиненныйСчетФактуруВыданныйНаРеализацию(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки);
			КонецЕсли;
		ИначеЕсли ТипЗнч(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки) <> Тип("ДокументСсылка.РеализацияТоваровУслуг")
			И ТипЗнч(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки) <> Тип("ДокументСсылка.КорректировкаРеализации") Тогда
			КорректируемыеНомераСтрок.Очистить();
			Возврат;
		Иначе
			СтрокаТаблицыКорректируемыхСчетовФактур.КорректируемыйСчетФактура =
				УчетНДСПереопределяемый.НайтиПодчиненныйСчетФактуруВыданныйНаРеализацию(СтрокаТаблицыКорректируемыхСчетовФактур.ДокументОтгрузки);
		КонецЕсли;
			
		// Таблица корректировочного счета-фактуры.
		ПараметрыОснования = УчетНДС.ПодготовитьДанныеДляПечатиКорректировочныхСчетовФактур(
			СтрокаСОснованием.ДокументОснование, Ссылка, ВидСчетаФактуры, Истина);
		
		Если ПараметрыОснования.Реквизиты = Неопределено ИЛИ ПараметрыОснования.ТаблицаДокумента = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		Если ТаблицаКорректировочногоСчетаФактуры = Неопределено Тогда
			ТаблицаКорректировочногоСчетаФактуры = ПараметрыОснования.ТаблицаДокумента;
		Иначе
			ОбщегоНазначенияБПВызовСервера.ЗагрузитьВТаблицуЗначений(ПараметрыОснования.ТаблицаДокумента, ТаблицаКорректировочногоСчетаФактуры);
		КонецЕсли;
		
		ОбработанныеДокументы.Добавить(СтрокаСОснованием.ДокументОснование);
		
	КонецЦикла;
	
	МассивСчетовФактурПредварительный = ТаблицаКорректируемыхСчетовФактур.ВыгрузитьКолонку("КорректируемыйСчетФактура");
	МассивСчетовФактурПредварительный = ОбщегоНазначенияБПВызовСервера.УдалитьПовторяющиесяЭлементыМассива(МассивСчетовФактурПредварительный);
	ДатыКорректируемыхСчетовФактур = ОбщегоНазначения.ЗначениеРеквизитаОбъектов(МассивСчетовФактурПредварительный, "Дата");
	ДатаНачалаЗаполненияНомеровСтрок = '20210701';
	МассивСчетовФактур = Новый Массив;
	Для Каждого КорректируемыйСчетФактура Из МассивСчетовФактурПредварительный Цикл
		Если ЗначениеЗаполнено(ДатыКорректируемыхСчетовФактур[КорректируемыйСчетФактура])
			И ДатыКорректируемыхСчетовФактур[КорректируемыйСчетФактура] >= ДатаНачалаЗаполненияНомеровСтрок Тогда
			МассивСчетовФактур.Добавить(КорректируемыйСчетФактура);
		КонецЕсли;
	КонецЦикла;
	
	ТаблицыСчетовФактур = УчетНДС.ПолучитьДанныеДляПечатиСчетаФактуры1137(МассивСчетовФактур, Документы.СчетФактураВыданный.ТекстЗапросаПечатьСчетовФактур(),Ложь,Ложь,Истина);
	
	// Соберем сведения из корректируемых счетов-фактур в одну таблицу.
	ТаблицаИсходныхСчетовФактур = Неопределено;
	ВсегоТаблицСФ = ТаблицыСчетовФактур.Количество();
	Если ВсегоТаблицСФ > 0 Тогда
		Для ИндексТаблицы = 0 По ВсегоТаблицСФ - 1 Цикл
			Если ТаблицаИсходныхСчетовФактур = Неопределено Тогда
				ТаблицаИсходныхСчетовФактур = ТаблицыСчетовФактур[ИндексТаблицы].ТаблицаДокументаСОтгрузочнымиДокументами.Скопировать();
				ПереопределитьОснованиеИсходногоСчетаФактуры(ИндексТаблицы, СчетаФактурыДокументыОтгрузки, ТаблицаИсходныхСчетовФактур, ТаблицыСчетовФактур);
			Иначе
				ТаблицаИсходныхСчетовФактурПредварительная = ТаблицыСчетовФактур[ИндексТаблицы].ТаблицаДокументаСОтгрузочнымиДокументами.Скопировать();
				ПереопределитьОснованиеИсходногоСчетаФактуры(ИндексТаблицы, СчетаФактурыДокументыОтгрузки, ТаблицаИсходныхСчетовФактурПредварительная, ТаблицыСчетовФактур);
				ОбщегоНазначенияБПВызовСервера.ЗагрузитьВТаблицуЗначений(
					ТаблицаИсходныхСчетовФактурПредварительная, ТаблицаИсходныхСчетовФактур);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(ТаблицаКорректируемыхСчетовФактур)
		ИЛИ Не ЗначениеЗаполнено(ТаблицаКорректировочногоСчетаФактуры) Тогда
		КорректируемыеНомераСтрок.Очистить();
		Возврат;
	КонецЕсли;
	
	// Приведем таблицы к одному виду.
	ТаблицаКорректировочногоСчетаФактуры.Колонки.РегистрационныйНомерТДДо.Имя = "НомерГТД";
	ТаблицаКорректировочногоСчетаФактуры = УчетНДС.ТипизированнаяТаблицаСчетаФактуры(ТаблицаКорректировочногоСчетаФактуры);
	ТаблицаИсходныхСчетовФактур          = УчетНДС.ТипизированнаяТаблицаСчетаФактуры(ТаблицаИсходныхСчетовФактур);
	// Обрежем пустые символы в ГТД.
	Для Каждого СтрокаИсходнойТаблицы Из ТаблицаИсходныхСчетовФактур Цикл
		СтрокаИсходнойТаблицы.НомерГТД = СокрЛП(СтрокаИсходнойТаблицы.НомерГТД);
	КонецЦикла;
	
	// Добавим индексы таблиц.
	ТаблицаКорректируемыхСчетовФактур.Индексы.Добавить("Основание");
	ТаблицаИсходныхСчетовФактур.Индексы.Добавить("Ссылка,Товар,ТоварНаименование,СтранаПроисхождения,НомерГТД,СтавкаНДС");
	
	// Дополним таблицу корректировочного счета-фактуры исходным документом отгрузки
	// и найдем в счете-фактуре исходного документа номер строки.
	ТаблицаКорректировочногоСчетаФактуры.Колонки.Добавить("ДокументОтгрузки", Документы.ТипВсеСсылки());
	ТаблицаКорректировочногоСчетаФактуры.Колонки.Добавить("НомерИсходнойСтроки",  Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(6,0)));
	Для Каждого СтрокаТаблицыКорректировочногоСчетаФактуры Из ТаблицаКорректировочногоСчетаФактуры Цикл
		СтруктураПоиска = Новый Структура("Основание", СтрокаТаблицыКорректировочногоСчетаФактуры.Ссылка);
		СтрокиСДокументомОтгрузки = ТаблицаКорректируемыхСчетовФактур.НайтиСтроки(СтруктураПоиска);
		Если СтрокиСДокументомОтгрузки.Количество() > 0 Тогда
			СтрокаТаблицыКорректировочногоСчетаФактуры.ДокументОтгрузки = СтрокиСДокументомОтгрузки[0].ДокументОтгрузки;
			СтруктураПоиска = Новый Структура("Ссылка,Товар,ТоварНаименование,СтранаПроисхождения,НомерГТД,СтавкаНДС");
			ЗаполнитьЗначенияСвойств(СтруктураПоиска, СтрокаТаблицыКорректировочногоСчетаФактуры);
			СтруктураПоиска.Ссылка = СтрокаТаблицыКорректировочногоСчетаФактуры.ДокументОтгрузки;
			СтруктураПоиска.ТоварНаименование = СтрокаТаблицыКорректировочногоСчетаФактуры.НаименованиеНоменклатуры;
			СтруктураПоиска.НомерГТД = СокрЛП(СтруктураПоиска.НомерГТД);
			НомераСтрокиВИсходномСФ = ТаблицаИсходныхСчетовФактур.НайтиСтроки(СтруктураПоиска);
			Если НомераСтрокиВИсходномСФ.Количество() > 0 Тогда
				СтрокаТаблицыКорректировочногоСчетаФактуры.НомерИсходнойСтроки = НомераСтрокиВИсходномСФ[0].НомерСтроки;
				// Если в счете-фактуре несколько одинаковых строк, то удалим подобранную, чтобы исключить дублирование.
				Если НомераСтрокиВИсходномСФ.Количество() > 1 Тогда
					ТаблицаИсходныхСчетовФактур.Удалить(НомераСтрокиВИсходномСФ[0]);
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	КорректируемыеНомераСтрок.Очистить();
	Если ДокументыОснования.Количество() > 1
		И МассивСчетовФактур.Количество() = 1 Тогда
		// Корректируется один счет-фактура, который был составлен к нескольким документам-основаниям.
		ТаблицаКорректировочногоСчетаФактуры.Свернуть("НомерИсходнойСтроки");
	КонецЕсли;
	КорректируемыеНомераСтрок.Загрузить(ТаблицаКорректировочногоСчетаФактуры);
	
КонецПроцедуры

Процедура ПереопределитьОснованиеИсходногоСчетаФактуры(ИндексТаблицы, СчетаФактурыДокументыОтгрузки, ТаблицаИсходныхСчетовФактур, ТаблицыСчетовФактур)
	
	// Корректировочные счета-фактуры по комиссии по закупке составляются на основании перевыставленного счета-фактуры,
	// переопределим документ на счет-фактуру для связи таблиц.
	Если СчетаФактурыДокументыОтгрузки.Найти(ТаблицыСчетовФактур[ИндексТаблицы].Ссылка) <> Неопределено Тогда
		ТаблицаИсходныхСчетовФактур.ЗаполнитьЗначения(ТаблицыСчетовФактур[ИндексТаблицы].Ссылка, "Ссылка");
	КонецЕсли;
	
КонецПроцедуры

Функция НовыйТаблицаКорректируемыхСчетовФактур()
	
	ТаблицаКорректируемыхСчетовФактур = Новый ТаблицаЗначений;
	ТаблицаКорректируемыхСчетовФактур.Колонки.Добавить("Основание", Документы.ТипВсеСсылки());
	// Последнее исправление и документ-основание исходного счета-фактуры строки которого корректируются
	ТаблицаКорректируемыхСчетовФактур.Колонки.Добавить("КорректируемыйСчетФактура", Новый ОписаниеТипов("ДокументСсылка.СчетФактураВыданный"));
	ТаблицаКорректируемыхСчетовФактур.Колонки.Добавить("ДокументОтгрузки", Документы.ТипВсеСсылки());
	
	Возврат ТаблицаКорректируемыхСчетовФактур;
	
КонецФункции

Процедура УстановитьСтатусДокумента()
	
	Если ВидСчетаФактуры <> Перечисления.ВидСчетаФактурыВыставленного.НаРеализацию
		И ВидСчетаФактуры <> Перечисления.ВидСчетаФактурыВыставленного.Корректировочный Тогда
		Возврат;
	КонецЕсли;
	
	Если ПроведениеСервер.ГрупповоеПерепроведение(ЭтотОбъект) Тогда 
		Возврат;
	КонецЕсли;
	
	ДокументыОснованияДляУстановкиСтатуса = Новый Массив;
	ДокументыОснованияДляАктуализацииНомера = Новый Массив;
	ДокументСУстановленнымСтатусом = Документы.РеализацияТоваровУслуг.ПустаяСсылка();
	ДополнительныеСвойства.Свойство("ДокументСУстановленнымСтатусом", ДокументСУстановленнымСтатусом);
	
	ЭтоУниверсальныйДокумент = Документы.СчетФактураВыданный.ЭтоУниверсальныйДокумент(ЭтотОбъект.Ссылка);
	
	Для Каждого СтрокаТЧ Из ДокументыОснования Цикл
		Если ЭтоУниверсальныйДокумент Тогда
			ДокументыОснованияДляАктуализацииНомера.Добавить(СтрокаТЧ.ДокументОснование);
		КонецЕсли;
		
		Если СтрокаТЧ.ДокументОснование <> ДокументСУстановленнымСтатусом 
		   И ТипЗнч(СтрокаТЧ.ДокументОснование) = Тип("ДокументСсылка.РеализацияТоваровУслуг") Тогда
			ДокументыОснованияДляУстановкиСтатуса.Добавить(СтрокаТЧ.ДокументОснование);
		КонецЕсли;
	КонецЦикла;
	
	УстановитьСтатусыДокументовОснований(ДокументыОснованияДляУстановкиСтатуса, ЭтоУниверсальныйДокумент);
		
	// Актуализируем номер первичного документа, если выставлен УПД/УКД.
	Для Каждого ДокументОснование Из ДокументыОснованияДляАктуализацииНомера Цикл
		ОбщегоНазначенияБПСобытия.ЗаписатьДанныеПервичныхДокументов(ДокументОснование, ПредставлениеНомера);
	КонецЦикла;
	
КонецПроцедуры

Процедура УстановитьСтатусыДокументовОснований(ДокументыОснованияДляУстановкиСтатуса, ЭтоУниверсальныйДокумент)
	
	Если ДокументыОснованияДляУстановкиСтатуса.Количество() = 0 Тогда 
		Возврат;
	КонецЕсли;
	
	Если ДополнительныеСвойства.РежимЗаписи = РежимЗаписиДокумента.Проведение 
		ИЛИ (ДополнительныеСвойства.РежимЗаписи = РежимЗаписиДокумента.Запись 
		И Проведен) Тогда 
		СтатусСчетаФактуры = Перечисления.СтатусыСчетаФактуры.Проведен;
	ИначеЕсли ПометкаУдаления Тогда
		// Очистим статус
		СтатусСчетаФактуры = Перечисления.СтатусыСчетаФактуры.Отсутствует;
	Иначе
		СтатусСчетаФактуры = Перечисления.СтатусыСчетаФактуры.НеПроведен;
	КонецЕсли;
	
	СтатусыДокумента = РегистрыСведений.СтатусыДокументов.НовыеСтатусыДокумента();
	СтатусыДокумента.СтатусСФ = СтатусСчетаФактуры;
	СтатусыДокумента.НомерСчетаФактуры = ПредставлениеНомера;
	
	РегистрыСведений.СтатусыДокументов.УстановитьСтатусыДокументов(
		ДокументыОснованияДляУстановкиСтатуса, СтатусыДокумента);

КонецПроцедуры

Процедура ЗаполнитьПоДокументуОснованию(Основание, ПеревыставлениеСФНалоговогоАгента = Ложь)

	Если Основание = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если ТипЗнч(Основание) = Тип("ДокументСсылка.РеализацияТоваровУслуг") Тогда
		
		РеквизитыОснования	= ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Основание, "Дата, Организация, ВидОперации");
		Если РеквизитыОснования.ВидОперации = Перечисления.ВидыОперацийРеализацияТоваров.ОтгрузкаБезПереходаПраваСобственности
			И НЕ УчетнаяПолитика.НачислятьНДСПоОтгрузке(РеквизитыОснования.Организация, РеквизитыОснования.Дата) Тогда
			
			ВызватьИсключение НСтр("ru = 'При отгрузке без перехода права собственности выписка счета-фактуры не требуется'");
			
		Иначе
			ВидДоговораСКонтрагентом = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Основание.ДоговорКонтрагента, "ВидДоговора");
			Если ВидДоговораСКонтрагентом = Перечисления.ВидыДоговоровКонтрагентов.СКомиссионером Тогда
				ВызватьИсключение НСтр("ru = 'При передаче на комиссию выписка счета-фактуры не требуется'");
			КонецЕсли;
		КонецЕсли;
	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.ПередачаТоваров") Тогда
		РеквизитОснованияВидОперации = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Основание, "ВидОперации");
		Если РеквизитОснованияВидОперации <> Перечисления.ВидыОперацийПередачаТоваров.БезвозмезднаяПередача Тогда
			ВызватьИсключение НСтр("ru = 'Выписывать счет-фактуру можно только с видом операции: Безвозмездная передача!'");
		КонецЕсли;
	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.ОтчетКомиссионераОПродажах") Тогда
		РеквизитОснованияВидОперации = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Основание, "ВидОперации");
		Если РеквизитОснованияВидОперации = Перечисления.ВидыОперацийОтчетКомиссионера.ОтчетОСписании Тогда
			ВызватьИсключение НСтр("ru = 'При списании товаров у комиссионера выписка счета-фактуры не требуется'");
		КонецЕсли;
	КонецЕсли;
	
	Если ТипЗнч(Основание) = Тип("ДокументСсылка.СчетФактураВыданный") Тогда
		ЗаполнитьНаОснованииСчетаФактуры(Основание.Ссылка, ПеревыставлениеСФНалоговогоАгента);
		Возврат;
	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.СчетФактураПолученный") Тогда
		ЗаполнитьНаОснованииСчетаФактурыПолученного(Основание.Ссылка);
		Возврат;
	ИначеЕсли НЕ ЭтотОбъект.Метаданные().ТабличныеЧасти.ДокументыОснования.Реквизиты.ДокументОснование.Тип.СодержитТип(ТипЗнч(Основание)) Тогда
		Возврат;
	КонецЕсли;

	СписокТиповНаАванс = УчетНДСПереопределяемый.ПолучитьСписокТиповПоВидуСчетаФактурыВыставленного(
		Перечисления.ВидСчетаФактурыВыставленного.НаАванс);

	СписокТиповНалоговыйАгент = УчетНДСПереопределяемый.ПолучитьСписокТиповПоВидуСчетаФактурыВыставленного(
		Перечисления.ВидСчетаФактурыВыставленного.НалоговыйАгент);

	СписокТиповКорректировочный = УчетНДСПереопределяемый.ПолучитьСписокТиповПоВидуСчетаФактурыВыставленного(
		Перечисления.ВидСчетаФактурыВыставленного.Корректировочный);

	Если СписокТиповНаАванс.Найти(ТипЗнч(Основание)) <> Неопределено 
		И ТипЗнч(Основание) <> Тип("ДокументСсылка.КорректировкаРеализации")
		И ТипЗнч(Основание) <> Тип("ДокументСсылка.ВозвратТоваровОтПокупателя") Тогда 
		// СФ на аванс по корректировкам создаются обработкой "Регистрация счетов-фактур на аванс"
		ЗаполнитьСчетФактуруНаАванс(Основание);
	ИначеЕсли СписокТиповНалоговыйАгент.Найти(ТипЗнч(Основание)) <> Неопределено Тогда
		ЗаполнитьСчетФактуруНалоговыйАгент(Основание);
	ИначеЕсли СписокТиповКорректировочный.Найти(ТипЗнч(Основание)) <> Неопределено Тогда
		ЗаполнитьСчетФактуруКорректировочный(Основание);
	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.ВозвратТоваровПоставщику")
		И Основание.ВидОперации = Перечисления.ВидыОперацийВозвратТоваровПоставщику.ИзПереработки Тогда
		ВызватьИсключение НСтр("ru = 'При возврате из переработки выписка счета-фактуры не требуется'");	
	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.ПередачаТоваров") Тогда
		ЗаполнитьСчетФактуруНаПередачу(Основание);
	Иначе
		ЗаполнитьСчетФактуруНаРеализацию(Основание);
	КонецЕсли;

КонецПроцедуры

Процедура ЗаполнитьНаОснованииСчетаФактуры(Основание, ПеревыставлениеСФНалоговогоАгента = Ложь)
	
	// Перевыставление счета-фактура налогового агента комитенту при закупке товаров у нерезидента
	Если ПеревыставлениеСФНалоговогоАгента Тогда 
		
		// Дата перевыставленного счета-фактуры комитенту должна совпадать с датой 
		// счета-фактуры выставленного при исполнении обязанностей налогового агента.
		ЗаполнитьЗначенияСвойств(ЭтотОбъект, Основание, , 
			"Номер, СформированПриВводеНачальныхОстатковНДС, Проведен, ПометкаУдаления, ДокументОснование");
		ДокументОснование = Основание;
		НомерСчетаФактурыПродавца = ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(Основание.Номер, Истина, Ложь);
		
	Иначе // Исправленные счета-фактуры
		
		Если Основание.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыВыставленного.НаРеализацию
			ИЛИ Основание.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыВыставленного.Корректировочный Тогда
			ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru='Исправленные счета-фактуры с видом ""%1"" вводятся на основании документа ""Корректировка реализации"".'"),
				Основание.ВидСчетаФактуры);
				ВызватьИсключение ТекстСообщения;
		ИначеЕсли Основание.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыВыставленного.НаСуммовуюРазницу Тогда
			ТекстСообщения = НСтр("ru='Исправленные счета-фактуры с видом ""На суммовую разницу"" не поддерживаются.'");
				ВызватьИсключение ТекстСообщения;
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(ЭтотОбъект, Основание, , "Номер, Дата, СформированПриВводеНачальныхОстатковНДС, Проведен, ПометкаУдаления");
		
		Исправление      = Истина;
		НомерИсправления = НомерИсправления + 1;
		Выставлен        = Ложь;
		ДатаВыставления  = '00010101';
		
		Если Основание.Исправление Тогда
			ИсправляемыйСчетФактура = Основание.ИсправляемыйСчетФактура;
		Иначе
			ИсправляемыйСчетФактура = Основание;
			НомерИсходногоДокумента = ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(Основание.Номер, Истина, Ложь);
			ДатаИсходногоДокумента  = Основание.Дата;
		КонецЕсли;
		
	КонецЕсли;
	
	СтрокаОснования = ДокументыОснования.Добавить();
	СтрокаОснования.ДокументОснование = ДокументОснование;
	
	Для Каждого СтрокаАванса Из Основание.Авансы Цикл
		НоваяСтрока = Авансы.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАванса);
	КонецЦикла;
	
	Если Основание.ПлатежноРасчетныеДокументы.Количество() > 0 Тогда
		НоваяСтрока = ПлатежноРасчетныеДокументы.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, Основание.ПлатежноРасчетныеДокументы[0]);
	КонецЕсли;

	КодВидаОперации = ПолучитьКодВидаОперации();

КонецПроцедуры

Процедура ЗаполнитьНаОснованииСчетаФактурыПолученного(Основание)
	
	Если НЕ Основание.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыПолученного.НаАвансКомитента Тогда
		ТекстСообщения = НСтр("ru='Счет-фактура выданный создается только на основании 
			|счета-фактуры полученного с видом ""На аванс комитента на закупку"".'");
		ВызватьИсключение ТекстСообщения;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(Основание.ДоговорКомитента)
		ИЛИ НЕ ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Основание.ДоговорКомитента, "ВидДоговора") = Перечисления.ВидыДоговоровКонтрагентов.СКомитентомНаЗакупку Тогда
		
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Счета-фактуры на аванс комитента на закупку вводятся только по договорам ""%1"".'"),
			Перечисления.ВидыДоговоровКонтрагентов.СКомитентомНаЗакупку);
		ВызватьИсключение ТекстСообщения;
			
	КонецЕсли;
	
	ВидСчетаФактуры    = Перечисления.ВидСчетаФактурыВыставленного.НаАвансКомитентаНаЗакупку;
	Организация        = Основание.Организация;
	Дата               = ?(Основание.Исправление, Основание.ДатаИсправления, Основание.ДатаВходящегоДокумента);
	ДокументОснование  = Основание.ДокументОснование;
	Контрагент         = Основание.Комитент;
	ДоговорКонтрагента = Основание.ДоговорКомитента;
	Продавец           = Основание.Контрагент;
	ВалютаДокумента    = Основание.ВалютаДокумента;
	СуммаДокумента     = Основание.СуммаДокумента;
	СуммаНДСДокумента  = Основание.СуммаНДСДокумента;
	НомерСчетаФактурыПродавца = Основание.НомерВходящегоДокумента;
	СуммаДокументаКомиссия    = ?(Дата >= '20150101', Основание.СуммаДокумента, 0);
	СуммаНДСДокументаКомиссия = ?(Дата >= '20150101', Основание.СуммаНДСДокумента, 0);
	
	Для каждого СтрокаАванса Из Основание.Авансы Цикл 
		НоваяСтрока = Авансы.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАванса);
	КонецЦикла;
	
	Если Основание.ДокументыОснования.Количество() > 0 Тогда
		
		НоваяСтрокаОснования = ДокументыОснования.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрокаОснования, Основание.ДокументыОснования[0]);
		
		Если ТипЗнч(НоваяСтрокаОснования.ДокументОснование) = Тип("ДокументСсылка.СписаниеСРасчетногоСчета") Тогда
			
			СвойстваДокументаОснования	= ОбщегоНазначения.ЗначенияРеквизитовОбъекта(НоваяСтрокаОснования.ДокументОснование, "НомерВходящегоДокумента, ДатаВходящегоДокумента");
			
			СтрокаПРД = ПлатежноРасчетныеДокументы.Добавить();
			СтрокаПРД.НомерДокумента	= СвойстваДокументаОснования.НомерВходящегоДокумента;
			СтрокаПРД.ДатаДокумента		= СвойстваДокументаОснования.ДатаВходящегоДокумента;
			
			НомерПлатежноРасчетногоДокумента	= СтрокаПРД.НомерДокумента;
			ДатаПлатежноРасчетногоДокумента		= СтрокаПРД.ДатаДокумента;
			
		ИначеЕсли ЗначениеЗаполнено(НоваяСтрокаОснования.ДокументОснование) Тогда
			
			СвойстваДокументаОснования	= ОбщегоНазначения.ЗначенияРеквизитовОбъекта(НоваяСтрокаОснования.ДокументОснование, "Номер, Дата");
			
			СтрокаПРД = ПлатежноРасчетныеДокументы.Добавить();
