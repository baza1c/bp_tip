	ДатаВерсии = ОбщегоНазначения.ТекущаяДатаПользователя();
	Комментарий = "";
	
	ДатаВерсииОбработатьИзменение();
	
	УстановитьСрокДействия();
	
	Если НомерВерсии = ТекущийНомерВерсии Тогда
		РеквизитыТекущейВерсии = РеквизитыВерсии;
	Иначе
