				НСтр("ru = 'об остатках'"), 
				НСтр("ru = 'о перемещении'")), 
			?(РеализацияВЕАЭС, НСтр("ru = 'корректировочное'"), ""));
			
		Элементы.ГруппаБаннерУведомление.Видимость = Истина;
