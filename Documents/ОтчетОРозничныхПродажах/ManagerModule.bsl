	|		ЕСТЬNULL(ТаблицаРеализацияТекущегоДокумента.Количество, 0),
	|		ЕСТЬNULL(ТаблицаРеализацияТекущегоДокумента.КоличествоПрослеживаемости, 0),
	|		ЕСТЬNULL(ТаблицаРеализацияТекущегоДокумента.РНПТ, ЗНАЧЕНИЕ(Справочник.НомераГТД.ПустаяСсылка)),
	|		ТаблицаРеализацияТекущегоДокумента.Комплектующие
	|	ИЗ
	|		ТаблицаВозвраты КАК ТаблицаВозвраты
	|			ЛЕВОЕ СОЕДИНЕНИЕ ТаблицаРеализацияТекущегоДокумента КАК ТаблицаРеализацияТекущегоДокумента
	|			ПО ТаблицаВозвраты.Номенклатура = ТаблицаРеализацияТекущегоДокумента.Номенклатура
	|				И (ВЫБОР
	|					КОГДА ТаблицаВозвраты.ПрослеживаемыйКомплект
	|						ТОГДА ИСТИНА
	|					ИНАЧЕ ТаблицаВозвраты.СтранаПроисхождения = ТаблицаРеализацияТекущегоДокумента.СтранаПроисхождения
	|				КОНЕЦ)
	|				И ТаблицаВозвраты.ДатаРеализации = ТаблицаРеализацияТекущегоДокумента.ДатаРеализации
	|				И ТаблицаВозвраты.ВидЗапасов = ТаблицаРеализацияТекущегоДокумента.ВидЗапасов
	|				И (ТаблицаРеализацияТекущегоДокумента.Количество > 0)
	|	
	|	ОБЪЕДИНИТЬ ВСЕ
	|	
	|	ВЫБРАТЬ
	|		ТаблицаВозвраты.Номенклатура,
	|		ВЫБОР
	|			КОГДА ТаблицаВозвраты.ПрослеживаемыйКомплект
	|				ТОГДА ВозвращенныеТовары.СтранаПроисхождения
	|			ИНАЧЕ ТаблицаВозвраты.СтранаПроисхождения
	|		КОНЕЦ,
	|		ТаблицаВозвраты.ДатаРеализации,
	|		ЕСТЬNULL(ВозвращенныеТовары.Комитент, ЗНАЧЕНИЕ(Справочник.Контрагенты.ПустаяСсылка)),
	|		ЕСТЬNULL(-ВозвращенныеТовары.Количество, 0),
	|		ЕСТЬNULL(-ВозвращенныеТовары.КоличествоПрослеживаемости, 0),
	|		ЕСТЬNULL(ВозвращенныеТовары.РНПТ, ЗНАЧЕНИЕ(Справочник.НомераГТД.ПустаяСсылка)),
	|		ВозвращенныеТовары.Комплектующие
	|	ИЗ
	|		ТаблицаВозвраты КАК ТаблицаВозвраты
	|			ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ПрослеживаемыеТовары КАК ВозвращенныеТовары
	|			ПО (ВозвращенныеТовары.Организация = &Организация)
	|				И ТаблицаВозвраты.Номенклатура = ВозвращенныеТовары.Номенклатура
	|				И (ВЫБОР
	|					КОГДА ТаблицаВозвраты.ПрослеживаемыйКомплект
	|						ТОГДА ИСТИНА
	|					ИНАЧЕ ТаблицаВозвраты.СтранаПроисхождения = ВозвращенныеТовары.СтранаПроисхождения
	|				КОНЕЦ)
	|				И ТаблицаВозвраты.ВидЗапасов = ВозвращенныеТовары.ВидЗапасов
	|				И (ВозвращенныеТовары.ВидДвижения = ЗНАЧЕНИЕ(ВидДвиженияНакопления.Приход))
	|				И (ВозвращенныеТовары.Период <= &ДатаТекущегоДокумента)
	|				И (ВозвращенныеТовары.Регистратор <> &ТекущийДокумент)
	|				И (ВозвращенныеТовары.Регистратор ССЫЛКА Документ.ОтчетОРозничныхПродажах)
	|				И ТаблицаВозвраты.ДатаРеализации = ВозвращенныеТовары.ДатаРеализации) КАК РеализацияМинусВозврат
	|
	|СГРУППИРОВАТЬ ПО
	|	РеализацияМинусВозврат.РНПТ,
	|	РеализацияМинусВозврат.СтранаПроисхождения,
	|	РеализацияМинусВозврат.ДатаРеализации,
	|	РеализацияМинусВозврат.Номенклатура,
	|	РеализацияМинусВозврат.Комитент,
	|	РеализацияМинусВозврат.Комплектующие
	|
	|УПОРЯДОЧИТЬ ПО
	|	РНПТ";
	
	ТаблицаРезультат = Запрос.Выполнить().Выгрузить();
	
	ТаблицаРезультат.Индексы.Добавить("Номенклатура");
	ТаблицаРезультат.Индексы.Добавить("СтранаПроисхождения");
	ТаблицаРезультат.Индексы.Добавить("ДатаРеализации");
	
	КонтролироватьОстаток = НЕ БухгалтерскийУчетПереопределяемый.ОтключитьКонтрольОтрицательныхОстатков();
	
	Для Каждого СтрокаТабличнойЧасти ИЗ ДокументОбъект.Возвраты Цикл
		
		Если Не СтрокаТабличнойЧасти.ПрослеживаемыйТовар Тогда
			Продолжить;
		КонецЕсли;
		
		ОсталосьПодобрать = СтрокаТабличнойЧасти.Количество;
		
		СтрокиСРНПТ = ДокументОбъект.СведенияПрослеживаемости.НайтиСтроки(
			Новый Структура("ИдентификаторСтроки", СтрокаТабличнойЧасти.ИдентификаторСтроки));
		КоличествоРНПТ = СтрокиСРНПТ.Количество();
		
		Если КоличествоРНПТ = 0 Тогда
			Если СтрокаТабличнойЧасти.ПрослеживаемыйКомплект Тогда
				ТекстОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru='Не заполнены РНПТ для товара %1'"),
				СтрокаТабличнойЧасти.Номенклатура);
				Поле = "Возвраты" + "["+ Формат(СтрокаТабличнойЧасти.НомерСтроки-1,"ЧГ=") + "].РНПТ";
				
				ОбщегоНазначения.СообщитьПользователю(ТекстОшибки, ДокументОбъект.Ссылка, Поле, "Объект", Отказ);
				Продолжить;
			КонецЕсли;
			
			// Добавляем РНПТ из остатков
			Отбор = Новый Структура("Номенклатура, СтранаПроисхождения, ДатаРеализации",
				СтрокаТабличнойЧасти.Номенклатура, СтрокаТабличнойЧасти.СтранаПроисхождения, СтрокаТабличнойЧасти.ДатаРеализации);
			ОстаткиРНПТ = ТаблицаРезультат.НайтиСтроки(Отбор);
			Для Каждого ПодобранныйРНПТ Из ОстаткиРНПТ Цикл
				Если ОсталосьПодобрать = 0 Тогда
					Прервать;
				КонецЕсли;
				
				Если ПодобранныйРНПТ.Количество = 0 Тогда
					Продолжить;
				КонецЕсли;
				
				Если ОсталосьПодобрать >= ПодобранныйРНПТ.Количество Тогда
					// Добавляем все количество из подобранного РНПТ
					НоваяСтрока = ДокументОбъект.СведенияПрослеживаемости.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, ПодобранныйРНПТ, ,"Номенклатура");
					НоваяСтрока.ИдентификаторСтроки = СтрокаТабличнойЧасти.ИдентификаторСтроки;
					ОсталосьПодобрать = ОсталосьПодобрать - ПодобранныйРНПТ.Количество;
					ТаблицаРезультат.Удалить(ПодобранныйРНПТ);
				Иначе
					НоваяСтрока = ДокументОбъект.СведенияПрослеживаемости.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, ПодобранныйРНПТ, ,"Номенклатура");
					НоваяСтрока.ИдентификаторСтроки = СтрокаТабличнойЧасти.ИдентификаторСтроки;
					НоваяСтрока.Количество = ОсталосьПодобрать;
					
					МассивКоэффициентов = Новый Массив;
					МассивКоэффициентов.Добавить(ПодобранныйРНПТ.Количество - ОсталосьПодобрать);
					МассивКоэффициентов.Добавить(ОсталосьПодобрать);
					МассивСумм = ОбщегоНазначения.РаспределитьСуммуПропорциональноКоэффициентам(
						ПодобранныйРНПТ.КоличествоПрослеживаемости, МассивКоэффициентов, 11);
						
					НоваяСтрока.КоличествоПрослеживаемости = МассивСумм[1];
					
					ПодобранныйРНПТ.Количество = ПодобранныйРНПТ.Количество - ОсталосьПодобрать;
					ПодобранныйРНПТ.КоличествоПрослеживаемости = ПодобранныйРНПТ.КоличествоПрослеживаемости - МассивСумм[1];
					
					ОсталосьПодобрать = 0;
				КонецЕсли;
				
			КонецЦикла;
			
			Если КонтролироватьОстаток И
				ОсталосьПодобрать <> 0 Тогда
				
				ТекстОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
					НСтр("ru='Для целей учета прослеживаемости не списано %1 товара %2 (%3)'"),
					Формат(ОсталосьПодобрать, "ЧЦ=15; ЧДЦ=3"),
					СтрокаТабличнойЧасти.Номенклатура,
					СтрокаТабличнойЧасти.СтранаПроисхождения);
				
				Поле = "Возвраты["+ Формат(СтрокаТабличнойЧасти.НомерСтроки - 1, "ЧГ=") + "].Количество";
				ОбщегоНазначения.СообщитьПользователю(ТекстОшибки, ДокументОбъект.Ссылка, Поле, "Объект", Отказ);
				
			КонецЕсли;
			
		ИначеЕсли КонтролироватьОстаток Тогда
			
			// Проверяем наличие указанных РНПТ на остатках
			Для Каждого СтрокаСРНПТ ИЗ СтрокиСРНПТ Цикл
				Если СтрокаТабличнойЧасти.ПрослеживаемыйКомплект Тогда 
					Отбор = Новый Структура("Номенклатура, СтранаПроисхождения, РНПТ, Комплектующие",
					СтрокаТабличнойЧасти.Номенклатура, СтрокаСРНПТ.СтранаПроисхождения, СтрокаСРНПТ.РНПТ, СтрокаСРНПТ.Номенклатура);
				Иначе
					Отбор = Новый Структура("Номенклатура, СтранаПроисхождения, РНПТ",
					СтрокаТабличнойЧасти.Номенклатура, СтрокаТабличнойЧасти.СтранаПроисхождения, СтрокаСРНПТ.РНПТ);
				КонецЕсли;
				ОстаткиРНПТ = ТаблицаРезультат.НайтиСтроки(Отбор);
				Если ОстаткиРНПТ.Количество() = 0 
					ИЛИ ОстаткиРНПТ[0].Количество < СтрокаСРНПТ.Количество 
					ИЛИ ОстаткиРНПТ[0].КоличествоПрослеживаемости < СтрокаСРНПТ.КоличествоПрослеживаемости Тогда
					
					ТекстОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
						НСтр("ru='Для целей учета прослеживаемости не списано %1 РНПТ %2'"),
						Формат(СтрокаСРНПТ.Количество, "ЧЦ=15; ЧДЦ=3"),
						СтрокаСРНПТ.РНПТ);
					Поле = "Возвраты["+ Формат(СтрокаТабличнойЧасти.НомерСтроки - 1, "ЧГ=") + "].РНПТ";
					ОбщегоНазначения.СообщитьПользователю(ТекстОшибки, ДокументОбъект.Ссылка, Поле, "Объект", Отказ);
				Иначе
					Если ОстаткиРНПТ[0].Количество <> СтрокаСРНПТ.Количество
						И ОстаткиРНПТ[0].КоличествоПрослеживаемости <> СтрокаСРНПТ.КоличествоПрослеживаемости Тогда
						ОстаткиРНПТ[0].Количество = ОстаткиРНПТ[0].Количество - СтрокаСРНПТ.Количество;
						ОстаткиРНПТ[0].КоличествоПрослеживаемости = ОстаткиРНПТ[0].КоличествоПрослеживаемости - СтрокаСРНПТ.КоличествоПрослеживаемости;
					Иначе
						ТаблицаРезультат.Удалить(ОстаткиРНПТ[0]);
					КонецЕсли;
					
				КонецЕсли;
				
			КонецЦикла;
			
		КонецЕсли;
		
	КонецЦикла;
	
	
КонецПроцедуры

