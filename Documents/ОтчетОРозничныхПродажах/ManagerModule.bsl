		Возврат;
	КонецЕсли;
	
	Параметры = ПодготовитьПараметрыКнигаУчетаДоходовИРасходов(ТаблицаДвижений, ТаблицаДвиженийПатент, ТаблицаНаличнаяОплата, ТаблицаРеквизиты);
	
	Реквизиты = Параметры.Реквизиты[0];
	
	ПрименяетсяУСН = УчетнаяПолитика.ПрименяетсяУСН(Реквизиты.Организация, Реквизиты.Период);
	ПрименяетсяУСНПатент = УчетнаяПолитика.ПрименяетсяУСНПатент(Реквизиты.Организация, Реквизиты.Период);
	ПрименяетсяНДС = УчетнаяПолитика.ПлательщикНДСПрименяющийУСН(Реквизиты.Организация, Реквизиты.Период);
	
	Если Не ПрименяетсяУСН И Не ПрименяетсяУСНПатент Тогда
		Возврат;
	КонецЕсли;
	
	СуммаНаличнойОплаты = -Параметры.ТаблицаНаличнаяОплата.Итог("СуммаРуб");
	
	Если СуммаНаличнойОплаты = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Если ПрименяетсяУСН Тогда
		
		Если Параметры.ТаблицаДвижений.Итог("Графа4") <> 0 Тогда
			
			Коэф = СуммаНаличнойОплаты / Параметры.ТаблицаДвижений.Итог("Графа4");
			
			РаспределитьСуммуВозвратаПокупателя(Параметры.ТаблицаДвижений, СуммаНаличнойОплаты, "Графа4");
			
			СписокКолонок = СтрРазделить("Графа5,Графа6,Графа7,ДоходЕНВД,ДоходТорговыйСбор,НДС", ",");
			
			Для Каждого ИмяКолонки Из СписокКолонок Цикл
				
				СуммаКРаспределению = Окр(Параметры.ТаблицаДвижений.Итог(ИмяКолонки) * Коэф, 2);
				Если ПрименяетсяНДС И ИмяКолонки = "Графа5" И СуммаКРаспределению <> 0 Тогда
					СуммаКРаспределению = СуммаКРаспределению - Окр(Параметры.ТаблицаДвижений.Итог("НДС") * Коэф, 2);
					Параметры.ТаблицаДвижений.ЗаполнитьЗначения(0, "НДС");
				КонецЕсли;
				
				Если СуммаКРаспределению = 0 Тогда
					Параметры.ТаблицаДвижений.ЗаполнитьЗначения(0, ИмяКолонки);
				Иначе
					РаспределитьСуммуВозвратаПокупателя(Параметры.ТаблицаДвижений, СуммаКРаспределению, ИмяКолонки);
				КонецЕсли;
			КонецЦикла;
			
		КонецЕсли;
		
		ЗаполнитьДвиженияКУДИРВозвратПокупателя(
			Параметры.ТаблицаДвижений, Реквизиты, Движения.КнигаУчетаДоходовИРасходов);
		
	КонецЕсли;
	
	Если ПрименяетсяУСНПатент Тогда
		
		Если Параметры.ТаблицаДвиженийПатент.Итог("Графа4") <> 0 Тогда
			РаспределитьСуммуВозвратаПокупателя(Параметры.ТаблицаДвиженийПатент, СуммаНаличнойОплаты, "Графа4");
		КонецЕсли;
		
		ЗаполнитьДвиженияКУДИРВозвратПокупателя(
			Параметры.ТаблицаДвиженийПатент, Реквизиты, Движения.КнигаУчетаДоходовПатент);
		
	КонецЕсли;
	
КонецПроцедуры

