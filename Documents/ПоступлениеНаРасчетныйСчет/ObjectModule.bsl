Функция СчетНеОплачен(Организация, СчетНаОплату)
	
	Результат = Истина;
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Организация",  Организация);
	Запрос.УстановитьПараметр("СчетНаОплату", СчетНаОплату);
	Запрос.Текст =
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	ИСТИНА КАК СчетУжеОплачивался
	|ИЗ
	|	РегистрНакопления.ОплатаСчетов КАК ОплатаСчетов
	|ГДЕ
	|	ОплатаСчетов.Организация = &Организация
	|	И ОплатаСчетов.СчетНаОплату = &СчетНаОплату";
	
	УстановитьПривилегированныйРежим(Истина);
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Результат = Ложь;
	КонецЕсли;
	
	Возврат Результат;
	
